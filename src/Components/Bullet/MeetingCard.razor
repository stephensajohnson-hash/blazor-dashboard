@namespace Dashboard.Components.Bullet
@using Dashboard

<div class="bg-gray-900 border border-gray-700 border-l-4 border-l-purple-500 rounded-r-lg mb-3 relative group shadow-sm min-h-[60px] flex flex-col justify-center transition hover:border-purple-400">
    
    <div class="absolute top-1 right-1 flex gap-1 opacity-0 group-hover:opacity-100 transition z-30">
        <button @onclick="HandleClick" @onclick:stopPropagation="true" class="p-1 rounded bg-gray-800 hover:bg-blue-600 text-gray-400 hover:text-white transition shadow-md">‚úèÔ∏è</button>
        <button @onclick="HandleDelete" @onclick:stopPropagation="true" class="p-1 rounded bg-gray-800 hover:bg-red-600 text-red-400 hover:text-white transition shadow-md">‚úï</button>
    </div>

    <div class="flex items-start p-3 gap-3 cursor-pointer" @onclick="HandleClick">
        
        <div class="shrink-0 mt-0.5" @onclick:stopPropagation="true">
            <input type="checkbox" checked="@(Item?.MeetingDetail?.IsCompleted ?? false)" 
                   @onchange="HandleToggle" 
                   class="w-4 h-4 rounded bg-gray-800 border-gray-600 cursor-pointer accent-purple-600" />
        </div>

        <div class="flex-1 min-w-0">
            <h4 class="text-sm font-bold leading-tight text-white mb-1 @((Item?.MeetingDetail?.IsCompleted ?? false) ? "line-through text-gray-500" : "")">
                @(Item?.Title ?? "Untitled Meeting")
            </h4>
            
            @if(!string.IsNullOrEmpty(Item?.Description)) {
                <p class="text-xs text-gray-500 line-clamp-2 mb-2">@Item.Description</p>
            }

            <div class="flex items-center gap-2">
                <span class="text-[10px] bg-purple-900/40 text-purple-300 border border-purple-700 px-2 py-0.5 rounded font-mono inline-flex items-center">
                    <span class="mr-1">üïí</span>
                    @if(Item?.MeetingDetail != null) {
                        <span>@(Item.MeetingDetail.StartTime?.ToString("h:mm tt") ?? "TBD")</span>
                        @if(Item.MeetingDetail.DurationMinutes > 0) { <span class="ml-1 opacity-75">(@Item.MeetingDetail.DurationMinutes m)</span> }
                    }
                    else {
                        <span>No Detail</span>
                    }
                </span>
            </div>
        </div>
    </div>
</div>

@code {
    [Parameter] public BulletTaskService.TaskDTO Item { get; set; } = new();
    
    [Parameter] public EventCallback<BulletTaskService.TaskDTO> OnClick { get; set; }
    [Parameter] public EventCallback<BulletTaskService.TaskDTO> OnToggle { get; set; }
    [Parameter] public EventCallback<int> OnDelete { get; set; }

    private async Task HandleClick() => await OnClick.InvokeAsync(Item);
    private async Task HandleDelete() => await OnDelete.InvokeAsync(Item.Id);
    
    private async Task HandleToggle(ChangeEventArgs e) {
        if (Item?.MeetingDetail != null) {
            bool val = (bool)(e.Value ?? false);
            Item.MeetingDetail.IsCompleted = val;
            await OnToggle.InvokeAsync(Item);
        }
    }
}