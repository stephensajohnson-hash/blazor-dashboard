@namespace Dashboard.Components.Bullet
@using Dashboard

<div class="bg-purple-900/20 border border-purple-800 border-l-4 border-l-purple-500 rounded-r-lg mb-3 relative group shadow-sm flex flex-col transition hover:border-purple-400">
    
    <div class="absolute top-1 right-1 flex gap-1 opacity-0 group-hover:opacity-100 transition z-30">
        <button @onclick="HandleClick" class="p-1 rounded bg-gray-700 hover:bg-blue-600 text-gray-300 hover:text-white border border-gray-600 shadow-md">✏️</button>
        <button @onclick="HandleDelete" class="p-1 rounded bg-gray-700 hover:bg-red-600 text-red-400 hover:text-white border border-gray-600 shadow-md">✕</button>
    </div>

    <div class="flex w-full">
        @if(!string.IsNullOrEmpty(Item.ImgUrl))
        {
            <div class="relative bg-black shrink-0 border-r border-gray-700/50" style="width: @BulletViewConfig.ImgWidthDay;">
                <img src="@Item.ImgUrl" class="w-full h-full object-cover opacity-90" />
            </div>
        }

        <div class="flex-1 flex flex-col p-3 min-w-0">
            <div class="shrink-0 mt-0.5 mb-2">
                <input type="checkbox" checked="@(Item.MeetingDetail?.IsCompleted ?? false)" @onchange="HandleToggle" class="w-4 h-4 rounded bg-gray-800 border-gray-600 cursor-pointer accent-purple-500" />
            </div>

            <h4 class="text-sm font-bold leading-tight text-white mb-1 @((Item.MeetingDetail?.IsCompleted ?? false) ? "line-through text-gray-500" : "")">
                @if(!string.IsNullOrEmpty(Item.LinkUrl)) { <a href="@Item.LinkUrl" target="_blank" class="hover:text-purple-400 hover:underline transition">@Item.Title</a> }
                else { @Item.Title }
            </h4>
            
            <div class="flex flex-wrap gap-2 items-center text-xs text-purple-300">
                @if(Item.MeetingDetail?.StartTime != null) { 
                    <span class="bg-purple-900/50 px-1.5 rounded">⏰ @Item.MeetingDetail.StartTime.Value.ToString("h:mm tt")</span> 
                }
                @if((Item.MeetingDetail?.DurationMinutes ?? 0) > 0) { 
                    <span class="bg-purple-900/50 px-1.5 rounded">⏳ @Item.MeetingDetail.DurationMinutes min</span> 
                }
            </div>

            @if(!string.IsNullOrEmpty(Item.Description)) { <p class="text-xs text-gray-400 line-clamp-2 mt-2">@Item.Description</p> }
        </div>
    </div>

    @if(Item.Notes != null && Item.Notes.Any()) 
    {
        <div class="bg-black/20 border-t border-purple-900/30 p-2 space-y-2">
            @foreach(var note in Item.Notes) {
                <div class="bg-black/20 rounded p-2 text-xs text-gray-300 overflow-hidden">
                    @if(!string.IsNullOrEmpty(note.ImgUrl)) { 
                        <img src="@note.ImgUrl" class="float-left max-w-[100px] max-h-[100px] object-cover rounded mr-2 border border-gray-700" /> 
                    }
                    @if(!string.IsNullOrEmpty(note.LinkUrl)) { <a href="@note.LinkUrl" target="_blank" class="text-blue-400 hover:underline">@note.Content</a> } 
                    else { @note.Content }
                </div>
            }
        </div>
    }
</div>

@code {
    [Parameter] public BulletTaskService.TaskDTO Item { get; set; } = new();
    [Parameter] public EventCallback<BulletTaskService.TaskDTO> OnClick { get; set; }
    [Parameter] public EventCallback<BulletTaskService.TaskDTO> OnToggle { get; set; }
    [Parameter] public EventCallback<int> OnDelete { get; set; }

    private async Task HandleClick() => await OnClick.InvokeAsync(Item);
    private async Task HandleDelete() => await OnDelete.InvokeAsync(Item.Id);
    private async Task HandleToggle(ChangeEventArgs e) => await OnToggle.InvokeAsync(Item);
}