@namespace Dashboard.Components.Bullet
@using Dashboard

<div class="bg-gray-900 border border-gray-700 border-l-4 border-l-pink-500 rounded-r-lg mb-3 relative group shadow-sm flex flex-col transition hover:border-pink-400">
    
    <div class="absolute top-1 right-1 flex gap-1 opacity-0 group-hover:opacity-100 transition z-30">
        <button @onclick="HandleClick" class="p-1 rounded bg-gray-700 hover:bg-blue-600 text-gray-300 hover:text-white border border-gray-600 shadow-md">✏️</button>
        <button @onclick="HandleDelete" class="p-1 rounded bg-gray-700 hover:bg-red-600 text-red-400 hover:text-white border border-gray-600 shadow-md">✕</button>
    </div>

    <div class="flex w-full">
        @if(!string.IsNullOrEmpty(Item.ImgUrl))
        {
            <div class="relative bg-black shrink-0 border-r border-gray-700/50" style="width: @BulletViewConfig.ImgWidthDay;">
                @if(!string.IsNullOrEmpty(Item.LinkUrl))
                {
                    <a href="@Item.LinkUrl" target="_blank" class="block w-full h-full hover:opacity-80 transition"><img src="@Item.ImgUrl" class="w-full h-full object-cover opacity-90" /></a>
                }
                else
                {
                    <img src="@Item.ImgUrl" class="w-full h-full object-cover opacity-90" />
                }
            </div>
        }

        <div class="flex-1 flex flex-col p-3 min-w-0">
            <h4 class="text-sm font-bold leading-tight text-white mb-1">
                @if(!string.IsNullOrEmpty(Item.LinkUrl)) { <a href="@Item.LinkUrl" target="_blank" class="hover:text-pink-400 hover:underline transition">@Item.Title</a> }
                else { @Item.Title }
            </h4>
            
            <div class="flex items-center gap-2 mb-2 text-xs">
                @if(Item.MediaDetail != null && Item.MediaDetail.ReleaseYear > 0) { <span class="bg-gray-800 text-gray-400 px-1.5 rounded">@Item.MediaDetail.ReleaseYear</span> }
                @if(Item.MediaDetail != null && Item.MediaDetail.Rating > 0) { <span class="text-yellow-400 font-bold">⭐ @Item.MediaDetail.Rating/10</span> }
            </div>

            @if(!string.IsNullOrEmpty(Item.Description)) { <p class="text-xs text-gray-400 line-clamp-3 mb-2">@Item.Description</p> }

            @if(Item.MediaDetail != null && !string.IsNullOrEmpty(Item.MediaDetail.Tags))
            {
                <div class="flex flex-wrap gap-1 mt-auto">
                    @foreach(var tag in Item.MediaDetail.Tags.Split(',')) { <span class="text-[9px] bg-pink-900/30 text-pink-300 px-1 rounded border border-pink-900/50">@tag.Trim()</span> }
                </div>
            }
        </div>
    </div>

    @if(Item.Notes != null && Item.Notes.Any()) 
    {
        <div class="bg-black/20 border-t border-gray-700 p-2 space-y-2">
            @foreach(var note in Item.Notes) {
                <div class="bg-black/20 rounded p-2 text-xs text-gray-300 overflow-hidden clearfix">
                    @if(!string.IsNullOrEmpty(note.ImgUrl)) { <img src="@note.ImgUrl" class="float-left max-w-[100px] max-h-[100px] object-cover rounded mr-2 border border-gray-700" /> }
                    @if(!string.IsNullOrEmpty(note.LinkUrl)) { <a href="@note.LinkUrl" target="_blank" class="text-blue-400 hover:underline">@note.Content</a> } else { @note.Content }
                </div>
            }
        </div>
    }
</div>

@code {
    [Parameter] public BulletTaskService.TaskDTO Item { get; set; } = new();
    [Parameter] public EventCallback<BulletTaskService.TaskDTO> OnClick { get; set; }
    [Parameter] public EventCallback<int> OnDelete { get; set; }

    private async Task HandleClick() => await OnClick.InvokeAsync(Item);
    private async Task HandleDelete() => await OnDelete.InvokeAsync(Item.Id);
}