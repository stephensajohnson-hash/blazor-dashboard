@namespace Dashboard.Components.Bullet
@using Dashboard

<div class="bg-gray-800 border border-gray-700 rounded-lg mb-3 relative group shadow-sm flex flex-col transition hover:border-blue-500 font-black">
    
    <div class="absolute top-1 right-1 flex gap-1 opacity-0 group-hover:opacity-100 transition z-30 font-black">
        <button @onclick="HandleClick" @onclick:stopPropagation="true" class="p-1 rounded bg-gray-700 hover:bg-blue-600 text-gray-300 hover:text-white border border-gray-600 shadow-md">✏️</button>
        <button @onclick="HandleDelete" @onclick:stopPropagation="true" class="p-1 rounded bg-gray-700 hover:bg-red-600 text-red-400 hover:text-white border border-gray-600 shadow-md">✕</button>
    </div>

    <div class="flex w-full">
        @if (!string.IsNullOrEmpty(Item.ImgUrl))
        {
            @* Image Container: Flush alignment matching HabitCard *@
            <div class="relative bg-black shrink-0 border-r border-gray-700/50 rounded-l-lg overflow-hidden" style="width: @BulletViewConfig.ImgWidthDay;">
                @if(!string.IsNullOrEmpty(Item.LinkUrl)) 
                { 
                    <a href="@Item.LinkUrl" target="_blank" class="block w-full h-full hover:opacity-80 transition">
                        <img src="@Item.ImgUrl" class="w-full h-auto block opacity-90" alt="Task image" />
                    </a> 
                } 
                else 
                { 
                    <img src="@Item.ImgUrl" class="w-full h-auto block opacity-90" alt="Task image" /> 
                }
            </div>
        }

        @* Content Container: Full description and title without uppercase forced casing *@
        <div class="flex-1 flex flex-col p-3 min-w-0 font-black">
            <div class="flex items-start gap-3">
                <div class="shrink-0 mt-0.5 font-black" @onclick:stopPropagation="true">
                    <input type="checkbox" checked="@Item.Detail.IsCompleted" @onchange="HandleToggle" class="w-4 h-4 rounded bg-gray-800 border-gray-600 cursor-pointer accent-blue-500 font-black" />
                </div>

                <div class="flex-1 min-w-0">
                    <h4 class="text-sm font-bold leading-tight text-white mb-2 @(Item.Detail.IsCompleted ? "line-through text-gray-500" : "") font-black">
                        @if(!string.IsNullOrEmpty(Item.LinkUrl)) { <a href="@Item.LinkUrl" target="_blank" class="hover:text-blue-400 hover:underline transition font-black">@Item.Title</a> }
                        else { @Item.Title }
                    </h4>
                    
                    <div class="flex flex-wrap gap-2 items-center text-xs font-black">
                        @if(!string.IsNullOrEmpty(Item.Detail.Priority) && Item.Detail.Priority != "Normal") {
                            <span class="px-1.5 rounded font-bold @(Item.Detail.Priority == "High" ? "bg-red-900 text-red-200" : "bg-green-900 text-green-200") font-black">@Item.Detail.Priority</span>
                        }
                        @if(!string.IsNullOrEmpty(Item.Detail.TicketNumber)) {
                            <span class="bg-gray-700 text-gray-300 px-1.5 rounded font-mono font-black">@Item.Detail.TicketNumber</span>
                        }
                    </div>
                </div>
            </div>

            @if(!string.IsNullOrEmpty(Item.Description)) { 
                <p class="text-xs text-gray-400 whitespace-pre-wrap mt-2 font-black mb-2">@Item.Description</p> 
            }

            @* CHECKLIST SECTION *@
            @if(Item.Todos != null && Item.Todos.Any())
            {
                <div class="mt-4 space-y-2 border-t border-gray-700/50 pt-3 font-black">
                    <div class="text-[10px] text-blue-400 tracking-widest mb-2 font-black">Checklist</div>
                    @foreach(var todo in Item.Todos.OrderBy(t => t.Order))
                    {
                        <div class="flex items-start gap-3 group/todo font-black">
                            <input type="checkbox" checked="@todo.IsCompleted" @onchange="(e) => ToggleTodo(todo, e)" class="w-3.5 h-3.5 mt-0.5 rounded bg-gray-900 border-gray-700 accent-blue-500 cursor-pointer font-black" />
                            <span class="text-xs @(todo.IsCompleted ? "text-gray-600 line-through" : "text-gray-300") font-black">
                                <span class="font-bold text-[9px] text-gray-500 mr-1 font-black">@(todo.Order + 1).</span>
                                @todo.Content
                            </span>
                        </div>
                    }
                </div>
            }
        </div>
    </div>

    @if(Item.Notes != null && Item.Notes.Any()) 
    {
        <div class="bg-black/20 border-t border-gray-700 p-2 space-y-2 font-black">
            @foreach(var note in Item.Notes) {
                <div class="bg-black/20 rounded p-2 text-xs text-gray-300 overflow-hidden leading-relaxed font-black">
                    @if(!string.IsNullOrEmpty(note.ImgUrl)) { 
                        <img src="@note.ImgUrl" class="float-left max-w-[100px] max-h-[100px] object-cover rounded mr-2 border border-gray-700 font-black" /> 
                    }
                    @if(!string.IsNullOrEmpty(note.LinkUrl)) { <a href="@note.LinkUrl" target="_blank" class="text-blue-400 hover:underline font-black">@note.Content</a> } 
                    else { <span class="whitespace-pre-wrap font-black">@note.Content</span> }
                    <div class="clear-both font-black"></div>
                </div>
            }
        </div>
    }
</div>

@code {
    [Parameter] public BulletTaskService.TaskDTO Item { get; set; } = new();
    [Parameter] public EventCallback<BulletTaskService.TaskDTO> OnClick { get; set; }
    [Parameter] public EventCallback<BulletTaskService.TaskDTO> OnToggle { get; set; }
    [Parameter] public EventCallback<int> OnDelete { get; set; }

    private async Task HandleClick() => await OnClick.InvokeAsync(Item);
    private async Task HandleDelete() => await OnDelete.InvokeAsync(Item.Id);
    
    private async Task HandleToggle(ChangeEventArgs e) 
    {
        bool isNowComplete = (bool)(e.Value ?? false);
        Item.Detail.IsCompleted = isNowComplete;

        if(Item.Todos != null)
        {
            foreach(var todo in Item.Todos) 
            {
                todo.IsCompleted = isNowComplete;
            }
        }

        await OnToggle.InvokeAsync(Item);
    }

    private async Task ToggleTodo(BulletTaskTodoItem todo, ChangeEventArgs e)
    {
        todo.IsCompleted = (bool)(e.Value ?? false);
        bool allFinished = Item.Todos.All(t => t.IsCompleted);
        Item.Detail.IsCompleted = allFinished;
        await OnToggle.InvokeAsync(Item);
    }
}