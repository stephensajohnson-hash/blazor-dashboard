@namespace Dashboard.Components.Bullet
@using Dashboard

<div class="@GetBorderClass() border rounded-lg mb-3 relative group shadow-sm flex overflow-hidden bg-gray-900 transition">
    
    <div class="absolute top-1 right-1 flex gap-1 opacity-0 group-hover:opacity-100 transition z-30">
        <button @onclick="HandleClick" class="p-1 rounded bg-gray-700 hover:bg-blue-600 text-gray-300 hover:text-white border border-gray-600 shadow-md">‚úèÔ∏è</button>
        <button @onclick="HandleDelete" class="p-1 rounded bg-gray-700 hover:bg-red-600 text-red-400 hover:text-white border border-gray-600 shadow-md">‚úï</button>
    </div>

    @if(!string.IsNullOrEmpty(Item.ImgUrl))
    {
        <div class="relative bg-black shrink-0 border-r border-gray-700/50" style="width: @BulletViewConfig.ImgWidthDay;">
            @if(!string.IsNullOrEmpty(Item.LinkUrl))
            {
                <a href="@Item.LinkUrl" target="_blank" class="block w-full h-full">
                    <img src="@Item.ImgUrl" class="w-full h-full object-cover opacity-90 hover:opacity-100 transition" />
                </a>
            }
            else
            {
                <img src="@Item.ImgUrl" class="w-full h-full object-cover opacity-90" />
            }
        </div>
    }

    <div class="flex-1 p-3 min-w-0 flex flex-col">
        <div class="flex items-start gap-3">
            
            <div class="shrink-0 mt-0.5">
                <input type="checkbox" checked="@Item.Detail.IsCompleted" @onchange="HandleToggle" class="w-4 h-4 rounded bg-gray-800 border-gray-600 cursor-pointer accent-blue-600" />
            </div>

            <div class="flex-1 min-w-0">
                <h4 class="text-sm font-bold leading-tight text-white mb-1 @(Item.Detail.IsCompleted ? "line-through text-gray-500" : "")">
                    @if(!string.IsNullOrEmpty(Item.LinkUrl))
                    {
                        <a href="@Item.LinkUrl" target="_blank" class="hover:text-blue-400 hover:underline">@Item.Title</a>
                    }
                    else
                    {
                        @Item.Title
                    }
                </h4>
                
                @if(!string.IsNullOrEmpty(Item.Description)) {
                    <p class="text-xs text-gray-400 line-clamp-2 mb-2">@Item.Description</p>
                }

                <div class="flex flex-wrap gap-2 items-center">
                    
                    @if(!string.IsNullOrEmpty(Item.Detail.TicketUrl))
                    {
                        <a href="@Item.Detail.TicketUrl" target="_blank" class="text-[10px] bg-blue-900/40 text-blue-300 border border-blue-800 px-2 py-0.5 rounded font-mono hover:bg-blue-800 transition hover:text-white hover:underline decoration-blue-400">
                            üé´ @(!string.IsNullOrEmpty(Item.Detail.TicketNumber) ? Item.Detail.TicketNumber : "Ticket")
                        </a>
                    }
                    else if(!string.IsNullOrEmpty(Item.Detail.TicketNumber))
                    {
                        <span class="text-[10px] bg-gray-800 text-gray-400 border border-gray-700 px-2 py-0.5 rounded font-mono">
                            #@Item.Detail.TicketNumber
                        </span>
                    }

                    @if(!string.IsNullOrEmpty(Item.Detail.Priority) && Item.Detail.Priority != "Normal")
                    {
                        <span class="text-[10px] px-2 py-0.5 rounded border font-bold uppercase @GetPriorityClass()">
                            @Item.Detail.Priority
                        </span>
                    }
                </div>
            </div>
        </div>

        @if(Item.Notes != null && Item.Notes.Any()) 
        {
            <div class="mt-3 pt-2 border-t border-gray-800 space-y-2">
                @foreach(var note in Item.Notes) {
                    <div class="bg-black/20 rounded p-2 text-xs text-gray-300">
                        @if(!string.IsNullOrEmpty(note.ImgUrl)) { 
                            <img src="@note.ImgUrl" class="float-left w-8 h-8 object-cover rounded mr-2 border border-gray-700" /> 
                        }
                        @if(!string.IsNullOrEmpty(note.LinkUrl)) {
                            <a href="@note.LinkUrl" target="_blank" class="text-blue-400 hover:underline">@note.Content</a>
                        } else {
                            @note.Content
                        }
                    </div>
                }
            </div>
        }
    </div>
</div>

@code {
    [Parameter] public BulletTaskService.TaskDTO Item { get; set; } = new();
    [Parameter] public EventCallback<BulletTaskService.TaskDTO> OnClick { get; set; }
    [Parameter] public EventCallback<BulletTaskService.TaskDTO> OnToggle { get; set; }
    [Parameter] public EventCallback<int> OnDelete { get; set; }

    private async Task HandleClick() => await OnClick.InvokeAsync(Item);
    private async Task HandleDelete() => await OnDelete.InvokeAsync(Item.Id);
    
    private async Task HandleToggle(ChangeEventArgs e) {
        bool val = (bool)(e.Value ?? false);
        Item.Detail.IsCompleted = val;
        await OnToggle.InvokeAsync(Item);
    }

    private string GetBorderClass() => Item.Detail.IsCompleted ? "border-gray-800 opacity-60" : "border-gray-700 hover:border-gray-500";
    
    private string GetPriorityClass() => Item.Detail.Priority switch {
        "High" => "bg-red-900/30 text-red-300 border-red-800",
        "Low" => "bg-green-900/30 text-green-300 border-green-800",
        _ => "bg-gray-800 text-gray-400 border-gray-700"
    };
}