@namespace Dashboard.Components.Bullet

@if (IsVisible)
{
    <div class="fixed inset-0 z-[110] flex items-center justify-center bg-black/80 backdrop-blur-sm p-4 font-black">
        <div class="bg-gray-900 border border-blue-500/50 w-full max-w-sm rounded-2xl shadow-2xl p-6 space-y-4">
            <h3 class="text-blue-400 text-xs tracking-widest uppercase">Copy Item</h3>
            
            <div class="space-y-4">
                <div>
                    <label class="block text-[10px] text-gray-500 mb-1">Target Date</label>
                    <input type="date" @bind="TargetDate" class="w-full bg-black border border-gray-700 rounded p-2 text-sm text-white" />
                </div>

                <div class="space-y-2 bg-black/40 p-3 rounded-xl border border-gray-800">
                    <label class="flex items-center gap-3 cursor-pointer">
                        <input type="checkbox" @bind="IncludeNotes" class="accent-blue-500" />
                        <span class="text-xs text-gray-300">Include Notes</span>
                    </label>

                    @if (ItemType == "task")
                    {
                        <label class="flex items-center gap-3 cursor-pointer">
                            <input type="checkbox" @bind="IncompleteTodosOnly" class="accent-blue-500" />
                            <span class="text-xs text-gray-300">Incomplete Todos Only</span>
                        </label>
                    }
                </div>
            </div>

            <div class="pt-4 flex gap-2">
                <button @onclick="OnCancel" class="flex-1 py-2 text-[10px] text-gray-500 uppercase">Cancel</button>
                <button @onclick="HandleConfirm" class="flex-1 bg-blue-600 py-2 rounded-lg text-[10px] text-white shadow-lg tracking-widest uppercase">Confirm Copy</button>
            </div>
        </div>
    </div>
}

@code {
    [Parameter] public bool IsVisible { get; set; }
    [Parameter] public string ItemType { get; set; } = "task";
    [Parameter] public EventCallback OnCancel { get; set; }
    [Parameter] public EventCallback<(DateTime date, bool notes, bool todos)> OnConfirm { get; set; }

    private DateTime TargetDate { get; set; } = DateTime.Today.AddDays(1);
    private bool IncludeNotes { get; set; } = true;
    private bool IncompleteTodosOnly { get; set; } = false;

    private async Task HandleConfirm()
    {
        await OnConfirm.InvokeAsync((TargetDate, IncludeNotes, IncompleteTodosOnly));
    }
}