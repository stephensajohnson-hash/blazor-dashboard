@namespace Dashboard.Components.Bullet
@using Dashboard
@using Microsoft.EntityFrameworkCore
@using Microsoft.Extensions.DependencyInjection
@inject IServiceScopeFactory ScopeFactory

<div class="bg-gray-800 border border-gray-700 rounded-lg mb-3 overflow-hidden shadow-lg group relative transition hover:border-orange-500/50 flex">
    
    <div class="absolute top-1 right-1 flex gap-1 opacity-0 group-hover:opacity-100 transition z-30">
        <button @onclick="HandleClick" class="p-1.5 rounded bg-gray-700 hover:bg-blue-600 text-gray-300 hover:text-white border border-gray-600 shadow-md">‚úèÔ∏è</button>
        <button @onclick="HandleDelete" class="p-1.5 rounded bg-gray-700 hover:bg-red-600 text-red-400 hover:text-white border border-gray-600 shadow-md">‚úï</button>
    </div>

    <div class="shrink-0 bg-black/30 border-r border-gray-700 flex flex-col items-center justify-between py-2 px-1 relative" 
         style="width: @BulletViewConfig.ImgWidthDay">
        
        <div class="text-[10px] font-bold text-gray-500 uppercase tracking-wider text-center leading-tight w-full px-1">
            @LeagueName
        </div>

        <div class="flex-1 flex items-center justify-center w-full overflow-hidden my-1">
            @if(!string.IsNullOrEmpty(LeagueLogo)) 
            {
                <img src="@LeagueLogo" class="w-full h-full object-contain opacity-80" />
            }
            else
            {
                <span class="text-2xl opacity-50">üèÜ</span>
            }
        </div>

        <div class="w-full flex justify-center pb-1">
            @if(Item.Detail.IsComplete)
            {
                @if(ResultState != 0) 
                {
                    <span class="font-black text-xs -rotate-12 border-2 px-1.5 py-0.5 rounded shadow-lg @GetStampClass()">
                        @GetStampText()
                    </span>
                }
                else
                {
                    <span class="text-xs font-bold text-gray-500 border border-gray-600 px-1 rounded bg-black/40">FINAL</span>
                }
            }
            else
            {
                <div class="text-center">
                    <div class="text-xs font-bold text-white">@Item.Detail.StartTime?.ToString("h:mm")</div>
                    <div class="text-[10px] text-gray-500 uppercase">@Item.Detail.StartTime?.ToString("tt")</div>
                </div>
            }
        </div>
    </div>

    <div class="flex-1 p-2 flex flex-col justify-center relative">
        
        @if(!string.IsNullOrEmpty(Item.Detail.TvChannel))
        {
            <div class="absolute bottom-1 left-0 right-0 text-center">
                <span class="text-[10px] text-blue-400 font-bold bg-gray-900/90 px-2 py-0.5 rounded-full border border-blue-500/30 shadow-sm">
                    üì∫ @Item.Detail.TvChannel
                </span>
            </div>
        }

        <div class="flex items-center justify-between pb-4 pt-1"> <div class="flex-1 flex flex-col items-center text-center min-w-0">
                <span class="text-xs font-bold leading-tight mb-1 truncate w-full @(IsFavorite(AwayTeam) ? "text-yellow-400" : "text-gray-300")">
                    @AwayTeam?.Name
                </span>
                <div class="w-12 h-12 flex items-center justify-center mb-1 bg-black/20 rounded-full p-1 border border-gray-700/50">
                    @if(!string.IsNullOrEmpty(AwayTeam?.LogoUrl)) { <img src="@AwayTeam.LogoUrl" class="max-w-full max-h-full object-contain filter drop-shadow-md" /> }
                </div>
                <span class="text-xl font-bold font-mono text-white">
                    @GetScoreDisplay(Item.Detail.AwayScore)
                </span>
                @if(IsFavorite(AwayTeam)) 
                { 
                    <span class="text-[10px] text-gray-400 font-mono mt-0.5 font-bold">(@AwayRecord)</span> 
                }
            </div>

            <div class="text-2xl font-black text-gray-700 select-none pb-4 px-1">@@</div>

            <div class="flex-1 flex flex-col items-center text-center min-w-0">
                <span class="text-xs font-bold leading-tight mb-1 truncate w-full @(IsFavorite(HomeTeam) ? "text-yellow-400" : "text-gray-300")">
                    @HomeTeam?.Name
                </span>
                <div class="w-12 h-12 flex items-center justify-center mb-1 bg-black/20 rounded-full p-1 border border-gray-700/50">
                    @if(!string.IsNullOrEmpty(HomeTeam?.LogoUrl)) { <img src="@HomeTeam.LogoUrl" class="max-w-full max-h-full object-contain filter drop-shadow-md" /> }
                </div>
                <span class="text-xl font-bold font-mono text-white">
                    @GetScoreDisplay(Item.Detail.HomeScore)
                </span>
                @if(IsFavorite(HomeTeam)) 
                { 
                    <span class="text-[10px] text-gray-400 font-mono mt-0.5 font-bold">(@HomeRecord)</span> 
                }
            </div>

        </div>
    </div>
</div>

@code {
    [Parameter] public BulletSportsService.GameDTO Item { get; set; } = new();
    [Parameter] public EventCallback<BulletTaskService.TaskDTO> OnClick { get; set; }
    [Parameter] public EventCallback<int> OnDelete { get; set; }

    private Team? HomeTeam;
    private Team? AwayTeam;
    private string LeagueName = "";
    private string LeagueLogo = "";
    
    private string HomeRecord = "-";
    private string AwayRecord = "-";

    protected override async Task OnParametersSetAsync()
    {
        // ISOLATED SCOPE to prevent NpgsqlOperationInProgressException
        using (var scope = ScopeFactory.CreateScope())
        {
            var db = scope.ServiceProvider.GetRequiredService<AppDbContext>();

            if (Item.Detail.HomeTeamId > 0) 
            {
                HomeTeam = await db.Teams.FindAsync(Item.Detail.HomeTeamId);
                // Optimization: Only calc record if Favorite
                if (IsFavorite(HomeTeam)) 
                    HomeRecord = await CalculatePointInTimeRecord(db, Item.Detail.HomeTeamId, Item.Detail.LeagueId);
            }
                
            if (Item.Detail.AwayTeamId > 0) 
            {
                AwayTeam = await db.Teams.FindAsync(Item.Detail.AwayTeamId);
                if (IsFavorite(AwayTeam))
                    AwayRecord = await CalculatePointInTimeRecord(db, Item.Detail.AwayTeamId, Item.Detail.LeagueId);
            }

            if (Item.Detail.LeagueId > 0)
            {
                var l = await db.Leagues.FindAsync(Item.Detail.LeagueId);
                if (l != null) 
                {
                    LeagueName = l.Name; // Fixed: removed .Abbreviation
                    LeagueLogo = l.ImgUrl;
                }
            }
        }
        StateHasChanged();
    }

    private async Task<string> CalculatePointInTimeRecord(AppDbContext db, int teamId, int leagueId)
    {
        if (leagueId == 0) return "0-0";

        var relevantGames = await (from d in db.BulletGameDetails
                                   join i in db.BulletItems on d.BulletItemId equals i.Id
                                   where d.LeagueId == leagueId && d.IsComplete 
                                      && (d.HomeTeamId == teamId || d.AwayTeamId == teamId)
                                      // Logic: Count games strictly BEFORE this one, OR this one if complete
                                      && (i.Date < Item.Date || (i.Date == Item.Date && i.Id <= Item.Id))
                                   select d).ToListAsync();

        int w = 0, l = 0, t = 0;
        foreach (var g in relevantGames)
        {
            bool isHome = g.HomeTeamId == teamId;
            int myScore = isHome ? g.HomeScore : g.AwayScore;
            int oppScore = isHome ? g.AwayScore : g.HomeScore;

            if (myScore > oppScore) w++;
            else if (myScore < oppScore) l++;
            else t++;
        }

        return t > 0 ? $"{w}-{l}-{t}" : $"{w}-{l}";
    }

    private string GetScoreDisplay(int score) => 
        (Item.Detail.IsComplete || score > 0) ? score.ToString() : "--";

    private bool IsFavorite(Team? t) => t?.IsFavorite ?? false;

    // 0=None, 1=Win, 2=Loss, 3=Tie (From perspective of Favorite)
    private int ResultState 
    {
        get 
        {
            if (!Item.Detail.IsComplete) return 0;
            bool hFav = IsFavorite(HomeTeam);
            bool aFav = IsFavorite(AwayTeam);
            
            // If neither or both are favorites, treating home as 'perspective' if forced, but usually logic handles single fav
            // If NO favorite, we return 0 (logic handled in GetStampText/Class)
            if (!hFav && !aFav) return 0;

            int hScore = Item.Detail.HomeScore;
            int aScore = Item.Detail.AwayScore;

            if (hScore == aScore) return 3; // Tie

            if (hFav) return hScore > aScore ? 1 : 2;
            if (aFav) return aScore > hScore ? 1 : 2;
            
            return 0;
        }
    }

    private string GetStampText() => ResultState switch { 1 => "WIN", 2 => "LOSS", 3 => "TIE", _ => "" };
    
    private string GetStampClass() => ResultState switch {
        1 => "text-green-500 border-green-500 bg-green-900/80",
        2 => "text-red-500 border-red-500 bg-red-900/80",
        3 => "text-yellow-500 border-yellow-500 bg-yellow-900/80",
        _ => "hidden"
    };

    private async Task HandleClick() 
    {
        var taskDto = new BulletTaskService.TaskDTO { 
            Id = Item.Id, UserId = Item.UserId, Type = "sports", Date = Item.Date, 
            Title = Item.Title, Description = Item.Description, SportsDetail = Item.Detail, Category = Item.Category 
        };
        await OnClick.InvokeAsync(taskDto); 
    }
    
    private async Task HandleDelete() => await OnDelete.InvokeAsync(Item.Id);
}