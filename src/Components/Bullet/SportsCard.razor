@namespace Dashboard.Components.Bullet
@using Dashboard
@inject BulletSportsService SportsService

<div class="bg-gray-800 border border-gray-700 rounded-lg mb-3 overflow-hidden shadow-lg group relative transition hover:border-blue-500/50">
    
    <div class="absolute top-1 right-1 flex gap-1 opacity-0 group-hover:opacity-100 transition z-30">
        <button @onclick="HandleClick" class="p-1 rounded bg-gray-700 hover:bg-blue-600 text-gray-300 hover:text-white border border-gray-600 shadow-md">✏️</button>
        <button @onclick="HandleDelete" class="p-1 rounded bg-gray-700 hover:bg-red-600 text-red-400 hover:text-white border border-gray-600 shadow-md">✕</button>
    </div>

    <div class="bg-gray-900/80 px-3 py-2 flex justify-between items-center text-[10px] uppercase font-bold text-gray-500 tracking-wider border-b border-gray-700/50">
        <div class="flex items-center gap-2">
            @if(!string.IsNullOrEmpty(Item.League?.ImgUrl)) { <img src="@Item.League?.ImgUrl" class="w-4 h-4 object-contain" /> }
            <span>@Item.League?.Name</span>
        </div>
        <div class="flex items-center gap-2">
            @if(Item.Detail.IsComplete) { <span class="text-green-500 font-bold">FINAL</span> }
            else { <span class="text-gray-400">@(Item.Detail.StartTime?.ToString("h:mm tt") ?? "TBD")</span> }
            
            <input type="checkbox" checked="@Item.Detail.IsComplete" @onchange="ToggleComplete" class="w-3 h-3 rounded border-gray-600 bg-gray-700 text-blue-500 focus:ring-0 cursor-pointer" />
        </div>
    </div>

    <div class="p-4 relative">
        
        @{
            string resultStamp = "";
            string stampColor = "";
            if (Item.Detail.IsComplete && (Item.HomeTeam?.IsFavorite == true || Item.AwayTeam?.IsFavorite == true))
            {
                bool homeFav = Item.HomeTeam?.IsFavorite ?? false;
                int myScore = homeFav ? Item.Detail.HomeScore : Item.Detail.AwayScore;
                int oppScore = homeFav ? Item.Detail.AwayScore : Item.Detail.HomeScore;

                if (myScore > oppScore) { resultStamp = "WIN"; stampColor = "text-green-500 border-green-500"; }
                else if (myScore < oppScore) { resultStamp = "LOSS"; stampColor = "text-red-500 border-red-500"; }
                else { resultStamp = "TIE"; stampColor = "text-gray-400 border-gray-400"; }
            }
        }

        @if(!string.IsNullOrEmpty(resultStamp))
        {
            <div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 z-0 opacity-20 pointer-events-none transform -rotate-12">
                <span class="text-5xl font-black uppercase tracking-widest border-4 rounded-lg px-4 py-1 @stampColor">@resultStamp</span>
            </div>
        }

        <div class="flex items-center justify-between relative z-10">
            
            <div class="flex flex-col items-center w-1/3">
                <div class="w-16 h-16 mb-2">
                     @if(!string.IsNullOrEmpty(Item.AwayTeam?.LogoUrl)) { <img src="@Item.AwayTeam?.LogoUrl" class="w-full h-full object-contain drop-shadow-lg" /> }
                     else { <div class="w-full h-full bg-black rounded-full border border-gray-700 flex items-center justify-center text-xs">@Item.AwayTeam?.Abbreviation</div> }
                </div>
                <div class="text-center leading-tight">
                    <div class="font-bold text-white text-lg">@Item.Detail.AwayScore</div>
                    <div class="text-[10px] font-bold text-gray-400 uppercase">@Item.AwayTeam?.Abbreviation</div>
                </div>
            </div>

            <div class="text-gray-600 font-bold text-xl pb-6">@@</div>

            <div class="flex flex-col items-center w-1/3">
                <div class="w-16 h-16 mb-2">
                     @if(!string.IsNullOrEmpty(Item.HomeTeam?.LogoUrl)) { <img src="@Item.HomeTeam?.LogoUrl" class="w-full h-full object-contain drop-shadow-lg" /> }
                     else { <div class="w-full h-full bg-black rounded-full border border-gray-700 flex items-center justify-center text-xs">@Item.HomeTeam?.Abbreviation</div> }
                </div>
                <div class="text-center leading-tight">
                    <div class="font-bold text-white text-lg">@Item.Detail.HomeScore</div>
                    <div class="text-[10px] font-bold text-gray-400 uppercase">@Item.HomeTeam?.Abbreviation</div>
                </div>
            </div>
        </div>
    </div>

    <div class="px-3 py-1.5 bg-gray-900/50 border-t border-gray-700 flex justify-between items-center text-[10px]">
        <div class="font-mono text-gray-400">
            @if(Item.FavoriteRecord != null)
            {
                <span title="Season Record">REC: <span class="text-white">@Item.FavoriteRecord.Display</span> <span class="text-gray-500">(@Item.FavoriteRecord.PctDisplay)</span></span>
            }
            else 
            {
                <span>@Item.Season?.Name</span>
            }
        </div>
        
        @if(!string.IsNullOrEmpty(Item.Detail.TvChannel)) 
        { 
            <span class="text-blue-400 font-bold bg-blue-900/20 px-1.5 rounded">@Item.Detail.TvChannel</span> 
        }
    </div>
</div>

@code {
    [Parameter] public BulletSportsService.GameDTO Item { get; set; } = new();
    [Parameter] public EventCallback<BulletTaskService.TaskDTO> OnClick { get; set; }
    [Parameter] public EventCallback<int> OnDelete { get; set; }

    private async Task ToggleComplete(ChangeEventArgs e)
    {
        bool isChecked = (bool)(e.Value ?? false);
        Item.Detail.IsComplete = isChecked;
        await SportsService.ToggleComplete(Item.Id, isChecked);
    }

    private async Task HandleClick() 
    {
        var taskDto = new BulletTaskService.TaskDTO { Id = Item.Id, UserId = Item.UserId, Type = "sports", Date = Item.Date, Title = Item.Title };
        await OnClick.InvokeAsync(taskDto); 
    }
    private async Task HandleDelete() => await OnDelete.InvokeAsync(Item.Id);
}