@namespace Dashboard.Components.Bullet
@using Dashboard
@using Microsoft.EntityFrameworkCore
@using Microsoft.Extensions.DependencyInjection
@inject IServiceScopeFactory ScopeFactory

<div class="bg-gray-800 border border-gray-700 rounded-lg mb-3 overflow-hidden shadow-lg group relative transition hover:border-orange-500/50 flex">
    
    <div class="absolute top-1 right-1 flex gap-1 opacity-0 group-hover:opacity-100 transition z-30">
        <button @onclick="HandleClick" class="p-1.5 rounded bg-gray-700 hover:bg-blue-600 text-gray-300 hover:text-white border border-gray-600 shadow-md">‚úèÔ∏è</button>
        <button @onclick="HandleDelete" class="p-1.5 rounded bg-gray-700 hover:bg-red-600 text-red-400 hover:text-white border border-gray-600 shadow-md">‚úï</button>
    </div>

    @* LEFT SIDEBAR: Layered to support huge logos behind text *@
    <div class="shrink-0 bg-black/40 border-r border-gray-700 flex flex-col items-center justify-between relative overflow-hidden" 
          style="width: @BulletViewConfig.ImgWidthDay">
        
        @* Background Logo Area *@
        <div class="absolute inset-0 z-0 flex items-center justify-center p-1 pointer-events-none">
            @if(!string.IsNullOrEmpty(MainLogoUrl)) 
            {
                <img src="@MainLogoUrl" class="w-full h-full object-contain opacity-40 transform scale-[2.2] filter blur-[1px]" />
            }
            else
            {
                <span class="text-4xl opacity-10">üèÜ</span>
            }
        </div>

        @* Top Text Area *@
        <div class="relative z-10 w-full bg-gray-900/80 backdrop-blur-sm border-b border-gray-700/50 py-1.5 px-1 text-[9px] font-black text-gray-300 uppercase tracking-tighter text-center leading-tight">
            @LeagueName
        </div>

        @* Bottom Text Area *@
        <div class="relative z-10 w-full bg-gray-900/80 backdrop-blur-sm border-t border-gray-700/50 py-1.5 flex justify-center">
            @if(Item.Detail.IsComplete)
            {
                @if(ResultState != 0) 
                {
                    <span class="font-black text-[10px] -rotate-12 border px-1 rounded shadow-lg @GetStampClass()">
                        @GetStampText()
                    </span>
                }
                else
                {
                    <span class="text-[9px] font-black text-gray-400 border border-gray-700 px-1 rounded bg-black/60 uppercase">Final</span>
                }
            }
            else
            {
                <div class="text-center leading-none">
                    <div class="text-[10px] font-black text-white">@Item.Detail.StartTime?.ToString("h:mm")</div>
                    <div class="text-[8px] font-bold text-gray-500 uppercase">@Item.Detail.StartTime?.ToString("tt")</div>
                </div>
            }
        </div>
    </div>

    <div class="flex-1 p-2 flex flex-col justify-center relative">
        @if(!string.IsNullOrEmpty(Item.Detail.TvChannel))
        {
            <div class="absolute bottom-1 left-0 right-0 text-center">
                <span class="text-[10px] text-blue-400 font-bold bg-gray-900/90 px-2 py-0.5 rounded-full border border-blue-500/30 shadow-sm">
                    üì∫ @Item.Detail.TvChannel
                </span>
            </div>
        }

        <div class="flex items-center justify-between pb-4 pt-1">
            <div class="flex-1 flex flex-col items-center text-center min-w-0">
                <span class="text-xs font-bold leading-tight mb-1 truncate w-full @(IsFavorite(AwayTeam) ? "text-yellow-400" : "text-gray-300")">
                    @AwayTeam?.Name
                </span>
                <div class="w-12 h-12 flex items-center justify-center mb-1 bg-black/20 rounded-full p-1 border border-gray-700/50">
                    @if(!string.IsNullOrEmpty(AwayTeam?.LogoUrl)) { <img src="@AwayTeam.LogoUrl" class="max-w-full max-h-full object-contain filter drop-shadow-md" /> }
                </div>
                <span class="text-xl font-bold font-mono text-white">@GetScoreDisplay(Item.Detail.AwayScore)</span>
                @if(IsFavorite(AwayTeam)) { <span class="text-[10px] text-gray-400 font-mono mt-0.5 font-bold">(@AwayRecord)</span> }
            </div>

            <div class="text-2xl font-black text-gray-700 select-none pb-4 px-1">@@</div>

            <div class="flex-1 flex flex-col items-center text-center min-w-0">
                <span class="text-xs font-bold leading-tight mb-1 truncate w-full @(IsFavorite(HomeTeam) ? "text-yellow-400" : "text-gray-300")">
                    @HomeTeam?.Name
                </span>
                <div class="w-12 h-12 flex items-center justify-center mb-1 bg-black/20 rounded-full p-1 border border-gray-700/50">
                    @if(!string.IsNullOrEmpty(HomeTeam?.LogoUrl)) { <img src="@HomeTeam.LogoUrl" class="max-w-full max-h-full object-contain filter drop-shadow-md" /> }
                </div>
                <span class="text-xl font-bold font-mono text-white">@GetScoreDisplay(Item.Detail.HomeScore)</span>
                @if(IsFavorite(HomeTeam)) { <span class="text-[10px] text-gray-400 font-mono mt-0.5 font-bold">(@HomeRecord)</span> }
            </div>
        </div>
    </div>
</div>

@code {
    [Parameter] public BulletSportsService.GameDTO Item { get; set; } = new();
    [Parameter] public EventCallback<BulletTaskService.TaskDTO> OnClick { get; set; }
    [Parameter] public EventCallback<int> OnDelete { get; set; }

    private Team? HomeTeam, AwayTeam;
    private string LeagueName = "", LeagueLogo = "";
    private string HomeRecord = "-", AwayRecord = "-";

    private string MainLogoUrl => IsFavorite(HomeTeam) ? HomeTeam?.LogoUrl : (IsFavorite(AwayTeam) ? AwayTeam?.LogoUrl : LeagueLogo);

    protected override async Task OnParametersSetAsync()
    {
        using var scope = ScopeFactory.CreateScope();
        var db = scope.ServiceProvider.GetRequiredService<AppDbContext>();

        if (Item.Detail.HomeTeamId > 0) {
            HomeTeam = await db.Teams.FindAsync(Item.Detail.HomeTeamId);
            if (IsFavorite(HomeTeam)) HomeRecord = await CalculatePointInTimeRecord(db, Item.Detail.HomeTeamId, Item.Detail.LeagueId);
        }
            
        if (Item.Detail.AwayTeamId > 0) {
            AwayTeam = await db.Teams.FindAsync(Item.Detail.AwayTeamId);
            if (IsFavorite(AwayTeam)) AwayRecord = await CalculatePointInTimeRecord(db, Item.Detail.AwayTeamId, Item.Detail.LeagueId);
        }

        if (Item.Detail.LeagueId > 0) {
            var l = await db.Leagues.FindAsync(Item.Detail.LeagueId);
            if (l != null) { LeagueName = l.Name; LeagueLogo = l.ImgUrl; }
        }
        StateHasChanged();
    }

    private async Task<string> CalculatePointInTimeRecord(AppDbContext db, int teamId, int leagueId)
    {
        if (leagueId == 0) return "0-0";
        var relevantGames = await (from d in db.BulletGameDetails
                                   join i in db.BulletItems on d.BulletItemId equals i.Id
                                   where d.LeagueId == leagueId && d.IsComplete && (d.HomeTeamId == teamId || d.AwayTeamId == teamId)
                                      && (i.Date < Item.Date || (i.Date == Item.Date && i.Id <= Item.Id))
                                   select d).ToListAsync();
        int w = 0, l = 0, t = 0;
        foreach (var g in relevantGames) {
            bool isHome = g.HomeTeamId == teamId;
            int myScore = isHome ? g.HomeScore : g.AwayScore, oppScore = isHome ? g.AwayScore : g.HomeScore;
            if (myScore > oppScore) w++; else if (myScore < oppScore) l++; else t++;
        }
        return t > 0 ? $"{w}-{l}-{t}" : $"{w}-{l}";
    }

    private string GetScoreDisplay(int score) => (Item.Detail.IsComplete || score > 0) ? score.ToString() : "--";
    private bool IsFavorite(Team? t) => t?.IsFavorite ?? false;
    private int ResultState {
        get {
            if (!Item.Detail.IsComplete) return 0;
            bool hFav = IsFavorite(HomeTeam), aFav = IsFavorite(AwayTeam);
            if (!hFav && !aFav) return 0;
            if (Item.Detail.HomeScore == Item.Detail.AwayScore) return 3;
            if (hFav) return Item.Detail.HomeScore > Item.Detail.AwayScore ? 1 : 2;
            if (aFav) return Item.Detail.AwayScore > Item.Detail.HomeScore ? 1 : 2;
            return 0;
        }
    }
    private string GetStampText() => ResultState switch { 1 => "WIN", 2 => "LOSS", 3 => "TIE", _ => "" };
    private string GetStampClass() => ResultState switch {
        1 => "text-green-500 border-green-500 bg-green-900/80",
        2 => "text-red-500 border-red-500 bg-red-900/80",
        3 => "text-yellow-500 border-yellow-500 bg-yellow-900/80",
        _ => "hidden"
    };
    private async Task HandleClick() => await OnClick.InvokeAsync(new BulletTaskService.TaskDTO { Id = Item.Id, UserId = Item.UserId, Type = "sports", Date = Item.Date, Title = Item.Title, Description = Item.Description, SportsDetail = Item.Detail, Category = Item.Category });
    private async Task HandleDelete() => await OnDelete.InvokeAsync(Item.Id);
}