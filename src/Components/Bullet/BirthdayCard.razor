@namespace Dashboard.Components.Bullet
@using Dashboard

<div class="bg-yellow-900/20 border border-yellow-700/50 rounded-lg mb-3 relative group shadow-sm flex flex-col transition hover:border-yellow-500 overflow-hidden font-sans">
    
    <div class="absolute top-2 right-2 flex gap-1 opacity-0 group-hover:opacity-100 transition z-30">
        <button @onclick="HandleClick" class="p-1.5 rounded bg-gray-800/90 hover:bg-blue-600 text-gray-300 hover:text-white border border-gray-600 shadow-xl transition">‚úèÔ∏è</button>
        <button @onclick="HandleDelete" class="p-1.5 rounded bg-gray-800/90 hover:bg-red-600 text-red-400 hover:text-white border border-gray-600 shadow-xl transition">‚úï</button>
    </div>

    <div class="flex w-full items-stretch min-h-[80px]">
        @if(!string.IsNullOrEmpty(Item.ImgUrl))
        {
            <div class="relative bg-black shrink-0 border-r border-yellow-700/50 overflow-hidden" 
                 style="width: @(string.IsNullOrEmpty(BulletViewConfig.ImgWidthDay) ? "80px" : BulletViewConfig.ImgWidthDay);">
                @if(!string.IsNullOrEmpty(Item.LinkUrl)) 
                { 
                    <a href="@Item.LinkUrl" target="_blank" class="block w-full h-full hover:opacity-80 transition">
                        <img src="@Item.ImgUrl" class="w-full h-full object-cover opacity-90 hover:opacity-100 transition-opacity" />
                    </a> 
                } 
                else 
                { 
                    <img src="@Item.ImgUrl" class="w-full h-full object-cover opacity-90" /> 
                }
            </div>
        }
        else 
        {
            <div class="flex items-center justify-center bg-yellow-900/40 text-3xl shrink-0 border-r border-yellow-700/30" 
                 style="width: @(string.IsNullOrEmpty(BulletViewConfig.ImgWidthDay) ? "80px" : BulletViewConfig.ImgWidthDay);">
                 üéÇ
            </div>
        }

        <div class="flex-1 flex flex-col p-4 min-w-0 justify-center">
            <div class="flex items-center gap-2 mb-1">
                 <h4 class="text-sm font-black uppercase tracking-tight text-yellow-100 truncate">
                    @Item.Title
                </h4>
            </div>
            
            <div class="flex items-center gap-2 mb-2">
                @if(Item.BirthdayDetail?.DOB_Year > 0) {
                    var age = Item.Date.Year - Item.BirthdayDetail.DOB_Year;
                    <span class="bg-yellow-600 text-white text-[10px] font-black uppercase px-2 py-0.5 rounded shadow-sm">Turning @age</span> 
                }
                else 
                { 
                    <span class="text-yellow-600/80 text-[10px] font-black uppercase tracking-widest">Annual Birthday</span> 
                }
            </div>

            @if(!string.IsNullOrEmpty(Item.Description)) { 
                <p class="text-[11px] text-yellow-200/50 leading-relaxed line-clamp-2 italic font-medium">"@Item.Description"</p> 
            }
        </div>
    </div>

    @if(Item.Notes != null && Item.Notes.Any()) 
    {
        <div class="bg-black/30 border-t border-yellow-900/30 p-2 space-y-1">
            @foreach(var note in Item.Notes) {
                <div class="bg-black/20 rounded p-2 text-[10px] text-gray-400 font-bold border border-gray-800/50 flex gap-2 items-start">
                    @if(!string.IsNullOrEmpty(note.ImgUrl)) { 
                        <img src="@note.ImgUrl" class="w-10 h-10 object-cover rounded border border-gray-700 shadow-sm shrink-0" /> 
                    }
                    <div class="flex-1">
                        @if(!string.IsNullOrEmpty(note.LinkUrl)) { 
                            <a href="@note.LinkUrl" target="_blank" class="text-blue-400 hover:underline">@note.Content</a> 
                        } 
                        else { 
                            <span>@note.Content</span> 
                        }
                    </div>
                </div>
            }
        </div>
    }
</div>

@code {
    [Parameter] public BulletTaskService.TaskDTO Item { get; set; } = new();
    [Parameter] public EventCallback<BulletTaskService.TaskDTO> OnClick { get; set; }
    [Parameter] public EventCallback<int> OnDelete { get; set; }

    private async Task HandleClick() => await OnClick.InvokeAsync(Item);
    private async Task HandleDelete() => await OnDelete.InvokeAsync(Item.Id);
}