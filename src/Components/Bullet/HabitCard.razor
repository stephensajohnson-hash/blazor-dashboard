@namespace Dashboard.Components.Bullet
@using Dashboard

<div class="bg-gray-900 border border-gray-700 @(Item.Detail.Status == "Skipped" ? "border-l-orange-500 opacity-75" : "border-l-cyan-500") rounded-r-lg mb-3 relative group shadow-sm flex flex-col transition @(Item.Detail.Status == "Skipped" ? "" : "hover:border-cyan-400") font-black overflow-hidden">
    
    @* STAMP OVERLAY *@
    @if (Item.Detail.Status == "Skipped")
    {
        <div class="absolute inset-0 flex items-center justify-center pointer-events-none z-40">
            <div class="border-8 border-orange-600/20 text-orange-600/20 text-6xl font-black px-8 py-4 uppercase tracking-[0.3em] rotate-[-12deg] border-dashed rounded-3xl select-none">
                Skipped
            </div>
        </div>
    }

    <div class="absolute top-1 right-1 flex gap-1 opacity-0 group-hover:opacity-100 transition z-30 font-black">
        @if (Item.Detail.Status != "Skipped")
        {
            <button @onclick="HandleSkip" @onclick:stopPropagation="true" class="p-1 rounded bg-gray-700 hover:bg-orange-600 text-orange-400 hover:text-white border border-gray-600 shadow-md" title="Skip this instance">⏭️</button>
        }
        <button @onclick="HandleClick" @onclick:stopPropagation="true" class="p-1 rounded bg-gray-700 hover:bg-blue-600 text-gray-300 hover:text-white border border-gray-600 shadow-md">✏️</button>
        <button @onclick="HandleDelete" @onclick:stopPropagation="true" class="p-1 rounded bg-gray-700 hover:bg-red-600 text-red-400 hover:text-white border border-gray-600 shadow-md">✕</button>
    </div>

    <div class="flex w-full @(Item.Detail.Status == "Skipped" ? "grayscale-[0.5]" : "")">
        @if(!string.IsNullOrEmpty(Item.ImgUrl))
        {
            <div class="relative bg-black shrink-0 border-r border-gray-700/50" style="width: @BulletViewConfig.ImgWidthDay;">
                @if(!string.IsNullOrEmpty(Item.LinkUrl)) { <a href="@Item.LinkUrl" target="_blank" class="block w-full h-full hover:opacity-80 transition"><img src="@Item.ImgUrl" class="w-full h-full object-cover opacity-90" /></a> } 
                else { <img src="@Item.ImgUrl" class="w-full h-full object-cover opacity-90" /> }
            </div>
        }

        <div class="flex-1 flex items-start p-3 gap-3 min-w-0 font-black">
            <div class="shrink-0 mt-0.5 font-black" @onclick:stopPropagation="true">
                <input type="checkbox" 
                       checked="@Item.Detail.IsCompleted" 
                       disabled="@(Item.Detail.Status == "Skipped")"
                       @onchange="HandleToggle" 
                       class="w-4 h-4 rounded bg-gray-800 border-gray-600 cursor-pointer @(Item.Detail.Status == "Skipped" ? "opacity-20" : "accent-cyan-500")" />
            </div>

            <div class="flex-1 min-w-0 font-black">
                <div class="flex items-center gap-2 mb-1">
                    <h4 class="text-sm font-bold leading-tight text-white @(Item.Detail.IsCompleted ? "line-through text-gray-500" : "") @(Item.Detail.Status == "Skipped" ? "text-orange-200/50" : "")">
                        @if(!string.IsNullOrEmpty(Item.LinkUrl)) { <a href="@Item.LinkUrl" target="_blank" class="hover:text-cyan-400 hover:underline transition">@Item.Title</a> } else { @Item.Title }
                    </h4>
                </div>
                
                @if(!string.IsNullOrEmpty(Item.Description)) { <p class="text-xs text-gray-400 line-clamp-2 mb-2 font-black">@Item.Description</p> }

                <div class="flex flex-wrap gap-2 items-center font-black">
                    <div class="flex items-baseline gap-1.5 @(Item.Detail.Status == "Skipped" ? "bg-orange-900/10 border-orange-800/30" : "bg-cyan-900/10 border border-cyan-800/50") px-2 py-1 rounded border">
                        <span class="text-lg font-bold @(Item.Detail.Status == "Skipped" ? "text-orange-400" : "text-cyan-300")">@Item.Detail.StreakCount</span>
                        <span class="text-[9px] @(Item.Detail.Status == "Skipped" ? "text-orange-700" : "text-cyan-600") uppercase font-bold tracking-wider">Day Streak</span>
                    </div>
                </div>
            </div>
        </div>
    </div>

    @if(Item.Notes != null && Item.Notes.Any()) 
    {
        <div class="bg-black/20 border-t border-gray-700 p-2 space-y-2 font-black">
            @foreach(var note in Item.Notes) {
                <div class="bg-black/20 rounded p-2 text-xs text-gray-300 overflow-hidden clearfix font-black">
                    @if(!string.IsNullOrEmpty(note.ImgUrl)) { <img src="@note.ImgUrl" class="float-left max-w-[100px] max-h-[100px] object-cover rounded mr-2 border border-gray-700" /> }
                    @if(!string.IsNullOrEmpty(note.LinkUrl)) { <a href="@note.LinkUrl" target="_blank" class="text-blue-400 hover:underline">@note.Content</a> } else { @note.Content }
                </div>
            }
        </div>
    }
</div>

@code {
    [Parameter] public BulletHabitService.HabitDTO Item { get; set; } = new();
    
    [Parameter] public EventCallback<BulletHabitService.HabitDTO> OnClick { get; set; }
    [Parameter] public EventCallback<int> OnDelete { get; set; }
    [Parameter] public EventCallback<BulletHabitService.HabitDTO> OnChange { get; set; }
    [Parameter] public EventCallback<BulletHabitService.HabitDTO> OnSkip { get; set; }

    private async Task HandleClick() => await OnClick.InvokeAsync(Item);
    private async Task HandleDelete() => await OnDelete.InvokeAsync(Item.Id);

    private async Task HandleToggle(ChangeEventArgs e) {
        if (Item.Detail.Status == "Skipped") return;
        Item.Detail.IsCompleted = (bool)(e.Value ?? false);
        await OnChange.InvokeAsync(Item);
    }

    private async Task HandleSkip()
    {
        if (Item.Detail.Status == "Skipped") return;
        await OnSkip.InvokeAsync(Item);
    }
}