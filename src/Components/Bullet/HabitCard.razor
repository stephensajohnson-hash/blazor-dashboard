@namespace Dashboard.Components.Bullet
@using Dashboard

<div class="bg-gray-900 border border-gray-700 border-l-4 border-l-cyan-500 rounded-r-lg mb-3 relative group shadow-sm min-h-[60px] flex flex-col transition hover:border-cyan-400">
    
    <div class="absolute top-1 right-1 flex gap-1 opacity-0 group-hover:opacity-100 transition z-30">
        <button @onclick="HandleClick" @onclick:stopPropagation="true" class="p-1 rounded bg-gray-700 hover:bg-blue-600 text-gray-300 hover:text-white border border-gray-600 shadow-md">‚úèÔ∏è</button>
        <button @onclick="HandleDelete" @onclick:stopPropagation="true" class="p-1 rounded bg-gray-700 hover:bg-red-600 text-red-400 hover:text-white border border-gray-600 shadow-md">‚úï</button>
    </div>

    <div class="flex w-full">
        
        @if(!string.IsNullOrEmpty(Item.ImgUrl))
        {
            <div class="relative bg-black shrink-0 border-r border-gray-700/50" style="width: @BulletViewConfig.ImgWidthDay;">
                @if(!string.IsNullOrEmpty(Item.LinkUrl))
                {
                    <a href="@Item.LinkUrl" target="_blank" class="block w-full h-full hover:opacity-80 transition" @onclick:stopPropagation>
                        <img src="@Item.ImgUrl" class="w-full h-full object-cover opacity-90" />
                    </a>
                }
                else
                {
                    <img src="@Item.ImgUrl" class="w-full h-full object-cover opacity-90" />
                }
            </div>
        }

        <div class="flex-1 flex items-start p-3 gap-3 min-w-0">
            
            <div class="shrink-0 flex flex-col items-center gap-1 mt-0.5" @onclick:stopPropagation="true">
                <button @onclick="IncrementStreak" class="w-8 h-8 rounded-full bg-cyan-900/30 text-cyan-400 border border-cyan-700 flex items-center justify-center hover:bg-cyan-500 hover:text-white transition font-bold text-lg" title="Increment Streak">
                    +
                </button>
                <div class="text-[10px] text-cyan-500 font-mono">Streak</div>
            </div>

            <div class="flex-1 min-w-0">
                <h4 class="text-sm font-bold leading-tight text-white mb-1">
                    @if(!string.IsNullOrEmpty(Item.LinkUrl))
                    {
                        <a href="@Item.LinkUrl" target="_blank" class="hover:text-cyan-400 hover:underline transition" @onclick:stopPropagation>@Item.Title</a>
                    }
                    else
                    {
                        @Item.Title
                    }
                </h4>
                
                @if(!string.IsNullOrEmpty(Item.Description)) {
                    <p class="text-xs text-gray-400 line-clamp-2 mb-2">@Item.Description</p>
                }

                <div class="flex flex-wrap gap-2 items-center">
                    
                    <span class="text-[10px] bg-cyan-900/20 text-cyan-300 border border-cyan-800 px-2 py-0.5 rounded font-mono inline-flex items-center">
                        <span class="mr-1">üî•</span> @Item.Detail.StreakCount
                    </span>

                    <span class="text-[10px] bg-gray-800 text-gray-400 border border-gray-700 px-2 py-0.5 rounded uppercase font-bold">
                        @Item.Detail.Status
                    </span>
                </div>
            </div>
        </div>
    </div>

    @if(Item.Notes != null && Item.Notes.Any()) 
    {
        <div class="bg-black/20 border-t border-gray-700 p-2 space-y-2">
            @foreach(var note in Item.Notes) {
                <div class="block bg-gray-900/50 rounded p-2 clearfix relative z-10 border border-transparent hover:border-gray-700">
                    @if(!string.IsNullOrEmpty(note.ImgUrl)) { 
                        <img src="@note.ImgUrl" class="float-left w-12 h-12 object-cover rounded mr-2 mb-1 border border-gray-700" /> 
                    }
                    
                    <p class="text-xs text-gray-300 whitespace-pre-wrap leading-snug">
                        @if(!string.IsNullOrEmpty(note.LinkUrl)) {
                            <a href="@note.LinkUrl" target="_blank" class="text-blue-400 hover:underline" @onclick:stopPropagation>üîó @note.Content</a>
                        }
                        else {
                            @note.Content
                        }
                    </p>
                </div>
            }
        </div>
    }
</div>

@code {
    [Parameter] public BulletHabitService.HabitDTO Item { get; set; } = new();
    
    [Parameter] public EventCallback<BulletHabitService.HabitDTO> OnClick { get; set; }
    [Parameter] public EventCallback<int> OnDelete { get; set; }
    [Parameter] public EventCallback<BulletHabitService.HabitDTO> OnStreakChange { get; set; } // Callback for save

    private async Task HandleClick() => await OnClick.InvokeAsync(Item);
    private async Task HandleDelete() => await OnDelete.InvokeAsync(Item.Id);

    private async Task IncrementStreak()
    {
        Item.Detail.StreakCount++;
        await OnStreakChange.InvokeAsync(Item);
    }
}