@namespace Dashboard.Components.Bullet
@using Dashboard
@using Microsoft.AspNetCore.Components.Forms
@using System.IO
@inject IJSRuntime JS
@inject BulletBaseService BaseService
@inject BulletSportsService SportsService

@if (Item != null)
{
    <div class="fixed inset-0 z-50 flex items-center justify-center bg-black/60 backdrop-blur-sm p-4">
        <div class="bg-gray-800 border border-gray-700 w-full max-w-lg rounded-xl shadow-2xl overflow-hidden flex flex-col max-h-[90vh]">
            
            <div class="px-4 py-3 border-b border-gray-700 bg-gray-900/50 flex gap-2 overflow-x-auto scrollbar-hide">
                <button @onclick='() => ChangeType("task")' class="px-3 py-1 rounded-full text-xs font-bold transition @(Item.Type == "task" ? "bg-blue-600 text-white shadow" : "bg-gray-800 text-gray-400 hover:text-white")">üìù Task</button>
                <button @onclick='() => ChangeType("meeting")' class="px-3 py-1 rounded-full text-xs font-bold transition @(Item.Type == "meeting" ? "bg-purple-600 text-white shadow" : "bg-gray-800 text-gray-400 hover:text-white")">üìÖ Meeting</button>
                <button @onclick='() => ChangeType("habit")' class="px-3 py-1 rounded-full text-xs font-bold transition @(Item.Type == "habit" ? "bg-cyan-600 text-white shadow" : "bg-gray-800 text-gray-400 hover:text-white")">üî• Habit</button>
                <button @onclick='() => ChangeType("sports")' class="px-3 py-1 rounded-full text-xs font-bold transition @(Item.Type == "sports" ? "bg-orange-600 text-white shadow" : "bg-gray-800 text-gray-400 hover:text-white")">üèÜ Sport</button>
                <button @onclick='() => ChangeType("vacation")' class="px-3 py-1 rounded-full text-xs font-bold transition @(Item.Type == "vacation" ? "bg-red-600 text-white shadow" : "bg-gray-800 text-gray-400 hover:text-white")">‚úàÔ∏è Vacation</button>
                <button @onclick='() => ChangeType("birthday")' class="px-3 py-1 rounded-full text-xs font-bold transition @(Item.Type == "birthday" ? "bg-yellow-600 text-white shadow" : "bg-gray-800 text-gray-400 hover:text-white")">üéÇ Birthday</button>
                <button @onclick='() => ChangeType("holiday")' class="px-3 py-1 rounded-full text-xs font-bold transition @(Item.Type == "holiday" ? "bg-green-600 text-white shadow" : "bg-gray-800 text-gray-400 hover:text-white")">üéâ Holiday</button>
                <button @onclick='() => ChangeType("anniversary")' class="px-3 py-1 rounded-full text-xs font-bold transition @(Item.Type == "anniversary" ? "bg-pink-600 text-white shadow" : "bg-gray-800 text-gray-400 hover:text-white")">üíë Anniversary</button>
                <button @onclick='() => ChangeType("media")' class="px-3 py-1 rounded-full text-xs font-bold transition @(Item.Type == "media" ? "bg-indigo-600 text-white shadow" : "bg-gray-800 text-gray-400 hover:text-white")">üé¨ Media</button>
            </div>

            <div class="p-6 overflow-y-auto space-y-5 flex-1">
                
                <div>
                    <label class="block text-xs font-bold text-gray-500 uppercase mb-1">Title</label>
                    <input @bind="Item.Title" class="w-full bg-gray-900 border border-gray-700 rounded-lg px-3 py-2 text-white focus:ring-2 focus:ring-blue-500 outline-none transition" placeholder="What's happening?" />
                </div>

                @if(Item.Type == "sports")
                {
                    <div class="bg-black/20 p-4 rounded-lg border border-gray-700/50 space-y-4">
                        <div>
                            <label class="block text-[10px] font-bold text-gray-500 uppercase mb-1">League</label>
                            <select value="@SportsDetail.LeagueId" @onchange="OnLeagueChanged" class="w-full bg-gray-900 border border-gray-700 rounded px-2 py-2 text-sm text-white">
                                <option value="0">-- Select League --</option>
                                @foreach(var l in leagues) { <option value="@l.Id">@l.Name</option> }
                            </select>
                        </div>

                        <div class="grid grid-cols-2 gap-4">
                            <div>
                                <label class="block text-[10px] font-bold text-gray-500 uppercase mb-1">Away Team</label>
                                <select @bind="SportsDetail.AwayTeamId" class="w-full bg-gray-900 border border-gray-700 rounded px-2 py-1 text-sm text-white">
                                    <option value="0">-- Select --</option>
                                    @foreach(var t in filteredTeams) { <option value="@t.Id">@t.Name</option> }
                                </select>
                                <input type="number" @bind="SportsDetail.AwayScore" class="w-full mt-1 bg-gray-900 border border-gray-700 rounded px-2 py-1 text-white font-mono font-bold text-center" placeholder="0" />
                            </div>

                            <div>
                                <label class="block text-[10px] font-bold text-gray-500 uppercase mb-1">Home Team</label>
                                <select @bind="SportsDetail.HomeTeamId" class="w-full bg-gray-900 border border-gray-700 rounded px-2 py-1 text-sm text-white">
                                    <option value="0">-- Select --</option>
                                    @foreach(var t in filteredTeams) { <option value="@t.Id">@t.Name</option> }
                                </select>
                                <input type="number" @bind="SportsDetail.HomeScore" class="w-full mt-1 bg-gray-900 border border-gray-700 rounded px-2 py-1 text-white font-mono font-bold text-center" placeholder="0" />
                            </div>
                        </div>

                        <div class="grid grid-cols-2 gap-4">
                            <div>
                                <label class="block text-[10px] font-bold text-gray-500 uppercase mb-1">Status</label>
                                <div class="flex items-center gap-2 bg-gray-900 border border-gray-700 rounded px-3 py-2 h-[38px]">
                                    <input type="checkbox" @bind="SportsDetail.IsComplete" id="chkComplete" class="w-4 h-4 rounded bg-gray-700 border-gray-600 text-green-500 focus:ring-0" />
                                    <label for="chkComplete" class="text-sm text-white cursor-pointer select-none">Final</label>
                                </div>
                            </div>
                            <div>
                                <label class="block text-[10px] font-bold text-gray-500 uppercase mb-1">Channel</label>
                                <input @bind="SportsDetail.TvChannel" class="w-full bg-gray-900 border border-gray-700 rounded px-3 py-2 text-white text-sm" placeholder="TV" />
                            </div>
                        </div>
                        
                        <div>
                            <label class="block text-[10px] font-bold text-gray-500 uppercase mb-1">Start Time</label>
                            <input type="time" @bind="SportsDetail.StartTime" class="w-full bg-gray-900 border border-gray-700 rounded px-3 py-2 text-white text-sm" />
                        </div>
                    </div>
                }

                @if(Item.Type == "task")
                {
                    <div class="grid grid-cols-2 gap-4">
                        <div>
                            <label class="block text-xs font-bold text-gray-500 uppercase mb-1">Status</label>
                            <select @bind="TaskDetail.Status" class="w-full bg-gray-900 border border-gray-700 rounded px-3 py-2 text-white text-sm">
                                <option>Pending</option><option>In Progress</option><option>Completed</option><option>Cancelled</option>
                            </select>
                        </div>
                        <div>
                            <label class="block text-xs font-bold text-gray-500 uppercase mb-1">Priority</label>
                            <select @bind="TaskDetail.Priority" class="w-full bg-gray-900 border border-gray-700 rounded px-3 py-2 text-white text-sm">
                                <option>Low</option><option>Normal</option><option>High</option><option>Critical</option>
                            </select>
                        </div>
                    </div>
                    <div class="grid grid-cols-2 gap-4">
                        <div>
                            <label class="block text-xs font-bold text-gray-500 uppercase mb-1">Due Date</label>
                            <input type="date" @bind="TaskDetail.DueDate" class="w-full bg-gray-900 border border-gray-700 rounded px-3 py-2 text-white text-sm" />
                        </div>
                        <div class="flex items-end">
                            <div class="flex items-center gap-2 bg-gray-900 border border-gray-700 rounded px-3 py-2 w-full">
                                <input type="checkbox" @bind="TaskDetail.IsCompleted" id="chkTaskDone" class="w-4 h-4 rounded bg-gray-700 border-gray-600 text-blue-500 focus:ring-0" />
                                <label for="chkTaskDone" class="text-sm text-white cursor-pointer">Completed</label>
                            </div>
                        </div>
                    </div>
                }

                @if(Item.Type == "meeting")
                {
                    <div class="grid grid-cols-2 gap-4">
                        <div>
                            <label class="block text-xs font-bold text-gray-500 uppercase mb-1">Start Time</label>
                            <input type="time" @bind="MeetingDetail.StartTime" class="w-full bg-gray-900 border border-gray-700 rounded px-3 py-2 text-white text-sm" />
                        </div>
                        <div>
                            <label class="block text-xs font-bold text-gray-500 uppercase mb-1">Duration (Min)</label>
                            <input type="number" @bind="MeetingDetail.DurationMinutes" class="w-full bg-gray-900 border border-gray-700 rounded px-3 py-2 text-white text-sm" />
                        </div>
                    </div>
                }

                @if(Item.Type == "habit")
                {
                    <div>
                        <label class="block text-xs font-bold text-gray-500 uppercase mb-1">Current Streak</label>
                        <input type="number" @bind="HabitDetail.StreakCount" class="w-full bg-gray-900 border border-gray-700 rounded px-3 py-2 text-white text-sm" />
                    </div>
                }

                @if(Item.Type == "vacation")
                {
                    <div>
                        <label class="block text-xs font-bold text-gray-500 uppercase mb-1">End Date</label>
                        <input type="date" @bind="Item.EndDate" class="w-full bg-gray-900 border border-gray-700 rounded px-3 py-2 text-white text-sm" />
                    </div>
                }

                @if(Item.Type == "birthday")
                {
                    <div>
                        <label class="block text-xs font-bold text-gray-500 uppercase mb-1">Birth Year (Optional)</label>
                        <input type="number" @bind="BirthdayDetail.DOB_Year" class="w-full bg-gray-900 border border-gray-700 rounded px-3 py-2 text-white text-sm" placeholder="YYYY" />
                    </div>
                }

                @if(Item.Type == "holiday")
                {
                    <div class="flex items-center gap-2 bg-gray-900 border border-gray-700 rounded px-3 py-2">
                        <input type="checkbox" @bind="HolidayDetail.IsWorkHoliday" id="chkWorkHoliday" class="w-4 h-4 rounded bg-gray-700 border-gray-600 text-blue-500 focus:ring-0" />
                        <label for="chkWorkHoliday" class="text-sm text-white cursor-pointer select-none">Is Work Holiday?</label>
                    </div>
                }

                <div>
                    <label class="block text-xs font-bold text-gray-500 uppercase mb-1">Description</label>
                    <textarea @bind="Item.Description" rows="3" class="w-full bg-gray-900 border border-gray-700 rounded-lg px-3 py-2 text-white text-sm resize-none focus:ring-2 focus:ring-blue-500 outline-none transition"></textarea>
                </div>

                @if(Item.Id > 0)
                {
                    <div class="border-t border-gray-700 pt-4 mt-4">
                        <div class="flex justify-between items-center mb-2">
                            <label class="text-xs font-bold text-gray-500 uppercase">Notes & Images</label>
                            <label class="cursor-pointer text-xs bg-gray-700 hover:bg-gray-600 text-white px-2 py-1 rounded transition">
                                üì∑ Add Image
                                <InputFile OnChange="UploadNoteImage" class="hidden" />
                            </label>
                        </div>
                        
                        <div class="space-y-2">
                            @foreach(var note in Notes)
                            {
                                <div class="bg-black/30 p-2 rounded border border-gray-700 flex gap-3 relative group">
                                    @if(!string.IsNullOrEmpty(note.ImgUrl))
                                    {
                                        <div class="w-16 h-16 shrink-0 bg-black rounded overflow-hidden border border-gray-600">
                                            <img src="@note.ImgUrl" class="w-full h-full object-cover" />
                                        </div>
                                    }
                                    <div class="flex-1">
                                        <textarea @bind="note.Content" rows="2" class="w-full bg-transparent text-xs text-gray-300 outline-none resize-none placeholder-gray-600" placeholder="Add a caption..."></textarea>
                                    </div>
                                    <button @onclick="() => Notes.Remove(note)" class="absolute top-1 right-1 text-gray-600 hover:text-red-500 opacity-0 group-hover:opacity-100 transition">‚úï</button>
                                </div>
                            }
                            
                            <button @onclick="AddTextNote" class="w-full py-2 border border-dashed border-gray-700 text-gray-500 text-xs hover:border-gray-500 hover:text-gray-300 rounded transition">Ôºã Add Text Note</button>
                        </div>
                    </div>
                }

            </div>

            <div class="px-6 py-4 bg-gray-900/50 border-t border-gray-700 flex justify-between items-center">
                <button @onclick="HandleDelete" class="text-red-400 hover:text-red-300 text-xs font-bold uppercase tracking-wider transition">Delete</button>
                <div class="flex gap-3">
                    <button @onclick="HandleCancel" class="px-4 py-2 rounded-lg text-sm font-bold text-gray-400 hover:text-white hover:bg-gray-800 transition">Cancel</button>
                    <button @onclick="HandleSave" class="px-6 py-2 rounded-lg text-sm font-bold bg-blue-600 hover:bg-blue-500 text-white shadow-lg transition transform hover:scale-105">Save</button>
                </div>
            </div>
        </div>
    </div>
}

@code {
    [Parameter] public BulletTaskService.TaskDTO? Item { get; set; }
    
    // Details
    [Parameter] public BulletTaskDetail TaskDetail { get; set; } = new();
    [Parameter] public BulletMeetingDetail MeetingDetail { get; set; } = new();
    [Parameter] public BulletHabitDetail HabitDetail { get; set; } = new();
    [Parameter] public BulletMediaDetail MediaDetail { get; set; } = new();
    [Parameter] public BulletHolidayDetail HolidayDetail { get; set; } = new();
    [Parameter] public BulletBirthdayDetail BirthdayDetail { get; set; } = new();
    [Parameter] public BulletAnniversaryDetail AnniversaryDetail { get; set; } = new();
    [Parameter] public BulletVacationDetail VacationDetail { get; set; } = new();
    [Parameter] public BulletHealthDetail HealthDetail { get; set; } = new();
    [Parameter] public BulletGameDetail SportsDetail { get; set; } = new(); 

    [Parameter] public List<BulletItemNote> Notes { get; set; } = new();

    [Parameter] public EventCallback OnSave { get; set; }
    [Parameter] public EventCallback OnCancel { get; set; }
    [Parameter] public EventCallback OnDelete { get; set; }

    // SPORTS DROPDOWNS
    private List<League> leagues = new();
    private List<Team> allTeams = new();
    private List<Team> filteredTeams = new();

    protected override async Task OnParametersSetAsync()
    {
        if (Item != null && Item.UserId > 0)
        {
            // Load Sports Reference Data ONLY if needed (lazy load optimization)
            if (Item.Type == "sports" && (!leagues.Any() || !allTeams.Any()))
            {
                leagues = await SportsService.GetLeagues(Item.UserId);
                allTeams = await SportsService.GetTeams(Item.UserId);
            }
            
            // Apply filtering logic if it's sports
            if (Item.Type == "sports")
            {
                FilterTeams();
            }
        }
    }

    private void ChangeType(string newType)
    {
        if (Item != null) 
        {
            Item.Type = newType;
            StateHasChanged(); 
            // Trigger reload of ref data if switching TO sports
            if(newType == "sports") _ = OnParametersSetAsync(); 
        }
    }

    private void OnLeagueChanged(ChangeEventArgs e)
    {
        if (int.TryParse(e.Value?.ToString(), out int id))
        {
            SportsDetail.LeagueId = id;
            FilterTeams();
            SportsDetail.HomeTeamId = 0;
            SportsDetail.AwayTeamId = 0;
        }
    }

    private void FilterTeams()
    {
        if (SportsDetail.LeagueId > 0)
        {
            filteredTeams = allTeams.Where(t => t.LeagueId == SportsDetail.LeagueId).OrderBy(t => t.Name).ToList();
        }
        else
        {
            filteredTeams = new List<Team>(); // Clear if no league selected
        }
    }

    private void AddTextNote() => Notes.Add(new BulletItemNote { BulletItemId = Item!.Id, Order = Notes.Count });

    private async Task UploadNoteImage(InputFileChangeEventArgs e)
    {
        try {
            var file = e.File;
            using var stream = file.OpenReadStream(5 * 1024 * 1024); // 5MB limit
            using var ms = new MemoryStream();
            await stream.CopyToAsync(ms);
            var url = await BaseService.SaveImageAsync(ms.ToArray(), file.ContentType);
            
            Notes.Add(new BulletItemNote { BulletItemId = Item!.Id, ImgUrl = url, Order = Notes.Count });
        } catch (Exception ex) { Console.WriteLine($"Upload Error: {ex.Message}"); }
    }

    private async Task HandleSave() => await OnSave.InvokeAsync();
    private async Task HandleCancel() => await OnCancel.InvokeAsync();
    private async Task HandleDelete() => await OnDelete.InvokeAsync();
}