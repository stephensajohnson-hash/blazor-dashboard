@namespace Dashboard.Components.Bullet
@using Dashboard
@using Microsoft.AspNetCore.Components.Forms
@using System.IO
@inject IJSRuntime JS
@inject BulletBaseService BaseService
@inject BulletSportsService SportsService

@if (Item != null)
{
    <div class="fixed inset-0 z-50 flex items-center justify-center bg-black/80 backdrop-blur-sm p-4 overflow-y-auto">
        <div class="bg-gray-800 border border-gray-700 w-full max-w-2xl rounded-xl shadow-2xl flex flex-col my-auto relative">
            
            <div class="p-3 border-b border-gray-700 bg-gray-900/50 flex flex-wrap gap-2 justify-center sticky top-0 z-10 backdrop-blur-md rounded-t-xl">
                @foreach(var type in new[] { "task", "meeting", "habit", "media", "holiday", "birthday", "anniversary", "vacation", "health", "sports" })
                {
                    <button @onclick='() => ChangeType(type)' 
                            class="px-3 py-1.5 rounded-md text-xs font-bold uppercase tracking-wide transition border border-transparent 
                            @(Item.Type == type ? "bg-blue-600 text-white border-blue-400 shadow-lg scale-105" : "bg-gray-700 text-gray-400 hover:text-white hover:bg-gray-600")">
                        @GetEmoji(type) @type
                    </button>
                }
            </div>

            <div class="p-6 overflow-y-auto max-h-[75vh] space-y-6">

                <div class="space-y-4 border-b border-gray-700 pb-6">
                    <h3 class="text-xs font-bold text-gray-500 uppercase tracking-wider mb-2">General Info</h3>
                    
                    <div class="grid grid-cols-2 gap-4">
                        <div>
                            <label class="block text-[10px] font-bold text-gray-400 uppercase mb-1">üìÇ Category</label>
                            <select @bind="Item.Category" class="w-full bg-black/30 border border-gray-600 rounded px-3 py-2 text-white text-sm focus:border-blue-500 outline-none">
                                <option value="personal">Personal</option>
                                <option value="work">Work</option>
                                <option value="health">Health</option>
                            </select>
                        </div>
                        <div>
                            <label class="block text-[10px] font-bold text-gray-400 uppercase mb-1">üìÜ Date</label>
                            <input type="date" @bind="Item.Date" class="w-full bg-black/30 border border-gray-600 rounded px-3 py-2 text-white text-sm focus:border-blue-500 outline-none" />
                        </div>
                    </div>

                    <div>
                        <label class="block text-[10px] font-bold text-gray-400 uppercase mb-1">‚úèÔ∏è Title</label>
                        <input @bind="Item.Title" class="w-full bg-black/30 border border-gray-600 rounded px-3 py-2 text-white font-bold focus:border-blue-500 outline-none" placeholder="Item Title..." />
                    </div>

                    <div>
                        <label class="block text-[10px] font-bold text-gray-400 uppercase mb-1">üîó Link URL</label>
                        <input @bind="Item.LinkUrl" class="w-full bg-black/30 border border-gray-600 rounded px-3 py-2 text-blue-400 text-xs focus:border-blue-500 outline-none" placeholder="https://..." />
                    </div>

                    <div>
                        <label class="block text-[10px] font-bold text-gray-400 uppercase mb-1">üìù Description</label>
                        <textarea @bind="Item.Description" rows="3" class="w-full bg-black/30 border border-gray-600 rounded px-3 py-2 text-gray-300 text-sm focus:border-blue-500 outline-none resize-none"></textarea>
                    </div>

                    <div class="bg-black/20 p-3 rounded border border-gray-700">
                        <label class="block text-[10px] font-bold text-gray-400 uppercase mb-2">üñºÔ∏è Main Cover Image</label>
                        <div class="flex gap-4 items-start">
                            <div class="w-20 h-20 bg-black rounded border border-gray-600 shrink-0 overflow-hidden relative group">
                                @if(!string.IsNullOrEmpty(Item.ImgUrl)) { <img src="@Item.ImgUrl" class="w-full h-full object-cover" /> }
                                else { <div class="w-full h-full flex items-center justify-center text-gray-700 text-xs">No Img</div> }
                            </div>
                            <div class="flex-1 space-y-2">
                                <input @bind="Item.ImgUrl" class="w-full bg-black/30 border border-gray-600 rounded px-2 py-1 text-xs text-gray-300 outline-none" placeholder="Paste Image URL..." />
                                <label class="cursor-pointer inline-block bg-gray-700 hover:bg-gray-600 text-white px-3 py-1.5 rounded text-xs transition">
                                    üìÇ Upload from Device
                                    <InputFile OnChange="UploadCoverImage" class="hidden" />
                                </label>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="space-y-4 border-b border-gray-700 pb-6">
                    <h3 class="text-xs font-bold text-blue-400 uppercase tracking-wider mb-2">@Item.Type Details</h3>

                    @if(Item.Type == "sports")
                    {
                        <div class="bg-black/30 p-4 rounded border border-gray-700 space-y-4">
                            <div>
                                <label class="block text-[10px] font-bold text-gray-500 uppercase mb-1">üèÜ League</label>
                                <select value="@SportsDetail.LeagueId" @onchange="OnLeagueChanged" class="w-full bg-gray-900 border border-gray-700 rounded px-2 py-2 text-sm text-white">
                                    <option value="0">-- Select League --</option>
                                    @foreach(var l in leagues) { <option value="@l.Id">@l.Name</option> }
                                </select>
                            </div>
                            <div class="grid grid-cols-2 gap-4">
                                <div>
                                    <label class="block text-[10px] font-bold text-gray-500 uppercase mb-1">üèÉ‚Äç‚ôÇÔ∏è Away Team</label>
                                    <select @bind="SportsDetail.AwayTeamId" class="w-full bg-gray-900 border border-gray-700 rounded px-2 py-1 text-sm text-white">
                                        <option value="0">-- Select --</option>
                                        @foreach(var t in filteredTeams) { <option value="@t.Id">@t.Name</option> }
                                    </select>
                                    <input type="number" @bind="SportsDetail.AwayScore" class="w-full mt-1 bg-gray-900 border border-gray-700 rounded px-2 py-1 text-white text-center font-bold" placeholder="0" />
                                </div>
                                <div>
                                    <label class="block text-[10px] font-bold text-gray-500 uppercase mb-1">üè† Home Team</label>
                                    <select @bind="SportsDetail.HomeTeamId" class="w-full bg-gray-900 border border-gray-700 rounded px-2 py-1 text-sm text-white">
                                        <option value="0">-- Select --</option>
                                        @foreach(var t in filteredTeams) { <option value="@t.Id">@t.Name</option> }
                                    </select>
                                    <input type="number" @bind="SportsDetail.HomeScore" class="w-full mt-1 bg-gray-900 border border-gray-700 rounded px-2 py-1 text-white text-center font-bold" placeholder="0" />
                                </div>
                            </div>
                            <div class="grid grid-cols-2 gap-4">
                                <div>
                                    <label class="block text-[10px] font-bold text-gray-500 uppercase mb-1">‚è∞ Start Time</label>
                                    <input type="time" @bind="SportsDetail.StartTime" @bind:format="HH:mm" class="w-full bg-gray-900 border border-gray-700 rounded px-2 py-2 text-white text-sm" />
                                </div>
                                <div>
                                    <label class="block text-[10px] font-bold text-gray-500 uppercase mb-1">üì∫ Channel</label>
                                    <input @bind="SportsDetail.TvChannel" class="w-full bg-gray-900 border border-gray-700 rounded px-2 py-2 text-white text-sm" placeholder="TV" />
                                </div>
                            </div>
                            <div class="flex items-center gap-3 bg-gray-900/50 p-2 rounded border border-gray-700">
                                <input type="checkbox" @bind="SportsDetail.IsComplete" id="chkSport" class="w-5 h-5 rounded bg-gray-800 border-gray-600 text-green-500" />
                                <label for="chkSport" class="text-sm text-white cursor-pointer">‚úÖ Game Final</label>
                            </div>
                        </div>
                    }

                    @if(Item.Type == "task")
                    {
                        <div class="grid grid-cols-2 gap-4">
                            <div>
                                <label class="block text-[10px] font-bold text-gray-500 uppercase mb-1">üö® Priority</label>
                                <select @bind="TaskDetail.Priority" class="w-full bg-gray-900 border border-gray-700 rounded px-3 py-2 text-white text-sm">
                                    <option>Low</option><option>Normal</option><option>High</option><option>Critical</option>
                                </select>
                            </div>
                            <div>
                                <label class="block text-[10px] font-bold text-gray-500 uppercase mb-1">üìÖ Due Date</label>
                                <input type="date" @bind="TaskDetail.DueDate" class="w-full bg-gray-900 border border-gray-700 rounded px-3 py-2 text-white text-sm" />
                            </div>
                        </div>
                        <div class="grid grid-cols-2 gap-4">
                            <div>
                                <label class="block text-[10px] font-bold text-gray-500 uppercase mb-1">üé´ Ticket #</label>
                                <input @bind="TaskDetail.TicketNumber" class="w-full bg-gray-900 border border-gray-700 rounded px-3 py-2 text-white text-sm" placeholder="JIRA-123" />
                            </div>
                            <div>
                                <label class="block text-[10px] font-bold text-gray-500 uppercase mb-1">üîó Ticket URL</label>
                                <input @bind="TaskDetail.TicketUrl" class="w-full bg-gray-900 border border-gray-700 rounded px-3 py-2 text-blue-400 text-sm" placeholder="https://..." />
                            </div>
                        </div>
                        <div class="flex items-center gap-3 bg-gray-900/50 p-3 rounded border border-gray-700 mt-2">
                            <input type="checkbox" @bind="TaskDetail.IsCompleted" id="chkTask" class="w-5 h-5 rounded bg-gray-800 border-gray-600 text-green-500" />
                            <label for="chkTask" class="text-sm font-bold text-white cursor-pointer">‚úÖ Mark as Completed</label>
                        </div>
                    }

                    @if(Item.Type == "meeting")
                    {
                        <div class="grid grid-cols-3 gap-4">
                            <div>
                                <label class="block text-[10px] font-bold text-gray-500 uppercase mb-1">‚è∞ Start Time</label>
                                <input type="time" @bind="MeetingDetail.StartTime" class="w-full bg-gray-900 border border-gray-700 rounded px-3 py-2 text-white text-sm" />
                            </div>
                            <div>
                                <label class="block text-[10px] font-bold text-gray-500 uppercase mb-1">‚è≥ Planned (Min)</label>
                                <input type="number" @bind="MeetingDetail.DurationMinutes" class="w-full bg-gray-900 border border-gray-700 rounded px-3 py-2 text-white text-sm" />
                            </div>
                            <div>
                                <label class="block text-[10px] font-bold text-gray-500 uppercase mb-1">‚è± Actual (Min)</label>
                                <input type="number" @bind="MeetingDetail.ActualDurationMinutes" class="w-full bg-gray-900 border border-gray-700 rounded px-3 py-2 text-white text-sm" />
                            </div>
                        </div>
                        <div class="flex items-center gap-3 bg-gray-900/50 p-3 rounded border border-gray-700 mt-2">
                            <input type="checkbox" @bind="MeetingDetail.IsCompleted" id="chkMeeting" class="w-5 h-5 rounded bg-gray-800 border-gray-600 text-green-500" />
                            <label for="chkMeeting" class="text-sm font-bold text-white cursor-pointer">‚úÖ Meeting Completed</label>
                        </div>
                    }

                    @if(Item.Type == "habit")
                    {
                        <div class="grid grid-cols-2 gap-4">
                            <div>
                                <label class="block text-[10px] font-bold text-gray-500 uppercase mb-1">üî• Current Streak</label>
                                <input type="number" @bind="HabitDetail.StreakCount" class="w-full bg-gray-900 border border-gray-700 rounded px-3 py-2 text-white text-sm" />
                            </div>
                            <div class="flex items-end">
                                <div class="flex items-center gap-3 bg-gray-900/50 p-2 rounded border border-gray-700 w-full h-[38px]">
                                    <input type="checkbox" @bind="HabitDetail.IsCompleted" id="chkHabit" class="w-5 h-5 rounded bg-gray-800 border-gray-600 text-green-500" />
                                    <label for="chkHabit" class="text-sm text-white cursor-pointer">‚úÖ Done Today</label>
                                </div>
                            </div>
                        </div>
                    }

                    @if(Item.Type == "vacation")
                    {
                        <div class="grid grid-cols-2 gap-4">
                            <div>
                                <label class="block text-[10px] font-bold text-gray-500 uppercase mb-1">üìÜ End Date (Range)</label>
                                <input type="date" @bind="Item.EndDate" class="w-full bg-gray-900 border border-gray-700 rounded px-3 py-2 text-white text-sm" />
                            </div>
                            <div>
                                <label class="block text-[10px] font-bold text-gray-500 uppercase mb-1">üè∑Ô∏è Group ID</label>
                                <input @bind="VacationDetail.VacationGroupId" class="w-full bg-gray-900 border border-gray-700 rounded px-3 py-2 text-white text-sm" placeholder="e.g. Hawaii2025" />
                            </div>
                        </div>
                    }

                    @if(Item.Type == "birthday")
                    {
                        <div>
                            <label class="block text-[10px] font-bold text-gray-500 uppercase mb-1">üë∂ Birth Year</label>
                            <input type="number" @bind="BirthdayDetail.DOB_Year" class="w-full bg-gray-900 border border-gray-700 rounded px-3 py-2 text-white text-sm" placeholder="YYYY" />
                        </div>
                    }

                    @if(Item.Type == "anniversary")
                    {
                        <div class="grid grid-cols-2 gap-4">
                            <div>
                                <label class="block text-[10px] font-bold text-gray-500 uppercase mb-1">‚ù§Ô∏è Type</label>
                                <select @bind="AnniversaryDetail.AnniversaryType" class="w-full bg-gray-900 border border-gray-700 rounded px-3 py-2 text-white text-sm">
                                    <option>Wedding</option><option>Work</option><option>Other</option>
                                </select>
                            </div>
                            <div>
                                <label class="block text-[10px] font-bold text-gray-500 uppercase mb-1">üìÖ First Year</label>
                                <input type="number" @bind="AnniversaryDetail.FirstYear" class="w-full bg-gray-900 border border-gray-700 rounded px-3 py-2 text-white text-sm" placeholder="YYYY" />
                            </div>
                        </div>
                    }

                    @if(Item.Type == "holiday")
                    {
                        <div class="flex items-center gap-3 bg-gray-900/50 p-3 rounded border border-gray-700">
                            <input type="checkbox" @bind="HolidayDetail.IsWorkHoliday" id="chkWorkHol" class="w-5 h-5 rounded bg-gray-800 border-gray-600 text-blue-500" />
                            <label for="chkWorkHol" class="text-sm text-white cursor-pointer">üè¢ Is Work Holiday?</label>
                        </div>
                    }

                    @if(Item.Type == "media")
                    {
                        <div class="grid grid-cols-2 gap-4">
                            <div>
                                <label class="block text-[10px] font-bold text-gray-500 uppercase mb-1">üìÖ Release Year</label>
                                <input type="number" @bind="MediaDetail.ReleaseYear" class="w-full bg-gray-900 border border-gray-700 rounded px-3 py-2 text-white text-sm" />
                            </div>
                            <div>
                                <label class="block text-[10px] font-bold text-gray-500 uppercase mb-1">‚≠ê Rating (0-10)</label>
                                <input type="number" @bind="MediaDetail.Rating" class="w-full bg-gray-900 border border-gray-700 rounded px-3 py-2 text-white text-sm" />
                            </div>
                        </div>
                        <div>
                            <label class="block text-[10px] font-bold text-gray-500 uppercase mb-1">üè∑Ô∏è Tags</label>
                            <input @bind="MediaDetail.Tags" class="w-full bg-gray-900 border border-gray-700 rounded px-3 py-2 text-white text-sm" placeholder="Movie, Book, etc." />
                        </div>
                    }

                    @if(Item.Type == "health")
                    {
                        <div class="grid grid-cols-2 gap-4">
                            <div>
                                <label class="block text-[10px] font-bold text-gray-500 uppercase mb-1">‚öñÔ∏è Weight (lbs)</label>
                                <input type="number" @bind="HealthDetail.WeightLbs" class="w-full bg-gray-900 border border-gray-700 rounded px-3 py-2 text-white text-sm" />
                            </div>
                            <div>
                                <label class="block text-[10px] font-bold text-gray-500 uppercase mb-1">üî• TDEE</label>
                                <input type="number" @bind="HealthDetail.CalculatedTDEE" class="w-full bg-gray-900 border border-gray-700 rounded px-3 py-2 text-white text-sm" />
                            </div>
                        </div>
                        <div class="text-xs text-gray-500 italic mt-2">* Edit Meals/Workouts on the card view directly.</div>
                    }
                </div>

                <div>
                    <div class="flex justify-between items-center mb-4">
                        <h3 class="text-xs font-bold text-gray-500 uppercase tracking-wider">üóíÔ∏è Notes & Attachments</h3>
                        <button @onclick="AddNote" class="bg-gray-700 hover:bg-gray-600 text-white text-xs px-3 py-1 rounded transition">Ôºã Add Note</button>
                    </div>

                    <div class="space-y-6">
                        @foreach(var note in Notes)
                        {
                            <div class="bg-black/40 border border-gray-600 rounded-lg p-4 relative group transition hover:border-gray-500">
                                
                                <button @onclick="() => Notes.Remove(note)" class="absolute top-2 right-2 text-gray-600 hover:text-red-500 p-1">‚úï</button>

                                <div class="space-y-4">
                                    <div>
                                        <label class="block text-[9px] font-bold text-gray-500 uppercase mb-1">üìù Note Text</label>
                                        <textarea @bind="note.Content" rows="3" class="w-full bg-gray-900 border border-gray-700 rounded px-3 py-2 text-sm text-gray-200 outline-none focus:border-blue-500/50" placeholder="Type details here..."></textarea>
                                    </div>

                                    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                                        <div>
                                            <label class="block text-[9px] font-bold text-gray-500 uppercase mb-1">üñºÔ∏è Image</label>
                                            <div class="flex gap-3 items-start">
                                                <div class="w-16 h-16 bg-black rounded border border-gray-600 shrink-0 overflow-hidden">
                                                    @if(!string.IsNullOrEmpty(note.ImgUrl)) { <img src="@note.ImgUrl" class="w-full h-full object-cover" /> }
                                                    else { <div class="w-full h-full flex items-center justify-center text-gray-700 text-[9px]">None</div> }
                                                </div>
                                                <div class="flex-1 space-y-1">
                                                    <input @bind="note.ImgUrl" class="w-full bg-gray-900 border border-gray-700 rounded px-2 py-1 text-[10px] text-gray-300 outline-none" placeholder="Image URL..." />
                                                    <label class="cursor-pointer block bg-gray-700 hover:bg-gray-600 text-center text-white rounded py-1 text-[10px]">
                                                        üìÇ Upload
                                                        <InputFile OnChange="@(e => UploadNoteImage(e, note))" class="hidden" />
                                                    </label>
                                                </div>
                                            </div>
                                        </div>
                                        <div>
                                            <label class="block text-[9px] font-bold text-gray-500 uppercase mb-1">üîó External Link</label>
                                            <div class="flex items-center gap-2 bg-gray-900 border border-gray-700 rounded px-2 py-1 h-[38px]">
                                                <span class="text-lg">üîó</span>
                                                <input @bind="note.LinkUrl" class="w-full bg-transparent text-xs text-blue-400 outline-none placeholder-gray-600" placeholder="https://..." />
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                        @if(!Notes.Any()) { <div class="text-center text-gray-600 text-xs italic py-4">No notes added yet.</div> }
                    </div>
                </div>

            </div>

            <div class="px-6 py-4 bg-gray-900 border-t border-gray-700 flex justify-between items-center rounded-b-xl sticky bottom-0 z-20">
                <button @onclick="HandleDelete" class="text-red-500 hover:text-red-400 text-xs font-bold uppercase tracking-wider transition px-3 py-2 rounded hover:bg-red-900/20">
                    üóëÔ∏è Delete Item
                </button>
                <div class="flex gap-3">
                    <button @onclick="HandleCancel" class="px-5 py-2 rounded-lg text-sm font-bold text-gray-400 hover:text-white hover:bg-gray-800 transition">Cancel</button>
                    <button @onclick="HandleSave" class="px-8 py-2 rounded-lg text-sm font-bold bg-blue-600 hover:bg-blue-500 text-white shadow-lg transition transform hover:scale-105 active:scale-95">
                        Save Changes
                    </button>
                </div>
            </div>

        </div>
    </div>
}

@code {
    [Parameter] public BulletTaskService.TaskDTO? Item { get; set; }
    
    // DETAIL OBJECTS
    [Parameter] public BulletTaskDetail TaskDetail { get; set; } = new();
    [Parameter] public BulletMeetingDetail MeetingDetail { get; set; } = new();
    [Parameter] public BulletHabitDetail HabitDetail { get; set; } = new();
    [Parameter] public BulletMediaDetail MediaDetail { get; set; } = new();
    [Parameter] public BulletHolidayDetail HolidayDetail { get; set; } = new();
    [Parameter] public BulletBirthdayDetail BirthdayDetail { get; set; } = new();
    [Parameter] public BulletAnniversaryDetail AnniversaryDetail { get; set; } = new();
    [Parameter] public BulletVacationDetail VacationDetail { get; set; } = new();
    [Parameter] public BulletHealthDetail HealthDetail { get; set; } = new();
    [Parameter] public BulletGameDetail SportsDetail { get; set; } = new(); 

    [Parameter] public List<BulletItemNote> Notes { get; set; } = new();

    [Parameter] public EventCallback OnSave { get; set; }
    [Parameter] public EventCallback OnCancel { get; set; }
    [Parameter] public EventCallback OnDelete { get; set; }

    private List<League> leagues = new();
    private List<Team> allTeams = new();
    private List<Team> filteredTeams = new();

    protected override async Task OnParametersSetAsync()
    {
        if (Item != null && Item.UserId > 0)
        {
            if (Item.Type == "sports")
            {
                // FORCE REFRESH: Ensure data is loaded every time this modal opens/updates
                leagues = await SportsService.GetLeagues(Item.UserId);
                allTeams = await SportsService.GetTeams(Item.UserId);
                FilterTeams();
            }
        }
    }

    private void ChangeType(string newType)
    {
        if (Item != null) 
        {
            Item.Type = newType;
            if(newType == "sports") _ = OnParametersSetAsync(); 
        }
    }

    private string GetEmoji(string type) => type switch {
        "task" => "üìù", "meeting" => "üìÖ", "habit" => "üî•", "sports" => "üèÜ",
        "vacation" => "‚úàÔ∏è", "birthday" => "üéÇ", "holiday" => "üéâ", "anniversary" => "üíë",
        "media" => "üé¨", "health" => "üí™", _ => "üìÑ"
    };

    private void OnLeagueChanged(ChangeEventArgs e)
    {
        if (int.TryParse(e.Value?.ToString(), out int id))
        {
            SportsDetail.LeagueId = id;
            FilterTeams();
            SportsDetail.HomeTeamId = 0;
            SportsDetail.AwayTeamId = 0;
        }
    }

    private void FilterTeams()
    {
        if (SportsDetail.LeagueId > 0)
        {
            filteredTeams = allTeams.Where(t => t.LeagueId == SportsDetail.LeagueId).OrderBy(t => t.Name).ToList();
        }
        else
        {
            filteredTeams = new List<Team>();
        }
        StateHasChanged();
    }

    private void AddNote() => Notes.Add(new BulletItemNote { BulletItemId = Item!.Id, Order = Notes.Count });

    private async Task UploadNoteImage(InputFileChangeEventArgs e, BulletItemNote note)
    {
        try {
            var file = e.File;
            using var stream = file.OpenReadStream(5 * 1024 * 1024);
            using var ms = new MemoryStream();
            await stream.CopyToAsync(ms);
            var url = await BaseService.SaveImageAsync(ms.ToArray(), file.ContentType);
            note.ImgUrl = url;
        } catch (Exception ex) { Console.WriteLine($"Upload Error: {ex.Message}"); }
    }

    private async Task UploadCoverImage(InputFileChangeEventArgs e)
    {
        try {
            var file = e.File;
            using var stream = file.OpenReadStream(5 * 1024 * 1024);
            using var ms = new MemoryStream();
            await stream.CopyToAsync(ms);
            var url = await BaseService.SaveImageAsync(ms.ToArray(), file.ContentType);
            if(Item != null) Item.ImgUrl = url;
        } catch (Exception ex) { Console.WriteLine($"Upload Error: {ex.Message}"); }
    }

