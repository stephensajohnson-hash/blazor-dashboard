@namespace Dashboard.Components.Bullet

@if (IsVisible)
{
    <div class="fixed inset-0 z-[100] flex items-center justify-center bg-black/80 backdrop-blur-md p-4 font-black">
        <div class="bg-gray-900 border border-purple-500/50 w-full max-w-md rounded-2xl shadow-2xl p-6 space-y-6">
            <div>
                <h3 class="text-purple-400 text-xs tracking-widest mb-1">Temporal Cloner</h3>
                <p class="text-gray-500 text-[10px]">Copy recurring events to a new year.</p>
            </div>

            <div class="grid grid-cols-2 gap-4">
                <div>
                    <label class="block text-[10px] text-gray-500 mb-1">Source Year</label>
                    <input type="number" @bind="SourceYear" 
                           class="w-full bg-black border border-gray-700 rounded p-2 text-sm text-white" />
                </div>
                <div>
                    <label class="block text-[10px] text-gray-500 mb-1">Target Year</label>
                    <input type="number" @bind="TargetYear" 
                           class="w-full bg-black border border-gray-700 rounded p-2 text-sm text-white" />
                </div>
            </div>

            <div class="space-y-2 bg-black/40 p-4 rounded-xl border border-gray-800">
                <label class="flex items-center gap-3 cursor-pointer">
                    <input type="checkbox" @bind="IncludeBirthdays" class="accent-purple-500" />
                    <span class="text-xs text-gray-300">Include Birthdays</span>
                </label>
                <label class="flex items-center gap-3 cursor-pointer">
                    <input type="checkbox" @bind="IncludeAnniversaries" class="accent-purple-500" />
                    <span class="text-xs text-gray-300">Include Anniversaries</span>
                </label>
                <label class="flex items-center gap-3 cursor-pointer">
                    <input type="checkbox" @bind="IncludeHolidays" class="accent-purple-500" />
                    <span class="text-xs text-gray-300">Include Holidays</span>
                </label>
            </div>

            <div class="pt-4 flex gap-2">
                <button @onclick="HandleCancel" class="flex-1 py-2 text-[10px] text-gray-500">
                    Cancel
                </button>
                <button @onclick="HandleExecute" 
                        class="flex-1 bg-purple-600 py-2 rounded-lg text-[10px] text-white shadow-lg tracking-widest">
                    Start Cloning
                </button>
            </div>
        </div>
    </div>
}

@code {
    [Parameter] public bool IsVisible { get; set; }
    
    [Parameter] public int SourceYear { get; set; } = DateTime.Today.Year;
    [Parameter] public int TargetYear { get; set; } = DateTime.Today.Year + 1;
    [Parameter] public bool IncludeBirthdays { get; set; } = true;
    [Parameter] public bool IncludeAnniversaries { get; set; } = true;
    [Parameter] public bool IncludeHolidays { get; set; } = true;

    [Parameter] public EventCallback OnClose { get; set; }
    [Parameter] public EventCallback OnCloneRequested { get; set; }

    private async Task HandleCancel()
    {
        await OnClose.InvokeAsync();
    }

    private async Task HandleExecute()
    {
        await OnCloneRequested.InvokeAsync();
    }
}