@namespace Dashboard.Components.Bullet.Editors
@using Dashboard

<div class="bg-black/30 p-4 rounded border border-gray-700 space-y-4">
    
    <div class="grid grid-cols-2 gap-4">
        <div>
            <label class="block text-[10px] font-bold text-gray-500 uppercase mb-1">âš–ï¸ Weight (lbs)</label>
            <input type="number" 
                   @bind="Detail.WeightLbs" 
                   @bind:event="oninput"
                   step="0.1" 
                   class="w-full bg-gray-900 border @(Detail.WeightLbs <= 0 ? "border-red-500 shadow-[0_0_10px_rgba(239,68,68,0.2)]" : "border-gray-700 focus:border-emerald-500") rounded px-2 py-2 text-white text-sm font-bold text-center outline-none transition-all" />
            
            @if(Detail.WeightLbs <= 0)
            {
                <div class="text-[9px] text-red-400 mt-1 text-center font-black uppercase animate-pulse">Required to save</div>
            }
        </div>
        <div>
            <label class="block text-[10px] font-bold text-gray-500 uppercase mb-1">ğŸ”¥ TDEE (Cals)</label>
            <input type="number" @bind="Detail.CalculatedTDEE" class="w-full bg-gray-900 border border-gray-700 rounded px-2 py-2 text-white text-sm text-center focus:border-blue-500 outline-none" />
            <div class="text-[9px] text-gray-600 mt-1 text-center font-bold">Auto-calc if 0</div>
        </div>
    </div>

    <div>
        <label class="block text-[10px] font-bold text-gray-400 uppercase mb-1">ğŸ“ Health Journal</label>
        <textarea @bind="Notes" 
                  class="w-full bg-gray-900 border border-gray-700 rounded px-2 py-2 text-white text-sm h-24 focus:border-emerald-500/50 outline-none resize-none" 
                  placeholder="Notes on mood, sleep, or nutrition..."></textarea>
    </div>

</div>

@code {
    [Parameter] public BulletHealthDetail Detail { get; set; } = new();
    [Parameter] public string Notes { get; set; } = "";
    [Parameter] public EventCallback<string> NotesChanged { get; set; }
}