@namespace Dashboard.Components.Bullet.Editors
@using Dashboard

<div class="bg-black/30 p-4 rounded border border-gray-700 space-y-4">
    
    <div class="grid grid-cols-2 gap-4">
        <div>
            <label class="block text-[10px] font-bold text-gray-500 uppercase mb-1">âš–ï¸ Weight (lbs)</label>
            <input type="number" @bind="Detail.WeightLbs" step="0.1" class="w-full bg-gray-900 border border-gray-700 rounded px-2 py-2 text-white text-sm font-bold text-center focus:border-emerald-500 outline-none" />
        </div>
        <div>
