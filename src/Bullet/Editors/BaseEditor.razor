@namespace Dashboard.Components.Bullet
@using Dashboard
@using Dashboard.Components.Bullet.Editors 
@using Microsoft.AspNetCore.Components.Forms
@using Microsoft.JSInterop
@using System.IO
@inject IJSRuntime JS
@inject BulletBaseService BaseService

@if (Item != null)
{
    <div class="fixed inset-0 z-50 flex items-center justify-center bg-black/80 backdrop-blur-sm p-4 overflow-y-auto font-sans">
        <div class="bg-gray-800 border border-gray-700 w-full max-w-2xl rounded-xl shadow-2xl flex flex-col my-auto relative text-white">
            
            <div class="p-2 border-b border-gray-700 bg-gray-900/80 flex justify-center gap-1 rounded-t-xl sticky top-0 z-30 backdrop-blur-md">
                <button @onclick='() => activeTab = "general"' class="px-3 py-2 rounded-md text-[10px] font-black uppercase tracking-widest transition @(activeTab == "general" ? "bg-blue-600 text-white shadow-lg" : "text-gray-500 hover:text-gray-300")">1. General</button>
                <button @onclick='() => activeTab = "details"' class="px-3 py-2 rounded-md text-[10px] font-black uppercase tracking-widest transition @(activeTab == "details" ? "bg-blue-600 text-white shadow-lg" : "text-gray-500 hover:text-gray-300")">2. @Item.Type</button>
                <button @onclick='() => activeTab = "notes"' class="px-3 py-2 rounded-md text-[10px] font-black uppercase tracking-widest transition @(activeTab == "notes" ? "bg-blue-600 text-white shadow-lg" : "text-gray-500 hover:text-gray-300")">3. Notes</button>
                <button @onclick='() => activeTab = "repeat"' class="px-3 py-2 rounded-md text-[10px] font-black uppercase tracking-widest transition @(activeTab == "repeat" ? "bg-purple-600 text-white shadow-lg" : "text-gray-500 hover:text-gray-300")">4. Repeat</button>
            </div>

            <div class="p-6 overflow-y-auto max-h-[70vh] space-y-6">

                @if (activeTab == "general")
                {
                    <div class="space-y-6 animate-in fade-in duration-200">
                        <div class="p-3 bg-gray-900/50 border border-gray-700 rounded-lg flex flex-wrap gap-2 justify-center">
                            @foreach(var type in new[] { "task", "meeting", "habit", "media", "holiday", "birthday", "anniversary", "vacation", "health", "sports" })
                            {
                                <button @onclick='() => Item.Type = type' 
                                        class="px-3 py-1.5 rounded-md text-[10px] font-black uppercase transition border @(Item.Type == type ? "bg-blue-600 border-blue-400" : "bg-gray-700 border-transparent text-gray-400")">
                                    @GetEmoji(type) @type
                                </button>
                            }
                        </div>

                        <div class="grid grid-cols-2 gap-4">
                            <div>
                                <label class="block text-[10px] font-bold text-gray-500 uppercase mb-1">üìÇ Category</label>
                                <select @bind="Item.Category" class="w-full bg-black/30 border border-gray-600 rounded px-3 py-2 text-white text-sm outline-none focus:border-blue-500">
                                    <option value="personal">Personal</option>
                                    <option value="work">Work</option>
                                    <option value="health">Health</option>
                                </select>
                            </div>
                            <div>
                                <label class="block text-[10px] font-bold text-gray-500 uppercase mb-1">üìÜ Date</label>
                                <input type="date" @bind="Item.Date" class="w-full bg-black/30 border border-gray-600 rounded px-3 py-2 text-white text-sm outline-none focus:border-blue-500" />
                            </div>
                        </div>

                        <div>
                            <label class="block text-[10px] font-bold text-gray-500 uppercase mb-1">‚úèÔ∏è Title</label>
                            <input @bind="Item.Title" class="w-full bg-black/30 border border-gray-600 rounded px-3 py-2 text-white font-bold outline-none focus:border-blue-500" placeholder="Item Title..." />
                        </div>

                        <div class="bg-black/20 p-4 rounded-lg border border-gray-700 space-y-4">
                            <h4 class="text-[10px] font-black text-gray-500 uppercase tracking-widest">Main Cover & Link</h4>
                            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                                <div>
                                    <label class="block text-[10px] font-bold text-gray-400 uppercase mb-1 font-mono">üîó Link URL</label>
                                    <input @bind="Item.LinkUrl" class="w-full bg-black/30 border border-gray-600 rounded px-3 py-2 text-blue-400 text-xs outline-none" placeholder="https://..." />
                                </div>
                                <div>
                                    <label class="block text-[10px] font-bold text-gray-400 uppercase mb-1 font-mono">üñºÔ∏è Image URL</label>
                                    <input @bind="Item.ImgUrl" class="w-full bg-black/30 border border-gray-600 rounded px-3 py-2 text-gray-300 text-xs outline-none" placeholder="Image URL..." />
                                </div>
                            </div>
                            <div class="flex items-center gap-4 pt-2">
                                <div class="w-16 h-16 bg-black rounded border border-gray-600 shrink-0 overflow-hidden relative">
                                    @if(!string.IsNullOrEmpty(Item.ImgUrl)) { <img src="@Item.ImgUrl" class="w-full h-full object-cover" /> }
                                    else { <div class="w-full h-full flex items-center justify-center text-gray-700 text-[10px]">COVER</div> }
                                </div>
                                <div class="flex-1">
                                    <label class="cursor-pointer inline-block bg-gray-700 hover:bg-gray-600 text-white px-4 py-2 rounded text-[10px] font-black transition uppercase tracking-widest">
                                        üìÇ Upload Cover <InputFile OnChange="HandleMainUpload" class="hidden" />
                                    </label>
                                </div>
                            </div>
                        </div>
                    </div>
                }
                else if (activeTab == "details")
                {
                    <div class="space-y-4 animate-in slide-in-from-right duration-200">
                        <h3 class="text-xs font-black text-blue-400 uppercase tracking-widest mb-4">@Item.Type Configuration</h3>
                        @switch (Item.Type)
                        {
                            case "task": <EditorTask Detail="TaskDetail" /> break;
                            case "meeting": <EditorMeeting Detail="MeetingDetail" /> break;
                            case "habit": <EditorHabit Detail="HabitDetail" /> break;
                            case "media": <EditorMedia Detail="MediaDetail" /> break;
                            case "holiday": <EditorHoliday Detail="HolidayDetail" /> break;
                            case "birthday": <EditorBirthday Detail="BirthdayDetail" /> break;
                            case "anniversary": <EditorAnniversary Detail="AnniversaryDetail" /> break;
                            case "vacation": <EditorVacation Detail="VacationDetail" @bind-EndDate="Item.EndDate" /> break;
                            case "health": <EditorHealth Detail="HealthDetail" /> break;
                            case "sports": <EditorSports Detail="SportsDetail" Leagues="Leagues" Seasons="Seasons" Teams="Teams" /> break;
                            default: <div class="text-gray-500 text-xs italic">Generic Item</div> break;
                        }
                    </div>
                }
                else if (activeTab == "notes")
                {
                    <div class="space-y-6 animate-in slide-in-from-right duration-200">
                        <div class="flex justify-between items-center border-b border-gray-700 pb-2">
                            <h3 class="text-xs font-black text-gray-400 uppercase tracking-widest">üóíÔ∏è Paragraph Notes</h3>
                            <button @onclick="AddNote" class="text-[10px] font-black uppercase text-blue-400 hover:text-blue-300">Ôºã Add New Note</button>
                        </div>
                        
                        <div class="space-y-8">
                            @if (Notes != null)
                            {
                                @foreach(var note in Notes)
                                {
                                    <div class="bg-black/40 border border-gray-700 rounded-lg p-4 relative group hover:border-blue-500/50 transition">
                                        <button @onclick="() => Notes.Remove(note)" class="absolute top-2 right-2 text-gray-600 hover:text-red-500 font-black">‚úï</button>
                                        
                                        <div class="space-y-4">
                                            <div>
                                                <label class="block text-[9px] font-bold text-gray-500 uppercase mb-1">Content</label>
                                                <textarea @bind="note.Content" rows="6" class="w-full bg-gray-900 border border-gray-700 rounded px-3 py-2 text-sm text-gray-200 outline-none focus:border-blue-500 resize-y" placeholder="Write paragraphs here..."></textarea>
                                            </div>

                                            <div class="grid grid-cols-1 md:grid-cols-2 gap-4 items-start">
                                                <div>
                                                    <label class="block text-[9px] font-bold text-gray-500 uppercase mb-1 font-mono">Attachment URL</label>
                                                    <input @bind="note.ImgUrl" class="w-full bg-gray-900 border border-gray-700 rounded px-2 py-1 text-[10px] text-blue-300 outline-none" placeholder="Paste image link..." />
                                                </div>
                                                <div class="flex items-center gap-3">
                                                    <div class="w-12 h-12 bg-black border border-gray-700 rounded shrink-0 overflow-hidden relative">
                                                        @if(!string.IsNullOrEmpty(note.ImgUrl)) { <img src="@note.ImgUrl" class="w-full h-full object-cover" /> }
                                                    </div>
                                                    <label class="cursor-pointer bg-gray-700 hover:bg-gray-600 text-white px-3 py-1.5 rounded text-[9px] font-black uppercase tracking-widest transition">
                                                        üìÇ Upload <InputFile OnChange="@(e => HandleNoteFileUpload(e, note))" class="hidden" />
                                                    </label>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                }
                            }
                        </div>
                    </div>
                }
                else if (activeTab == "repeat")
                {
                    <div class="space-y-6 animate-in slide-in-from-right duration-200">
                        <div class="bg-purple-900/20 p-6 rounded-xl border border-purple-500/40 space-y-6">
                            <h3 class="text-xs font-black text-purple-400 uppercase tracking-widest">üîÑ Recurrence Engine</h3>
                            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                                <div>
                                    <label class="block text-[10px] font-bold text-gray-400 uppercase mb-2">Frequency</label>
                                    <select @bind="repeatFrequency" class="w-full bg-black/40 border border-gray-600 rounded px-4 py-3 text-white text-sm outline-none focus:border-purple-500">
                                        <option value="none">One Time Only</option>
                                        <option value="daily">Daily</option>
                                        <option value="weekly">Weekly</option>
                                        <option value="biweekly">Every 2 Weeks</option>
                                        <option value="monthly">Monthly</option>
                                    </select>
                                </div>
                                <div>
                                    <label class="block text-[10px] font-bold text-gray-400 uppercase mb-2">Repeat Thru (End Date)</label>
                                    <input type="date" @bind="thruDate" disabled="@(repeatFrequency == "none")"
                                           class="w-full bg-black/40 border border-gray-600 rounded px-4 py-3 text-white text-sm outline-none @(repeatFrequency == "none" ? "opacity-20" : "focus:border-purple-500")" />
                                </div>
                            </div>

                            @if (Item.Type == "habit" && repeatFrequency != "none")
                            {
                                <div class="bg-purple-600/10 p-4 rounded border border-purple-500/30">
                                    <label class="flex items-center gap-3 cursor-pointer">
                                        <input type="checkbox" @bind="incrementStreak" class="w-5 h-5 rounded bg-black border-gray-600" />
                                        <span class="text-xs font-black uppercase text-purple-200">Increment Habit Streak (Auto +1)</span>
                                    </label>
                                </div>
                            }
                        </div>
                    </div>
                }
            </div>

            <div class="px-6 py-4 bg-gray-900 border-t border-gray-700 flex justify-between items-center rounded-b-xl sticky bottom-0 z-20">
                <button @onclick="() => OnDelete.InvokeAsync()" class="text-red-500 hover:text-red-400 text-[10px] font-black uppercase tracking-widest px-3 py-2 rounded hover:bg-red-900/20 transition">üóëÔ∏è Delete</button>
                <div class="flex gap-3">
                    <button @onclick="HandleInternalCancel" class="px-5 py-2 rounded-lg text-xs font-black uppercase text-gray-400 hover:text-white transition">Cancel</button>
                    <button @onclick="HandleInternalSave" class="px-10 py-2 rounded-lg text-xs font-black uppercase bg-blue-600 hover:bg-blue-500 text-white shadow-2xl transition transform hover:scale-105 active:scale-95 tracking-widest">Confirm Changes</button>
                </div>
            </div>
        </div>
    </div>
}

@code {
    [Parameter] public BulletTaskService.TaskDTO? Item { get; set; }
    [Parameter] public BulletTaskDetail TaskDetail { get; set; } = new();
    [Parameter] public BulletMeetingDetail MeetingDetail { get; set; } = new();
    [Parameter] public BulletHabitDetail HabitDetail { get; set; } = new();
    [Parameter] public BulletMediaDetail MediaDetail { get; set; } = new();
    [Parameter] public BulletHolidayDetail HolidayDetail { get; set; } = new();
    [Parameter] public BulletBirthdayDetail BirthdayDetail { get; set; } = new();
    [Parameter] public BulletAnniversaryDetail AnniversaryDetail { get; set; } = new();
    [Parameter] public BulletVacationDetail VacationDetail { get; set; } = new();
    [Parameter] public BulletHealthDetail HealthDetail { get; set; } = new();
    [Parameter] public BulletGameDetail SportsDetail { get; set; } = new(); 
    
    [Parameter] public List<League> Leagues { get; set; } = new();
    [Parameter] public List<Season> Seasons { get; set; } = new();
    [Parameter] public List<Team> Teams { get; set; } = new();
    [Parameter] public List<BulletItemNote> Notes { get; set; } = new();

    [Parameter] public EventCallback<RecurrenceRequest> OnSaveRecurring { get; set; }
    [Parameter] public EventCallback OnCancel { get; set; }
    [Parameter] public EventCallback OnDelete { get; set; }

    private string activeTab = "general";
    private string repeatFrequency = "none";
    private DateTime thruDate = DateTime.Today.AddMonths(1);
    private bool incrementStreak = true;

    public class RecurrenceRequest {
        public string Frequency { get; set; } = "none";
        public DateTime ThruDate { get; set; }
        public bool IncrementHabitStreak { get; set; }
    }

    private string GetEmoji(string type) => type switch {
        "task" => "üìù", "meeting" => "üìÖ", "habit" => "üî•", "sports" => "üèÜ",
        "vacation" => "‚úàÔ∏è", "birthday" => "üéÇ", "holiday" => "üéâ", "anniversary" => "üíë",
        "media" => "üé¨", "health" => "üí™", _ => "üìÑ"
    };

    private void AddNote() { 
        if (Notes == null) Notes = new(); 
        Notes.Add(new BulletItemNote { BulletItemId = Item?.Id ?? 0, Order = Notes.Count }); 
    }
    
    private async Task HandleMainUpload(InputFileChangeEventArgs e) {
        try {
            using var ms = new MemoryStream();
            await e.File.OpenReadStream(5 * 1024 * 1024).CopyToAsync(ms);
            if(Item != null) Item.ImgUrl = await BaseService.SaveImageAsync(ms.ToArray(), e.File.ContentType);
        } catch { }
    }

    private async Task HandleNoteFileUpload(InputFileChangeEventArgs e, BulletItemNote note) {
        try {
            using var ms = new MemoryStream();
            await e.File.OpenReadStream(5 * 1024 * 1024).CopyToAsync(ms);
            note.ImgUrl = await BaseService.SaveImageAsync(ms.ToArray(), e.File.ContentType);
        } catch { }
    }

    private async Task HandleInternalSave() { 
        await OnSaveRecurring.InvokeAsync(new RecurrenceRequest {
            Frequency = repeatFrequency,
            ThruDate = thruDate,
            IncrementHabitStreak = incrementStreak
        });
        activeTab = "general";
        repeatFrequency = "none"; 
    }

    private async Task HandleInternalCancel() { 
        activeTab = "general"; 
        repeatFrequency = "none"; 
        await OnCancel.InvokeAsync(); 
    }
}