@namespace Dashboard.Components.Bullet
@using Dashboard
@using Dashboard.Components.Bullet.Editors 

@if (Item != null)
{
    <div class="fixed inset-0 z-50 flex items-center justify-center bg-black/80 backdrop-blur-sm p-4 overflow-y-auto">
        <div class="bg-gray-800 border border-gray-700 w-full max-w-2xl rounded-xl shadow-2xl flex flex-col my-auto relative text-white">
            
            <div class="p-3 border-b border-gray-700 bg-gray-900/50 flex flex-wrap gap-2 justify-center rounded-t-xl">
                @foreach(var type in new[] { "task", "meeting", "habit", "media", "holiday", "birthday", "anniversary", "vacation", "health", "sports" })
                {
                    <button @onclick='() => Item.Type = type' 
                            class="px-3 py-1.5 rounded text-xs font-bold uppercase transition @(Item.Type == type ? "bg-blue-600 border-blue-400 shadow-lg" : "bg-gray-700 text-gray-400 hover:text-white")">
                        @type
                    </button>
                }
            </div>

            <div class="p-6 overflow-y-auto max-h-[70vh] space-y-6">
                <div class="space-y-4 border-b border-gray-700 pb-6">
                    <div class="grid grid-cols-2 gap-4">
                        <div>
                            <label class="block text-[10px] font-bold text-gray-400 uppercase mb-1">ğŸ“‚ Category</label>
                            <select @bind="Item.Category" class="w-full bg-black/30 border border-gray-600 rounded px-3 py-2 text-white text-sm">
                                <option value="personal">Personal</option><option value="work">Work</option><option value="health">Health</option>
                            </select>
                        </div>
                        <div>
                            <label class="block text-[10px] font-bold text-gray-400 uppercase mb-1">ğŸ“† Date</label>
                            <input type="date" @bind="Item.Date" class="w-full bg-black/30 border border-gray-600 rounded px-3 py-2 text-white text-sm" />
                        </div>
                    </div>
                    <div>
                        <label class="block text-[10px] font-bold text-gray-400 uppercase mb-1">âœï¸ Title</label>
                        <input @bind="Item.Title" class="w-full bg-black/30 border border-gray-600 rounded px-3 py-2 text-white font-bold" placeholder="Item Title..." />
                    </div>
                </div>

                <div class="space-y-4">
                    @switch (Item.Type)
                    {
                        case "task": <EditorTask Detail="TaskDetail" /> break;
                        case "meeting": <EditorMeeting Detail="MeetingDetail" /> break;
                        case "habit": <EditorHabit Detail="HabitDetail" /> break;
                        case "sports": <EditorSports Detail="SportsDetail" Leagues="Leagues" Seasons="Seasons" Teams="Teams" /> break;
                        case "vacation": <EditorVacation Detail="VacationDetail" @bind-EndDate="Item.EndDate" /> break;
                        case "health": <EditorHealth Detail="HealthDetail" /> break;
                        default: <div class="text-gray-500 text-xs italic">Generic Item</div> break;
                    }
                </div>
            </div>

            <div class="px-6 py-4 bg-gray-900 border-t border-gray-700 flex justify-between items-center rounded-b-xl">
                <button @onclick="() => OnDelete.InvokeAsync()" class="text-red-500 text-xs font-bold uppercase">ğŸ—‘ï¸ Delete</button>
                <div class="flex gap-3">
                    <button @onclick="() => OnCancel.InvokeAsync()" class="px-5 py-2 text-sm font-bold text-gray-400">Cancel</button>
                    <button @onclick="() => OnSave.InvokeAsync()" class="px-8 py-2 rounded-lg text-sm font-bold bg-blue-600 text-white shadow-lg">Save Changes</button>
                </div>
            </div>
        </div>
    </div>
}

@code {
    [Parameter] public BulletTaskService.TaskDTO? Item { get; set; }
    [Parameter] public BulletTaskDetail TaskDetail { get; set; } = new();
    [Parameter] public BulletMeetingDetail MeetingDetail { get; set; } = new();
    [Parameter] public BulletHabitDetail HabitDetail { get; set; } = new();
    [Parameter] public BulletVacationDetail VacationDetail { get; set; } = new();
    [Parameter] public BulletHealthDetail HealthDetail { get; set; } = new();
    [Parameter] public BulletGameDetail SportsDetail { get; set; } = new(); 
    [Parameter] public List<League> Leagues { get; set; } = new();
    [Parameter] public List<Season> Seasons { get; set; } = new();
    [Parameter] public List<Team> Teams { get; set; } = new();

    [Parameter] public EventCallback OnSave { get; set; }
    [Parameter] public EventCallback OnCancel { get; set; }
    [Parameter] public EventCallback OnDelete { get; set; }
}