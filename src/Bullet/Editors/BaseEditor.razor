@namespace Dashboard.Components.Bullet
@using Dashboard
@using Dashboard.Components.Bullet.Editors 
@using Microsoft.AspNetCore.Components.Forms
@using Microsoft.JSInterop
@using System.IO
@inject IJSRuntime JS
@inject BulletBaseService BaseService

@if (Item != null)
{
    <div class="fixed inset-0 z-50 flex items-center justify-center bg-black/80 backdrop-blur-sm p-4 overflow-y-auto">
        <div class="bg-gray-800 border border-gray-700 w-full max-w-2xl rounded-xl shadow-2xl flex flex-col my-auto relative text-white font-sans">
            
            <div class="p-3 border-b border-gray-700 bg-gray-900/50 flex flex-wrap gap-2 justify-center rounded-t-xl sticky top-0 z-10 backdrop-blur-md">
                @foreach(var type in new[] { "task", "meeting", "habit", "media", "holiday", "birthday", "anniversary", "vacation", "health", "sports" })
                {
                    <button @onclick='() => Item.Type = type' 
                            class="px-3 py-1.5 rounded-md text-xs font-bold uppercase transition border border-transparent 
                            @(Item.Type == type ? "bg-blue-600 text-white border-blue-400 shadow-lg scale-105" : "bg-gray-700 text-gray-400 hover:text-white hover:bg-gray-600")">
                        @GetEmoji(type) @type
                    </button>
                }
            </div>

            <div class="p-6 overflow-y-auto max-h-[70vh] space-y-6">
                <div class="space-y-4 border-b border-gray-700 pb-6">
                    <h3 class="text-xs font-bold text-gray-500 uppercase tracking-wider mb-2">General Info</h3>
                    <div class="grid grid-cols-2 gap-4">
                        <div>
                            <label class="block text-[10px] font-bold text-gray-400 uppercase mb-1">üìÇ Category</label>
                            <select @bind="Item.Category" class="w-full bg-black/30 border border-gray-600 rounded px-3 py-2 text-white text-sm outline-none">
                                <option value="personal">Personal</option>
                                <option value="work">Work</option>
                                <option value="health">Health</option>
                            </select>
                        </div>
                        <div>
                            <label class="block text-[10px] font-bold text-gray-400 uppercase mb-1">üìÜ Date</label>
                            <input type="date" @bind="Item.Date" class="w-full bg-black/30 border border-gray-600 rounded px-3 py-2 text-white text-sm outline-none" />
                        </div>
                    </div>
                    <div>
                        <label class="block text-[10px] font-bold text-gray-400 uppercase mb-1">‚úèÔ∏è Title</label>
                        <input @bind="Item.Title" class="w-full bg-black/30 border border-gray-600 rounded px-3 py-2 text-white font-bold outline-none" placeholder="Item Title..." />
                    </div>
                    <div>
                        <label class="block text-[10px] font-bold text-gray-400 uppercase mb-1">üìù Description</label>
                        <textarea @bind="Item.Description" rows="3" class="w-full bg-black/30 border border-gray-600 rounded px-3 py-2 text-gray-300 text-sm outline-none resize-none"></textarea>
                    </div>
                </div>

                <div class="space-y-4 border-b border-gray-700 pb-6 bg-purple-900/10 p-4 rounded-lg">
                    <h3 class="text-xs font-black text-purple-400 uppercase tracking-widest">üîÑ Batch Creation (Repeat)</h3>
                    <div class="grid grid-cols-2 gap-4">
                        <div>
                            <label class="block text-[10px] font-bold text-gray-400 uppercase mb-1">Frequency</label>
                            <select @bind="repeatFrequency" class="w-full bg-black/30 border border-gray-600 rounded px-3 py-2 text-white text-sm outline-none">
                                <option value="none">One Time Only</option>
                                <option value="daily">Daily</option>
                                <option value="weekly">Weekly</option>
                                <option value="biweekly">Every 2 Weeks</option>
                                <option value="monthly">Monthly</option>
                            </select>
                        </div>
                        <div>
                            <label class="block text-[10px] font-bold text-gray-400 uppercase mb-1">Occurrences</label>
                            <input type="number" @bind="repeatCount" min="1" max="52" 
                                   disabled="@(repeatFrequency == "none")"
                                   class="w-full bg-black/30 border border-gray-600 rounded px-3 py-2 text-white text-sm @(repeatFrequency == "none" ? "opacity-30" : "")" />
                        </div>
                    </div>
                    <p class="text-[9px] text-gray-500 italic uppercase font-bold tracking-tight">Independent clones will be generated starting from the selected date.</p>
                </div>

                <div class="space-y-4">
                    <h3 class="text-xs font-bold text-blue-400 uppercase tracking-wider mb-2">@Item.Type Details</h3>
                    @switch (Item.Type)
                    {
                        case "task": <EditorTask Detail="TaskDetail" /> break;
                        case "meeting": <EditorMeeting Detail="MeetingDetail" /> break;
                        case "habit": <EditorHabit Detail="HabitDetail" /> break;
                        case "sports": <EditorSports Detail="SportsDetail" Leagues="Leagues" Seasons="Seasons" Teams="Teams" /> break;
                        case "vacation": <EditorVacation Detail="VacationDetail" @bind-EndDate="Item.EndDate" /> break;
                        case "health": <EditorHealth Detail="HealthDetail" /> break;
                    }
                </div>

                <div>
                    <div class="flex justify-between items-center mb-4">
                        <h3 class="text-xs font-bold text-gray-500 uppercase tracking-wider">üóíÔ∏è Notes</h3>
                        <button @onclick="AddNote" class="bg-gray-700 hover:bg-gray-600 text-white text-xs px-3 py-1 rounded transition font-bold uppercase tracking-widest">Ôºã Note</button>
                    </div>
                    <div class="space-y-3">
                        @if (Notes != null)
                        {
                            @foreach(var note in Notes)
                            {
                                <div class="bg-black/40 border border-gray-600 rounded-lg p-3 relative group">
                                    <button @onclick="() => Notes.Remove(note)" class="absolute top-2 right-2 text-gray-600 hover:text-red-500 font-bold">‚úï</button>
                                    <textarea @bind="note.Content" rows="2" class="w-full bg-transparent text-sm text-gray-200 outline-none border-none resize-none" placeholder="Add detail..."></textarea>
                                </div>
                            }
                        }
                    </div>
                </div>
            </div>

            <div class="px-6 py-4 bg-gray-900 border-t border-gray-700 flex justify-between items-center rounded-b-xl sticky bottom-0 z-20">
                <button @onclick="() => OnDelete.InvokeAsync()" class="text-red-500 hover:text-red-400 text-[10px] font-black uppercase tracking-widest px-3 py-2 rounded hover:bg-red-900/20 transition">üóëÔ∏è Delete</button>
                <div class="flex gap-3">
                    <button @onclick="() => OnCancel.InvokeAsync()" class="px-5 py-2 rounded-lg text-sm font-bold text-gray-400 hover:text-white transition">Cancel</button>
                    <button @onclick="HandleInternalSave" class="px-8 py-2 rounded-lg text-sm font-bold bg-blue-600 hover:bg-blue-500 text-white shadow-lg transition transform hover:scale-105 uppercase tracking-widest">Save Changes</button>
                </div>
            </div>
        </div>
    </div>
}

@code {
    [Parameter] public BulletTaskService.TaskDTO? Item { get; set; }
    [Parameter] public BulletTaskDetail TaskDetail { get; set; } = new();
    [Parameter] public BulletMeetingDetail MeetingDetail { get; set; } = new();
    [Parameter] public BulletHabitDetail HabitDetail { get; set; } = new();
    [Parameter] public BulletVacationDetail VacationDetail { get; set; } = new();
    [Parameter] public BulletHealthDetail HealthDetail { get; set; } = new();
    [Parameter] public BulletGameDetail SportsDetail { get; set; } = new(); 
    
    [Parameter] public List<League> Leagues { get; set; } = new();
    [Parameter] public List<Season> Seasons { get; set; } = new();
    [Parameter] public List<Team> Teams { get; set; } = new();
    [Parameter] public List<BulletItemNote> Notes { get; set; } = new();

    [Parameter] public EventCallback<(string freq, int count)> OnSaveWithRepeat { get; set; }
    [Parameter] public EventCallback OnCancel { get; set; }
    [Parameter] public EventCallback OnDelete { get; set; }

    private string repeatFrequency = "none";
    private int repeatCount = 1;

    private string GetEmoji(string type) => type switch {
        "task" => "üìù", "meeting" => "üìÖ", "habit" => "üî•", "sports" => "üèÜ",
        "vacation" => "‚úàÔ∏è", "birthday" => "üéÇ", "holiday" => "üéâ", "anniversary" => "üíë",
        "media" => "üé¨", "health" => "üí™", _ => "üìÑ"
    };

    private void AddNote() { if (Notes == null) Notes = new(); Notes.Add(new BulletItemNote { BulletItemId = Item?.Id ?? 0, Order = Notes.Count }); }
    private async Task HandleInternalSave() { await OnSaveWithRepeat.InvokeAsync((repeatFrequency, repeatCount)); repeatFrequency = "none"; repeatCount = 1; }
}