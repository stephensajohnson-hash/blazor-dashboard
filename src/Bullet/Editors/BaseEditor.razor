@namespace Dashboard.Components.Bullet
@using Dashboard
@using Dashboard.Components.Bullet.Editors 
@using Microsoft.AspNetCore.Components.Forms
@using Microsoft.JSInterop
@using System.IO
@inject IJSRuntime JS
@inject BulletBaseService BaseService

@if (Item != null)
{
    <div class="fixed inset-0 z-50 flex items-center justify-center bg-black/80 backdrop-blur-sm p-4 overflow-y-auto font-sans">
        <div class="bg-gray-800 border border-gray-700 w-full max-w-2xl rounded-xl shadow-2xl flex flex-col my-auto relative text-white">
            
            <div class="p-2 border-b border-gray-700 bg-gray-900/80 flex justify-center gap-1 rounded-t-xl sticky top-0 z-30 backdrop-blur-md">
                <button @onclick='() => activeTab = "general"' class="px-4 py-2 rounded-md text-xs font-black uppercase tracking-widest transition @(activeTab == "general" ? "bg-blue-600 text-white shadow-lg" : "text-gray-500 hover:text-gray-300")">1. General</button>
                <button @onclick='() => activeTab = "details"' class="px-4 py-2 rounded-md text-xs font-black uppercase tracking-widest transition @(activeTab == "details" ? "bg-blue-600 text-white shadow-lg" : "text-gray-500 hover:text-gray-300")">2. @Item.Type Details</button>
                <button @onclick='() => activeTab = "notes"' class="px-4 py-2 rounded-md text-xs font-black uppercase tracking-widest transition @(activeTab == "notes" ? "bg-blue-600 text-white shadow-lg" : "text-gray-500 hover:text-gray-300")">3. Notes & Repeat</button>
            </div>

            <div class="p-6 overflow-y-auto max-h-[70vh] space-y-6">

                @if (activeTab == "general")
                {
                    <div class="space-y-6">
                        <div class="p-3 bg-gray-900/50 border border-gray-700 rounded-lg flex flex-wrap gap-2 justify-center">
                            @foreach(var type in new[] { "task", "meeting", "habit", "media", "holiday", "birthday", "anniversary", "vacation", "health", "sports" })
                            {
                                <button @onclick='() => Item.Type = type' 
                                        class="px-3 py-1.5 rounded-md text-[10px] font-black uppercase transition border @(Item.Type == type ? "bg-blue-600 border-blue-400" : "bg-gray-700 border-transparent text-gray-400")">
                                    @GetEmoji(type) @type
                                </button>
                            }
                        </div>

                        <div class="grid grid-cols-2 gap-4">
                            <div>
                                <label class="block text-[10px] font-bold text-gray-500 uppercase mb-1">üìÇ Category</label>
                                <select @bind="Item.Category" class="w-full bg-black/30 border border-gray-600 rounded px-3 py-2 text-white text-sm outline-none focus:border-blue-500">
                                    <option value="personal">Personal</option>
                                    <option value="work">Work</option>
                                    <option value="health">Health</option>
                                </select>
                            </div>
                            <div>
                                <label class="block text-[10px] font-bold text-gray-500 uppercase mb-1">üìÜ Date</label>
                                <input type="date" @bind="Item.Date" class="w-full bg-black/30 border border-gray-600 rounded px-3 py-2 text-white text-sm outline-none focus:border-blue-500" />
                            </div>
                        </div>

                        <div>
                            <label class="block text-[10px] font-bold text-gray-500 uppercase mb-1">‚úèÔ∏è Title</label>
                            <input @bind="Item.Title" class="w-full bg-black/30 border border-gray-600 rounded px-3 py-2 text-white font-bold outline-none focus:border-blue-500" placeholder="Title..." />
                        </div>

                        <div>
                            <label class="block text-[10px] font-bold text-gray-500 uppercase mb-1">üìù Description</label>
                            <textarea @bind="Item.Description" rows="2" class="w-full bg-black/30 border border-gray-600 rounded px-3 py-2 text-gray-300 text-sm outline-none focus:border-blue-500 resize-none"></textarea>
                        </div>

                        <div class="bg-black/20 p-4 rounded-lg border border-gray-700 space-y-4">
                            <h4 class="text-[10px] font-black text-gray-500 uppercase tracking-widest">Media & Links</h4>
                            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                                <div>
                                    <label class="block text-[10px] font-bold text-gray-400 uppercase mb-1">üîó Target Link URL</label>
                                    <input @bind="Item.LinkUrl" class="w-full bg-black/30 border border-gray-600 rounded px-3 py-2 text-blue-400 text-xs outline-none" placeholder="https://..." />
                                </div>
                                <div>
                                    <label class="block text-[10px] font-bold text-gray-400 uppercase mb-1">üñºÔ∏è Image URL</label>
                                    <input @bind="Item.ImgUrl" class="w-full bg-black/30 border border-gray-600 rounded px-3 py-2 text-gray-300 text-xs outline-none" placeholder="Image URL..." />
                                </div>
                            </div>
                            <div class="flex items-center gap-4 pt-2">
                                <div class="w-16 h-16 bg-black rounded border border-gray-600 shrink-0 overflow-hidden relative">
                                    @if(!string.IsNullOrEmpty(Item.ImgUrl)) { <img src="@Item.ImgUrl" class="w-full h-full object-cover" /> }
                                    else { <div class="w-full h-full flex items-center justify-center text-gray-700 text-[10px]">PREVIEW</div> }
                                </div>
                                <div class="flex-1">
                                    <label class="cursor-pointer inline-block bg-gray-700 hover:bg-gray-600 text-white px-4 py-2 rounded text-[10px] font-black transition uppercase tracking-widest">
                                        üìÇ Upload File <InputFile OnChange="HandleFileUpload" class="hidden" />
                                    </label>
                                </div>
                            </div>
                        </div>
                    </div>
                }
                else if (activeTab == "details")
                {
                    <div class="space-y-4">
                        <h3 class="text-xs font-black text-blue-400 uppercase tracking-widest mb-4">@Item.Type Details</h3>
                        @switch (Item.Type)
                        {
                            case "task": <EditorTask Detail="TaskDetail" /> break;
                            case "meeting": <EditorMeeting Detail="MeetingDetail" /> break;
                            case "habit": <EditorHabit Detail="HabitDetail" /> break;
                            case "media": <EditorMedia Detail="MediaDetail" /> break;
                            case "holiday": <EditorHoliday Detail="HolidayDetail" /> break;
                            case "birthday": <EditorBirthday Detail="BirthdayDetail" /> break;
                            case "anniversary": <EditorAnniversary Detail="AnniversaryDetail" /> break;
                            case "vacation": <EditorVacation Detail="VacationDetail" @bind-EndDate="Item.EndDate" /> break;
                            case "health": <EditorHealth Detail="HealthDetail" /> break;
                            case "sports": <EditorSports Detail="SportsDetail" Leagues="Leagues" Seasons="Seasons" Teams="Teams" /> break;
                        }
                    </div>
                }
                else
                {
                    <div class="space-y-8">
                        <div class="bg-purple-900/10 p-5 rounded-xl border border-purple-500/30 space-y-4">
                            <h3 class="text-xs font-black text-purple-400 uppercase tracking-widest">üîÑ Batch Creation (Repeat)</h3>
                            <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
                                <div>
                                    <label class="block text-[10px] font-bold text-gray-400 uppercase mb-1">Frequency</label>
                                    <select @bind="repeatFrequency" class="w-full bg-black/30 border border-gray-600 rounded px-3 py-2 text-white text-sm outline-none">
                                        <option value="none">One Time Only</option>
                                        <option value="daily">Daily</option>
                                        <option value="weekly">Weekly</option>
                                        <option value="biweekly">Every 2 Weeks</option>
                                        <option value="monthly">Monthly</option>
                                    </select>
                                </div>
                                <div>
                                    <label class="block text-[10px] font-bold text-gray-400 uppercase mb-1">Repeat Thru</label>
                                    <input type="date" @bind="thruDate" disabled="@(repeatFrequency == "none")"
                                           class="w-full bg-black/30 border border-gray-600 rounded px-3 py-2 text-white text-sm outline-none @(repeatFrequency == "none" ? "opacity-20" : "")" />
                                </div>
                                @if (Item.Type == "habit" && repeatFrequency != "none")
                                {
                                    <div class="flex items-end pb-1">
                                        <label class="flex items-center gap-2 cursor-pointer bg-purple-600/20 p-2 rounded border border-purple-500/40 w-full">
                                            <input type="checkbox" @bind="incrementStreak" class="w-4 h-4" />
                                            <span class="text-[9px] font-black uppercase text-purple-200">+1 Streak Every Copy</span>
                                        </label>
                                    </div>
                                }
                            </div>
                        </div>

                        <div class="space-y-4">
                            <div class="flex justify-between items-center border-b border-gray-700 pb-2">
                                <h3 class="text-xs font-black text-gray-400 uppercase tracking-widest">üóíÔ∏è Private Notes</h3>
                                <button @onclick="AddNote" class="text-[10px] font-black uppercase text-blue-400 hover:text-blue-300">Ôºã Add Entry</button>
                            </div>
                            <div class="space-y-3">
                                @if (Notes != null)
                                {
                                    @foreach(var note in Notes)
                                    {
                                        <div class="bg-black/40 border border-gray-700 rounded-lg p-3 relative group">
                                            <button @onclick="() => Notes.Remove(note)" class="absolute top-2 right-2 text-gray-600 hover:text-red-500 font-black">‚úï</button>
                                            <textarea @bind="note.Content" rows="2" class="w-full bg-transparent text-sm text-gray-200 outline-none border-none resize-none" placeholder="Notes..."></textarea>
                                        </div>
                                    }
                                }
                            </div>
                        </div>
                    </div>
                }
            </div>

            <div class="px-6 py-4 bg-gray-900 border-t border-gray-700 flex justify-between items-center rounded-b-xl sticky bottom-0 z-20">
                <button @onclick="() => OnDelete.InvokeAsync()" class="text-red-500 hover:text-red-400 text-[10px] font-black uppercase tracking-widest px-3 py-2 rounded hover:bg-red-900/20 transition">üóëÔ∏è Delete</button>
                <div class="flex gap-3">
                    <button @onclick="HandleInternalCancel" class="px-5 py-2 rounded-lg text-xs font-black uppercase text-gray-400 hover:text-white transition">Cancel</button>
                    <button @onclick="HandleInternalSave" class="px-8 py-2 rounded-lg text-xs font-black uppercase bg-blue-600 hover:bg-blue-500 text-white shadow-xl transition transform hover:scale-105">Save Changes</button>
                </div>
            </div>
        </div>
    </div>
}

@code {
    [Parameter] public BulletTaskService.TaskDTO? Item { get; set; }
    [Parameter] public BulletTaskDetail TaskDetail { get; set; } = new();
    [Parameter] public BulletMeetingDetail MeetingDetail { get; set; } = new();
    [Parameter] public BulletHabitDetail HabitDetail { get; set; } = new();
    [Parameter] public BulletMediaDetail MediaDetail { get; set; } = new();
    [Parameter] public BulletHolidayDetail HolidayDetail { get; set; } = new();
    [Parameter] public BulletBirthdayDetail BirthdayDetail { get; set; } = new();
    [Parameter] public BulletAnniversaryDetail AnniversaryDetail { get; set; } = new();
    [Parameter] public BulletVacationDetail VacationDetail { get; set; } = new();
    [Parameter] public BulletHealthDetail HealthDetail { get; set; } = new();
    [Parameter] public BulletGameDetail SportsDetail { get; set; } = new(); 
    
    [Parameter] public List<League> Leagues { get; set; } = new();
    [Parameter] public List<Season> Seasons { get; set; } = new();
    [Parameter] public List<Team> Teams { get; set; } = new();
    [Parameter] public List<BulletItemNote> Notes { get; set; } = new();

    [Parameter] public EventCallback<RecurrenceRequest> OnSaveRecurring { get; set; }
    [Parameter] public EventCallback OnCancel { get; set; }
    [Parameter] public EventCallback OnDelete { get; set; }

    private string activeTab = "general";
    private string repeatFrequency = "none";
    private DateTime thruDate = DateTime.Today.AddMonths(1);
    private bool incrementStreak = true;

    public class RecurrenceRequest {
        public string Frequency { get; set; } = "none";
        public DateTime ThruDate { get; set; }
        public bool IncrementHabitStreak { get; set; }
    }

    private string GetEmoji(string type) => type switch {
        "task" => "üìù", "meeting" => "üìÖ", "habit" => "üî•", "sports" => "üèÜ",
        "vacation" => "‚úàÔ∏è", "birthday" => "üéÇ", "holiday" => "üéâ", "anniversary" => "üíë",
        "media" => "üé¨", "health" => "üí™", _ => "üìÑ"
    };

    private void AddNote() { if (Notes == null) Notes = new(); Notes.Add(new BulletItemNote { BulletItemId = Item?.Id ?? 0, Order = Notes.Count }); }
    
    private async Task HandleFileUpload(InputFileChangeEventArgs e) {
        try {
            var file = e.File;
            using var stream = file.OpenReadStream(5 * 1024 * 1024);
            using var ms = new MemoryStream();
            await stream.CopyToAsync(ms);
            var url = await BaseService.SaveImageAsync(ms.ToArray(), file.ContentType);
            if(Item != null) Item.ImgUrl = url;
        } catch { }
    }

    private async Task HandleInternalSave() { 
        await OnSaveRecurring.InvokeAsync(new RecurrenceRequest { Frequency = repeatFrequency, ThruDate = thruDate, IncrementHabitStreak = incrementStreak });
        activeTab = "general"; repeatFrequency = "none"; 
    }

    private async Task HandleInternalCancel() { activeTab = "general"; repeatFrequency = "none"; await OnCancel.InvokeAsync(); }
}