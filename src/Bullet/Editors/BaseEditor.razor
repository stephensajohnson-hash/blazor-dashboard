@namespace Dashboard.Components.Bullet
@using Dashboard
@using Dashboard.Components.Bullet.Editors 
@using Microsoft.AspNetCore.Components.Forms
@using System.IO
@inject IJSRuntime JS
@inject BulletBaseService BaseService

@if (Item != null)
{
    <div class="fixed inset-0 z-50 flex items-center justify-center bg-black/80 backdrop-blur-sm p-4 overflow-y-auto">
        <div class="bg-gray-800 border border-gray-700 w-full max-w-2xl rounded-xl shadow-2xl flex flex-col my-auto relative">
            
            <div class="p-3 border-b border-gray-700 bg-gray-900/50 flex flex-wrap gap-2 justify-center sticky top-0 z-10 backdrop-blur-md rounded-t-xl">
                @foreach(var type in new[] { "task", "meeting", "habit", "media", "holiday", "birthday", "anniversary", "vacation", "health", "sports" })
                {
                    <button @onclick='() => Item.Type = type' 
                            class="px-3 py-1.5 rounded-md text-xs font-bold uppercase tracking-wide transition border border-transparent 
                            @(Item.Type == type ? "bg-blue-600 text-white border-blue-400 shadow-lg scale-105" : "bg-gray-700 text-gray-400 hover:text-white hover:bg-gray-600")">
                        @GetEmoji(type) @type
                    </button>
                }
            </div>

            <div class="p-6 overflow-y-auto max-h-[75vh] space-y-6">

                <div class="space-y-4 border-b border-gray-700 pb-6">
                    <h3 class="text-xs font-bold text-gray-500 uppercase tracking-wider mb-2">General Info</h3>
                    
                    <div class="grid grid-cols-2 gap-4">
                        <div>
                            <label class="block text-[10px] font-bold text-gray-400 uppercase mb-1">ğŸ“‚ Category</label>
                            <select @bind="Item.Category" class="w-full bg-black/30 border border-gray-600 rounded px-3 py-2 text-white text-sm focus:border-blue-500 outline-none">
                                <option value="personal">Personal</option><option value="work">Work</option><option value="health">Health</option>
                            </select>
                        </div>
                        <div>
                            <label class="block text-[10px] font-bold text-gray-400 uppercase mb-1">ğŸ“† Date</label>
                            <input type="date" @bind="Item.Date" class="w-full bg-black/30 border border-gray-600 rounded px-3 py-2 text-white text-sm focus:border-blue-500 outline-none" />
                        </div>
                    </div>

                    <div>
                        <label class="block text-[10px] font-bold text-gray-400 uppercase mb-1">âœï¸ Title</label>
                        <input @bind="Item.Title" class="w-full bg-black/30 border border-gray-600 rounded px-3 py-2 text-white font-bold focus:border-blue-500 outline-none" placeholder="Item Title..." />
                    </div>

                    <div>
                        <label class="block text-[10px] font-bold text-gray-400 uppercase mb-1">ğŸ”— Link URL</label>
                        <input @bind="Item.LinkUrl" class="w-full bg-black/30 border border-gray-600 rounded px-3 py-2 text-blue-400 text-xs focus:border-blue-500 outline-none" placeholder="https://..." />
                    </div>

                    <div>
                        <label class="block text-[10px] font-bold text-gray-400 uppercase mb-1">ğŸ“ Description</label>
                        <textarea @bind="Item.Description" rows="3" class="w-full bg-black/30 border border-gray-600 rounded px-3 py-2 text-gray-300 text-sm focus:border-blue-500 outline-none resize-none"></textarea>
                    </div>

                    <div class="bg-black/20 p-3 rounded border border-gray-700">
                        <label class="block text-[10px] font-bold text-gray-400 uppercase mb-2">ğŸ–¼ï¸ Main Cover Image</label>
                        <div class="flex gap-4 items-start">
                            <div class="w-20 h-20 bg-black rounded border border-gray-600 shrink-0 overflow-hidden relative group">
                                @if(!string.IsNullOrEmpty(Item.ImgUrl)) { <img src="@Item.ImgUrl" class="w-full h-full object-cover" /> }
                                else { <div class="w-full h-full flex items-center justify-center text-gray-700 text-xs">No Img</div> }
                            </div>
                            <div class="flex-1 space-y-2">
                                <input @bind="Item.ImgUrl" class="w-full bg-black/30 border border-gray-600 rounded px-2 py-1 text-xs text-gray-300 outline-none" placeholder="Paste Image URL..." />
                                <label class="cursor-pointer inline-block bg-gray-700 hover:bg-gray-600 text-white px-3 py-1.5 rounded text-xs transition">
                                    ğŸ“‚ Upload <InputFile OnChange="UploadCoverImage" class="hidden" />
                                </label>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="space-y-4 border-b border-gray-700 pb-6">
                    <h3 class="text-xs font-bold text-blue-400 uppercase tracking-wider mb-2">@Item.Type Details</h3>
                    
                    @switch (Item.Type)
                    {
                        case "task": <EditorTask Detail="TaskDetail" /> break;
                        case "meeting": <EditorMeeting Detail="MeetingDetail" /> break;
                        case "habit": <EditorHabit Detail="HabitDetail" /> break;
                        case "sports": <EditorSports Detail="SportsDetail" UserId="Item.UserId" /> break;
                        case "vacation": <EditorVacation Detail="VacationDetail" @bind-EndDate="Item.EndDate" /> break;
                        case "birthday": <EditorBirthday Detail="BirthdayDetail" /> break;
                        case "anniversary": <EditorAnniversary Detail="AnniversaryDetail" /> break;
                        case "holiday": <EditorHoliday Detail="HolidayDetail" /> break;
                        case "media": <EditorMedia Detail="MediaDetail" /> break;
                        case "health": <EditorHealth Detail="HealthDetail" /> break;
                        default: <div class="text-gray-500 text-xs italic">Generic Item</div> break;
                    }
                </div>

                <div>
                    <div class="flex justify-between items-center mb-4">
                        <h3 class="text-xs font-bold text-gray-500 uppercase tracking-wider">ğŸ—’ï¸ Notes & Attachments</h3>
                        <button @onclick="AddNote" class="bg-gray-700 hover:bg-gray-600 text-white text-xs px-3 py-1 rounded transition">ï¼‹ Add Note</button>
                    </div>
                    <div class="space-y-6">
                        @foreach(var note in Notes)
                        {
                            <div class="bg-black/40 border border-gray-600 rounded-lg p-4 relative group hover:border-gray-500">
                                <button @onclick="() => Notes.Remove(note)" class="absolute top-2 right-2 text-gray-600 hover:text-red-500 p-1">âœ•</button>
                                <div class="space-y-4">
                                    <div>
                                        <label class="block text-[9px] font-bold text-gray-500 uppercase mb-1">ğŸ“ Note Text</label>
                                        <textarea @bind="note.Content" rows="3" class="w-full bg-gray-900 border border-gray-700 rounded px-3 py-2 text-sm text-gray-200 outline-none" placeholder="Details..."></textarea>
                                    </div>
                                    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                                        <div>
                                            <label class="block text-[9px] font-bold text-gray-500 uppercase mb-1">ğŸ–¼ï¸ Image</label>
                                            <div class="flex gap-3 items-start">
                                                <div class="w-16 h-16 bg-black rounded border border-gray-600 shrink-0 overflow-hidden">
                                                    @if(!string.IsNullOrEmpty(note.ImgUrl)) { <img src="@note.ImgUrl" class="w-full h-full object-cover" /> }
                                                    else { <div class="w-full h-full flex items-center justify-center text-gray-700 text-[9px]">None</div> }
                                                </div>
                                                <div class="flex-1 space-y-1">
                                                    <input @bind="note.ImgUrl" class="w-full bg-gray-900 border border-gray-700 rounded px-2 py-1 text-[10px] text-gray-300 outline-none" placeholder="Image URL..." />
                                                    <label class="cursor-pointer block bg-gray-700 hover:bg-gray-600 text-center text-white rounded py-1 text-[10px]">
                                                        ğŸ“‚ Upload <InputFile OnChange="@(e => UploadNoteImage(e, note))" class="hidden" />
                                                    </label>
                                                </div>
                                            </div>
                                        </div>
                                        <div>
                                            <label class="block text-[9px] font-bold text-gray-500 uppercase mb-1">ğŸ”— External Link</label>
                                            <div class="flex items-center gap-2 bg-gray-900 border border-gray-700 rounded px-2 py-1 h-[38px]">
                                                <span class="text-lg">ğŸ”—</span>
                                                <input @bind="note.LinkUrl" class="w-full bg-transparent text-xs text-blue-400 outline-none placeholder-gray-600" placeholder="https://..." />
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>

            <div class="px-6 py-4 bg-gray-900 border-t border-gray-700 flex justify-between items-center rounded-b-xl sticky bottom-0 z-20">
                <button @onclick="HandleDelete" class="text-red-500 hover:text-red-400 text-xs font-bold uppercase tracking-wider transition px-3 py-2 rounded hover:bg-red-900/20">ğŸ—‘ï¸ Delete</button>
                <div class="flex gap-3">
                    <button @onclick="HandleCancel" class="px-5 py-2 rounded-lg text-sm font-bold text-gray-400 hover:text-white hover:bg-gray-800 transition">Cancel</button>
                    <button @onclick="HandleSave" class="px-8 py-2 rounded-lg text-sm font-bold bg-blue-600 hover:bg-blue-500 text-white shadow-lg transition transform hover:scale-105 active:scale-95">Save Changes</button>
                </div>
            </div>
        </div>
    </div>
}

@code {
    [Parameter] public BulletTaskService.TaskDTO? Item { get; set; }
    
    // Details (Passed by Reference from Parent)
    [Parameter] public BulletTaskDetail TaskDetail { get; set; } = new();
    [Parameter] public BulletMeetingDetail MeetingDetail { get; set; } = new();
    [Parameter] public BulletHabitDetail HabitDetail { get; set; } = new();
    [Parameter] public BulletMediaDetail MediaDetail { get; set; } = new();
    [Parameter] public BulletHolidayDetail HolidayDetail { get; set; } = new();
    [Parameter] public BulletBirthdayDetail BirthdayDetail { get; set; } = new();
    [Parameter] public BulletAnniversaryDetail AnniversaryDetail { get; set; } = new();
    [Parameter] public BulletVacationDetail VacationDetail { get; set; } = new();
    [Parameter] public BulletHealthDetail HealthDetail { get; set; } = new();
    [Parameter] public BulletGameDetail SportsDetail { get; set; } = new(); 

    [Parameter] public List<BulletItemNote> Notes { get; set; } = new();

    [Parameter] public EventCallback OnSave { get; set; }
    [Parameter] public EventCallback OnCancel { get; set; }
    [Parameter] public EventCallback OnDelete { get; set; }

    private string GetEmoji(string type) => type switch {
        "task" => "ğŸ“", "meeting" => "ğŸ“…", "habit" => "ğŸ”¥", "sports" => "ğŸ†",
        "vacation" => "âœˆï¸", "birthday" => "ğŸ‚", "holiday" => "ğŸ‰", "anniversary" => "ğŸ’‘",
        "media" => "ğŸ¬", "health" => "ğŸ’ª", _ => "ğŸ“„"
    };

    private void AddNote() => Notes.Add(new BulletItemNote { BulletItemId = Item!.Id, Order = Notes.Count });

    private async Task UploadNoteImage(InputFileChangeEventArgs e, BulletItemNote note)
    {
        try {
            var file = e.File;
            using var stream = file.OpenReadStream(5 * 1024 * 1024);
            using var ms = new MemoryStream();
            await stream.CopyToAsync(ms);
            var url = await BaseService.SaveImageAsync(ms.ToArray(), file.ContentType);
            note.ImgUrl = url;
        } catch { }
    }

    private async Task UploadCoverImage(InputFileChangeEventArgs e)
    {
        try {
            var file = e.File;
            using var stream = file.OpenReadStream(5 * 1024 * 1024);
            using var ms = new MemoryStream();
            await stream.CopyToAsync(ms);
            var url = await BaseService.SaveImageAsync(ms.ToArray(), file.ContentType);
            if(Item != null) Item.ImgUrl = url;
        } catch { }
    }

    private async Task HandleSave() => await OnSave.InvokeAsync();
    private async Task HandleCancel() => await OnCancel.InvokeAsync();
    private async Task HandleDelete() => await OnDelete.InvokeAsync();
}