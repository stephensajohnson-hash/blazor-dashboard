@namespace Dashboard.Components.Bullet
@using Dashboard
@using Dashboard.Components.Bullet.Editors 
@using Microsoft.AspNetCore.Components.Forms
@using Microsoft.JSInterop
@using System.IO
@inject IJSRuntime JS
@inject BulletBaseService BaseService
@inject ImageService ImageService

@if (Item != null)
{
    <div class="fixed inset-0 z-50 flex items-center justify-center bg-black/90 backdrop-blur-md p-4 overflow-y-auto font-sans">
        <div class="bg-gray-800 border border-gray-700 w-full max-w-3xl rounded-2xl shadow-2xl flex flex-col my-auto relative text-white overflow-hidden">
            
            <div class="p-2 border-b border-gray-700 bg-gray-900/50 flex justify-center gap-1 sticky top-0 z-30 backdrop-blur-md font-black">
                <button @onclick='() => activeTab = "general"' 
                        class="px-4 py-2 rounded-lg text-[10px] uppercase tracking-widest transition @(activeTab == "general" ? "bg-blue-600 text-white" : "text-gray-500 hover:text-gray-300")">
                    1. Meta
                </button>
                <button @onclick='() => activeTab = "details"' 
                        class="px-4 py-2 rounded-lg text-[10px] uppercase tracking-widest transition @(activeTab == "details" ? "bg-blue-600 text-white" : "text-gray-500 hover:text-gray-300")">
                    2. @Item.Type
                </button>
                <button @onclick='() => activeTab = "notes"' 
                        class="px-4 py-2 rounded-lg text-[10px] uppercase tracking-widest transition @(activeTab == "notes" ? "bg-blue-600 text-white" : "text-gray-500 hover:text-gray-300")">
                    3. Logs
                </button>
                <button @onclick='() => activeTab = "repeat"' 
                        class="px-4 py-2 rounded-lg text-[10px] uppercase tracking-widest transition @(activeTab == "repeat" ? "bg-purple-600 text-white" : "text-gray-500 hover:text-gray-300")">
                    4. Timeline
                </button>
            </div>

            <div class="p-8 overflow-y-auto max-h-[70vh] space-y-6">

                @if (activeTab == "general")
                {
                    <div class="space-y-6 font-black uppercase">
                        <div class="p-2 bg-gray-900/80 border border-gray-700 rounded-xl flex flex-wrap gap-2 justify-center shadow-inner">
                            @foreach(var type in new[] { "task", "meeting", "habit", "media", "holiday", "birthday", "anniversary", "vacation", "health", "sports" })
                            {
                                <button @onclick='() => Item.Type = type' 
                                        class="px-3 py-2 rounded-lg text-[10px] transition border @(Item.Type == type ? "bg-blue-600 border-blue-400 scale-105 shadow-lg" : "bg-gray-800 border-transparent text-gray-600")">
                                    @GetEmoji(type) @type
                                </button>
                            }
                        </div>

                        <div class="grid grid-cols-2 gap-4">
                            <div>
                                <label class="block text-[10px] text-gray-500 mb-2 tracking-widest font-black uppercase">üìÇ Category</label>
                                <select @bind="Item.Category" class="w-full bg-black/30 border border-gray-700 rounded-lg px-4 py-2 text-sm text-white font-black">
                                    <option value="personal">Personal</option>
                                    <option value="work">Work</option>
                                    <option value="health">Health</option>
                                </select>
                            </div>
                            <div>
                                <label class="block text-[10px] text-gray-500 mb-2 tracking-widest font-black uppercase">üìÜ Event Date</label>
                                <input type="date" @bind="Item.Date" class="w-full bg-black/30 border border-gray-700 rounded-lg px-4 py-2 text-sm text-white font-black" />
                            </div>
                        </div>

                        <div class="space-y-4">
                            <div>
                                <label class="block text-[10px] text-gray-500 mb-2 tracking-widest font-black uppercase">‚úèÔ∏è Label</label>
                                <input @bind="Item.Title" class="w-full bg-black/30 border border-gray-700 rounded-lg px-4 py-3 text-white text-lg font-black shadow-inner" placeholder="Enter Identity..." />
                            </div>
                            @* RESTORED ACTION LINK FIELD *@
                            <div>
                                <label class="block text-[10px] text-gray-500 mb-2 tracking-widest font-black uppercase">üîó External Link (Action)</label>
                                <input @bind="Item.LinkUrl" class="w-full bg-black/30 border border-gray-700 rounded-lg px-4 py-3 text-white text-sm font-black shadow-inner outline-none focus:border-blue-500" placeholder="https://..." />
                            </div>
                            <div>
                                <label class="block text-[10px] text-gray-500 mb-2 tracking-widest font-black uppercase">üìù Description</label>
                                <textarea @bind="Item.Description" rows="3" class="w-full bg-black/30 border border-gray-700 rounded-lg px-4 py-3 text-white text-sm font-black shadow-inner outline-none focus:border-blue-500" placeholder="Add secondary details..."></textarea>
                            </div>
                        </div>

                        <div class="bg-black/40 p-6 rounded-2xl border border-gray-700 space-y-4 shadow-2xl relative">
                            <div class="flex justify-between items-center">
                                <h4 class="text-[10px] text-blue-400 tracking-[0.2em] font-black uppercase">Primary Asset</h4>
                                <button @onclick="() => OpenRegistrySelector(null)" class="text-[9px] bg-blue-600/20 hover:bg-blue-600 text-blue-400 hover:text-white px-3 py-1 rounded border border-blue-500/30 transition font-black uppercase">Pick</button>
                            </div>
                            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                                <div>
                                    <label class="block text-[9px] text-gray-500 mb-1 tracking-widest font-black uppercase">üñºÔ∏è Image URL</label>
                                    <input @bind="Item.ImgUrl" class="w-full bg-gray-900 border border-gray-700 rounded px-3 py-2 text-[11px] text-gray-400 outline-none font-mono" placeholder="Paste direct image URL..." />
                                </div>
                                <div class="flex items-center gap-4">
                                    <div class="w-16 h-16 bg-black rounded border-2 border-gray-700 overflow-hidden shadow-2xl shrink-0 flex items-center justify-center">
                                        @if(!string.IsNullOrEmpty(Item.ImgUrl)) { <img src="@Item.ImgUrl" class="w-full h-full object-cover" /> }
                                    </div>
                                    <label class="cursor-pointer flex-1 bg-blue-600 hover:bg-blue-500 text-white text-center py-2.5 rounded-lg text-[10px] transition uppercase tracking-widest font-black shadow-xl">
                                        üìÇ New Upload <InputFile OnChange="HandleMainUpload" class="hidden" />
                                    </label>
                                </div>
                            </div>
                        </div>
                    </div>
                }
                else if (activeTab == "details")
                {
                    <div class="space-y-4 font-black uppercase">
                        <h3 class="text-[10px] text-blue-400 uppercase tracking-[0.2em] mb-4">Specific Properties</h3>
                        @switch (Item.Type)
                        {
                            case "task": <EditorTask Detail="TaskDetail" Todos="Item.Todos" /> break;
                            case "meeting": <EditorMeeting Detail="MeetingDetail" /> break;
                            case "habit": <EditorHabit Detail="HabitDetail" /> break;
                            case "media": <EditorMedia Detail="MediaDetail" /> break;
                            case "holiday": <EditorHoliday Detail="HolidayDetail" /> break;
                            case "birthday": <EditorBirthday Detail="BirthdayDetail" /> break;
                            case "anniversary": <EditorAnniversary Detail="AnniversaryDetail" /> break;
                            case "vacation": <EditorVacation Detail="VacationDetail" @bind-EndDate="Item.EndDate" /> break;
                            case "health": <EditorHealth Detail="HealthDetail" /> break;
                            case "sports": <EditorSports Detail="SportsDetail" Leagues="Leagues" Seasons="Seasons" Teams="Teams" /> break;
                        }
                    </div>
                }
                else if (activeTab == "notes")
                {
                    <div class="space-y-8">
                        <div class="flex justify-between items-center border-b border-gray-700 pb-2">
                            <h3 class="text-xs font-black text-gray-400 uppercase tracking-widest">Entry Records</h3>
                            <button @onclick="AddNote" class="text-[10px] font-black uppercase text-blue-400">Ôºã Add New Log</button>
                        </div>
                        @foreach(var note in Notes)
                        {
                            <div class="bg-black/40 border border-gray-700 rounded-xl p-5 relative shadow-2xl space-y-4 font-black">
                                <button @onclick="() => Notes.Remove(note)" class="absolute top-4 right-4 text-gray-600 hover:text-red-500 font-black">‚úï</button>
                                <div>
                                    <label class="block text-[9px] font-black text-gray-600 uppercase mb-2 tracking-widest">Log Text</label>
                                    <textarea @bind="note.Content" rows="3" class="w-full bg-gray-900 border border-gray-700 rounded-lg p-3 text-sm text-gray-200 outline-none focus:border-blue-500 font-black"></textarea>
                                </div>
                                
                                <div class="grid grid-cols-1 md:grid-cols-2 gap-4 items-end bg-black/20 p-3 rounded-lg border border-gray-800">
                                    <div class="space-y-2">
                                        <label class="block text-[9px] font-black text-gray-600 uppercase tracking-widest">Visual Hook</label>
                                        <div class="flex gap-2">
                                            <input @bind="note.ImgUrl" class="flex-1 bg-gray-900 border border-gray-700 rounded px-3 py-1.5 text-[10px] text-gray-400 outline-none font-mono" placeholder="Note Image URL..." />
                                            <button @onclick="() => OpenRegistrySelector(note)" class="text-[8px] bg-blue-600/20 hover:bg-blue-600 text-blue-400 hover:text-white px-2 rounded border border-blue-500/20 transition uppercase font-black">Pick</button>
                                        </div>
                                    </div>
                                    <div class="flex items-center gap-3">
                                        <div class="w-10 h-10 bg-black border border-gray-700 rounded-lg overflow-hidden shrink-0 flex items-center justify-center">
                                            @if(!string.IsNullOrEmpty(note.ImgUrl)){ <img src="@note.ImgUrl" class="max-w-full max-h-full object-contain" /> }
                                        </div>
                                        <label class="cursor-pointer flex-1 bg-gray-700 hover:bg-gray-600 text-white text-center py-2 rounded-lg text-[9px] font-black uppercase tracking-widest transition">üìÇ Upload <InputFile OnChange="@(e => HandleNoteFileUpload(e, note))" class="hidden" /></label>
                                    </div>
                                </div>
                                <input @bind="note.LinkUrl" class="w-full bg-gray-900/50 border border-gray-700 rounded px-3 py-1.5 text-[9px] text-blue-400 outline-none font-mono" placeholder="Pointer URL (Optional)..." />
                            </div>
                        }
                    </div>
                }
                else if (activeTab == "repeat")
                {
                    <div class="space-y-6 bg-purple-900/10 p-6 rounded-xl border border-purple-500/40">
                        <h3 class="text-xs font-black text-purple-400 uppercase tracking-widest">Recursive Logic Engine</h3>
                        <div class="grid grid-cols-2 gap-6">
                            <div>
                                <label class="block text-[10px] font-bold text-gray-400 uppercase mb-2 tracking-widest">Frequency</label>
                                <select @bind="repeatFrequency" class="w-full bg-black/40 border border-gray-600 rounded px-4 py-2 text-white font-black">
                                    <option value="none">One Time</option>
                                    <option value="daily">Daily</option>
                                    <option value="weekly">Weekly</option>
                                    <option value="biweekly">Every 2nd Week</option>
                                    <option value="monthly">Monthly</option>
                                </select>
                            </div>
                            <div>
                                <label class="block text-[10px] font-bold text-gray-400 uppercase mb-2 tracking-widest">Stop Date</label>
                                <input type="date" @bind="thruDate" class="w-full bg-black/40 border border-gray-600 rounded px-4 py-2 text-white font-black" />
                            </div>
                        </div>
                    </div>
                }
            </div>

            <div class="px-8 py-5 bg-gray-900 border-t border-gray-700 flex justify-between items-center z-20 font-black uppercase">
                <button @onclick="() => OnDelete.InvokeAsync()" class="text-red-500 text-[10px] uppercase tracking-widest hover:text-red-400 font-black">üóëÔ∏è Delete</button>
                <div class="flex gap-4">
                    <button @onclick="HandleInternalCancel" class="px-6 py-2.5 text-[10px] uppercase text-gray-500 tracking-widest font-black">Cancel</button>
                    <button @onclick="HandleInternalSave" class="px-12 py-2.5 bg-blue-600 rounded-lg text-[10px] uppercase tracking-widest shadow-2xl transition transform hover:scale-105 active:scale-95 font-black">Apply Changes</button>
                </div>
            </div>
        </div>

        @if (showRegistrySelector)
        {
            <div class="fixed inset-0 z-[60] flex items-center justify-center bg-black/80 backdrop-blur-sm p-4" @onclick="() => showRegistrySelector = false">
                <div class="bg-gray-900 border border-blue-600 w-full max-w-4xl rounded-2xl shadow-2xl p-6 overflow-hidden flex flex-col max-h-[85vh]" @onclick:stopPropagation="true">
                    <div class="flex justify-between items-center mb-6">
                        <div class="flex flex-col">
                            <span class="text-sm text-blue-400 font-black uppercase tracking-[0.2em]">Asset Registry</span>
                            <span class="text-[8px] text-gray-500 uppercase font-black">Sorted by 90-day usage frequency</span>
                        </div>
                        <button @onclick="() => showRegistrySelector = false" class="text-gray-500 hover:text-white text-xl font-bold">&times;</button>
                    </div>

                    <div class="flex flex-wrap gap-1.5 overflow-y-auto pr-2 scrollbar-hide justify-start content-start">
                        @foreach (var rImg in registryImages)
                        {
                            <div @onclick="() => SelectFromRegistry(rImg.Url)" 
                                 class="w-[4.5rem] h-[4.5rem] bg-black border border-gray-800 rounded shadow-lg overflow-hidden cursor-pointer hover:border-blue-500 transition-all hover:scale-110 flex items-center justify-center p-0.5 relative">
                                
                                @if (rImg.UsageCount > 0)
                                {
                                    <div class="absolute top-0 right-0 bg-blue-600 text-[7px] px-1 rounded-bl font-black z-10 shadow-lg">
                                        @rImg.UsageCount
                                    </div>
                                }

                                <img src="@rImg.Url" class="max-w-full max-h-full object-contain" />
                            </div>
                        }
                    </div>
                </div>
            </div>
        }
    </div>
}

@code {
    [Parameter] public BulletTaskService.TaskDTO? Item { get; set; }
    [Parameter] public BulletTaskDetail TaskDetail { get; set; } = new();
    [Parameter] public BulletMeetingDetail MeetingDetail { get; set; } = new();
    [Parameter] public BulletBirthdayDetail BirthdayDetail { get; set; } = new();
    [Parameter] public BulletHealthDetail HealthDetail { get; set; } = new();
    [Parameter] public BulletHabitDetail HabitDetail { get; set; } = new();
    [Parameter] public BulletMediaDetail MediaDetail { get; set; } = new();
    [Parameter] public BulletHolidayDetail HolidayDetail { get; set; } = new();
    [Parameter] public BulletAnniversaryDetail AnniversaryDetail { get; set; } = new();
    [Parameter] public BulletVacationDetail VacationDetail { get; set; } = new();
    [Parameter] public BulletGameDetail SportsDetail { get; set; } = new(); 
    [Parameter] public List<League> Leagues { get; set; } = new();
    [Parameter] public List<Season> Seasons { get; set; } = new();
    [Parameter] public List<Team> Teams { get; set; } = new();
    [Parameter] public List<BulletItemNote> Notes { get; set; } = new();
    [Parameter] public EventCallback<RecurrenceRequest> OnSaveRecurring { get; set; }
    [Parameter] public EventCallback OnCancel { get; set; }
    [Parameter] public EventCallback OnDelete { get; set; }

    private string activeTab = "general";
    private string repeatFrequency = "none";
    private DateTime thruDate = DateTime.Today.AddMonths(1);
    private bool incrementStreak = true;
    private bool showRegistrySelector = false;
    private List<ImageService.ImageUsageDTO> registryImages = new();
    private BulletItemNote? activeNoteForRegistry;

    public class RecurrenceRequest { public string Frequency { get; set; } = "none"; public DateTime ThruDate { get; set; } public bool IncrementHabitStreak { get; set; } }
    private string GetEmoji(string type) => type switch { "task" => "üìù", "meeting" => "üìÖ", "habit" => "üî•", "sports" => "üèÜ", "vacation" => "‚úàÔ∏è", "birthday" => "üéÇ", "holiday" => "üéâ", "anniversary" => "üíë", "media" => "üé¨", "health" => "üí™", _ => "üìÑ" };

    private void AddNote() { if (Notes == null) Notes = new(); Notes.Add(new BulletItemNote { BulletItemId = Item?.Id ?? 0, Order = Notes.Count }); }

    private async Task OpenRegistrySelector(BulletItemNote? note)
    {
        activeNoteForRegistry = note;
        registryImages = await ImageService.GetAllImages(Item?.UserId ?? 0);
        showRegistrySelector = true;
    }

    private void SelectFromRegistry(string url)
    {
        if (activeNoteForRegistry != null) activeNoteForRegistry.ImgUrl = url;
        else if (Item != null) Item.ImgUrl = url;
        showRegistrySelector = false;
    }
    
    private async Task HandleMainUpload(InputFileChangeEventArgs e) { try { using var ms = new MemoryStream(); await e.File.OpenReadStream(5 * 1024 * 1024).CopyToAsync(ms); string url = await BaseService.SaveImageAsync(ms.ToArray(), e.File.ContentType); if(Item != null) { Item.ImgUrl = url; StateHasChanged(); } } catch { } }
    private async Task HandleNoteFileUpload(InputFileChangeEventArgs e, BulletItemNote note) { try { using var ms = new MemoryStream(); await e.File.OpenReadStream(5 * 1024 * 1024).CopyToAsync(ms); note.ImgUrl = await BaseService.SaveImageAsync(ms.ToArray(), e.File.ContentType); StateHasChanged(); } catch { } }
    private async Task HandleInternalSave() { if (Item?.Type == "health" && HealthDetail.WeightLbs <= 0) { await JS.InvokeVoidAsync("alert", "Valid weight required."); return; } await OnSaveRecurring.InvokeAsync(new RecurrenceRequest { Frequency = repeatFrequency, ThruDate = thruDate, IncrementHabitStreak = incrementStreak }); activeTab = "general"; }
    private async Task HandleInternalCancel() { activeTab = "general"; await OnCancel.InvokeAsync(); }
}