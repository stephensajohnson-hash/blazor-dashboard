@namespace Dashboard.Components.Bullet.Editors
@using Dashboard

<div class="grid grid-cols-3 gap-4">
    <div>
        <label class="block text-[10px] font-bold text-gray-500 uppercase mb-1">⏰ Start Time</label>
        <input type="time" @bind="Detail.StartTime" class="w-full bg-gray-900 border border-gray-700 rounded px-3 py-2 text-white text-sm" />
    </div>
    <div>
        <label class="block text-[10px] font-bold text-gray-500 uppercase mb-1">⏳ Planned (Min)</label>
        <input type="number" @bind="Detail.DurationMinutes" class="w-full bg-gray-900 border border-gray-700 rounded px-3 py-2 text-white text-sm" />
    </div>
    <div>
        <label class="block text-[10px] font-bold text-gray-500 uppercase mb-1">⏱ Actual (Min)</label>
        <input type="number" @bind="Detail.ActualDurationMinutes" class="w-full bg-gray-900 border border-gray-700 rounded px-3 py-2 text-white text-sm" />
    </div>
</div>
<div class="flex items-center gap-3 bg-gray-900/50 p-3 rounded border border-gray-700 mt-2">
    <input type="checkbox" @bind="Detail.IsCompleted" id="chkMeeting" class="w-5 h-5 rounded bg-gray-800 border-gray-600 text-green-500" />
    <label for="chkMeeting" class="text-sm font-bold text-white cursor-pointer">✅ Meeting Completed</label>
</div>

@code {
    [Parameter] public BulletMeetingDetail Detail { get; set; } = new();
}