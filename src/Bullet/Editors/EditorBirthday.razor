@namespace Dashboard.Components.Bullet.Editors
@using Dashboard

<div class="space-y-4">
    <div>
        <label class="block text-[10px] font-black text-gray-500 uppercase mb-1 tracking-widest">ðŸ‘¶ Birth Year</label>
        <div class="relative flex items-center">
            <input type="number" 
                   @bind="Detail.DOB_Year" 
                   @bind:event="oninput"
                   class="w-full bg-gray-900 border border-gray-700 rounded px-3 py-2 text-white text-sm font-black focus:border-blue-500 outline-none transition-all" 
                   placeholder="e.g. 1937" />
            
            @if (Detail.DOB_Year > 1900)
            {
                <div class="absolute right-3 text-[10px] font-black text-blue-400 uppercase bg-blue-400/10 px-2 py-0.5 rounded">
                    Turning @(DateTime.Now.Year - Detail.DOB_Year)
                </div>
            }
        </div>
        <p class="text-[9px] text-gray-600 mt-1 italic font-bold uppercase tracking-tighter">
            Enter 0 or leave blank for a generic "Annual Birthday" label.
        </p>
    </div>
</div>

@code { 
    [Parameter] public BulletBirthdayDetail Detail { get; set; } = new(); 
}