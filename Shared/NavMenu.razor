@using Dashboard
@using Microsoft.EntityFrameworkCore
@using Microsoft.JSInterop
@inject AppDbContext Db
@inject HttpClient Http
@inject IJSRuntime JS
@inject NavigationManager Nav

<div class="w-64 bg-gray-900 border-r border-gray-800 flex flex-col h-screen fixed left-0 top-0 overflow-y-auto">
    <div class="p-6 border-b border-gray-800">
        <div class="flex items-center gap-3 mb-2">
            <img src="/images/dashboard.png" class="w-8 h-8 rounded bg-gray-700" alt="Logo" />
            <h1 class="font-bold text-lg tracking-tight text-white">Dashboard</h1>
        </div>
        <div class="text-[10px] text-gray-500 font-mono pl-11">v1.2.0</div>
    </div>

    <nav class="flex-1 p-4 space-y-1">
        @foreach (var group in Groups)
        {
            <a href="#@group.Id" class="block px-3 py-2 rounded-md text-sm font-medium text-gray-400 hover:text-white hover:bg-gray-800 transition flex items-center gap-2">
                <span class="w-2 h-2 rounded-full" style="background-color: @group.Color"></span>
                @group.Name
            </a>
        }
    </nav>

    <div class="p-4 border-t border-gray-800 bg-gray-900/50">
        <div class="text-[10px] uppercase text-gray-600 font-bold mb-2">Admin</div>
        <div class="grid grid-cols-2 gap-2">
            <button @onclick="ClearDb" class="bg-red-900/30 hover:bg-red-900/50 text-red-400 text-xs py-2 rounded border border-red-900/50 transition">
                Wipe DB
            </button>
            <button @onclick="SeedDb" class="bg-green-900/30 hover:bg-green-900/50 text-green-400 text-xs py-2 rounded border border-green-900/50 transition">
                Load Seed
            </button>
        </div>
    </div>
</div>

@code {
    private List<LinkGroup> Groups = new();

    protected override async Task OnInitializedAsync()
    {
        Groups = await Db.LinkGroups.OrderBy(g => g.Id).ToListAsync();
    }

    private async Task ClearDb()
    {
        bool confirm = await JS.InvokeAsync<bool>("confirm", "⚠️ WIPE DATABASE?\nThis cannot be undone.");
        if (confirm)
        {
            await Http.PostAsync("/api/admin/clear", null);
            Nav.NavigateTo(Nav.Uri, forceLoad: true);
        }
    }

    private async Task SeedDb()
    {
        var response = await Http.PostAsync("/api/admin/seed", null);
        if (response.IsSuccessStatusCode)
        {
            await JS.InvokeVoidAsync("alert", "Seed Data Loaded!");
            Nav.NavigateTo(Nav.Uri, forceLoad: true);
        }
        else
        {
            await JS.InvokeVoidAsync("alert", "Error loading seed.");
        }
    }
}