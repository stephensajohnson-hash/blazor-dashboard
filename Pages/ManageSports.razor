@page "/manage-sports"
@using Dashboard
@using Microsoft.EntityFrameworkCore
@using Microsoft.JSInterop
@using Microsoft.AspNetCore.Components.Web 
@using System.IO
@inject BulletSportsService SportsService
@inject IJSRuntime JS

<div class="min-h-screen bg-gray-900 text-white p-6">
    
    <div class="flex justify-between items-center mb-8">
        <div class="flex items-center gap-3">
            <span class="text-3xl">üèÜ</span>
            <h1 class="text-2xl font-bold text-white">Manage Sports</h1>
        </div>
        <a href="/bullet-calendar" class="text-sm text-gray-400 hover:text-white transition">‚Üê Back to Calendar</a>
    </div>

    <div class="flex border-b border-gray-800 mb-6">
        <button @onclick='() => activeTab = "leagues"' class="px-6 py-3 text-sm font-bold border-b-2 transition @(activeTab == "leagues" ? "border-orange-500 text-white bg-gray-800/50 rounded-t-lg" : "border-transparent text-gray-500 hover:text-gray-300")">Leagues</button>
        <button @onclick='() => activeTab = "seasons"' class="px-6 py-3 text-sm font-bold border-b-2 transition @(activeTab == "seasons" ? "border-orange-500 text-white bg-gray-800/50 rounded-t-lg" : "border-transparent text-gray-500 hover:text-gray-300")">Seasons</button>
        <button @onclick='() => activeTab = "teams"' class="px-6 py-3 text-sm font-bold border-b-2 transition @(activeTab == "teams" ? "border-orange-500 text-white bg-gray-800/50 rounded-t-lg" : "border-transparent text-gray-500 hover:text-gray-300")">Teams</button>
    </div>

    @if(activeTab == "leagues")
    {
        <div class="max-w-2xl">
            <div class="flex justify-end mb-4">
                <button @onclick="OpenAddLeague" class="bg-blue-600 hover:bg-blue-500 text-white px-4 py-2 rounded-lg text-sm font-bold shadow transition">+ Add League</button>
            </div>

            @if (isLoading) { <div class="text-gray-500 italic animate-pulse">Loading leagues...</div> }
            else if (!leagues.Any()) { <div class="text-gray-500 italic p-4 text-center border border-gray-800 rounded-lg">No leagues found.</div> }
            else
            {
                <div class="grid gap-3">
                    @foreach (var l in leagues)
                    {
                        <div class="flex justify-between items-center bg-gray-800 p-4 rounded-lg border border-gray-700 hover:border-gray-500 transition group shadow-md">
                            <div class="flex items-center gap-4">
                                <div class="w-10 h-10 rounded-full bg-gray-700 flex items-center justify-center text-xl shadow-inner overflow-hidden">
                                    @if(!string.IsNullOrEmpty(l.ImgUrl)) { <img src="@l.ImgUrl" class="w-full h-full object-cover" /> }
                                    else { <span>üèÖ</span> }
                                </div>
                                <span class="font-bold text-lg text-white">@l.Name</span>
                            </div>
                            <div class="flex items-center gap-2">
                                <button @onclick="() => OpenEditLeague(l)" class="text-gray-400 hover:text-white p-2 rounded hover:bg-gray-700 transition" title="Edit">‚úèÔ∏è</button>
                                <button @onclick="() => DeleteLeague(l.Id)" class="text-gray-500 hover:text-red-500 p-2 rounded hover:bg-gray-700 transition font-bold text-lg" title="Delete">‚úï</button>
                            </div>
                        </div>
                    }
                </div>
            }
        </div>
    }

    @if(activeTab == "seasons")
    {
        <div class="max-w-3xl">
            <div class="flex justify-end mb-4">
                <button @onclick="OpenAddSeason" class="bg-blue-600 hover:bg-blue-500 text-white px-4 py-2 rounded-lg text-sm font-bold shadow transition">+ Add Season</button>
            </div>

            @if (isLoading) { <div class="text-gray-500 italic animate-pulse">Loading data...</div> }
            else
            {
                @foreach(var l in leagues)
                {
                    var leagueSeasons = seasons.Where(s => s.LeagueId == l.Id).OrderByDescending(s => s.Name).ToList();
                    <div class="bg-gray-800/50 border border-gray-700 rounded-xl mb-4 overflow-hidden">
                        <div class="bg-gray-900 p-3 border-b border-gray-700 flex items-center gap-2">
                            <span class="text-xl">üèÖ</span>
                            <h3 class="font-bold text-gray-300">@l.Name</h3>
                        </div>
                        <div class="p-2 space-y-1">
                            @if(!leagueSeasons.Any()) { <div class="text-xs text-gray-600 italic p-2">No seasons yet.</div> }
                            @foreach(var s in leagueSeasons)
                            {
                                <div class="flex justify-between items-center bg-gray-800 p-2 px-4 rounded border border-gray-700/50 hover:border-gray-500 transition">
                                    <div class="flex items-center gap-3">
                                        @if(!string.IsNullOrEmpty(s.ImgUrl)) { <img src="@s.ImgUrl" class="w-6 h-6 object-cover rounded" /> }
                                        <span class="text-sm font-bold text-white">@s.Name</span>
                                    </div>
                                    <div class="flex items-center gap-2">
                                        <button @onclick="() => OpenEditSeason(s)" class="text-gray-400 hover:text-white text-xs p-1">‚úèÔ∏è</button>
                                        <button @onclick="() => DeleteSeason(s.Id)" class="text-gray-600 hover:text-red-500 text-sm font-bold px-1">‚úï</button>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                }
            }
        </div>
    }

    @if(activeTab == "teams")
    {
        <div class="max-w-3xl">
            <div class="flex justify-end mb-4">
                <button @onclick="OpenAddTeam" class="bg-blue-600 hover:bg-blue-500 text-white px-4 py-2 rounded-lg text-sm font-bold shadow transition">+ Add Team</button>
            </div>

            @if (isLoading) { <div class="text-gray-500 italic animate-pulse">Loading teams...</div> }
            else
            {
                <div class="grid gap-2">
                    @foreach(var t in teams)
                    {
                        var lg = leagues.FirstOrDefault(l => l.Id == t.LeagueId);
                        <div class="flex justify-between items-center bg-gray-800 p-2 px-3 rounded border border-gray-700 hover:border-gray-500 transition">
                            <div class="flex items-center gap-3">
                                <div class="w-8 h-8 flex items-center justify-center bg-black/40 rounded p-1">
                                    @if(!string.IsNullOrEmpty(t.LogoUrl)) { <img src="@t.LogoUrl" class="w-full h-full object-contain" /> }
                                    else { <span class="text-xs">üõ°Ô∏è</span> }
                                </div>
                                <div>
                                    <div class="font-bold text-sm text-white">@t.Name <span class="text-gray-500 text-xs ml-1">(@t.Abbreviation)</span></div>
                                    <div class="text-[10px] text-gray-400">@(lg?.Name ?? "No League")</div>
                                </div>
                            </div>
                            <div class="flex items-center gap-3">
                                @if(t.IsFavorite) { <span class="text-yellow-500 text-lg">‚≠ê</span> }
                                <button @onclick="() => OpenEditTeam(t)" class="text-gray-400 hover:text-white text-xs p-1">‚úèÔ∏è</button>
                                <button @onclick="() => DeleteTeam(t.Id)" class="text-gray-600 hover:text-red-500 text-sm font-bold px-1">‚úï</button>
                            </div>
                        </div>
                    }
                </div>
            }
        </div>
    }
</div>

@if (showModal)
{
    <div class="fixed inset-0 bg-black/80 backdrop-blur-sm z-50 flex items-center justify-center p-4" @onclick="CloseModal">
        <div class="bg-gray-900 border border-gray-700 rounded-xl shadow-2xl w-full max-w-md overflow-hidden" @onclick:stopPropagation="true">
            <div class="p-4 border-b border-gray-700 bg-gray-800/50">
                <h3 class="font-bold text-white">@modalTitle</h3>
            </div>
            
            <div class="p-6 space-y-4">
                
                @if(modalType == "league")
                {
                    <div>
                        <label class="block text-xs font-bold text-gray-500 uppercase mb-1">League Name</label>
                        <input @bind="tempName" class="w-full bg-black border border-gray-600 rounded p-2 text-white focus:border-blue-500 outline-none" />
                    </div>
                    <div>
                        <label class="block text-xs font-bold text-gray-500 uppercase mb-1">Link URL</label>
                        <input @bind="tempLinkUrl" class="w-full bg-black border border-gray-600 rounded p-2 text-white focus:border-blue-500 outline-none" />
                    </div>
                    <div>
                        <label class="block text-xs font-bold text-gray-500 uppercase mb-1">Image</label>
                        <InputFile OnChange="HandleFileSelected" class="text-xs text-gray-400" />
                        @if(!string.IsNullOrEmpty(tempImgUrl)) { <img src="@tempImgUrl" class="h-10 mt-2 rounded border border-gray-700" /> }
                    </div>
                }
                
                else if(modalType == "season")
                {
                    <div>
                        <label class="block text-xs font-bold text-gray-500 uppercase mb-1">League</label>
                        <select @bind="tempLeagueId" class="w-full bg-black border border-gray-600 rounded p-2 text-white focus:border-blue-500 outline-none">
                            <option value="0">Select League...</option>
                            @foreach(var l in leagues) { <option value="@l.Id">@l.Name</option> }
                        </select>
                    </div>
                    <div>
                        <label class="block text-xs font-bold text-gray-500 uppercase mb-1">Season Name</label>
                        <input @bind="tempName" class="w-full bg-black border border-gray-600 rounded p-2 text-white focus:border-blue-500 outline-none" />
                    </div>
                    <div>
                        <label class="block text-xs font-bold text-gray-500 uppercase mb-1">Image</label>
                        <InputFile OnChange="HandleFileSelected" class="text-xs text-gray-400" />
                        @if(!string.IsNullOrEmpty(tempImgUrl)) { <img src="@tempImgUrl" class="h-10 mt-2 rounded border border-gray-700" /> }
                    </div>
                }

                else if(modalType == "team")
                {
                    <div>
                        <label class="block text-xs font-bold text-gray-500 uppercase mb-1">League</label>
                        <select @bind="tempLeagueId" class="w-full bg-black border border-gray-600 rounded p-2 text-white focus:border-blue-500 outline-none">
                            <option value="0">Select League...</option>
                            @foreach(var l in leagues) { <option value="@l.Id">@l.Name</option> }
                        </select>
                    </div>
                    <div class="flex gap-2">
                        <div class="flex-1">
                            <label class="block text-xs font-bold text-gray-500 uppercase mb-1">Name</label>
                            <input @bind="tempName" class="w-full bg-black border border-gray-600 rounded p-2 text-white focus:border-blue-500 outline-none" />
                        </div>
                        <div class="w-20">
                            <label class="block text-xs font-bold text-gray-500 uppercase mb-1">Abbr</label>
                            <input @bind="tempAbbr" class="w-full bg-black border border-gray-600 rounded p-2 text-white text-center uppercase" maxlength="3" />
                        </div>
                    </div>
                    <div>
                        <label class="block text-xs font-bold text-gray-500 uppercase mb-1">Logo</label>
                        <InputFile OnChange="HandleFileSelected" class="text-xs text-gray-400" />
                        @if(!string.IsNullOrEmpty(tempImgUrl)) { <img src="@tempImgUrl" class="h-10 mt-2 object-contain border border-gray-700 bg-black/50 p-1" /> }
                    </div>
                    <div class="flex items-center gap-2 pt-2">
                        <input type="checkbox" @bind="tempIsFav" id="chkFav" class="w-4 h-4 rounded bg-gray-800 border-gray-600 accent-orange-500" />
                        <label for="chkFav" class="text-sm text-gray-300 select-none cursor-pointer">Mark as Favorite</label>
                    </div>
                }

                <div class="flex gap-2 pt-4">
                    <button @onclick="CloseModal" class="flex-1 bg-gray-700 hover:bg-gray-600 text-white py-2 rounded font-bold transition">Cancel</button>
                    <button @onclick="SaveModal" class="flex-1 bg-blue-600 hover:bg-blue-500 text-white py-2 rounded font-bold transition">Save</button>
                </div>
            </div>
        </div>
    </div>
}

@code {
    private int userId = 0;
    private bool isLoading = true;
    private string activeTab = "leagues";
    
    // Data Lists
    private List<League> leagues = new();
    private List<Season> seasons = new();
    private List<Team> teams = new();

    // Modal State
    private bool showModal = false;
    private string modalTitle = "";
    private string modalType = ""; 
    private int editingId = 0;
    
    // Temp Inputs
    private string tempName = "";
    private string tempImgUrl = "";
    private string tempLinkUrl = "";
    private string tempAbbr = "";
    private int tempLeagueId = 0;
    private bool tempIsFav = false;

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            try 
            {
                var json = await JS.InvokeAsync<string>("localStorage.getItem", "dashboard_session");
                if (!string.IsNullOrEmpty(json)) 
                { 
                    using(var doc = System.Text.Json.JsonDocument.Parse(json)) 
                    {
                        if(doc.RootElement.TryGetProperty("UserId", out var p) || doc.RootElement.TryGetProperty("userId", out p)) 
                            userId = p.GetInt32();
                    }
                    if(userId > 0) await LoadData();
                }
            }
            catch { }
        }
    }

    private async Task LoadData()
    {
        isLoading = true;
        StateHasChanged();
        leagues = await SportsService.GetLeagues(userId);
        seasons = await SportsService.GetSeasons(userId);
        teams = await SportsService.GetTeams(userId);
        isLoading = false;
        StateHasChanged();
    }

    // --- MODAL OPENERS ---
    private void OpenAddLeague() { 
        modalType = "league"; modalTitle = "Add League"; editingId = 0; tempName = ""; tempImgUrl = ""; tempLinkUrl = ""; showModal = true; 
    }
    private void OpenEditLeague(League l) { 
        modalType = "league"; modalTitle = "Edit League"; editingId = l.Id; tempName = l.Name; tempImgUrl = l.ImgUrl; tempLinkUrl = l.LinkUrl; showModal = true; 
    }

    private void OpenAddSeason() { 
        modalType = "season"; modalTitle = "Add Season"; editingId = 0; tempName = ""; tempImgUrl = ""; tempLeagueId = 0; showModal = true; 
    }
    private void OpenEditSeason(Season s) { 
        modalType = "season"; modalTitle = "Edit Season"; editingId = s.Id; tempName = s.Name; tempImgUrl = s.ImgUrl; tempLeagueId = s.LeagueId; showModal = true; 
    }

    private void OpenAddTeam() { 
        modalType = "team"; modalTitle = "Add Team"; editingId = 0; tempName = ""; tempImgUrl = ""; tempAbbr = ""; tempLeagueId = 0; tempIsFav = false; showModal = true; 
    }
    private void OpenEditTeam(Team t) { 
        modalType = "team"; modalTitle = "Edit Team"; editingId = t.Id; tempName = t.Name; tempImgUrl = t.LogoUrl; tempAbbr = t.Abbreviation; tempLeagueId = t.LeagueId; tempIsFav = t.IsFavorite; showModal = true; 
    }

    private void CloseModal() { showModal = false; }

    // --- FILE UPLOAD ---
    private async Task HandleFileSelected(InputFileChangeEventArgs e)
    {
        try 
        {
            var file = e.File;
            var buffer = new byte[file.Size];
            await file.OpenReadStream(maxAllowedSize: 5 * 1024 * 1024).ReadAsync(buffer);
            tempImgUrl = $"data:{file.ContentType};base64,{Convert.ToBase64String(buffer)}";
        }
        catch (Exception ex) { Console.WriteLine($"Upload Error: {ex.Message}"); }
    }

    // --- SAVE ---
    private async Task SaveModal()
    {
        if(string.IsNullOrWhiteSpace(tempName)) return;

        if(modalType == "league")
        {
            if(editingId == 0) await SportsService.AddLeague(userId, tempName, tempImgUrl, tempLinkUrl);
            else await SportsService.UpdateLeague(new League { Id = editingId, UserId = userId, Name = tempName, ImgUrl = tempImgUrl, LinkUrl = tempLinkUrl });
        }
        else if(modalType == "season")
        {
            if(tempLeagueId == 0) return;
            if(editingId == 0) await SportsService.AddSeason(userId, tempLeagueId, tempName, tempImgUrl);
            else await SportsService.UpdateSeason(new Season { Id = editingId, UserId = userId, LeagueId = tempLeagueId, Name = tempName, ImgUrl = tempImgUrl });
        }
        else if(modalType == "team")
        {
            if(tempLeagueId == 0) return;
            var t = new Team { Id = editingId, UserId = userId, LeagueId = tempLeagueId, Name = tempName, Abbreviation = tempAbbr, LogoUrl = tempImgUrl, IsFavorite = tempIsFav };
            if(editingId == 0) await SportsService.AddTeam(userId, tempLeagueId, tempName, tempAbbr, tempImgUrl, tempIsFav);
            else await SportsService.UpdateTeam(t);
        }

        showModal = false;
        await LoadData();
    }

    // --- DELETE ---
    private async Task DeleteLeague(int id) { if(await JS.InvokeAsync<bool>("confirm", "Delete League?")) { await SportsService.DeleteLeague(id); await LoadData(); } }
    private async Task DeleteSeason(int id) { if(await JS.InvokeAsync<bool>("confirm", "Delete Season?")) { await SportsService.DeleteSeason(id); await LoadData(); } }
    private async Task DeleteTeam(int id) { if(await JS.InvokeAsync<bool>("confirm", "Delete Team?")) { await SportsService.DeleteTeam(id); await LoadData(); } }
}