@page "/manage-data"
@using Dashboard
@using Microsoft.JSInterop
@using System.Text.Json
@inject BulletBaseService BaseService
@inject BulletTaskService TaskService
@inject NavigationManager Nav
@inject IJSRuntime JS
@inject Microsoft.AspNetCore.Hosting.IWebHostEnvironment Env

<div class="min-h-screen bg-gray-900 text-white p-8">
    <div class="max-w-4xl mx-auto">
        <div class="flex items-center justify-between mb-8">
            <h1 class="text-3xl font-bold">üíæ Data Management</h1>
            <a href="/bullet-calendar" class="text-gray-400 hover:text-white">‚Üê Back to Calendar</a>
        </div>

        <div class="bg-black font-mono text-xs text-green-400 p-4 rounded-lg border border-gray-700 mb-6 h-40 overflow-y-auto">
            @if(logs.Count == 0) { <span class="text-gray-600">// Logs will appear here...</span> }
            @foreach(var log in logs)
            {
                <div class="border-b border-gray-800 pb-1 mb-1">@log</div>
            }
        </div>

        <div class="bg-gray-800 border border-gray-700 rounded-xl p-6 mb-6">
            <h2 class="text-xl font-bold text-blue-400 mb-4">1. Database Schema</h2>
            <button @onclick="FixSchema" class="bg-blue-600 hover:bg-blue-500 text-white px-4 py-2 rounded font-bold transition">
                üõ†Ô∏è Fix Tables & Columns
            </button>
        </div>

        <div class="bg-gray-800 border border-gray-700 rounded-xl p-6 mb-6">
            <h2 class="text-xl font-bold text-green-400 mb-4">2. Import Data</h2>
            <div class="flex gap-4 items-center">
                <button @onclick="ImportTasks" class="bg-gray-700 hover:bg-gray-600 text-white px-4 py-2 rounded font-bold border border-gray-600 transition">
                    üì• Import Tasks (JSON)
                </button>
                <span class="text-xs text-gray-500">Reads from 'wwwroot/bullet_calendar.json'</span>
            </div>
        </div>

        <div class="bg-gray-800 border border-red-900/50 rounded-xl p-6">
            <h2 class="text-xl font-bold text-red-400 mb-4">3. Danger Zone</h2>
            
            <div class="flex gap-4 items-center">
                @if(!confirmDeleteTask)
                {
                    <button @onclick="() => confirmDeleteTask = true" class="bg-red-900/30 hover:bg-red-900/50 text-red-300 border border-red-800 px-4 py-2 rounded font-bold transition">
                        üóëÔ∏è Delete ALL Tasks
                    </button>
                }
                else
                {
                    <button @onclick='() => ClearData("task")' class="bg-red-600 hover:bg-red-500 text-white border border-red-500 px-4 py-2 rounded font-bold transition animate-pulse">
                        ‚ö†Ô∏è CLICK TO CONFIRM DELETE
                    </button>
                    <button @onclick="() => confirmDeleteTask = false" class="text-gray-400 hover:text-white text-sm">Cancel</button>
                }

                <div class="w-px h-8 bg-gray-700 mx-2"></div>
                
                <button @onclick="DropLegacy" class="bg-gray-800 hover:bg-red-900/30 text-gray-400 hover:text-red-300 border border-gray-600 hover:border-red-800 px-4 py-2 rounded font-bold transition">
                    üí£ Drop Legacy Tables
                </button>
            </div>
        </div>
    </div>
</div>

@code {
    private List<string> logs = new();
    private int userId;
    private bool confirmDeleteTask = false;

    private void Log(string msg) 
    { 
        var formatted = $"{DateTime.Now:HH:mm:ss} > {msg}";
        logs.Add(formatted); 
        Console.WriteLine(formatted); 
        StateHasChanged(); 
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            var json = await JS.InvokeAsync<string>("localStorage.getItem", "dashboard_session");
            if (!string.IsNullOrEmpty(json)) { 
                try {
                    using var doc = JsonDocument.Parse(json);
                    if(doc.RootElement.TryGetProperty("UserId", out var p) || doc.RootElement.TryGetProperty("userId", out p)) 
                    {
                        userId = p.GetInt32();
                        Log($"Session Loaded. UserId: {userId}");
                    }
                } catch { Log("Session Error"); }
            }
        }
    }

    private async Task FixSchema()
    {
        Log("Running Schema Fix...");
        try {
            await BaseService.CreateBaseTablesIfMissing();
            await TaskService.CreateTable();
            Log("‚úÖ Schema Update Complete.");
        } catch(Exception ex) { Log("‚ùå Schema Error: " + ex.Message); }
    }

    private async Task ImportTasks()
    {
        Log("Starting Import...");
        try {
            var path = System.IO.Path.Combine(Env.WebRootPath, "bullet_calendar.json");
            if(System.IO.File.Exists(path)) {
                var content = await System.IO.File.ReadAllTextAsync(path);
                await TaskService.ImportFromOldJson(userId, content);
                Log("‚úÖ Import Finished.");
            } else { Log($"‚ùå File not found at: {path}"); }
        } catch(Exception ex) { Log("‚ùå Import Error: " + ex.Message); }
    }

    private async Task ClearData(string type)
    {
        Log($"Attempting to delete type: {type}...");
        confirmDeleteTask = false; // Reset button

        try {
            // New robust delete method
            int count = await BaseService.ClearDataByType(userId, type);
            Log($"‚úÖ SUCCESS: Deleted {count} items.");
        } 
        catch (Exception ex) 
        {
            Log($"‚ùå ERROR: {ex.Message}");
        }
    }

    private async Task DropLegacy()
    {
        Log("Dropping legacy tables...");
        try {
            await BaseService.DropLegacyTables();
            Log("‚úÖ Legacy tables dropped.");
        } catch (Exception ex) {
            Log($"‚ùå Drop Error: {ex.Message}");
        }
    }
}