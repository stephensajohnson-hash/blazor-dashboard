@page "/manage-data"
@using Dashboard
@using Microsoft.JSInterop
@using System.Text.Json
@using Microsoft.Extensions.DependencyInjection
@inject NavigationManager Nav
@inject IJSRuntime JS
@inject IServiceScopeFactory ScopeFactory
@inject Microsoft.AspNetCore.Hosting.IWebHostEnvironment Env

<div class="min-h-screen bg-gray-900 text-white p-8 font-sans">
    <div class="max-w-5xl mx-auto">
        
        <div class="flex items-center justify-between mb-6">
            <div>
                <h1 class="text-3xl font-bold text-white">üíæ Data Manager</h1>
                <p class="text-gray-400 text-sm">System Tools & Diagnostics</p>
            </div>
            <a href="/bullet-calendar" class="bg-gray-800 hover:bg-gray-700 text-white px-4 py-2 rounded transition">
                ‚Üê Back to Calendar
            </a>
        </div>

        <div class="bg-black border border-gray-700 rounded-lg p-4 mb-8 font-mono text-xs h-64 overflow-y-auto shadow-inner">
            <div class="text-gray-500 mb-2">--- SYSTEM LOGS ---</div>
            @if (LogEntries.Count == 0)
            {
                <div class="text-gray-600 italic">Waiting for activity...</div>
            }
            @foreach (var entry in LogEntries)
            {
                <div class="@entry.ColorClass border-b border-gray-900 pb-0.5 mb-0.5">
                    <span class="opacity-50 mr-2">[@entry.Time]</span>
                    @entry.Message
                </div>
            }
        </div>

        <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
            
            <div class="bg-gray-800 border border-gray-700 p-5 rounded-xl flex flex-col">
                <div class="mb-4">
                    <h2 class="text-lg font-bold text-blue-400">1. Database Repair</h2>
                    <p class="text-xs text-gray-400 mt-1">Run this if you see SQL errors or missing columns.</p>
                </div>
                <button @onclick="RunSchemaFix" class="mt-auto w-full bg-blue-600 hover:bg-blue-500 text-white font-bold py-3 rounded transition flex justify-center items-center gap-2">
                    <span>üõ†Ô∏è</span> Run Fixer
                </button>
            </div>

            <div class="bg-gray-800 border border-gray-700 p-5 rounded-xl flex flex-col">
                <div class="mb-4">
                    <h2 class="text-lg font-bold text-green-400">2. Import Data</h2>
                    <p class="text-xs text-gray-400 mt-1">Loads 'bullet_calendar.json' from wwwroot.</p>
                </div>
                <button @onclick="RunImport" class="mt-auto w-full bg-gray-700 hover:bg-gray-600 text-white font-bold py-3 rounded border border-gray-600 transition flex justify-center items-center gap-2">
                    <span>üì•</span> Import JSON
                </button>
            </div>

            <div class="bg-gray-800 border border-red-900/50 p-5 rounded-xl flex flex-col">
                <div class="mb-4">
                    <h2 class="text-lg font-bold text-red-400">3. Nuclear Option</h2>
                    <p class="text-xs text-gray-400 mt-1">Permanently delete data.</p>
                </div>
                
                @if (!isDeleteConfirming)
                {
                    <button @onclick="() => isDeleteConfirming = true" class="mt-auto w-full bg-red-900/20 hover:bg-red-900/40 text-red-300 font-bold py-3 rounded border border-red-900/50 transition">
                        üóëÔ∏è Delete All Tasks
                    </button>
                }
                else
                {
                    <div class="mt-auto flex gap-2">
                        <button @onclick="RunDeleteTasks" class="flex-1 bg-red-600 hover:bg-red-500 text-white font-bold py-3 rounded animate-pulse shadow-[0_0_15px_rgba(220,38,38,0.5)]">
                            CONFIRM!
                        </button>
                        <button @onclick="() => isDeleteConfirming = false" class="px-3 py-3 bg-gray-700 hover:bg-gray-600 text-white rounded">
                            ‚úï
                        </button>
                    </div>
                }
                
                <button @onclick="RunDropLegacy" class="mt-2 text-xs text-gray-500 hover:text-gray-300 underline text-center">
                    Drop Legacy Tables
                </button>
            </div>

        </div>
    </div>
</div>

@code {
    // --- LOGGING SYSTEM ---
    private class LogEntry { public string Time { get; set; } = ""; public string Message { get; set; } = ""; public string ColorClass { get; set; } = "text-gray-300"; }
    private List<LogEntry> LogEntries = new();
    
    private void Log(string msg, string type = "info")
    {
        var color = type switch { "error" => "text-red-400 font-bold", "success" => "text-green-400", "warn" => "text-yellow-400", _ => "text-gray-300" };
        LogEntries.Add(new LogEntry { Time = DateTime.Now.ToString("HH:mm:ss.fff"), Message = msg, ColorClass = color });
        InvokeAsync(StateHasChanged);
    }

    // --- STATE ---
    private int currentUserId = 0;
    private bool isDeleteConfirming = false;

    // --- INITIALIZATION ---
    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            Log("Page Initializing...", "warn");
            try
            {
                var json = await JS.InvokeAsync<string>("localStorage.getItem", "dashboard_session");
                if (string.IsNullOrWhiteSpace(json))
                {
                    Log("No Session Token Found in LocalStorage.", "error");
                    return;
                }

                using var doc = JsonDocument.Parse(json);
                if (doc.RootElement.TryGetProperty("UserId", out var p) || doc.RootElement.TryGetProperty("userId", out p))
                {
                    currentUserId = p.GetInt32();
                    Log($"Session Validated. UserID: {currentUserId}", "success");
                }
                else
                {
                    Log("Session JSON invalid (missing UserId).", "error");
                }
            }
            catch (Exception ex)
            {
                Log($"Session Read Error: {ex.Message}", "error");
            }
        }
    }

    // --- ACTION 1: FIX SCHEMA ---
    private async Task RunSchemaFix()
    {
        Log("Starting Schema Fix...");
        try
        {
            using var scope = ScopeFactory.CreateScope();
            var svc = scope.ServiceProvider.GetRequiredService<BulletBaseService>();
            await svc.CreateBaseTablesIfMissing();
            Log("Schema Update Completed Successfully.", "success");
        }
        catch (Exception ex)
        {
            Log($"Schema Error: {ex.Message}", "error");
        }
    }

    // --- ACTION 2: IMPORT TASKS ---
    private async Task RunImport()
    {
        if (currentUserId == 0) { Log("Cannot Import: No User ID", "error"); return; }
        
        Log("Starting Import...");
        try
        {
            var path = System.IO.Path.Combine(Env.WebRootPath, "bullet_calendar.json");
            if (!System.IO.File.Exists(path))
            {
                Log($"File not found: {path}", "error");
                return;
            }

            var content = await System.IO.File.ReadAllTextAsync(path);
            Log($"File read ({content.Length} bytes). Parsing...", "info");

            using var scope = ScopeFactory.CreateScope();
            var taskSvc = scope.ServiceProvider.GetRequiredService<BulletTaskService>();
            
            await taskSvc.ImportFromOldJson(currentUserId, content);
            Log("Import Finished Successfully.", "success");
        }
        catch (Exception ex)
        {
            Log($"Import Failed: {ex.Message}", "error");
        }
    }

    // --- ACTION 3: DELETE TASKS ---
    private async Task RunDeleteTasks()
    {
        isDeleteConfirming = false; // Reset UI
        if (currentUserId == 0) { Log("Cannot Delete: No User ID", "error"); return; }

        Log($"Attempting DELETE ALL 'task' items for User {currentUserId}...", "warn");

        try
        {
            // Use a fresh scope to ensure clean connection
            using var scope = ScopeFactory.CreateScope();
            var baseSvc = scope.ServiceProvider.GetRequiredService<BulletBaseService>();

            // Call the service
            int count = await baseSvc.ClearDataByType(currentUserId, "task");
            
            Log($"DELETE COMPLETE. Removed {count} items.", "success");
        }
        catch (Exception ex)
        {
            Log($"CRITICAL DELETE ERROR: {ex.Message}", "error");
            Log($"Stack Trace: {ex.StackTrace}", "error");
        }
    }

    // --- ACTION 4: DROP LEGACY ---
    private async Task RunDropLegacy()
    {
        Log("Dropping Legacy Tables...", "warn");
        try
        {
            using var scope = ScopeFactory.CreateScope();
            var svc = scope.ServiceProvider.GetRequiredService<BulletBaseService>();
            await svc.DropLegacyTables();
            Log("Legacy Tables Dropped.", "success");
        }
        catch (Exception ex)
        {
            Log($"Drop Error: {ex.Message}", "error");
        }
    }
}