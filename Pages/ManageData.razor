@page "/manage-data"
@using Dashboard
@using Microsoft.JSInterop
@using System.Text.Json
@inject BulletBaseService BaseService
@inject BulletTaskService TaskService
@inject IJSRuntime JS
@inject Microsoft.AspNetCore.Hosting.IWebHostEnvironment Env

<div class="min-h-screen bg-gray-900 text-white p-8">
    <div class="max-w-4xl mx-auto">
        <h1 class="text-3xl font-bold mb-4">Data Management</h1>
        <a href="/bullet-calendar" class="text-gray-400 hover:text-white mb-8 block">‚Üê Back to Calendar</a>

        <div class="bg-black font-mono text-xs text-green-400 p-4 rounded border border-gray-700 mb-6 h-64 overflow-y-auto">
            @foreach(var log in logs) { <div class="border-b border-gray-800 pb-1 mb-1">@log</div> }
        </div>

        <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
            <div class="bg-gray-800 border border-gray-700 p-4 rounded">
                <h3 class="font-bold text-blue-400 mb-2">1. Schema</h3>
                <button @onclick="FixSchema" class="w-full bg-blue-600 hover:bg-blue-500 text-white py-2 rounded font-bold">Fix Tables</button>
            </div>

            <div class="bg-gray-800 border border-gray-700 p-4 rounded">
                <h3 class="font-bold text-green-400 mb-2">2. Import</h3>
                <button @onclick="ImportTasks" class="w-full bg-gray-700 hover:bg-gray-600 text-white py-2 rounded font-bold">Import JSON</button>
            </div>

            <div class="bg-gray-800 border border-red-900 p-4 rounded">
                <h3 class="font-bold text-red-400 mb-2">3. Cleanup</h3>
                <button @onclick="DeleteAllTasks" class="w-full bg-red-900/50 hover:bg-red-600 text-red-200 hover:text-white py-2 rounded font-bold mb-2">Delete ALL Tasks</button>
                <button @onclick="DropLegacy" class="w-full bg-gray-900 hover:bg-red-900/30 text-gray-400 py-2 rounded border border-gray-700">Drop Legacy</button>
            </div>
        </div>
    </div>
</div>

@code {
    private List<string> logs = new();
    private int userId = 1;

    private void Log(string msg) { 
        logs.Add($"{DateTime.Now:HH:mm:ss} > {msg}"); 
        StateHasChanged(); 
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            try {
                var json = await JS.InvokeAsync<string>("localStorage.getItem", "dashboard_session");
                if (!string.IsNullOrEmpty(json)) { 
                    using var doc = JsonDocument.Parse(json);
                    if(doc.RootElement.TryGetProperty("UserId", out var p) || doc.RootElement.TryGetProperty("userId", out p)) 
                        userId = p.GetInt32();
                }
                Log($"Ready. User ID: {userId}");
            } catch { Log("Session Error. Defaulting to User 1"); }
        }
    }

    private async Task FixSchema()
    {
        Log("Fixing Schema...");
        try { await BaseService.CreateBaseTablesIfMissing(); Log("Success."); } 
        catch(Exception ex) { Log($"Error: {ex.Message}"); }
    }

    private async Task ImportTasks()
    {
        Log("Importing...");
        try {
            var path = System.IO.Path.Combine(Env.WebRootPath, "bullet_calendar.json");
            if(System.IO.File.Exists(path)) {
                var content = await System.IO.File.ReadAllTextAsync(path);
                await TaskService.ImportFromOldJson(userId, content);
                Log("Import Complete.");
            } else { Log("File not found."); }
        } catch(Exception ex) { Log($"Error: {ex.Message}"); }
    }

    private async Task DeleteAllTasks()
    {
        Log("Deleting tasks...");
        try {
            int count = await BaseService.ClearDataByType(userId, "task");
            Log($"Deleted {count} items.");
        } catch(Exception ex) { Log($"Error: {ex.Message}"); }
    }

    private async Task DropLegacy()
    {
        Log("Dropping legacy...");
        try { await BaseService.DropLegacyTables(); Log("Done."); } 
        catch(Exception ex) { Log($"Error: {ex.Message}"); }
    }
}