@page "/movies"
@using Dashboard
@using Dashboard.Components.Bullet
@using System.Text.Json
@using Microsoft.EntityFrameworkCore
@using Microsoft.AspNetCore.Components.Forms 
@using Microsoft.AspNetCore.Components.Web 
@using Microsoft.JSInterop 
@inject BulletMoviesService MoviesService
@inject BulletMediaService MediaService
@inject BulletTaskService TaskService
@inject IJSRuntime JS

<div class="min-h-screen bg-gray-900 text-white p-6">

    <div class="flex flex-col md:flex-row justify-between items-center mb-6 gap-4">
        <div class="flex items-center gap-3">
            <span class="text-3xl">üé¨</span>
            <h1 class="text-2xl font-bold text-white">Movies & Media</h1>
        </div>

        <div class="flex flex-wrap gap-2 w-full md:w-auto">
            <select @bind="selectedYear" class="bg-gray-800 border border-gray-700 text-white text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block p-2.5">
                <option value="0">All Years</option>
                @foreach (var y in availableYears)
                {
                    <option value="@y">@y</option>
                }
            </select>

            <select @bind="sortOption" class="bg-gray-800 border border-gray-700 text-white text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block p-2.5">
                <option value="date_desc">Watched Date (Newest)</option>
                <option value="date_asc">Watched Date (Oldest)</option>
                <option value="release_desc">Release Year (Newest)</option>
                <option value="release_asc">Release Year (Oldest)</option>
                <option value="rating_desc">Rating (High to Low)</option>
                <option value="rating_asc">Rating (Low to High)</option>
                <option value="alpha_asc">Alphabetical (A-Z)</option>
            </select>

            <button @onclick="OpenAddModal" class="bg-blue-600 hover:bg-blue-500 text-white font-bold py-2 px-4 rounded-lg transition shadow-lg">
                + Add Movie
            </button>
        </div>
    </div>

    @if (isLoading)
    {
        <div class="flex flex-col items-center justify-center h-64 space-y-4">
            <div class="w-12 h-12 border-4 border-blue-600 border-t-transparent rounded-full animate-spin"></div>
            <p class="text-gray-400 animate-pulse">Loading library...</p>
        </div>
    }
    else if (!filteredMovies.Any())
    {
        <div class="text-center py-20 bg-gray-800/50 rounded-xl border border-dashed border-gray-700">
            <span class="text-4xl">üçø</span>
            <p class="text-gray-400 mt-2">No movies found for this filter.</p>
        </div>
    }
    else
    {
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6">
            @foreach (var m in filteredMovies)
            {
                <div class="group relative bg-gray-800 rounded-xl overflow-hidden shadow-lg border border-gray-700 hover:border-gray-500 transition-all duration-300 hover:-translate-y-1">
                    
                    <div class="aspect-video w-full bg-gray-900 relative overflow-hidden">
                        @if (!string.IsNullOrEmpty(m.ImgUrl))
                        {
                            <img src="@m.ImgUrl" class="w-full h-full object-cover opacity-80 group-hover:opacity-100 transition duration-500 group-hover:scale-105" />
                        }
                        else
                        {
                            <div class="w-full h-full flex items-center justify-center text-gray-700 text-4xl">üé•</div>
                        }

                        <div class="absolute top-2 right-2 bg-black/80 backdrop-blur-sm px-2 py-1 rounded-md border border-yellow-500/50 flex items-center gap-1 shadow-xl">
                            <span class="text-yellow-400 text-xs">‚≠ê</span>
                            <span class="font-bold text-sm text-white">@m.Rating.ToString("0.0")</span>
                        </div>
                    </div>

                    <div class="p-4">
                        <div class="flex justify-between items-start mb-1">
                            <h3 class="font-bold text-white text-base truncate pr-2">
                                @m.Title 
                                @if(m.ReleaseYear > 0) { <span class="text-gray-400 font-normal">(@m.ReleaseYear)</span> }
                            </h3>
                        </div>
                        <div class="text-right">
                             <span class="text-xs text-blue-400 font-mono">@FormatLongDate(m.DateWatched)</span>
                        </div>
                        
                        @if(!string.IsNullOrEmpty(m.Genre))
                        {
                            <div class="mt-2 flex flex-wrap gap-1">
                                @foreach(var g in m.Genre.Split(','))
                                {
                                    <span class="text-[10px] uppercase bg-gray-700 text-gray-300 px-1.5 py-0.5 rounded">@g.Trim()</span>
                                }
                            </div>
                        }
                    </div>

                    <div class="absolute inset-0 bg-black/80 flex items-center justify-center gap-3 opacity-0 group-hover:opacity-100 transition duration-200">
                        <button @onclick="() => OpenEditModal(m)" class="bg-gray-700 hover:bg-white hover:text-black text-white p-2 rounded-full shadow-lg transition" title="Edit">
                            ‚úèÔ∏è
                        </button>
                        <button @onclick="() => DeleteMovie(m.Id)" class="bg-red-900/80 hover:bg-red-600 text-white p-2 rounded-full shadow-lg transition" title="Delete">
                            üóëÔ∏è
                        </button>
                    </div>
                </div>
            }
        </div>
    }
</div>

<BaseEditor Item="editingTask" 
            MediaDetail="editingTask?.MediaDetail ?? new()" 
            Notes="editingTask?.Notes ?? new()"
            OnSave="SaveItem" 
            OnCancel="() => editingTask = null" 
            OnDelete="DeleteMovieFromEditor" />

@code {
    private int userId = 0;
    private bool isLoading = true;
    
    // Data lists
    private List<BulletMoviesService.MovieDTO> allMovies = new();
    private List<BulletMoviesService.MovieDTO> filteredMovies = new();
    private List<int> availableYears = new();

    // Filters & Sorts
    private int _selectedYear = 0;
    private int selectedYear 
    { 
        get => _selectedYear; 
        set { _selectedYear = value; ApplyFilterAndSort(); } 
    }

    private string _sortOption = "date_desc";
    private string sortOption
    {
        get => _sortOption;
        set { _sortOption = value; ApplyFilterAndSort(); }
    }

    // Editor State (TaskDTO needed for BaseEditor)
    private BulletTaskService.TaskDTO? editingTask;

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            try {
                var json = await JS.InvokeAsync<string>("localStorage.getItem", "dashboard_session");
                if (!string.IsNullOrEmpty(json)) { 
                    using(var doc = JsonDocument.Parse(json)) {
                         if(doc.RootElement.TryGetProperty("UserId", out var p) || 
                           doc.RootElement.TryGetProperty("userId", out p) ||
                           doc.RootElement.TryGetProperty("id", out p)) 
                        {
                            userId = p.GetInt32();
                        }
                    }
                }
                if (userId > 0) await LoadData();
            }
            catch {}
            finally { isLoading = false; StateHasChanged(); }
        }
    }

    private async Task LoadData()
    {
        allMovies = await MoviesService.GetMovies(userId);
        
        // Populate Years (Distinct, Ordered Descending)
        availableYears = allMovies.Select(m => m.DateWatched.Year).Distinct().OrderByDescending(y => y).ToList();

        if (selectedYear == 0 && availableYears.Any())
        {
            _selectedYear = availableYears.First(); 
        }

        ApplyFilterAndSort();
    }

    private void ApplyFilterAndSort()
    {
        var query = allMovies.AsEnumerable();

        if (selectedYear > 0)
        {
            query = query.Where(m => m.DateWatched.Year == selectedYear);
        }

        query = sortOption switch
        {
            "date_desc" => query.OrderByDescending(m => m.DateWatched),
            "date_asc" => query.OrderBy(m => m.DateWatched),
            "release_desc" => query.OrderByDescending(m => m.ReleaseYear),
            "release_asc" => query.OrderBy(m => m.ReleaseYear),
            "rating_desc" => query.OrderByDescending(m => m.Rating),
            "rating_asc" => query.OrderBy(m => m.Rating),
            "alpha_asc" => query.OrderBy(m => m.Title),
            _ => query.OrderByDescending(m => m.DateWatched)
        };

        filteredMovies = query.ToList();
        StateHasChanged();
    }

    // --- CRUD with BaseEditor ---
    private void OpenAddModal() 
    { 
        editingTask = new BulletTaskService.TaskDTO { 
            UserId = userId, 
            Type = "media", // Important: Calendar saves as 'media'
            Category = "personal", 
            Date = DateTime.Today,
            MediaDetail = new BulletMediaDetail { ReleaseYear = DateTime.Today.Year },
            Notes = new List<BulletItemNote>()
        }; 
    }
    
    private void OpenEditModal(BulletMoviesService.MovieDTO m) 
    { 
        // Convert MovieDTO to TaskDTO so BaseEditor can understand it
        editingTask = new BulletTaskService.TaskDTO 
        { 
            Id = m.Id, 
            UserId = m.UserId, 
            Title = m.Title, 
            ImgUrl = m.ImgUrl, 
            Date = m.DateWatched, 
            Type = "media",
            Category = "personal", // Default category
            MediaDetail = m.Detail ?? new BulletMediaDetail(), // Use the real detail object from DB
            Notes = new List<BulletItemNote>() // Notes loading would go here if needed
        };
    }

    private async Task SaveItem()
    {
        if(editingTask != null)
        {
            // Map back to MediaDTO for saving via MediaService (Standard Calendar Logic)
            var mediaDto = new BulletMediaService.MediaDTO 
            { 
                Id = editingTask.Id, 
                UserId = editingTask.UserId, 
                Type = "media", 
                Category = editingTask.Category, 
                Date = editingTask.Date, 
                Title = editingTask.Title, 
                Description = editingTask.Description, 
                ImgUrl = editingTask.ImgUrl, 
                Detail = editingTask.MediaDetail ?? new(),
                Notes = editingTask.Notes 
            };
            
            await MediaService.SaveMedia(mediaDto);
            
            editingTask = null;
            await LoadData(); // Reload grid
        }
    }

    private async Task DeleteMovie(int id)
    {
        if(await JS.InvokeAsync<bool>("confirm", "Delete this movie?"))
        {
            await MoviesService.DeleteMovie(id);
            await LoadData();
        }
    }
    
    private async Task DeleteMovieFromEditor()
    {
        if(editingTask != null && editingTask.Id > 0)
        {
             await DeleteMovie(editingTask.Id);
             editingTask = null;
        }
    }

    private string FormatLongDate(DateTime d)
    {
        // Format: Monday, December 22nd, 2025
        string daySuffix = (d.Day % 10 == 1 && d.Day != 11) ? "st" : (d.Day % 10 == 2 && d.Day != 12) ? "nd" : (d.Day % 10 == 3 && d.Day != 13) ? "rd" : "th";
        return $"{d:dddd, MMMM d}{daySuffix}, {d:yyyy}";
    }
}