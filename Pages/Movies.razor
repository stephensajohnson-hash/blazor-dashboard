@page "/movies"
@using Dashboard
@using Dashboard.Components.Bullet
@using System.Text.Json
@using Microsoft.EntityFrameworkCore
@using Microsoft.AspNetCore.Components.Forms 
@using Microsoft.AspNetCore.Components.Web 
@using Microsoft.JSInterop 
@inject BulletMoviesService MoviesService
@inject BulletMediaService MediaService
@inject BulletTaskService TaskService
@inject IJSRuntime JS

<BulletHeader />

<div class="min-h-screen bg-gray-900 text-white p-6 font-sans">

    <div class="flex flex-col md:flex-row justify-between items-center mb-6 gap-4">
        <div class="flex items-center gap-3">
            <span class="text-3xl">üé¨</span>
            <h1 class="text-2xl font-black uppercase tracking-widest text-white">
                Media Library 
                <span class="text-gray-500 text-sm font-normal ml-2">(@filteredMovies.Count items)</span>
            </h1>
            
            @if (!string.IsNullOrEmpty(selectedTag))
            {
                <button @onclick="ClearTag" class="flex items-center gap-1 bg-purple-600 hover:bg-purple-500 text-white text-[10px] font-black uppercase px-3 py-1 rounded-full transition shadow-lg">
                    <span>@selectedTag</span>
                    <span class="ml-1">‚úï</span>
                </button>
            }
        </div>

        <div class="flex flex-wrap items-center gap-3 w-full md:w-auto">
            @* SURGICAL FIX: DYNAMIC QUICK ACTION BUTTONS *@
            <div class="flex bg-black/40 p-1 rounded-lg border border-gray-700 shadow-inner">
                <button @onclick="() => selectedYear = DateTime.Today.Year" 
                        class="px-4 py-1.5 rounded-md text-[10px] font-black tracking-widest transition @(selectedYear == DateTime.Today.Year ? "bg-blue-600 text-white shadow-lg" : "text-gray-500 hover:text-gray-300")">
                    @DateTime.Today.Year
                </button>
                <button @onclick="() => selectedYear = DateTime.Today.Year - 1" 
                        class="px-4 py-1.5 rounded-md text-[10px] font-black tracking-widest transition @(selectedYear == (DateTime.Today.Year - 1) ? "bg-blue-600 text-white shadow-lg" : "text-gray-500 hover:text-gray-300")">
                    @(DateTime.Today.Year - 1)
                </button>
                <button @onclick="() => selectedYear = 0" 
                        class="px-4 py-1.5 rounded-md text-[10px] font-black tracking-widest transition @(selectedYear == 0 ? "bg-gray-700 text-white shadow-lg" : "text-gray-500 hover:text-gray-300")">
                    ALL YEARS
                </button>
            </div>

            <select @bind="selectedYear" class="bg-gray-800 border border-gray-700 text-white text-xs font-bold rounded-lg p-2.5 outline-none focus:border-blue-500 min-w-[120px]">
                <option value="0">All Time</option>
                @foreach (var y in availableYears)
                {
                    <option value="@y">@y View</option>
                }
            </select>

            <select @bind="sortOption" class="bg-gray-800 border border-gray-700 text-white text-xs font-bold rounded-lg p-2.5 outline-none focus:border-blue-500">
                <option value="date_desc">Recently Watched</option>
                <option value="date_asc">First Watched</option>
                <option value="release_desc">Newest Releases</option>
                <option value="release_asc">Oldest Classics</option>
                <option value="rating_desc">Top Rated</option>
                <option value="rating_asc">Lowest Rated</option>
                <option value="alpha_asc">Title (A-Z)</option>
            </select>

            <button @onclick="OpenAddModal" class="bg-blue-600 hover:bg-blue-500 text-white text-xs font-black uppercase tracking-widest py-2.5 px-6 rounded-lg transition shadow-lg active:scale-95">
                Ôºã Add Media
            </button>
        </div>
    </div>

    @if (isLoading)
    {
        <div class="flex flex-col items-center justify-center h-64 space-y-4">
            <div class="w-12 h-12 border-4 border-blue-600 border-t-transparent rounded-full animate-spin"></div>
            <p class="text-gray-500 text-xs font-black uppercase tracking-widest animate-pulse">Scanning Archives...</p>
        </div>
    }
    else if (!filteredMovies.Any())
    {
        <div class="text-center py-20 bg-gray-800/30 rounded-xl border-2 border-dashed border-gray-700/50">
            <span class="text-5xl opacity-20">üçø</span>
            <p class="text-gray-500 mt-4 font-bold uppercase tracking-tighter">No media found for @(selectedYear == 0 ? "this filter" : selectedYear.ToString())</p>
            @if(!string.IsNullOrEmpty(selectedTag) || selectedYear != 0) { 
                <button @onclick="ResetFilters" class="text-blue-400 text-xs font-bold underline mt-4 hover:text-blue-300">Reset Filters</button> 
            }
        </div>
    }
    else
    {
        <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 xl:grid-cols-5 gap-6">
            @foreach (var m in filteredMovies)
            {
                <div class="group relative bg-gray-800 rounded-xl overflow-hidden shadow-2xl border border-gray-700 hover:border-blue-500/50 transition-all duration-300 hover:-translate-y-1 flex flex-col h-full">
                    
                    <div class="aspect-[2/3] w-full bg-gray-900 relative overflow-hidden shrink-0 group">
                        @if (!string.IsNullOrEmpty(m.ImgUrl))
                        {
                            <img src="@m.ImgUrl" class="w-full h-full object-cover group-hover:scale-105 transition duration-700 opacity-90 group-hover:opacity-100" />
                        }
                        else
                        {
                            <div class="w-full h-full flex items-center justify-center text-gray-700 text-4xl">üé•</div>
                        }

                        <div class="absolute top-2 right-2 bg-black/80 backdrop-blur-md px-2 py-1 rounded-md border border-yellow-500/30 flex items-center gap-1 shadow-2xl z-20">
                            <span class="text-yellow-400 text-[10px]">‚≠ê</span>
                            <span class="font-black text-[10px] text-white">@m.Rating.ToString("0.0")</span>
                        </div>

                        <div class="absolute inset-0 bg-black/60 flex items-center justify-center gap-4 opacity-0 group-hover:opacity-100 transition-all duration-300 z-30 backdrop-blur-sm">
                            <button @onclick="() => OpenEditModal(m)" class="bg-blue-600 hover:bg-blue-500 text-white w-10 h-10 flex items-center justify-center rounded-full shadow-2xl transition transform hover:scale-110" title="Edit Properties">
                                ‚úèÔ∏è
                            </button>
                            <button @onclick="() => DeleteMovie(m.Id)" class="bg-red-600/20 hover:bg-red-600 text-white w-10 h-10 flex items-center justify-center rounded-full shadow-2xl transition border border-red-500/50 transform hover:scale-110" title="Remove Entry">
                                ‚úï
                            </button>
                        </div>
                    </div>

                    <div class="p-4 flex flex-col flex-1">
                        <div class="mb-1 leading-tight">
                            <h3 class="font-black text-white text-sm tracking-tight line-clamp-2">
                                @m.Title 
                                @if(m.ReleaseYear > 0) { <span class="text-gray-500 font-normal text-xs ml-1">(@m.ReleaseYear)</span> }
                            </h3>
                        </div>

                        <div class="mb-3">
                             <span class="text-[10px] text-blue-400 font-mono font-bold uppercase">Watched @m.DateWatched.ToString("MMM dd, yyyy")</span>
                        </div>
                        
                        @if(!string.IsNullOrEmpty(m.Genre))
                        {
                            <div class="mt-auto pt-3 flex flex-wrap gap-1 border-t border-gray-700/50">
                                @foreach(var g in m.Genre.Split(','))
                                {
                                    var tag = g.Trim();
                                    if(string.IsNullOrWhiteSpace(tag)) continue;
                                    
                                    <button @onclick="() => FilterByTag(tag)" @onclick:stopPropagation="true"
                                            class="text-[9px] font-black uppercase px-2 py-0.5 rounded transition border @(selectedTag == tag ? "bg-purple-600 text-white border-purple-400" : "bg-gray-900 text-gray-400 border-gray-700 hover:text-white hover:border-gray-500")">
                                        @tag
                                    </button>
                                }
                            </div>
                        }
                    </div>
                </div>
            }
        </div>
    }
</div>

@if (editingTask != null)
{
    <BaseEditor Item="editingTask" 
                MediaDetail="@(editingTask.MediaDetail ?? new BulletMediaDetail())" 
                Notes="@(editingTask.Notes ?? new List<BulletItemNote>())"
                OnSaveRecurring="HandleSaveRecurring" 
                OnCancel="() => editingTask = null" 
                OnDelete="DeleteMovieFromEditor" />
}

@code {
    private int userId = 0;
    private bool isLoading = true;
    
    private List<BulletMoviesService.MovieDTO> allMovies = new();
    private List<BulletMoviesService.MovieDTO> filteredMovies = new();
    private List<int> availableYears = new();

    private int _selectedYear = 0; // Default to All Years
    private int selectedYear 
    { 
        get => _selectedYear; 
        set { _selectedYear = value; ApplyFilterAndSort(); } 
    }

    private string _sortOption = "date_desc";
    private string sortOption
    {
        get => _sortOption;
        set { _sortOption = value; ApplyFilterAndSort(); }
    }

    private string selectedTag = "";

    private BulletTaskService.TaskDTO? editingTask;

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            try {
                var json = await JS.InvokeAsync<string>("localStorage.getItem", "dashboard_session");
                if (!string.IsNullOrEmpty(json)) { 
                    using(var doc = JsonDocument.Parse(json)) {
                         if(doc.RootElement.TryGetProperty("UserId", out var p) || 
                           doc.RootElement.TryGetProperty("userId", out p) ||
                           doc.RootElement.TryGetProperty("id", out p)) 
                        {
                            userId = p.GetInt32();
                        }
                    }
                }
                if (userId > 0) await LoadData();
            }
            catch {}
            finally { isLoading = false; StateHasChanged(); }
        }
    }

    private async Task LoadData()
    {
        allMovies = await MoviesService.GetMovies(userId);
        availableYears = allMovies.Select(m => m.DateWatched.Year).Distinct().OrderByDescending(y => y).ToList();
        
        ApplyFilterAndSort();
    }

    private void ApplyFilterAndSort()
    {
        var query = allMovies.AsEnumerable();
        if (selectedYear > 0) query = query.Where(m => m.DateWatched.Year == selectedYear);
        if (!string.IsNullOrEmpty(selectedTag)) query = query.Where(m => m.Genre != null && m.Genre.Contains(selectedTag, StringComparison.OrdinalIgnoreCase));

        query = sortOption switch
        {
            "date_desc" => query.OrderByDescending(m => m.DateWatched),
            "date_asc" => query.OrderBy(m => m.DateWatched),
            "release_desc" => query.OrderByDescending(m => m.ReleaseYear),
            "release_asc" => query.OrderBy(m => m.ReleaseYear),
            "rating_desc" => query.OrderByDescending(m => m.Rating),
            "rating_asc" => query.OrderBy(m => m.Rating),
            "alpha_asc" => query.OrderBy(m => m.Title),
            _ => query.OrderByDescending(m => m.DateWatched)
        };

        filteredMovies = query.ToList();
        StateHasChanged();
    }

    private void FilterByTag(string tag) { selectedTag = tag; ApplyFilterAndSort(); }
    private void ClearTag() { selectedTag = ""; ApplyFilterAndSort(); }
    private void ResetFilters() { selectedTag = ""; selectedYear = 0; ApplyFilterAndSort(); }

    private void OpenAddModal() 
    { 
        editingTask = new BulletTaskService.TaskDTO { 
            UserId = userId, 
            Type = "media",
            Category = "personal", 
            Date = DateTime.Today,
            MediaDetail = new BulletMediaDetail { ReleaseYear = DateTime.Today.Year },
            Notes = new List<BulletItemNote>()
        }; 
    }
    
    private void OpenEditModal(BulletMoviesService.MovieDTO m) 
    { 
        var detailObj = m.Detail ?? new BulletMediaDetail();
        
        editingTask = new BulletTaskService.TaskDTO 
        { 
            Id = m.Id, 
            UserId = m.UserId, 
            Title = m.Title, 
            Description = m.Description, 
            ImgUrl = m.ImgUrl, 
            Date = m.DateWatched, 
            Type = "media",
            Category = "personal", 
            MediaDetail = detailObj,
            Notes = new List<BulletItemNote>() 
        };
    }

    private async Task HandleSaveRecurring(BaseEditor.RecurrenceRequest req)
    {
        if(editingTask != null)
        {
            var saveDetail = editingTask.MediaDetail ?? new BulletMediaDetail();
            var saveNotes = editingTask.Notes ?? new List<BulletItemNote>();

            var mediaDto = new BulletMediaService.MediaDTO 
            { 
                Id = editingTask.Id, 
                UserId = editingTask.UserId, 
                Type = "media", 
                Category = editingTask.Category, 
                Date = editingTask.Date, 
                Title = editingTask.Title, 
                Description = editingTask.Description, 
                ImgUrl = editingTask.ImgUrl, 
                Detail = saveDetail,
                Notes = saveNotes
            };
            
            await MediaService.SaveMedia(mediaDto);
            editingTask = null;
            await LoadData(); 
        }
    }

    private async Task DeleteMovie(int id)
    {
        if(await JS.InvokeAsync<bool>("confirm", "Delete this movie?"))
        {
            await MoviesService.DeleteMovie(id);
            await LoadData();
        }
    }
    
    private async Task DeleteMovieFromEditor()
    {
        if(editingTask != null && editingTask.Id > 0)
        {
             await DeleteMovie(editingTask.Id);
             editingTask = null;
        }
    }
}