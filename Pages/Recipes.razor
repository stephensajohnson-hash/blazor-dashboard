        string finalQty = wholePart > 0 ? $"{wholePart}" : "";
        if (idx > 0) finalQty += (wholePart > 0 ? " " : "") + snapStrs[idx];
        if (string.IsNullOrEmpty(finalQty)) finalQty = "0";

        return (finalQty, u);
    }

