@page "/fixdb"
@using Dashboard
@using Microsoft.EntityFrameworkCore
@inject AppDbContext Db
@inject NavigationManager Nav

<div class="min-h-screen bg-gray-900 text-white flex flex-col items-center justify-center p-4">
    <div class="max-w-md w-full bg-gray-800 rounded-xl shadow-2xl p-8 border border-gray-700 text-center">
        <h1 class="text-3xl font-bold mb-2 text-red-500">üöë Emergency Repair</h1>
        <p class="text-gray-400 mb-6 text-sm">Your database schema is out of sync with the code (Missing 'ActivityLevel' on Users).</p>
        
        @if (!string.IsNullOrEmpty(status))
        {
            <div class="bg-black/50 p-4 rounded border border-gray-600 mb-6 font-mono text-xs text-left text-green-400 whitespace-pre-wrap">@status</div>
        }

        <button @onclick="FixUsersTable" class="w-full bg-blue-600 hover:bg-blue-500 text-white font-bold py-3 px-6 rounded-lg mb-4 transition transform hover:scale-105">
            Fix 'Users' Table
        </button>
        
        <a href="/login" class="block text-gray-400 hover:text-white underline mt-4 text-sm">Return to Login</a>
    </div>
</div>

@code {
    private string status = "";

    private async Task FixUsersTable()
    {
        try
        {
            status += "Starting repair...\n";
            
            // manually add the missing columns to the Users table
            await Db.Database.ExecuteSqlRawAsync(@"
                ALTER TABLE ""Users"" ADD COLUMN IF NOT EXISTS ""Age"" integer DEFAULT 30;
                ALTER TABLE ""Users"" ADD COLUMN IF NOT EXISTS ""HeightInches"" double precision DEFAULT 70;
                ALTER TABLE ""Users"" ADD COLUMN IF NOT EXISTS ""Gender"" text DEFAULT 'Male';
                ALTER TABLE ""Users"" ADD COLUMN IF NOT EXISTS ""ActivityLevel"" text DEFAULT 'Sedentary';
            ");
            
            status += "‚úÖ Success! Columns added.\n";
            status += "You can now log in.";
        }
        catch (Exception ex)
        {
            status += $"‚ùå Error: {ex.Message}\n";
        }
    }
}