    private async Task ImportSources(JsonElement sourceArr)
    {
        if(sourceArr.ValueKind != JsonValueKind.Array) return;
        foreach(var src in sourceArr.EnumerateArray())
        {
            var sid = src.GetProperty("id").GetString();
            if(!await Db.BudgetIncomeSources.AnyAsync(x => x.StringId == sid))
            {
                Db.BudgetIncomeSources.Add(new BudgetIncomeSource { UserId = userId, StringId = sid, Name = src.GetProperty("name").GetString(), ImgUrl = src.TryGetProperty("imgUrl", out var img) ? img.GetString() : "" });
            }
        }
        await Db.SaveChangesAsync();
    }

    private async Task<int> InsertIncomeItems(int periodId, JsonElement incomeArray, DateTime defaultDate)
    {
        if(incomeArray.ValueKind != JsonValueKind.Array) return 0;
        int count = 0;
        foreach(var item in incomeArray.EnumerateArray())
        {
            string sid = item.TryGetProperty("sourceId", out var s) ? s.GetString() : "";
            if(await Db.BudgetExpectedIncome.AnyAsync(x => x.BudgetPeriodId == periodId && x.SourceStringId == sid)) continue;

            var newInc = new BudgetExpectedIncome { BudgetPeriodId = periodId, SourceStringId = sid, Amount = 0, Date = defaultDate };
            if(item.TryGetProperty("amount", out var amt)) newInc.Amount = amt.GetDecimal();
            if((item.TryGetProperty("date", out var d2) || item.TryGetProperty("Date", out d2)) && DateTime.TryParse(d2.GetString(), out var idate)) newInc.Date = idate;
            
            Db.BudgetExpectedIncome.Add(newInc);
            count++;
        }
        return count;
    }

    private async Task<int> InsertWatchItems(int periodId, JsonElement watchArray)
    {
        if(watchArray.ValueKind != JsonValueKind.Array) return 0;
        int count = 0;
        foreach(var item in watchArray.EnumerateArray())
        {
            string desc = item.GetProperty("description").GetString();
            if(await Db.BudgetWatchItems.AnyAsync(x => x.BudgetPeriodId == periodId && x.Description == desc)) continue;

            var newItem = new BudgetWatchItem 
            { 
                BudgetPeriodId = periodId, 
                Description = desc,
                Amount = item.GetProperty("amount").GetDecimal(),
                DueDate = item.TryGetProperty("dueDate", out var dd) ? dd.GetString() : "",
                ImgUrl = item.TryGetProperty("image", out var img) ? img.GetString() : ""
            };
            Db.BudgetWatchItems.Add(newItem);
            count++;
        }
        return count;
    }

