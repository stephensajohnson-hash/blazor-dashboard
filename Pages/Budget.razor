@page "/budget-tracker"
@using Microsoft.AspNetCore.Components.Web
@using Microsoft.AspNetCore.Components.Forms
@rendermode @(new InteractiveServerRenderMode(prerender: false))
@using Dashboard
@using Dashboard.Components.Bullet
@using Microsoft.EntityFrameworkCore
@using System.IO
@using Microsoft.JSInterop
@using System.Text.Json
@using System.Globalization
@inject AppDbContext Db
@inject BudgetService BudgetService
@inject BulletBaseService BulletBase
@inject IJSRuntime JS
@inject NavigationManager Nav
@inject Microsoft.AspNetCore.Hosting.IWebHostEnvironment Env

<BulletHeader />

<div class="min-h-screen bg-[#1e2124] text-gray-800 p-4 font-sans relative text-sm font-medium">

    <div class="bg-black border border-gray-700 rounded-xl p-4 mb-6 shadow-2xl overflow-hidden text-white">
        <div class="flex justify-between items-center mb-3">
            <h3 class="text-xs font-black text-blue-400 uppercase tracking-widest">Financial Ops Console v59.0</h3>
            <div class="flex flex-wrap gap-2">
                <button @onclick="CopyLogsToClipboard" class="bg-gray-700 hover:bg-gray-600 text-white text-[10px] font-bold px-3 py-1 rounded transition tracking-widest">üìã Copy Logs</button>
                <button @onclick="RepairWatchLinks" class="bg-blue-900 hover:bg-blue-800 text-white text-[10px] font-bold px-3 py-1 rounded transition border border-blue-400">üîó 2. Link Items</button>
                <button @onclick="ClaimOrphanedData" class="bg-yellow-900 hover:bg-yellow-800 text-white text-[10px] font-bold px-3 py-1 rounded transition border border-yellow-700">‚ö†Ô∏è 3. Claim Data</button>
                <button @onclick="RestoreFromJsonFiles" class="bg-green-700 hover:bg-green-600 text-white text-[10px] font-bold px-3 py-1 rounded transition border border-green-500">üõü 5. Restore JSON</button>
            </div>
        </div>
        <div id="debug-log-container" class="bg-[#0c0c0c] rounded border border-gray-900 h-20 overflow-y-auto p-3 font-mono text-[10px] leading-relaxed flex flex-col-reverse text-gray-400 font-black">
            @foreach (var log in ((IEnumerable<string>)debugLogs).Reverse()) {
                <div class="border-b border-gray-900 py-1 @(log.Contains("SUCCESS") ? "text-green-400" : (log.Contains("Resolved") ? "text-blue-300" : ""))">@log</div>
            }
        </div>
    </div>
    
    @if (isLoading)
    {
        <div class="flex flex-col items-center justify-center h-[60vh]">
            <div class="w-16 h-16 border-4 border-blue-500 border-t-transparent rounded-full animate-spin"></div>
            <div class="text-gray-400 mt-6 animate-pulse font-bold uppercase tracking-widest text-xs font-mono text-center">Syncing Ledger...</div>
        </div>
    }
    else if (currentUser == null || CurrentPeriod == null)
    {
        <div class="flex flex-col items-center justify-center h-[60vh] border-2 border-dashed border-gray-700 rounded-xl bg-gray-800/30 p-10 text-center text-white font-mono">
            <p class="text-red-400 text-xl mb-2 font-bold uppercase tracking-widest">ID_NOT_RESOLVED</p>
            <button @onclick="() => Nav.NavigateTo(Nav.Uri, true)" class="bg-blue-600 hover:bg-blue-500 px-10 py-4 rounded text-xs font-bold uppercase shadow-2xl border border-blue-400 transition-all active:scale-95">üîÑ Attempt Recovery</button>
        </div>
    }
    else
    {
        <div class="bg-[#282b30] rounded-xl border border-gray-700 shadow-2xl mb-6 overflow-hidden">
            <div class="p-4 border-b border-gray-700 flex flex-col md:flex-row justify-between items-center gap-4">
                <div class="flex items-center gap-4 text-white">
                    <button @onclick="PrevPeriod" class="p-2 hover:bg-gray-700 rounded-full transition" disabled="@(!CanGoBack)"><svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" /></svg></button>
                    <h1 class="text-xl font-bold tracking-wide">@CurrentPeriod.DisplayName</h1>
                    <button @onclick="NextPeriod" class="p-2 hover:bg-gray-700 rounded-full transition" disabled="@(!CanGoNext)"><svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" /></svg></button>
                    
                    <button @onclick="() => { showIncomeSourcesModal = true; }" class="ml-4 bg-gray-700 hover:bg-gray-600 text-white text-[10px] font-black uppercase px-3 py-1.5 rounded transition border border-gray-600 tracking-widest flex items-center gap-2 shadow-lg">
                        üí∞ Income Sources
                    </button>
                </div>
                <button class="bg-green-600 hover:bg-green-500 text-white text-sm font-bold py-2.5 px-6 rounded shadow transition uppercase tracking-widest" @onclick="() => OpenTransactionModal()">+ New Entry</button>
            </div>

            <div class="grid grid-cols-2 md:grid-cols-4 lg:grid-cols-8 divide-x divide-y md:divide-y-0 divide-gray-700 bg-[#2c2f33]">
                <div class="p-3 text-center"><div class="text-[9px] text-gray-500 font-black uppercase mb-1">Start</div><div class="text-xs font-mono text-white font-bold font-mono">$@CurrentPeriod.InitialBankBalance.ToString("N2")</div></div>
                <div class="p-3 text-center"><div class="text-[9px] text-green-500/70 font-black uppercase mb-1">Income</div><div class="text-xs font-mono text-green-400 font-bold font-mono">+$@ActualIncome.ToString("N2")</div></div>
                <div class="p-3 text-center"><div class="text-[9px] text-red-500/70 font-black uppercase mb-1">Expenses</div><div class="text-xs font-mono text-red-400 font-bold font-mono">-$@ActualExpenses.ToString("N2")</div></div>
                <div class="p-3 text-center"><div class="text-[9px] text-green-500/40 font-black uppercase mb-1">Exp Income</div><div class="text-xs font-mono text-green-600 font-bold font-mono">$@ExpectedIncomeTotal.ToString("N2")</div></div>
                <div class="p-3 text-center"><div class="text-[9px] text-red-500/40 font-black uppercase mb-1">Exp Expense</div><div class="text-xs font-mono text-red-600 font-bold font-mono">$@ExpectedExpensesTotal.ToString("N2")</div></div>
                <div class="p-3 text-center bg-black/10"><div class="text-[9px] text-blue-400 font-black uppercase mb-1">Bank Bal</div><div class="text-xs font-mono text-blue-300 font-bold font-mono">$@CurrentBalance.ToString("N2")</div></div>
                <div class="p-3 text-center bg-blue-900/20 border-x-2 border-blue-500/40"><div class="text-[9px] text-blue-200 font-black uppercase mb-1 font-bold">Available</div><div class="text-xs font-mono text-blue-400 font-bold font-mono">$@AvailableFunds.ToString("N2")</div></div>
                <div class="p-3 text-center @(Unaccounted == 0 ? "bg-green-900/10" : "bg-red-900/10")"><div class="text-[9px] text-gray-500 font-black uppercase mb-1">Unaccounted</div><div class="text-xs font-mono font-bold @(Unaccounted == 0 ? "text-green-400" : "text-red-400") font-black font-mono">@(Unaccounted == 0 ? "BALANCED" : "$" + Unaccounted.ToString("N2"))</div></div>
            </div>
        </div>

        <div class="grid lg:grid-cols-[60%_40%] gap-6">
            <div class="bg-white rounded-xl shadow-xl overflow-hidden flex flex-col h-[calc(100vh-380px)] border border-gray-300 text-gray-800 font-medium">
                <div class="p-3 bg-gray-100 border-b border-gray-300 font-bold text-gray-600 text-[10px] uppercase grid grid-cols-[110px_1fr_80px_80px_60px] gap-4 items-center tracking-widest">
                    <span class="pl-2">Date</span><span>Description</span><span class="text-right">Amount</span><span class="text-right pr-2">Balance</span><span class="text-center">Ops</span>
                </div>
                <div class="overflow-y-auto flex-1 scrollbar-thin scrollbar-thumb-gray-400 scrollbar-track-gray-100">
                    @{
                        decimal runningBalance = CurrentPeriod.InitialBankBalance;
                        foreach(var t in CurrentPeriod.Transactions.OrderBy(t => t.Date)) {
                            runningBalance += t.Amount; string imgUrl = GetTransactionImage(t);
                            <div class="grid grid-cols-[110px_1fr_80px_80px_60px] gap-4 items-center p-3 border-b hover:bg-blue-50 transition group text-sm">
                                <div class="flex items-center gap-3 pl-2">
                                    <img src="@(string.IsNullOrEmpty(imgUrl) ? "https://cdn-icons-png.flaticon.com/512/3233/3233483.png" : imgUrl)" class="w-8 h-8 rounded-full object-cover border" />
                                    <div class="text-gray-500 font-mono text-xs font-bold font-mono">@t.Date.ToString("MMM dd")</div>
                                </div>
                                <div class="truncate flex items-center gap-2 font-bold">@t.Description @if(t.Splits.Any()){ <span class="text-xs">üîÄ</span> }</div>
                                <div class="text-right font-mono font-bold @(t.Amount >= 0 ? "text-green-600" : "text-red-600") font-mono">$@t.Amount.ToString("N2")</div>
                                <div class="text-right pr-2 font-mono text-gray-400 font-bold font-mono">$@runningBalance.ToString("N2")</div>
                                <div class="flex justify-center gap-3">
                                    <button class="text-gray-300 hover:text-blue-600 transition" @onclick="() => OpenTransactionModal(t)">‚úé</button>
                                    <button class="text-gray-300 hover:text-red-600 transition font-bold" @onclick="() => DeleteTransaction(t)">‚úï</button>
                                </div>
                            </div>
                        }
                    }
                </div>
            </div>

            <div class="space-y-6 h-[calc(100vh-380px)] overflow-y-auto pr-2 scrollbar-hide pb-20">
                @foreach (var cycle in CurrentPeriod.Cycles.OrderBy(c => c.CycleNumber)) {
                    <div class="bg-white rounded-lg border border-gray-300 shadow-md overflow-hidden">
                        <div class="bg-gray-100 px-4 py-3 border-b flex justify-between items-center text-gray-700 uppercase font-black text-xs tracking-wider">
                            <span>@cycle.Label</span>
                            <div class="flex gap-4 items-center">
                                <button @onclick="() => AddBudgetItem(cycle.Id)" class="text-green-600 hover:text-green-800 transition text-[10px] font-black uppercase">Ôºã Item</button>
                                <button @onclick="() => DeleteCycle(cycle)" class="text-red-400 hover:text-red-600 transition text-[10px] font-black uppercase">‚úï Section</button>
                            </div>
                        </div>
                        <div class="divide-y divide-gray-100">
                            @foreach (var item in cycle.Items) {
                                decimal rawSpent = GetSpentForBudgetItem(item.Id);
                                decimal total = item.PlannedAmount + item.CarriedOver + (rawSpent < 0 ? Math.Abs(rawSpent) : 0);
                                decimal rem = total - (rawSpent > 0 ? rawSpent : 0);
                                bool isEx = ExpandedItemId == item.Id;

                                <div class="p-4 hover:bg-gray-50 cursor-pointer border-l-4 @(isEx ? "border-blue-500 bg-blue-50" : "border-transparent") text-gray-800 font-bold" @onclick="() => ToggleExpand(item.Id)">
                                    <div class="flex justify-between items-end mb-1">
                                        <div class="flex items-center gap-2 font-bold text-sm"><img src="@item.ImgUrl" class="w-5 h-5 rounded-full object-cover" onerror="this.style.display='none'" /><span>@item.Name</span></div>
                                        <div class="flex items-center gap-2">
                                            <span class="text-sm font-black @(rem < 0 ? "text-red-600" : "text-green-600") font-mono">$@rem.ToString("N2")</span>
                                            <div class="flex gap-3 ml-2 border-l pl-3 border-gray-200">
                                                <button class="text-gray-400 hover:text-orange-500 transition text-lg" title="Forecast Expense" @onclick:stopPropagation="true" @onclick="() => QuickAddWatchItem(item)">üëÅÔ∏è</button>
                                                <button class="text-gray-300 hover:text-blue-600 transition" @onclick:stopPropagation="true" @onclick="() => OpenEditModal(item)">‚úé</button>
                                                <button class="text-gray-300 hover:text-red-600 transition font-bold" @onclick:stopPropagation="true" @onclick="() => DeleteBudgetItem(item)">‚úï</button>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="w-full h-2 bg-gray-200 rounded-full overflow-hidden font-mono"><div class="bg-blue-500 h-full transition-all duration-500" style="width: @(total > 0 ? Math.Min((double)((rawSpent > 0 ? rawSpent : 0)/total)*100, 100) : 0)%"></div></div>
                                </div>
                                @if(isEx) {
                                    <div class="bg-gray-50 border-y p-3 shadow-inner">
                                        <table class="w-full text-[10px] text-gray-700 font-bold">
                                            <thead><tr class="text-gray-500 uppercase text-left border-b border-gray-300 font-black tracking-widest"><th class="pb-1">Date</th><th class="pb-1">Desc</th><th class="pb-1 text-right">Amt</th></tr></thead>
                                            <tbody class="divide-y divide-gray-200">
                                                @foreach(var h in GetItemHistory(item.Id)) { <tr class="hover:bg-gray-50"><td class="py-1 font-mono">@h.Date.ToString("MM/dd")</td><td class="py-1 truncate max-w-[120px]">@h.Desc</td><td class="py-1 text-right font-bold @(h.Amount < 0 ? "text-green-600" : "text-red-600") font-mono font-mono">$@Math.Abs(h.Amount).ToString("N2")</td></tr> }
                                            </tbody>
                                        </table>
                                    </div>
                                }
                            }
                        </div>
                    </div>
                }

                <button @onclick="CreateNewCycle" class="w-full py-3 border-2 border-dashed border-gray-600 hover:border-blue-500 text-gray-500 hover:text-blue-500 rounded-lg transition font-black uppercase text-[10px] tracking-widest bg-gray-800/10">Ôºã Add Budget Section</button>

                <div class="bg-white rounded-lg border border-green-200 shadow-md">
                    <div class="bg-green-600 px-3 py-2 flex justify-between items-center text-white text-xs font-black uppercase tracking-widest"><span>Expected Income</span><button @onclick="() => OpenIncomeModal()">Ôºã</button></div>
                    <div class="divide-y divide-gray-100 font-bold">
                        @foreach(var inc in (CurrentPeriod.ExpectedIncome ?? new()).OrderBy(x => x.Date)) {
                            <div class="p-3 flex justify-between items-center hover:bg-green-50 transition text-gray-800">
                                <div class="flex items-center gap-2 font-black tracking-tighter"><img src="@GetSourceImage(inc.SourceStringId)" class="w-8 h-8 rounded-full border shadow-sm" /><div><div class="text-xs">@GetSourceName(inc.SourceStringId)</div><div class="text-[10px] text-gray-500 uppercase font-mono font-bold tracking-widest">Due @inc.Date.ToString("MM/dd")</div></div></div>
                                <div class="flex items-center gap-4">
                                    <span class="text-green-600 font-black font-mono">+$@inc.Amount.ToString("N2")</span>
                                    <div class="flex gap-2 font-black">
                                        <button @onclick="() => RealizeIncome(inc)" class="text-gray-400 hover:text-green-600 transition text-lg" title="Realize to Ledger">‚úÖ</button>
                                        <button @onclick="() => OpenIncomeModal(inc)" class="text-gray-300 hover:text-green-600 transition">‚úé</button>
                                        <button @onclick="() => DeleteExpectedIncome(inc)" class="text-gray-300 hover:text-red-600 transition font-bold">‚úï</button>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>

                <div class="bg-white rounded-lg border border-orange-200 shadow-md">
                    <div class="bg-[#e67e22] px-3 py-2 flex justify-between items-center text-white text-xs font-black uppercase tracking-wider"><span>Expected Expenses</span><button @onclick="() => OpenWatchModal()">Ôºã</button></div>
                    <div class="divide-y divide-gray-100 font-bold text-gray-800 tracking-tight">
                        @foreach(var item in (CurrentPeriod.WatchList ?? new()).OrderBy(x => x.DueDate ?? DateTime.MaxValue)) {
                            <div class="p-3 flex justify-between items-center hover:bg-orange-50 transition text-sm">
                                <div class="flex items-center gap-3">
                                    <div class="w-8 h-8 rounded-full bg-white border overflow-hidden flex items-center justify-center shadow-sm">
                                        @{ string watchImg = GetBudgetItemImage(item.ResolvedBudgetItemId); }
                                        @if(!string.IsNullOrEmpty(watchImg)){<img src="@watchImg" class="w-full h-full object-cover" />}
                                        else { <span class="text-[10px]">üîç</span> }
                                    </div>
                                    <div><div class="text-xs font-black truncate w-32 tracking-tighter">@item.Description</div><div class="text-[10px] text-gray-500 font-black uppercase tracking-widest">Due @(item.DueDate?.ToString("MM/dd") ?? "TBD")</div></div>
                                </div>
                                <div class="flex items-center gap-4 font-bold">
                                    <span class="font-mono">$@item.Amount.ToString("N2")</span>
                                    <div class="flex gap-2 font-black">
                                        <button @onclick="() => RealizeExpense(item)" class="text-gray-400 hover:text-green-600 transition text-lg" title="Realize to Ledger">‚úÖ</button>
                                        <button @onclick="() => OpenWatchModal(item)" class="text-gray-300 hover:text-orange-600 transition">‚úé</button>
                                        <button @onclick="() => DeleteWatchItem(item)" class="text-gray-300 hover:text-red-600 transition font-bold font-mono">‚úï</button>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    }

    @if (EditingTransaction != null) {
        <div class="fixed inset-0 bg-black/80 flex items-center justify-center z-50 p-4 backdrop-blur-sm text-gray-800">
            <div class="bg-white rounded-xl shadow-2xl w-full max-w-2xl overflow-hidden border border-gray-200 font-bold">
                <div class="bg-gray-100 px-4 py-3 border-b font-black text-gray-700 flex justify-between items-center text-sm uppercase tracking-widest"><span>Ledger Entry</span><button @onclick="() => { EditingTransaction = null; }" class="text-gray-400 text-xl font-bold">&times;</button></div>
                <div class="p-5 space-y-4 font-sans">
                    <div class="flex items-center gap-6 p-3 bg-gray-50 rounded-lg border border-gray-200">
                        <label class="flex items-center gap-2 cursor-pointer"><input type="radio" checked="@(!isCreditMode)" @onchange="@(() => isCreditMode = false)" class="w-4 h-4 text-red-600" /><span class="text-sm uppercase @(!isCreditMode ? "text-red-600" : "text-gray-400") font-black tracking-widest">Debit (Expense)</span></label>
                        <label class="flex items-center gap-2 cursor-pointer"><input type="radio" checked="@isCreditMode" @onchange="@(() => isCreditMode = true)" class="w-4 h-4 text-green-600" /><span class="text-sm uppercase @(isCreditMode ? "text-green-600" : "text-gray-400") font-black tracking-widest">Credit (Income)</span></label>
                    </div>
                    <div class="grid grid-cols-1 md:grid-cols-3 gap-4 font-mono"><div><label class="block text-[10px] font-black text-gray-500 uppercase mb-1">Date</label><input type="date" @bind="EditingTransaction.Date" class="w-full border rounded p-2 text-sm font-black" /></div><div class="md:col-span-2 font-sans"><label class="block text-[10px] font-black text-gray-500 uppercase mb-1">Description</label><input @bind="EditingTransaction.Description" class="w-full border rounded p-2 text-sm font-black" /></div></div>
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                        <div><label class="block text-[10px] font-black text-gray-500 uppercase mb-1">Amount ($)</label><input type="number" @bind="uiAmount" step="0.01" class="w-full border rounded p-2 text-lg font-mono font-bold @(isCreditMode ? "text-green-700 border-green-200 bg-green-50" : "text-red-700 border-red-200 bg-red-50")" /></div>
                        @if (isCreditMode) { <div><label class="block text-[10px] font-black text-green-700 uppercase mb-1 tracking-widest">Source (Mandatory)</label><select @bind="EditingTransaction.SourceStringId" class="w-full border border-green-300 rounded p-2 text-sm text-gray-800 bg-green-50 font-black tracking-wider">@foreach(var src in incomeSources){<option value="@src.StringId">@src.Name</option>}</select></div> }
                    </div>
                    <div class="border-t pt-4">
                        <div class="flex justify-between items-center mb-2"><label class="block text-[10px] font-black uppercase text-gray-500 tracking-tighter">Split Allocation</label><button class="text-xs text-blue-600 hover:underline font-bold" @onclick="AddSplit">üîÄ Add Multi-Budget Split</button></div>
                        @if (!EditingTransaction.Splits.Any()) { 
                            <select @bind="EditingTransaction.ResolvedBudgetItemId" class="w-full border rounded p-2 text-sm text-gray-800 font-black outline-none focus:border-blue-500">
                                <option value="">-- None / Uncategorized --</option>
                                @foreach(var item in FlatBudgetList){<option value="@item.Id">@item.Name</option>}
                            </select> 
                        }
                        else { 
                            @foreach (var split in EditingTransaction.Splits) { 
                                <div class="flex gap-2 items-center mb-2 text-gray-800">
                                    <select @bind="split.ResolvedBudgetItemId" class="flex-1 border rounded p-2 text-sm font-black">
                                        <option value="">-- None --</option>
                                        @foreach(var item in FlatBudgetList){<option value="@item.Id">@item.Name</option>}
                                    </select>
                                    <input type="number" @bind="split.Amount" step="0.01" class="w-24 border rounded p-2 text-sm font-mono text-right" />
                                    <button class="text-red-400 px-2 font-black" @onclick="() => { EditingTransaction.Splits.Remove(split); }">&times;</button>
                                </div> 
                            }
                            <button class="mt-2 text-xs bg-gray-200 px-2 py-1 rounded font-black text-gray-600 uppercase" @onclick="AddSplit">Ôºã Add Category Row</button>
                        }
                    </div>
                </div>
                <div class="bg-gray-50 px-4 py-3 flex justify-end gap-2 border-t font-black uppercase tracking-widest"><button @onclick="() => { EditingTransaction = null; }" class="px-4 py-2 text-xs text-gray-600 font-bold mr-2">Cancel</button><button @onclick="SaveTransaction" disabled="@(isCreditMode && string.IsNullOrEmpty(EditingTransaction.SourceStringId))" class="px-10 py-2 rounded text-xs bg-blue-600 text-white shadow-xl transition transform hover:scale-105 active:scale-95 font-black uppercase tracking-widest">Save</button></div>
            </div>
        </div>
    }

    @if (showIncomeSourcesModal) {
        <div class="fixed inset-0 bg-black/80 flex items-center justify-center z-[60] p-4 backdrop-blur-md text-gray-800">
            <div class="bg-white rounded-2xl shadow-2xl w-full max-w-2xl overflow-hidden border border-gray-300 font-bold">
                <div class="bg-green-600 px-6 py-4 flex justify-between items-center text-white text-sm uppercase font-black tracking-widest">
                    <span>Income Sources Control</span>
                    <button @onclick="() => { showIncomeSourcesModal = false; }" class="text-white hover:rotate-90 transition text-2xl font-bold">&times;</button>
                </div>

                <div class="p-6 overflow-y-auto max-h-[60vh] space-y-6 font-sans">
                    @foreach(var src in incomeSources) {
                        <div class="p-4 border border-gray-200 rounded-xl bg-gray-50/50 relative group transition hover:bg-white hover:shadow-lg">
                            <button @onclick="() => DeleteIncomeSource(src)" class="absolute top-2 right-2 text-gray-300 hover:text-red-500 font-black transition">‚úï</button>
                            <div class="grid grid-cols-[80px_1fr_120px] gap-6 items-center">
                                <div class="flex flex-col items-center gap-2">
                                    <div class="w-16 h-16 rounded-full border-2 border-green-100 bg-white overflow-hidden flex items-center justify-center shadow-inner">
                                        @if(!string.IsNullOrEmpty(src.ImgUrl)) { <img src="@src.ImgUrl" class="w-full h-full object-cover" /> }
                                        else { <span class="text-2xl font-black">üí∞</span> }
                                    </div>
                                    <label class="cursor-pointer bg-gray-200 hover:bg-gray-300 text-gray-600 px-2 py-0.5 rounded text-[8px] font-black uppercase transition">
                                        Upload <InputFile OnChange="@(e => HandleIncomeSourceFileUpload(e, src))" class="hidden" />
                                    </label>
                                </div>
                                <div class="space-y-3">
