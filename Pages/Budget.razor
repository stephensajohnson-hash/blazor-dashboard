@page "/budget-tracker"
@using Microsoft.AspNetCore.Components.Web
@rendermode RenderMode.InteractiveServer
@using Dashboard
@using Dashboard.Components.Bullet
@using Microsoft.EntityFrameworkCore
@using System.Text.Json
@inject IJSRuntime JS
@inject BudgetService BudgetService
@inject AppDbContext Db

<BulletHeader />

<div class="min-h-screen bg-gray-900 text-white p-6">
    <div class="flex justify-between items-center mb-8">
        <h1 class="text-3xl font-bold flex items-center gap-3">
            <span class="text-green-400">ðŸ’µ</span> Budget Tracker
        </h1>
        
        <div class="text-xs text-gray-500 font-mono">
            @(periods.Count) Period(s) Loaded
        </div>
    </div>

    @if (isLoading)
    {
        <div class="flex flex-col items-center justify-center py-20 space-y-4">
            <div class="w-12 h-12 border-4 border-blue-600 border-t-transparent rounded-full animate-spin"></div>
            <div class="text-gray-400 animate-pulse">Loading Budget...</div>
        </div>
    }
    else if (!periods.Any())
    {
        <div class="text-center py-20 border-2 border-dashed border-gray-700 rounded-xl bg-gray-800/30">
            <p class="text-gray-500 text-xl mb-2">No Budget Data Found.</p>
            <p class="text-sm text-gray-600">Start by adding a new Budget Period.</p>
        </div>
    }
    else
    {
        @foreach (var period in periods)
        {
            <div class="bg-gray-800 border border-gray-700 rounded-xl mb-12 overflow-hidden shadow-2xl">
                <div class="bg-gray-900 p-6 border-b border-gray-700 flex flex-col md:flex-row justify-between items-start md:items-center gap-6">
                    <div>
                        <h2 class="text-2xl font-bold text-white flex items-center gap-3">
                            @period.DisplayName
                            @if(period.StartDate > DateTime.UtcNow) 
                            { 
                                <span class="text-xs bg-blue-900 text-blue-200 px-2 py-0.5 rounded border border-blue-700 uppercase tracking-wider font-bold">Future</span> 
                            }
                        </h2>
                        <div class="text-sm text-gray-400 mt-1 flex gap-4">
                            <span>Start: <span class="text-gray-200 font-mono">@period.StartDate.ToShortDateString()</span></span>
                            <span>Opening: <span class="text-white font-mono">@period.InitialBankBalance.ToString("C")</span></span>
                        </div>
                    </div>
                    
                    <div class="flex gap-8 text-base font-bold bg-black/40 px-6 py-3 rounded-lg border border-gray-700/50 shadow-inner">
                        <div class="text-green-400 flex flex-col items-end leading-tight">
                            <span class="text-[10px] text-gray-500 uppercase tracking-widest mb-1">Income</span>
                            @period.Transactions.Where(t => t.Amount > 0).Sum(t => t.Amount).ToString("C0")
                        </div>
                        <div class="w-px bg-gray-700"></div>
                        <div class="text-red-400 flex flex-col items-end leading-tight">
                            <span class="text-[10px] text-gray-500 uppercase tracking-widest mb-1">Expenses</span>
                            @Math.Abs(period.Transactions.Where(t => t.Amount < 0).Sum(t => t.Amount)).ToString("C0")
                        </div>
                    </div>
                </div>

                <div class="p-6 grid lg:grid-cols-2 gap-8">
                    <div class="space-y-6">
                        <h3 class="text-sm font-bold text-blue-400 uppercase tracking-widest border-b border-gray-700 pb-2">Budget Cycles</h3>
                        @foreach (var cycle in period.Cycles.OrderBy(c => c.CycleNumber))
                        {
                            <div class="bg-gray-800/50 border border-gray-700 rounded-lg overflow-hidden">
                                <div class="bg-gray-900/50 px-4 py-2 border-b border-gray-700 flex justify-between items-center">
                                    <span class="font-bold text-gray-300 text-xs uppercase tracking-wider">@cycle.Label</span>
                                    <span class="text-[10px] text-gray-500">@cycle.Items.Count items</span>
                                </div>
                                <div class="divide-y divide-gray-700/50">
                                    @foreach (var item in cycle.Items)
                                    {
                                        <div class="flex items-center justify-between p-3 hover:bg-gray-700/30 transition group">
                                            <div class="flex items-center gap-3">
                                                @if(!string.IsNullOrEmpty(item.ImgUrl)) 
                                                { 
                                                    <img src="@item.ImgUrl" class="w-8 h-8 rounded object-cover bg-black/40 ring-1 ring-gray-700" /> 
                                                }
                                                else
                                                {
                                                    <div class="w-8 h-8 rounded bg-gray-700 flex items-center justify-center text-xs text-gray-400">ðŸ’°</div>
                                                }
                                                <div>
                                                    <div class="font-bold text-sm text-gray-200 group-hover:text-white transition">@item.Name</div>
                                                    @if(item.CarriedOver > 0) { <div class="text-[10px] text-yellow-500">Carry: @item.CarriedOver.ToString("C0")</div> }
                                                </div>
                                            </div>
                                            <div class="font-mono font-bold text-gray-300">@item.PlannedAmount.ToString("C0")</div>
                                        </div>
                                    }
                                </div>
                            </div>
                        }
                    </div>

                    <div class="space-y-8">
                        
                        <div class="bg-gray-800/30 border border-yellow-700/30 rounded-lg overflow-hidden">
                            <h3 class="text-sm font-bold text-yellow-400 uppercase tracking-widest px-4 py-2 bg-yellow-900/20 border-b border-yellow-700/30 flex justify-between items-center">
                                <span>Expected Income</span>
                                <span class="bg-yellow-900/40 text-yellow-200 px-2 py-0.5 rounded text-xs">
                                    @((period.ExpectedIncome ?? new List<BudgetExpectedIncome>()).Sum(x => x.Amount).ToString("C0"))
                                </span>
                            </h3>
                            @if(period.ExpectedIncome != null && period.ExpectedIncome.Any())
                            {
                                <div class="divide-y divide-gray-700/50">
                                    @foreach(var inc in period.ExpectedIncome.OrderBy(x => x.Date))
                                    {
                                        <div class="flex justify-between items-center p-3 text-sm hover:bg-white/5 transition">
                                            <div class="flex items-center gap-3">
                                                <div class="flex flex-col items-center justify-center bg-gray-800 w-10 h-10 rounded border border-gray-700">
                                                    <span class="text-[8px] text-gray-500 uppercase">@inc.Date.ToString("MMM")</span>
                                                    <span class="text-sm font-bold text-gray-200 leading-none">@inc.Date.Day</span>
                                                </div>
                                                <span class="text-gray-200 font-bold">@GetSourceName(inc.SourceStringId)</span> 
                                            </div>
                                            <span class="font-mono text-yellow-200 font-bold">@inc.Amount.ToString("C0")</span>
                                        </div>
                                    }
                                </div>
                            }
                            else { <div class="p-4 text-xs text-gray-500 italic text-center">No expected income.</div> }
                        </div>

                        <div class="bg-gray-800/30 border border-red-700/30 rounded-lg overflow-hidden">
                            <h3 class="text-sm font-bold text-red-400 uppercase tracking-widest px-4 py-2 bg-red-900/20 border-b border-red-700/30 flex justify-between items-center">
                                <span>Watch List</span>
                                <span class="bg-red-900/40 text-red-200 px-2 py-0.5 rounded text-xs">
                                    @((period.WatchList ?? new List<BudgetWatchItem>()).Sum(x => x.Amount).ToString("C0"))
                                </span>
                            </h3>
                            @if(period.WatchList != null && period.WatchList.Any())
                            {
                                <div class="divide-y divide-gray-700/50">
                                    @foreach(var item in period.WatchList.OrderBy(x => x.DueDate ?? DateTime.MaxValue))
                                    {
                                        <div class="flex justify-between items-center p-3 text-sm hover:bg-white/5 transition">
                                            <div class="flex items-center gap-3">
                                                <div class="flex flex-col items-center justify-center w-10 h-10 rounded border border-gray-700 @(item.DueDate == null ? "bg-gray-800" : "bg-red-900/20 border-red-800")">
                                                    @if(item.DueDate.HasValue)
                                                    {
                                                        <span class="text-[8px] text-gray-500 uppercase">@item.DueDate.Value.ToString("MMM")</span>
                                                        <span class="text-sm font-bold text-gray-200 leading-none">@item.DueDate.Value.Day</span>
                                                    }
                                                    else
                                                    {
                                                        <span class="text-[9px] font-bold text-gray-500">TBD</span>
                                                    }
                                                </div>

                                                <div>
                                                    <div class="text-gray-200 font-bold">@item.Description</div>
                                                </div>
                                            </div>
                                            <span class="font-mono text-red-200 font-bold">@item.Amount.ToString("C0")</span>
                                        </div>
                                    }
                                </div>
                            }
                            else { <div class="p-4 text-xs text-gray-500 italic text-center">All clear.</div> }
                        </div>

                        <div>
                            <h3 class="text-sm font-bold text-purple-400 uppercase tracking-widest border-b border-gray-700 pb-2 mb-4">Transactions</h3>
                            <div class="space-y-1 max-h-[500px] overflow-y-auto pr-2 scrollbar-thin scrollbar-thumb-gray-600 scrollbar-track-gray-800">
                                @foreach (var t in period.Transactions.OrderByDescending(x => x.Date))
                                {
                                    <div class="flex justify-between items-start p-3 rounded bg-gray-800 hover:bg-gray-700 transition border border-gray-700/50 text-sm group">
                                        <div class="flex-1">
                                            <div class="text-gray-200 font-bold group-hover:text-white transition">@t.Description</div>
                                            <div class="text-xs text-gray-500">@t.Date.ToString("MMM dd")</div>
                                            @if(t.Splits.Any()) 
                                            { 
                                                <div class="mt-1 space-y-1">
                                                    @foreach(var s in t.Splits) 
                                                    { 
                                                        <div class="text-[10px] text-gray-400 flex gap-2 pl-2 border-l-2 border-gray-600">
                                                            <span>â†³</span>
                                                            <span class="font-mono">@s.Amount.ToString("C")</span>
                                                            <span class="italic">@s.Note</span>
                                                        </div> 
                                                    }
                                                </div> 
                                            }
                                        </div>
                                        <div class="font-mono font-bold @(t.Amount >= 0 ? "text-green-400" : "text-white")">@t.Amount.ToString("C")</div>
                                    </div>
                                }
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        }
    }
</div>

@code {
    private int userId = 0;
    private bool isLoading = true;
    private List<BudgetPeriod> periods = new();
    private List<BudgetIncomeSource> incomeSources = new();

    private string GetSourceName(string sourceId) 
    { 
        var src = incomeSources.FirstOrDefault(s => s.StringId == sourceId); 
        return src != null ? src.Name : sourceId; 
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            try
            {
                var json = await JS.InvokeAsync<string>("localStorage.getItem", "dashboard_session");
                if (!string.IsNullOrEmpty(json))
                {
                    using (var doc = JsonDocument.Parse(json))
                    {
                        if (doc.RootElement.TryGetProperty("UserId", out var p) || 
                            doc.RootElement.TryGetProperty("userId", out p) || 
                            doc.RootElement.TryGetProperty("id", out p))
                        {
                            userId = p.GetInt32();
                            await LoadData();
                        }
                    }
                }
            }
            catch (Exception) { /* Handle error gracefully */ }
            finally { isLoading = false; StateHasChanged(); }
        }
    }

    private async Task LoadData()
    {
        if (userId == 0) return;
        
        // Load Global Definitions
        incomeSources = await Db.BudgetIncomeSources
            .Where(x => x.UserId == userId || x.UserId == 0)
            .ToListAsync();

        // Load Data via Service
        periods = await BudgetService.GetPeriods(userId);
    }
}