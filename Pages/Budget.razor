                Db.BudgetCycles.Add(newCycle); 
                await Db.SaveChangesAsync(); 
                foreach(var item in cycle.Items) { 
                    decimal spent = GetSpentForBudgetItem(item.Id); 
                    decimal totalAlloc = item.PlannedAmount + item.CarriedOver; 
                    decimal remaining = totalAlloc - spent; 
                    Db.BudgetItems.Add(new BudgetItem { BudgetCycleId = newCycle.Id, Name = item.Name, ImgUrl = item.ImgUrl, PlannedAmount = item.PlannedAmount, CarriedOver = remaining }); 
                } 
            } 
            foreach(var watch in CurrentPeriod.WatchList) { 
                Db.BudgetWatchItems.Add(new BudgetWatchItem { BudgetPeriodId = newPeriod.Id, Description = watch.Description, Amount = watch.Amount, DueDate = watch.DueDate?.AddMonths(1) }); 
            } 
            await Db.SaveChangesAsync(); 
            await LoadData(); 
            currentIndex = 0; 
        } catch { } 
    }

