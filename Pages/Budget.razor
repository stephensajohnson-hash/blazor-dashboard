@page "/budget-tracker"
@using Microsoft.AspNetCore.Components.Web
@rendermode RenderMode.InteractiveServer
@using Dashboard
@using Dashboard.Components.Bullet
@using Microsoft.EntityFrameworkCore
@using System.Globalization
@using Microsoft.JSInterop 
@using System.Text.Json 
@using System.IO 
@using Microsoft.AspNetCore.Components.Forms 
@inject IJSRuntime JS
@inject BudgetService BudgetService
@inject BulletBaseService BulletBase
@inject AppDbContext Db
@inject Microsoft.AspNetCore.Hosting.IWebHostEnvironment Env

<BulletHeader />

<div class="min-h-screen bg-[#1e2124] text-gray-800 p-4 font-sans relative text-sm font-medium">

    <div class="bg-black border border-gray-700 rounded-xl p-4 mb-6 shadow-2xl overflow-hidden text-white">
        <div class="flex justify-between items-center mb-3">
            <h3 class="text-xs font-black text-blue-400 uppercase tracking-widest">Financial Ops Console</h3>
            <div class="flex flex-wrap gap-2">
                <button @onclick="CopyLogsToClipboard" class="bg-gray-700 hover:bg-gray-600 text-white text-[10px] font-bold px-3 py-1 rounded transition">üìã Copy Logs</button>
                <button @onclick="RepairWatchLinks" class="bg-blue-900 hover:bg-blue-800 text-white text-[10px] font-bold px-3 py-1 rounded transition border border-blue-400">üîó 2. Link Items</button>
                <button @onclick="RestoreFromJsonFiles" class="bg-green-700 hover:bg-green-600 text-white text-[10px] font-bold px-3 py-1 rounded transition border border-green-500">üõü 5. Restore JSON</button>
                <button @onclick="() => debugLogs.Clear()" class="text-gray-500 hover:text-gray-300 text-[10px] font-bold px-2">Clear</button>
            </div>
        </div>
        <div id="debug-log-container" class="bg-[#0c0c0c] rounded border border-gray-900 h-24 overflow-y-auto p-3 font-mono text-[10px] leading-relaxed flex flex-col-reverse text-gray-400">
            @foreach (var log in ((IEnumerable<string>)debugLogs).Reverse()) {
                <div class="border-b border-gray-900 py-1 @(log.Contains("Confirmed") || log.Contains("SUCCESS") ? "text-green-400" : (log.Contains("FAIL") || log.Contains("Wait") ? "text-yellow-400" : ""))">@log</div>
            }
        </div>
    </div>
    
    @if (isLoading)
    {
        <div class="flex flex-col items-center justify-center h-[60vh]">
            <div class="w-16 h-16 border-4 border-blue-500 border-t-transparent rounded-full animate-spin"></div>
            <div class="text-gray-400 mt-6 animate-pulse font-bold uppercase tracking-widest text-xs text-center leading-loose">
                Synchronizing Database Node...<br/>
                <span class="text-[10px] font-mono text-blue-400">UserId Verification in Progress</span>
            </div>
        </div>
    }
    else if (userId == 0 || CurrentPeriod == null)
    {
        <div class="flex flex-col items-center justify-center h-[60vh] border-2 border-dashed border-gray-700 rounded-xl bg-gray-800/30 p-10 text-center text-white">
            <div class="text-5xl mb-6">üì°</div>
            <p class="text-red-400 text-xl mb-2 font-bold font-mono">IDENTITY_TIMEOUT</p>
            <p class="text-sm text-gray-500 mb-8 max-w-sm mx-auto">The application was unable to verify your session from the browser's storage. Check if your login is still valid.</p>
            <button @onclick="ManualBoot" class="bg-blue-600 hover:bg-blue-500 px-10 py-4 rounded text-xs font-bold uppercase shadow-2xl transition-all active:scale-95 border border-blue-400">
                üîÑ Retry Global Sync
            </button>
        </div>
    }
    else
    {
        <div class="bg-[#282b30] rounded-xl border border-gray-700 shadow-2xl mb-6 overflow-hidden">
            <div class="p-4 border-b border-gray-700 flex flex-col md:flex-row justify-between items-center gap-4">
                <div class="flex items-center gap-4 text-white">
                    <button @onclick="PrevPeriod" class="p-2 hover:bg-gray-700 rounded-full transition" disabled="@(!CanGoBack)">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" /></svg>
                    </button>
                    <h1 class="text-xl font-bold tracking-wide">@CurrentPeriod.DisplayName</h1>
                    <button @onclick="NextPeriod" class="p-2 hover:bg-gray-700 rounded-full transition" disabled="@(!CanGoNext)">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" /></svg>
                    </button>
                </div>
                <button class="bg-green-600 hover:bg-green-500 text-white text-xs font-bold py-2.5 px-6 rounded shadow-lg transition uppercase tracking-widest" @onclick="() => OpenTransactionModal()">+ New Entry</button>
            </div>

            <div class="grid grid-cols-2 md:grid-cols-4 lg:grid-cols-8 divide-x divide-y md:divide-y-0 divide-gray-700 bg-[#2c2f33]">
                <div class="p-3 text-center">
                    <div class="text-[9px] text-gray-500 font-black uppercase mb-1">Initial Start</div>
                    <div class="text-xs font-mono text-white">$@CurrentPeriod.InitialBankBalance.ToString("N2")</div>
                </div>
                <div class="p-3 text-center">
                    <div class="text-[9px] text-green-500/70 font-black uppercase mb-1">Income Received</div>
                    <div class="text-xs font-mono text-green-400">+$@ActualIncome.ToString("N2")</div>
                </div>
                <div class="p-3 text-center">
                    <div class="text-[9px] text-red-500/70 font-black uppercase mb-1">Actual Spent</div>
                    <div class="text-xs font-mono text-red-400">-$@ActualExpenses.ToString("N2")</div>
                </div>
                <div class="p-3 text-center">
                    <div class="text-[9px] text-green-500/40 font-black uppercase mb-1">Exp Income</div>
                    <div class="text-xs font-mono text-green-600">$@ExpectedIncomeTotal.ToString("N2")</div>
                </div>
                <div class="p-3 text-center">
                    <div class="text-[9px] text-red-500/40 font-black uppercase mb-1">Exp Expense</div>
                    <div class="text-xs font-mono text-red-600">$@ExpectedExpensesTotal.ToString("N2")</div>
                </div>
                <div class="p-3 text-center bg-black/20">
                    <div class="text-[9px] text-blue-400 font-black uppercase mb-1">Bank Bal</div>
                    <div class="text-xs font-mono text-blue-300 font-bold">$@CurrentBalance.ToString("N2")</div>
                </div>
                <div class="p-3 text-center bg-blue-900/20 border-x-2 border-blue-500/40">
                    <div class="text-[9px] text-blue-200 font-black uppercase mb-1">Available Funds</div>
                    <div class="text-xs font-mono text-blue-400 font-bold">$@AvailableFunds.ToString("N2")</div>
                </div>
                <div class="p-3 text-center @(Unaccounted == 0 ? "bg-green-900/10" : "bg-red-900/10")">
                    <div class="text-[9px] text-gray-500 font-black uppercase mb-1">Unaccounted</div>
                    <div class="text-xs font-mono font-bold @(Unaccounted == 0 ? "text-green-400" : "text-red-400")">
                        @(Unaccounted == 0 ? "BALANCED" : "$" + Unaccounted.ToString("N2"))
                    </div>
                </div>
            </div>
        </div>

        <div class="grid lg:grid-cols-[60%_40%] gap-6">
            <div class="bg-white rounded-xl shadow-xl overflow-hidden flex flex-col h-[calc(100vh-380px)] border border-gray-300 text-gray-800">
                <div class="p-3 bg-gray-100 border-b border-gray-300 font-bold text-gray-600 text-[10px] uppercase grid grid-cols-[110px_1fr_100px_100px_30px] gap-4 items-center">
                    <span class="pl-2">Date</span><span>Description</span><span class="text-right">Amount</span><span class="text-right pr-2">Balance</span><span></span>
                </div>
                <div class="overflow-y-auto flex-1 scrollbar-thin scrollbar-thumb-gray-400 scrollbar-track-gray-100">
                    @{
                        decimal runningBalance = CurrentPeriod.InitialBankBalance;
                        var sortedTrans = CurrentPeriod.Transactions.OrderBy(t => t.Date).ToList();
                        foreach(var t in sortedTrans) {
                            runningBalance += t.Amount; string imgUrl = GetTransactionImage(t);
                            <div class="grid grid-cols-[110px_1fr_100px_100px_30px] gap-4 items-center p-3 border-b hover:bg-blue-50 transition group text-sm">
                                <div class="flex items-center gap-3 pl-2">
                                    <img src="@(string.IsNullOrEmpty(imgUrl) ? "https://cdn-icons-png.flaticon.com/512/3233/3233483.png" : imgUrl)" class="w-8 h-8 rounded-full object-cover border" />
                                    <div class="text-gray-500 font-mono text-xs">@t.Date.ToString("MMM dd")</div>
                                </div>
                                <div class="truncate flex items-center gap-2">@t.Description @if(t.Splits.Any()){ <span class="text-xs" title="Split">üîÄ</span> }</div>
                                <div class="text-right font-mono font-bold @(t.Amount >= 0 ? "text-green-600" : "text-red-600")">$@t.Amount.ToString("N2")</div>
                                <div class="text-right pr-2 font-mono text-gray-400">$@runningBalance.ToString("N2")</div>
                                <button class="text-gray-300 hover:text-blue-600 transition" @onclick="() => OpenTransactionModal(t)"><svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.232 5.232l3.536 3.536m-2.036-5.036a2.5 2.5 0 113.536 3.536L6.5 21.036H3v-3.572L16.732 3.732z" /></svg></button>
                            </div>
                        }
                    }
                </div>
            </div>

            <div class="space-y-6 h-[calc(100vh-380px)] overflow-y-auto pr-2 scrollbar-hide pb-20">
                @foreach (var cycle in CurrentPeriod.Cycles.OrderBy(c => c.CycleNumber)) {
                    <div class="bg-white rounded-lg border border-gray-300 shadow-md overflow-hidden">
                        <div class="bg-gray-100 px-4 py-3 border-b flex justify-between items-center text-gray-700 uppercase font-bold text-xs tracking-wider text-gray-800"><span>@cycle.Label</span></div>
                        <div class="divide-y divide-gray-100">
                            @foreach (var item in cycle.Items) {
                                decimal rawSpent = GetSpentForBudgetItem(item.Id);
                                decimal total = item.PlannedAmount + item.CarriedOver + (rawSpent < 0 ? Math.Abs(rawSpent) : 0);
                                decimal spending = rawSpent > 0 ? rawSpent : 0;
                                decimal rem = total - spending;
                                bool isEx = ExpandedItemId == item.Id;

                                <div class="p-4 hover:bg-gray-50 cursor-pointer border-l-4 @(isEx ? "border-blue-500 bg-blue-50" : "border-transparent") text-gray-800" @onclick="() => ToggleExpand(item.Id)">
                                    <div class="flex justify-between items-end mb-1">
                                        <div class="flex items-center gap-2 font-bold text-sm"><img src="@item.ImgUrl" class="w-5 h-5 rounded-full object-cover" onerror="this.style.display='none'" /><span>@item.Name</span></div>
                                        <div class="flex items-center gap-3"><span class="text-sm font-bold @(rem < 0 ? "text-red-600" : "text-green-600")">$@rem.ToString("N2")</span><button class="text-gray-300 hover:text-blue-600 p-1" @onclick:stopPropagation="true" @onclick="() => OpenEditModal(item)"><svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.232 5.232l3.536 3.536m-2.036-5.036a2.5 2.5 0 113.536 3.536L6.5 21.036H3v-3.572L16.732 3.732z" /></svg></button></div>
                                    </div>
                                    <div class="w-full h-2 bg-gray-200 rounded-full overflow-hidden"><div class="bg-blue-500 h-full transition-all duration-500" style="width: @(total > 0 ? Math.Min((double)(spending/total)*100, 100) : 0)%"></div></div>
                                </div>
                                @if(isEx) {
                                    <div class="bg-gray-100 border-y p-3 shadow-inner">
                                        <table class="w-full text-[10px] text-gray-700">
                                            <thead><tr class="text-gray-500 uppercase text-left border-b border-gray-300 font-bold"><th class="pb-1">Date</th><th class="pb-1">Desc</th><th class="pb-1 text-right">Amt</th></tr></thead>
                                            <tbody class="divide-y divide-gray-200">
                                                @foreach(var h in GetItemHistory(item.Id)) { <tr class="hover:bg-gray-50"><td class="py-1 font-mono">@h.Date.ToString("MM/dd")</td><td class="py-1 truncate max-w-[120px]">@h.Desc</td><td class="py-1 text-right font-bold @(h.Amount < 0 ? "text-green-600" : "text-red-600")">$@Math.Abs(h.Amount).ToString("N2")</td></tr> }
                                            </tbody>
                                        </table>
                                    </div>
                                }
                            }
                        </div>
                    </div>
                }

                <div class="bg-white rounded-lg border border-green-200 shadow-md">
                    <div class="bg-green-600 px-3 py-2 flex justify-between items-center text-white text-xs font-bold uppercase"><span>Exp Income</span><button @onclick="() => OpenIncomeModal()">+</button></div>
                    <div class="divide-y divide-gray-100">
                        @foreach(var inc in (CurrentPeriod.ExpectedIncome ?? new()).OrderBy(x => x.Date)) {
                            <div class="p-3 flex justify-between items-center hover:bg-green-50 text-gray-800">
                                <div class="flex items-center gap-2"><img src="@GetSourceImage(inc.SourceStringId)" class="w-8 h-8 rounded-full border" /><div><div class="text-xs font-bold">@GetSourceName(inc.SourceStringId)</div><div class="text-[10px] text-gray-500 font-mono font-bold uppercase">Due @inc.Date.ToString("MM/dd")</div></div></div>
                                <div class="flex items-center gap-3"><span class="text-green-600 font-bold">+$@inc.Amount.ToString("N2")</span><button @onclick="() => OpenIncomeModal(inc)" class="text-gray-300 hover:text-green-600"><svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.232 5.232l3.536 3.536m-2.036-5.036a2.5 2.5 0 113.536 3.536L6.5 21.036H3v-3.572L16.732 3.732z" /></svg></button></div>
                            </div>
                        }
                    </div>
                </div>

                <div class="bg-white rounded-lg border border-orange-200 shadow-md">
                    <div class="bg-[#e67e22] px-3 py-2 flex justify-between items-center text-white text-xs font-bold uppercase"><span>Exp Expenses</span><button @onclick="() => OpenWatchModal()">+</button></div>
                    <div class="divide-y divide-gray-100 font-medium text-gray-800">
                        @foreach(var item in (CurrentPeriod.WatchList ?? new()).OrderBy(x => x.DueDate ?? DateTime.MaxValue)) {
                            <div class="p-3 flex justify-between items-center hover:bg-orange-50 transition text-sm">
                                <div class="flex items-center gap-3">
                                    <div class="w-8 h-8 rounded-full bg-white border overflow-hidden flex items-center justify-center">
                                        @{ string watchImg = GetBudgetItemImage(item.ResolvedBudgetItemId); }
                                        @if(!string.IsNullOrEmpty(watchImg)){<img src="@watchImg" class="w-full h-full object-cover" />}
                                        else { <span class="text-[12px] text-red-500">‚ö†Ô∏è</span> }
                                    </div>
                                    <div><div class="text-xs font-bold truncate w-32">@item.Description</div><div class="text-[10px] text-gray-500 uppercase font-bold">Due: @(item.DueDate?.ToString("MM/dd") ?? "TBD")</div></div>
                                </div>
                                <div class="flex items-center gap-3 text-right">
                                    <span class="font-mono font-bold">$@item.Amount.ToString("N2")</span>
                                    <button class="text-gray-300 hover:text-orange-600 transition" @onclick="() => OpenWatchModal(item)"><svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.232 5.232l3.536 3.536m-2.036-5.036a2.5 2.5 0 113.536 3.536L6.5 21.036H3v-3.572L16.732 3.732z" /></svg></button>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    }

    @if (EditingTransaction != null) {
        <div class="fixed inset-0 bg-black/80 flex items-center justify-center z-50 p-4 backdrop-blur-sm text-gray-800 font-medium">
            <div class="bg-white rounded-xl shadow-2xl w-full max-w-2xl overflow-hidden border border-gray-200">
                <div class="bg-gray-100 px-4 py-3 border-b font-bold text-gray-700 flex justify-between items-center text-sm uppercase"><span>Transaction Details</span><button @onclick="() => EditingTransaction = null" class="text-gray-400 text-xl font-bold">&times;</button></div>
                <div class="p-5 space-y-4">
                    <div class="grid grid-cols-1 md:grid-cols-3 gap-4"><div><label class="block text-[10px] font-bold text-gray-500 uppercase">Date</label><input type="date" @bind="EditingTransaction.Date" class="w-full border rounded p-2 text-sm" /></div><div class="md:col-span-2"><label class="block text-[10px] font-bold text-gray-500 uppercase">Description</label><input @bind="EditingTransaction.Description" class="w-full border rounded p-2 text-sm" /></div></div>
                    <div><label class="block text-[10px] font-bold text-gray-500 uppercase">Amount</label><input type="number" @bind="EditingTransaction.Amount" step="0.01" class="w-full border rounded p-2 text-lg font-mono font-bold @(EditingTransaction.Amount >= 0 ? "text-green-700" : "text-red-700")" /></div>
                    <div class="border-t pt-4">
                        <div class="flex justify-between items-center mb-2"><label class="block text-[10px] font-bold uppercase text-gray-500">Allocation / Split</label><button class="text-xs text-blue-600 hover:underline" @onclick="AddSplit">üîÄ Add Multi-Budget Split</button></div>
                        @if (!EditingTransaction.Splits.Any()) { <select @bind="EditingTransaction.ResolvedBudgetItemId" class="w-full border rounded p-2 text-sm text-gray-800">@foreach(var item in FlatBudgetList){<option value="@item.Id">@item.Name</option>}</select> }
                        else { 
                            @foreach (var split in EditingTransaction.Splits) { <div class="flex gap-2 items-center mb-2 text-gray-800"><select @bind="split.ResolvedBudgetItemId" class="flex-1 border rounded p-2 text-sm">@foreach(var item in FlatBudgetList){<option value="@item.Id">@item.Name</option>}</select><input type="number" @bind="split.Amount" step="0.01" class="w-24 border rounded p-2 text-sm font-mono text-right" /><button class="text-red-400 px-2" @onclick="() => EditingTransaction.Splits.Remove(split)">&times;</button></div> }
                            <button class="mt-2 text-xs bg-gray-200 px-2 py-1 rounded font-bold text-gray-600 uppercase" @onclick="AddSplit">+ Add Category</button>
                        }
                    </div>
                </div>
                <div class="bg-gray-50 px-4 py-3 flex justify-end gap-2 border-t font-bold uppercase"><button @onclick="() => EditingTransaction = null" class="px-4 py-2 text-xs text-gray-600">Cancel</button><button @onclick="SaveTransaction" class="px-4 py-2 text-xs bg-blue-600 text-white rounded shadow uppercase transition hover:bg-blue-500">Save</button></div>
            </div>
        </div>
    }
</div>

@code {
    private List<string> debugLogs = new();
    private int userId = 0;
    private bool isLoading = true;
    private List<BudgetPeriod> periods = new();
    private List<BudgetIncomeSource> incomeSources = new();
    private List<BudgetItem> FlatBudgetList = new(); 
    private int currentIndex = 0;
    private int? ExpandedItemId = null;
    
    // Modal Entities
    private BudgetItem? EditingItem = null; 
    private BudgetExpectedIncome? EditingIncome = null;
    private BudgetWatchItem? EditingWatch = null;
    private BudgetTransaction? EditingTransaction = null;

    private BudgetPeriod? CurrentPeriod => periods.Count > 0 && currentIndex < periods.Count ? periods[currentIndex] : null;

    // --- FINANCIAL TOTALS ---
    private decimal CurrentBalance => CurrentPeriod == null ? 0 : Math.Round(CurrentPeriod.InitialBankBalance + CurrentPeriod.Transactions.Sum(t => t.Amount), 2);
    private decimal ActualIncome => CurrentPeriod?.Transactions.Where(t => t.Amount > 0).Sum(t => t.Amount) ?? 0;
    private decimal ActualExpenses => CurrentPeriod?.Transactions.Where(t => t.Amount < 0).Sum(t => Math.Abs(t.Amount)) ?? 0;
    private decimal ExpectedIncomeTotal => CurrentPeriod?.ExpectedIncome.Sum(i => i.Amount) ?? 0;
    private decimal ExpectedExpensesTotal => CurrentPeriod?.WatchList.Sum(e => e.Amount) ?? 0;
    
    // Formula: Bank Bal - Exp Expenses
    private decimal AvailableFunds => Math.Round(CurrentBalance - ExpectedExpensesTotal, 2);

    private decimal Unaccounted {
        get {
            if (CurrentPeriod == null) return 0;
            decimal totalBucketRemaining = 0;
            foreach(var item in FlatBudgetList) {
                decimal rawSpent = GetSpentForBudgetItem(item.Id);
                decimal totalAvail = item.PlannedAmount + item.CarriedOver + (rawSpent < 0 ? Math.Abs(rawSpent) : 0);
                decimal spending = rawSpent > 0 ? rawSpent : 0;
                totalBucketRemaining += (totalAvail - spending);
            }
            // Formula: (Bank Balance + Expected Income) - Sum of category balances
            return Math.Round((CurrentBalance + ExpectedIncomeTotal) - totalBucketRemaining, 2);
        }
    }

    private void Log(string msg) { debugLogs.Add($"[{DateTime.Now:HH:mm:ss}] {msg}"); StateHasChanged(); }

    // === RE-ARCHITECTED AGGRESSIVE BOOTLOADER ===
    protected override async Task OnAfterRenderAsync(bool firstRender) {
        if (firstRender) {
            await ManualBoot();
        }
    }

    private async Task ManualBoot() {
        Log("Bootloader: Active.");
        isLoading = true;
        StateHasChanged();
        
        int attempts = 0;
        while (userId == 0 && attempts < 20) {
            try {
                var json = await JS.InvokeAsync<string>("localStorage.getItem", "dashboard_session");
                if (!string.IsNullOrEmpty(json)) {
                    using var doc = JsonDocument.Parse(json);
                    JsonElement p;
                    if (doc.RootElement.TryGetProperty("UserId", out p) || doc.RootElement.TryGetProperty("id", out p)) {
                        userId = p.GetInt32();
                        Log($"Identity Confirmed: User {userId}");
                        await LoadData();
                        return;
                    }
                }
            } catch { }
            attempts++;
            await Task.Delay(500); 
        }
        
        Log("FAIL: Global Sync Timeout.");
        isLoading = false;
        StateHasChanged();
    }

    private async Task LoadData() {
        if (userId == 0) return;
        try {
            periods = await BudgetService.GetPeriods(userId);
            incomeSources = await Db.BudgetIncomeSources.Where(x => x.UserId == userId || x.UserId == 0).ToListAsync();
            RefreshFlatList();
            Log($"Success: {periods.Count} budget periods synced.");
        } catch (Exception ex) { 
            Log($"DB_LOAD_FAIL: {ex.Message}"); 
        } finally {
            isLoading = false;
            StateHasChanged();
        }
    }

    private async Task RepairWatchLinks() {
        if (CurrentPeriod == null) return;
        try {
            var cycleIds = await Db.BudgetCycles.Where(c => c.BudgetPeriodId == CurrentPeriod.Id).Select(c => c.Id).ToListAsync();
            var items = await Db.BudgetItems.Where(i => cycleIds.Contains(i.BudgetCycleId)).ToListAsync();
            var watchItems = await Db.BudgetWatchItems.Where(w => w.BudgetPeriodId == CurrentPeriod.Id).ToListAsync();
            foreach(var w in watchItems) { 
                var match = items.FirstOrDefault(i => string.Equals(i.Name, w.Description, StringComparison.OrdinalIgnoreCase)); 
                if(match != null) w.ResolvedBudgetItemId = match.Id;
            }
            await Db.SaveChangesAsync(); await LoadData(); Log("Watch items linked.");
        } catch { }
    }

    private async Task RestoreFromJsonFiles() {
        try {
            string[] files = { "budget_dec25.json", "budget_jan26.json" };
            foreach (var fileName in files) {
                var path = Path.Combine(Env.WebRootPath, fileName);
                if (!File.Exists(path)) continue;
                var json = await File.ReadAllTextAsync(path);
                using var doc = JsonDocument.Parse(json);
                if (doc.RootElement.TryGetProperty("periods", out var periodsArray)) {
                    foreach (var periodEl in periodsArray.EnumerateArray()) {
                        string jsonDisplayName = periodEl.GetProperty("displayName").GetString() ?? "";
                        var dbPeriod = periods.FirstOrDefault(p => string.Equals(p.DisplayName, jsonDisplayName, StringComparison.OrdinalIgnoreCase));
                        if (dbPeriod != null && periodEl.TryGetProperty("watchList", out var watchList)) {
                            var old = await Db.BudgetWatchItems.Where(w => w.BudgetPeriodId == dbPeriod.Id).ToListAsync();
                            Db.BudgetWatchItems.RemoveRange(old);
                            foreach (var item in watchList.EnumerateArray()) {
                                Db.BudgetWatchItems.Add(new BudgetWatchItem {
                                    BudgetPeriodId = dbPeriod.Id,
                                    Description = GetJsonString(item, "description"),
                                    Amount = GetJsonDecimal(item, "amount"),
                                    DueDate = GetJsonDateTimeWithTBDFix(item, "dueDate")
                                });
                            }
                        }
                    }
                }
            }
            await Db.SaveChangesAsync(); await LoadData(); Log("JSON Restoration successful.");
        } catch { }
    }

    private string GetJsonString(JsonElement el, string name) { foreach(var p in el.EnumerateObject()) if(string.Equals(p.Name, name, StringComparison.OrdinalIgnoreCase)) return p.Value.GetString() ?? ""; return ""; }
    private decimal GetJsonDecimal(JsonElement el, string name) { foreach(var p in el.EnumerateObject()) if(string.Equals(p.Name, name, StringComparison.OrdinalIgnoreCase)) return p.Value.GetDecimal(); return 0; }
    private DateTime? GetJsonDateTimeWithTBDFix(JsonElement el, string name) {
        foreach(var p in el.EnumerateObject()) if(string.Equals(p.Name, name, StringComparison.OrdinalIgnoreCase)) {
            string v = p.Value.GetString() ?? ""; if(v == "TBD" || string.IsNullOrEmpty(v)) return null; if(DateTime.TryParse(v, out DateTime r)) return r;
        }
        return null;
    }

