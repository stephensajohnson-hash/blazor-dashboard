@page "/budget-tracker"
@using Microsoft.AspNetCore.Components.Web
@rendermode RenderMode.InteractiveServer
@using Dashboard
@using Dashboard.Components.Bullet
@using Microsoft.EntityFrameworkCore
@using System.Globalization
@using Microsoft.JSInterop 
@using System.Text.Json 
@using System.IO 
@using Microsoft.AspNetCore.Components.Forms 
@inject IJSRuntime JS
@inject BudgetService BudgetService
@inject BulletBaseService BulletBase
@inject AppDbContext Db
@inject Microsoft.AspNetCore.Hosting.IWebHostEnvironment Env

<BulletHeader />

<div class="min-h-screen bg-[#1e2124] text-gray-800 p-4 font-sans relative">

    <div class="bg-black border border-gray-700 rounded-xl p-4 mb-6 shadow-2xl overflow-hidden text-white">
        <div class="flex justify-between items-center mb-3">
            <h3 class="text-xs font-black text-blue-400 uppercase tracking-widest">Diagnostic Console v17.0</h3>
            <div class="flex gap-2">
                <button @onclick="FixWatchTableStructure" class="bg-red-900 hover:bg-red-800 text-white text-[10px] font-bold px-3 py-1 rounded transition border border-red-700">üî® Fix DB Table</button>
                <button @onclick="ClaimOrphanedData" class="bg-yellow-900 hover:bg-yellow-800 text-white text-[10px] font-bold px-3 py-1 rounded transition border border-yellow-700">‚ö†Ô∏è Claim All Data</button>
                <button @onclick="() => debugLogs.Clear()" class="text-gray-500 hover:text-gray-300 text-[10px] font-bold px-2">Clear</button>
            </div>
        </div>
        <div class="bg-[#0c0c0c] rounded border border-gray-900 h-32 overflow-y-auto p-3 font-mono text-[10px] leading-relaxed flex flex-col-reverse">
            @foreach (var log in ((IEnumerable<string>)debugLogs).Reverse()) {
                <div class="border-b border-gray-900 py-1 @(log.Contains("FAIL") ? "text-red-400" : "text-green-400")">@log</div>
            }
        </div>
    </div>
    
    @if (isLoading)
    {
        <div class="flex flex-col items-center justify-center h-[40vh]">
            <div class="w-12 h-12 border-4 border-blue-500 border-t-transparent rounded-full animate-spin"></div>
            <div class="text-gray-400 mt-4 animate-pulse">Checking Data Stream...</div>
        </div>
    }
    else if (CurrentPeriod == null)
    {
        <div class="flex flex-col items-center justify-center h-[40vh] border-2 border-dashed border-gray-700 rounded-xl bg-gray-800/30 p-10 text-center">
            <p class="text-gray-400 text-xl mb-2 font-bold font-mono text-red-400">NO_DATA_RETURNED</p>
            <p class="text-sm text-gray-500">UserId: @userId | DB Count: @totalDbCount</p>
            <button @onclick="RefreshData" class="mt-4 bg-blue-600 text-white px-4 py-2 rounded text-xs font-bold">üîÑ Retry Load</button>
        </div>
    }
    else
    {
        <div class="bg-[#282b30] p-4 rounded-t-xl border-b border-gray-700 shadow-lg mb-6">
            <div class="flex flex-col md:flex-row justify-between items-center gap-4">
                <div class="text-sm font-mono text-gray-400 flex gap-4">
                    <span>Start: <span class="text-white font-bold">$@CurrentPeriod.InitialBankBalance.ToString("N2")</span></span>
                    <span>Current: <span class="@GetBalanceColor(CurrentBalance)">$@CurrentBalance.ToString("N2")</span></span>
                </div>
                <div class="flex items-center gap-6 text-white">
                    <button @onclick="PrevPeriod" class="p-2 hover:bg-gray-700 rounded-full transition" disabled="@(!CanGoBack)">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" /></svg>
                    </button>
                    <h1 class="text-xl font-bold tracking-wide">@CurrentPeriod.DisplayName</h1>
                    <button @onclick="NextPeriod" class="p-2 hover:bg-gray-700 rounded-full transition" disabled="@(!CanGoNext)">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" /></svg>
                    </button>
                </div>
                <button class="bg-green-600 hover:bg-green-500 text-white text-sm font-bold py-2 px-4 rounded shadow transition" @onclick="() => OpenTransactionModal()">+ Add Transaction</button>
            </div>
        </div>

        <div class="grid lg:grid-cols-[60%_40%] gap-6">
            
            <div class="bg-white rounded-xl shadow-xl overflow-hidden flex flex-col h-[calc(100vh-320px)] border border-gray-300">
                <div class="p-3 bg-gray-100 border-b border-gray-300 font-bold text-gray-600 text-xs grid grid-cols-[110px_1fr_100px_100px_30px] gap-4">
                    <span class="pl-2 uppercase">Date</span><span class="uppercase">Description</span><span class="text-right uppercase">Amount</span><span class="text-right pr-2 uppercase">Balance</span><span></span>
                </div>
                <div class="overflow-y-auto flex-1">
                    @{
                        decimal runningBalance = CurrentPeriod.InitialBankBalance;
                        foreach(var t in CurrentPeriod.Transactions.OrderBy(t => t.Date)) {
                            runningBalance += t.Amount; string img = GetTransactionImage(t);
                            <div class="grid grid-cols-[110px_1fr_100px_100px_30px] gap-4 items-center p-3 border-b hover:bg-blue-50 transition text-sm">
                                <div class="flex items-center gap-3 pl-2"><img src="@(string.IsNullOrEmpty(img) ? "/images/placeholder.png" : img)" class="w-8 h-8 rounded-full border" /><div class="text-gray-500 font-mono text-xs">@t.Date.ToString("MMM dd")</div></div>
                                <div class="text-gray-800 font-medium truncate flex items-center gap-2">@t.Description @if(t.Splits.Any()){ <span class="text-xs">üîÄ</span> }</div>
                                <div class="text-right font-mono font-bold @(t.Amount >= 0 ? "text-green-600" : "text-red-600")">$@t.Amount.ToString("N2")</div>
                                <div class="text-right pr-2 font-mono text-gray-400">$@runningBalance.ToString("N2")</div>
                                <button class="text-gray-400 hover:text-blue-600" @onclick="() => OpenTransactionModal(t)"><svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.232 5.232l3.536 3.536m-2.036-5.036a2.5 2.5 0 113.536 3.536L6.5 21.036H3v-3.572L16.732 3.732z" /></svg></button>
                            </div>
                        }
                    }
                </div>
            </div>

            <div class="space-y-6 h-[calc(100vh-320px)] overflow-y-auto pr-2">
                @foreach (var cycle in CurrentPeriod.Cycles.OrderBy(c => c.CycleNumber)) {
                    <div class="bg-white rounded-lg border border-gray-300 shadow-md overflow-hidden">
                        <div class="bg-gray-100 px-4 py-3 border-b flex justify-between items-center"><span class="font-bold text-sm uppercase">@cycle.Label</span></div>
                        <div class="divide-y divide-gray-100">
                            @foreach (var item in cycle.Items) {
                                decimal spent = GetSpentForBudgetItem(item.Id);
                                decimal total = item.PlannedAmount + item.CarriedOver;
                                decimal rem = total - spent;
                                <div class="p-4 hover:bg-gray-50 cursor-pointer" @onclick="() => ToggleExpand(item.Id)">
                                    <div class="flex justify-between items-end mb-1">
                                        <div class="flex items-center gap-2"><img src="@item.ImgUrl" class="w-5 h-5 rounded-full object-cover" /><span class="font-bold text-sm">@item.Name</span></div>
                                        <span class="text-sm font-bold @(rem < 0 ? "text-red-600" : "text-green-600")">$@rem.ToString("N2")</span>
                                    </div>
                                    <div class="w-full h-2 bg-gray-200 rounded-full overflow-hidden"><div class="bg-blue-500 h-full" style="width: @(total > 0 ? Math.Min((double)(spent/total)*100, 100) : 0)%"></div></div>
                                </div>
                                @if(ExpandedItemId == item.Id) {
                                    <div class="bg-gray-50 p-3 text-xs">
                                        @foreach(var h in GetItemHistory(item.Id)) { <div class="flex justify-between py-1 border-b"><span>@h.Date.ToString("MM/dd") @h.Desc</span><span class="@(h.Amount < 0 ? "text-green-600" : "text-red-600")">$@Math.Abs(h.Amount).ToString("N2")</span></div> }
                                    </div>
                                }
                            }
                        </div>
                    </div>
                }

                <div class="bg-white rounded-lg border border-green-200 shadow-md">
                    <div class="bg-green-600 px-3 py-2 flex justify-between items-center text-white"><span class="font-bold text-xs">EXPECTED INCOME</span><button @onclick="() => OpenIncomeModal()">+</button></div>
                    @foreach(var inc in (CurrentPeriod.ExpectedIncome ?? new()).OrderBy(x => x.Date)) {
                        <div class="p-2 flex justify-between border-b items-center">
                            <div class="flex items-center gap-2"><img src="@GetSourceImage(inc.SourceStringId)" class="w-6 h-6 rounded-full" /><span>@GetSourceName(inc.SourceStringId)</span></div>
                            <span class="text-green-600 font-bold">$@inc.Amount.ToString("N2")</span>
                        </div>
                    }
                </div>
            </div>
        </div>
    }

    @if (EditingTransaction != null) {
        <div class="fixed inset-0 bg-black/80 flex items-center justify-center z-50 p-4">
            <div class="bg-white rounded-xl w-full max-w-2xl p-6">
                <h3 class="font-bold mb-4">Edit Transaction</h3>
                <div class="grid grid-cols-2 gap-4 mb-4">
                    <input type="date" @bind="EditingTransaction.Date" class="border p-2" />
                    <input type="number" @bind="EditingTransaction.Amount" class="border p-2" />
                </div>
                <input @bind="EditingTransaction.Description" class="w-full border p-2 mb-4" placeholder="Description" />
                <div class="flex justify-between border-t pt-4">
                    <button @onclick="AddSplit" class="text-blue-600">üîÄ Add Split</button>
                    <div>
                        <button @onclick="() => EditingTransaction = null" class="mr-4">Cancel</button>
                        <button @onclick="SaveTransaction" class="bg-blue-600 text-white px-4 py-2 rounded">Save</button>
                    </div>
                </div>
            </div>
        </div>
    }
    
    @* Budget Item Modal *@
    @if (EditingItem != null) {
        <div class="fixed inset-0 bg-black/80 flex items-center justify-center z-50 p-4">
            <div class="bg-white rounded-xl w-full max-w-lg p-6">
                <div class="flex justify-between mb-4"><h3 class="font-bold">Edit Category</h3><button @onclick="CloseEditModal">X</button></div>
                <input @bind="EditingItem.Name" class="w-full border p-2 mb-4" />
                <div class="grid grid-cols-2 gap-4 mb-4">
                    <input type="number" @bind="EditingItem.PlannedAmount" class="border p-2" />
                    <input type="number" @bind="EditingItem.CarriedOver" class="border p-2" />
                </div>
                <div class="flex gap-4">
                    <div class="w-20 h-20 bg-white border flex items-center justify-center">@if(!string.IsNullOrEmpty(EditingItem.ImgUrl)){<img src="@EditingItem.ImgUrl" class="max-h-full" />}</div>
                    <div class="flex-1"><input @bind="EditingItem.ImgUrl" class="w-full border p-2 mb-2" /><InputFile OnChange="HandleFileUpload" /></div>
                </div>
                <button @onclick="SaveEditItem" class="w-full bg-blue-600 text-white py-2 mt-4 rounded">Save Changes</button>
            </div>
        </div>
    }
</div>

@code {
    private List<string> debugLogs = new();
    private int userId = 0;
    private bool isLoading = true;
    private int totalDbCount = 0;
    private List<BudgetPeriod> periods = new();
    private List<BudgetIncomeSource> incomeSources = new();
    private List<BudgetItem> FlatBudgetList = new();
    private int currentIndex = 0;
    private int? ExpandedItemId = null;
    
    private BudgetItem? EditingItem = null; 
    private BudgetExpectedIncome? EditingIncome = null;
    private BudgetWatchItem? EditingWatch = null;
    private BudgetTransaction? EditingTransaction = null;

    private BudgetPeriod? CurrentPeriod => periods.Count > 0 && currentIndex < periods.Count ? periods[currentIndex] : null;
    private decimal CurrentBalance => CurrentPeriod == null ? 0 : CurrentPeriod.InitialBankBalance + CurrentPeriod.Transactions.Sum(t => t.Amount);

    private void Log(string msg) { debugLogs.Add($"[{DateTime.Now:HH:mm:ss}] {msg}"); StateHasChanged(); }

    protected override async Task OnAfterRenderAsync(bool firstRender) {
        if (firstRender) {
            try {
                var json = await JS.InvokeAsync<string>("localStorage.getItem", "dashboard_session");
                if (string.IsNullOrEmpty(json)) { Log("FAIL: Session empty."); }
                else {
                    using var doc = JsonDocument.Parse(json);
                    if (doc.RootElement.TryGetProperty("UserId", out var p) || doc.RootElement.TryGetProperty("id", out p)) {
                        userId = p.GetInt32(); Log($"Session: User {userId}");
                        await DiagnoseDatabase(); await LoadData();
                    }
                }
            } catch (Exception ex) { Log($"Crash: {ex.Message}"); }
            finally { isLoading = false; StateHasChanged(); }
        }
    }

    private async Task LoadData() {
        Log("Querying Service...");
        try {
            periods = await BudgetService.GetPeriods(userId);
            incomeSources = await Db.BudgetIncomeSources.Where(x => x.UserId == userId || x.UserId == 0).ToListAsync();
            RefreshFlatList();
            Log($"Success: {periods.Count} periods.");
        } catch (Exception ex) { Log($"DB FAIL: {ex.Message}"); }
    }

    private async Task DiagnoseDatabase() {
        totalDbCount = await Db.BudgetPeriods.CountAsync();
        Log($"Global DB Count: {totalDbCount} periods.");
    }

    private void RefreshFlatList() { FlatBudgetList.Clear(); if(CurrentPeriod != null) foreach(var c in CurrentPeriod.Cycles) FlatBudgetList.AddRange(c.Items); }
    private async Task RefreshData() { await LoadData(); StateHasChanged(); }
    private void ToggleExpand(int id) => ExpandedItemId = (ExpandedItemId == id) ? null : id;
    private string GetBalanceColor(decimal bal) => bal >= 0 ? "text-green-400 font-bold" : "text-red-400 font-bold";
    private bool CanGoBack => currentIndex < periods.Count - 1;
    private bool CanGoNext => currentIndex > 0;
    private void NextPeriod() { if (CanGoNext) currentIndex--; RefreshFlatList(); }
    private void PrevPeriod() { if (CanGoBack) currentIndex++; RefreshFlatList(); }

    private void OpenEditModal(BudgetItem item) => EditingItem = item;
    private void CloseEditModal() => EditingItem = null;
    private void OpenTransactionModal(BudgetTransaction? t = null) { RefreshFlatList(); EditingTransaction = t ?? new BudgetTransaction { BudgetPeriodId = CurrentPeriod?.Id ?? 0, Date = DateTime.Today, Amount = 0 }; }
    private void OpenIncomeModal(BudgetExpectedIncome? i = null) => EditingIncome = i ?? new BudgetExpectedIncome { BudgetPeriodId = CurrentPeriod?.Id ?? 0, Date = DateTime.Today };
    private void OpenWatchModal(BudgetWatchItem? w = null) { RefreshFlatList(); EditingWatch = w ?? new BudgetWatchItem { BudgetPeriodId = CurrentPeriod?.Id ?? 0 }; }

    private void AddSplit() { if (EditingTransaction == null) return; EditingTransaction.Splits.Add(new BudgetTransactionSplit { Amount = 0 }); }
    private async Task SaveEditItem() { if(EditingItem != null) { Db.BudgetItems.Update(EditingItem); await Db.SaveChangesAsync(); EditingItem = null; await LoadData(); } }
    private async Task SaveIncome() { if(EditingIncome != null) { if(EditingIncome.Id == 0) Db.BudgetExpectedIncome.Add(EditingIncome); else Db.BudgetExpectedIncome.Update(EditingIncome); await Db.SaveChangesAsync(); EditingIncome = null; await LoadData(); } }
    private async Task SaveTransaction() { if(EditingTransaction != null) { if(EditingTransaction.Id == 0) Db.BudgetTransactions.Add(EditingTransaction); else Db.BudgetTransactions.Update(EditingTransaction); await Db.SaveChangesAsync(); EditingTransaction = null; await LoadData(); } }
    private async Task HandleFileUpload(InputFileChangeEventArgs e) { if (EditingItem == null) return; using var ms = new MemoryStream(); await e.File.OpenReadStream(5*1024*1024).CopyToAsync(ms); EditingItem.ImgUrl = await BulletBase.SaveImageAsync(ms.ToArray(), e.File.ContentType); }

    private string GetTransactionImage(BudgetTransaction t) {
        if(!string.IsNullOrEmpty(t.SourceStringId)) return incomeSources.FirstOrDefault(s => s.StringId == t.SourceStringId)?.ImgUrl ?? "";
        if(t.ResolvedBudgetItemId != null) return FlatBudgetList.FirstOrDefault(i => i.Id == t.ResolvedBudgetItemId)?.ImgUrl ?? "";
        var firstSplit = t.Splits.FirstOrDefault();
        if(firstSplit != null) return FlatBudgetList.FirstOrDefault(i => i.Id == firstSplit.ResolvedBudgetItemId)?.ImgUrl ?? "";
        return "";
    }
    private string GetSourceImage(string sid) => incomeSources.FirstOrDefault(s => s.StringId == sid)?.ImgUrl ?? "";
    private string GetSourceName(string sid) => incomeSources.FirstOrDefault(s => s.StringId == sid)?.Name ?? sid;
    private string GetBudgetItemImage(int? id) => FlatBudgetList.FirstOrDefault(i => i.Id == id)?.ImgUrl ?? "";

    private decimal GetSpentForBudgetItem(int itemId) {
        if (CurrentPeriod == null) return 0;
        var direct = CurrentPeriod.Transactions.Where(t => t.ResolvedBudgetItemId == itemId).Sum(t => t.Amount * -1); 
        var splits = CurrentPeriod.Transactions.SelectMany(t => t.Splits.Select(s => new { P = t, S = s })).Where(x => x.S.ResolvedBudgetItemId == itemId).Sum(x => x.P.Amount < 0 ? Math.Abs(x.S.Amount) : -Math.Abs(x.S.Amount));
        return direct + splits;
    }

    private List<(DateTime Date, string Desc, decimal Amount)> GetItemHistory(int itemId) {
        var list = new List<(DateTime, string, decimal)>();
        if (CurrentPeriod == null) return list;
        foreach(var t in CurrentPeriod.Transactions.Where(t => t.ResolvedBudgetItemId == itemId)) list.Add((t.Date, t.Description, t.Amount * -1));
        foreach(var x in CurrentPeriod.Transactions.SelectMany(t => t.Splits.Select(s => new { P = t, S = s })).Where(x => x.S.ResolvedBudgetItemId == itemId)) { decimal a = x.P.Amount < 0 ? Math.Abs(x.S.Amount) : -Math.Abs(x.S.Amount); list.Add((x.P.Date, $"{x.P.Description} (Split)", a)); }
        return list.OrderBy(x => x.Item1).ToList(); 
    }

    private async Task FixWatchTableStructure() {
        try {
            await Db.Database.ExecuteSqlRawAsync(@"DROP TABLE IF EXISTS ""BudgetWatchItems""; CREATE TABLE ""BudgetWatchItems"" (""Id"" SERIAL PRIMARY KEY, ""BudgetPeriodId"" INTEGER NOT NULL, ""Description"" TEXT NOT NULL, ""Amount"" NUMERIC NOT NULL, ""DueDate"" TIMESTAMP NULL, ""ResolvedBudgetItemId"" INTEGER NULL);");
            Log("Table Fixed."); await LoadData();
        } catch (Exception ex) { Log($"Fix FAIL: {ex.Message}"); }
    }

    private async Task ClaimOrphanedData() {
        try {
            var all = await Db.BudgetPeriods.ToListAsync();
            foreach(var p in all) p.UserId = userId;
            await Db.SaveChangesAsync(); Log("Data Claimed."); await LoadData();
        } catch (Exception ex) { Log($"Claim FAIL: {ex.Message}"); }
    }
}