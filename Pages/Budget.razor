@code {
    private List<string> debugLogs = new();
    private int userId = 0;
    private bool isLoading = true;
    private List<BudgetPeriod> periods = new();
    private List<BudgetIncomeSource> incomeSources = new();
    private List<BudgetItem> FlatBudgetList = new(); 
    private int currentIndex = 0;
    private int? ExpandedItemId = null;
    
    private bool isCreditMode = false;
    private decimal uiAmount = 0;

    // Entity States
    private BudgetItem? EditingItem = null; 
    private BudgetExpectedIncome? EditingIncome = null;
    private BudgetWatchItem? EditingWatch = null;
    private BudgetTransaction? EditingTransaction = null;

    private BudgetPeriod? CurrentPeriod => (periods != null && periods.Count > 0 && currentIndex < periods.Count) ? periods[currentIndex] : null;

    // --- FINANCIAL TOTALS ---
    private decimal CurrentBalance => CurrentPeriod == null ? 0 : Math.Round(CurrentPeriod.InitialBankBalance + CurrentPeriod.Transactions.Sum(t => t.Amount), 2);
    private decimal ActualIncome => CurrentPeriod?.Transactions.Where(t => t.Amount > 0).Sum(t => t.Amount) ?? 0;
    private decimal ActualExpenses => CurrentPeriod?.Transactions.Where(t => t.Amount < 0).Sum(t => Math.Abs(t.Amount)) ?? 0;
    private decimal ExpectedIncomeTotal => CurrentPeriod?.ExpectedIncome.Sum(i => i.Amount) ?? 0;
    private decimal ExpectedExpensesTotal => CurrentPeriod?.WatchList.Sum(e => e.Amount) ?? 0;
    private decimal AvailableFunds => Math.Round(CurrentBalance - ExpectedExpensesTotal, 2);

    private decimal Unaccounted {
        get {
            if (CurrentPeriod == null) return 0;
            decimal totalBucketRemaining = 0;
            foreach(var item in FlatBudgetList) {
                decimal rawSpent = GetSpentForBudgetItem(item.Id);
                decimal totalAvail = item.PlannedAmount + item.CarriedOver + (rawSpent < 0 ? Math.Abs(rawSpent) : 0);
                totalBucketRemaining += (totalAvail - (rawSpent > 0 ? rawSpent : 0));
            }
            return Math.Round((CurrentBalance + ExpectedIncomeTotal) - totalBucketRemaining, 2);
        }
    }

    private void Log(string msg) { debugLogs.Add($"[{DateTime.Now:HH:mm:ss}] {msg}"); StateHasChanged(); }

    protected override async Task OnAfterRenderAsync(bool firstRender) {
        if (firstRender) { await ManualBoot(); }
    }

    private async Task ManualBoot() {
        Log("Active Sync Initiated...");
        isLoading = true; StateHasChanged();
        int attempts = 0;
        while (userId == 0 && attempts < 20) {
            try {
                var json = await JS.InvokeAsync<string>("localStorage.getItem", "dashboard_session");
                if (!string.IsNullOrEmpty(json)) {
                    using var doc = JsonDocument.Parse(json);
                    JsonElement p;
                    if (doc.RootElement.TryGetProperty("UserId", out p) || doc.RootElement.TryGetProperty("id", out p)) {
                        userId = p.GetInt32();
                        Log($"Identity Confirmed: User {userId}");
                        await LoadData();
                        
                        // SELF-HEALING: If logged in as 1 but 0 months, try claiming orphaned data automatically
                        if (userId == 1 && periods.Count == 0) {
                            Log("No months found for User 1. Checking for orphans...");
                            await ClaimOrphanedData();
                        }
                        return;
                    }
                }
            } catch { }
            attempts++; await Task.Delay(500); 
        }
        isLoading = false; StateHasChanged();
    }

    private async Task LoadData() {
        if (userId == 0) return;
        try {
            periods = await BudgetService.GetPeriods(userId);
            incomeSources = await Db.BudgetIncomeSources.Where(x => x.UserId == userId || x.UserId == 0).ToListAsync();
            RefreshFlatList();
            Log($"SUCCESS: {periods.Count} Periods Sync'd.");
        } catch (Exception ex) { Log($"DB_REJECTED: {ex.Message}"); }
        finally { isLoading = false; StateHasChanged(); }
    }

    // --- QUICK ADD WATCH ITEM ---
    private void QuickAddWatchItem(BudgetItem item) {
        decimal rawSpent = GetSpentForBudgetItem(item.Id);
        decimal total = item.PlannedAmount + item.CarriedOver + (rawSpent < 0 ? Math.Abs(rawSpent) : 0);
        decimal rem = total - (rawSpent > 0 ? rawSpent : 0);
        
        var today = DateTime.Today;
        var lastDayOfCurrentMonth = new DateTime(today.Year, today.Month, DateTime.DaysInMonth(today.Year, today.Month));

        RefreshFlatList();
        EditingWatch = new BudgetWatchItem {
            BudgetPeriodId = CurrentPeriod?.Id ?? 0,
            Description = item.Name,
            Amount = Math.Max(0, rem), // Guard against negative pre-fills
            DueDate = lastDayOfCurrentMonth,
            ResolvedBudgetItemId = item.Id
        };
    }

    // --- DELETIONS ---
    private async Task DeleteTransaction(BudgetTransaction t) { if (await JS.InvokeAsync<bool>("confirm", "Delete Ledger Entry?")) { Db.BudgetTransactions.Remove(t); await Db.SaveChangesAsync(); await LoadData(); } }
    private async Task DeleteBudgetItem(BudgetItem i) { if (await JS.InvokeAsync<bool>("confirm", $"Delete category '{i.Name}'?")) { Db.BudgetItems.Remove(i); await Db.SaveChangesAsync(); await LoadData(); } }
    private async Task DeleteExpectedIncome(BudgetExpectedIncome i) { if (await JS.InvokeAsync<bool>("confirm", "Delete Expected Income?")) { Db.BudgetExpectedIncome.Remove(i); await Db.SaveChangesAsync(); await LoadData(); } }
    private async Task DeleteWatchItem(BudgetWatchItem i) { if (await JS.InvokeAsync<bool>("confirm", "Delete Watch Item?")) { Db.BudgetWatchItems.Remove(i); await Db.SaveChangesAsync(); await LoadData(); } }
    private async Task DeleteCycle(BudgetCycle c) { if (await JS.InvokeAsync<bool>("confirm", $"Delete entire section '{c.Label}'?")) { Db.BudgetCycles.Remove(c); await Db.SaveChangesAsync(); await LoadData(); } }

    // --- ADDITIONS ---
    private async Task CreateNewCycle() { if (CurrentPeriod == null) return; var nc = new BudgetCycle { BudgetPeriodId = CurrentPeriod.Id, Label = "New Section", CycleNumber = CurrentPeriod.Cycles.Count + 1 }; Db.BudgetCycles.Add(nc); await Db.SaveChangesAsync(); await LoadData(); }
    private void AddBudgetItem(int cid) { EditingItem = new BudgetItem { BudgetCycleId = cid, Name = "New Item", PlannedAmount = 0 }; }

    // --- MODAL CONTROLS ---
    private void OpenTransactionModal(BudgetTransaction? t = null) { 
        RefreshFlatList(); 
        if (t == null) { EditingTransaction = new BudgetTransaction { BudgetPeriodId = CurrentPeriod?.Id ?? 0, Date = DateTime.Today, Amount = 0 }; uiAmount = 0; isCreditMode = false; }
        else { EditingTransaction = t; uiAmount = Math.Abs(t.Amount); isCreditMode = t.Amount >= 0; }
    }

    private async Task SaveTransaction() { 
        if(EditingTransaction != null) { 
            EditingTransaction.Amount = isCreditMode ? Math.Abs(uiAmount) : -Math.Abs(uiAmount);
            if(EditingTransaction.Splits.Any()) EditingTransaction.ResolvedBudgetItemId = null;
            if(EditingTransaction.Id == 0) Db.BudgetTransactions.Add(EditingTransaction); else Db.BudgetTransactions.Update(EditingTransaction); 
            await Db.SaveChangesAsync(); EditingTransaction = null; await LoadData(); 
        } 
    }

    private void OpenEditModal(BudgetItem item) => EditingItem = item;
    private void CloseEditModal() => EditingItem = null;
    private void OpenIncomeModal(BudgetExpectedIncome? i = null) => EditingIncome = i ?? new BudgetExpectedIncome { BudgetPeriodId = CurrentPeriod?.Id ?? 0, Date = DateTime.Today };
    private void OpenWatchModal(BudgetWatchItem? w = null) { RefreshFlatList(); EditingWatch = w ?? new BudgetWatchItem { BudgetPeriodId = CurrentPeriod?.Id ?? 0 }; }

    private async Task SaveEditItem() { if(EditingItem != null) { if(EditingItem.Id == 0) Db.BudgetItems.Add(EditingItem); else Db.BudgetItems.Update(EditingItem); await Db.SaveChangesAsync(); EditingItem = null; await LoadData(); } }
    private async Task SaveWatchItem() { if(EditingWatch != null) { if(EditingWatch.Id == 0) Db.BudgetWatchItems.Add(EditingWatch); else Db.BudgetWatchItems.Update(EditingWatch); await Db.SaveChangesAsync(); EditingWatch = null; await LoadData(); } }
    private async Task SaveIncome() { if(EditingIncome != null) { if(EditingIncome.Id == 0) Db.BudgetExpectedIncome.Add(EditingIncome); else Db.BudgetExpectedIncome.Update(EditingIncome); await Db.SaveChangesAsync(); EditingIncome = null; await LoadData(); } }

    private void RefreshFlatList() { FlatBudgetList.Clear(); if(CurrentPeriod != null) foreach(var c in CurrentPeriod.Cycles) FlatBudgetList.AddRange(c.Items); }
    private async Task RefreshData() { await ManualBoot(); }
    private void ToggleExpand(int id) => ExpandedItemId = (ExpandedItemId == id) ? null : id;
    private bool CanGoBack => currentIndex < (periods?.Count ?? 0) - 1;
    private bool CanGoNext => currentIndex > 0;
    private void NextPeriod() { if (CanGoNext) currentIndex--; RefreshFlatList(); }
    private void PrevPeriod() { if (CanGoBack) currentIndex++; RefreshFlatList(); }

    private async Task RepairWatchLinks() {
        if (CurrentPeriod == null) return;
        try {
            var cycleIds = await Db.BudgetCycles.Where(c => c.BudgetPeriodId == CurrentPeriod.Id).Select(c => c.Id).ToListAsync();
            var items = await Db.BudgetItems.Where(i => cycleIds.Contains(i.BudgetCycleId)).ToListAsync();
            var watchItems = await Db.BudgetWatchItems.Where(w => w.BudgetPeriodId == CurrentPeriod.Id).ToListAsync();
            foreach(var w in watchItems) { var match = items.FirstOrDefault(i => string.Equals(i.Name, w.Description, StringComparison.OrdinalIgnoreCase)); if(match != null) w.ResolvedBudgetItemId = match.Id; }
            await Db.SaveChangesAsync(); await LoadData(); Log("SUCCESS: Icons Re-linked.");
        } catch { }
    }

    private async Task RestoreFromJsonFiles() {
        try {
            string[] files = { "budget_dec25.json", "budget_jan26.json" };
            foreach (var fileName in files) {
                var path = Path.Combine(Env.WebRootPath, fileName);
                if (!File.Exists(path)) continue;
                var json = await File.ReadAllTextAsync(path);
                using var doc = JsonDocument.Parse(json);
                if (doc.RootElement.TryGetProperty("periods", out var periodsArray)) {
                    foreach (var periodEl in periodsArray.EnumerateArray()) {
                        string jsonDisplayName = periodEl.GetProperty("displayName").GetString() ?? "";
                        var dbPeriod = periods.FirstOrDefault(p => string.Equals(p.DisplayName, jsonDisplayName, StringComparison.OrdinalIgnoreCase));
                        if (dbPeriod != null && periodEl.TryGetProperty("watchList", out var watchList)) {
                            var old = await Db.BudgetWatchItems.Where(w => w.BudgetPeriodId == dbPeriod.Id).ToListAsync();
                            Db.BudgetWatchItems.RemoveRange(old);
                            foreach (var item in watchList.EnumerateArray()) {
                                Db.BudgetWatchItems.Add(new BudgetWatchItem {
                                    BudgetPeriodId = dbPeriod.Id,
                                    Description = GetJsonString(item, "description"),
                                    Amount = GetJsonDecimal(item, "amount"),
                                    DueDate = GetJsonDateTimeWithTBDFix(item, "dueDate")
                                });
                            }
                        }
                    }
                }
            }
            await Db.SaveChangesAsync(); await LoadData(); Log("SUCCESS: JSON Restoration Complete.");
        } catch { }
    }

    private string GetJsonString(JsonElement el, string name) { foreach(var p in el.EnumerateObject()) if(string.Equals(p.Name, name, StringComparison.OrdinalIgnoreCase)) return p.Value.GetString() ?? ""; return ""; }
    private decimal GetJsonDecimal(JsonElement el, string name) { foreach(var p in el.EnumerateObject()) if(string.Equals(p.Name, name, StringComparison.OrdinalIgnoreCase)) return p.Value.GetDecimal(); return 0; }
    private DateTime? GetJsonDateTimeWithTBDFix(JsonElement el, string name) {
        foreach(var p in el.EnumerateObject()) if(string.Equals(p.Name, name, StringComparison.OrdinalIgnoreCase)) {
            string v = p.Value.GetString() ?? ""; if(v == "TBD" || string.IsNullOrEmpty(v)) return null; if(DateTime.TryParse(v, out DateTime r)) return r;
        }
        return null;
    }

    private void AddSplit() { if (EditingTransaction == null) return; if (!EditingTransaction.Splits.Any() && EditingTransaction.ResolvedBudgetItemId.HasValue) { EditingTransaction.Splits.Add(new BudgetTransactionSplit { ResolvedBudgetItemId = EditingTransaction.ResolvedBudgetItemId.Value, Amount = Math.Abs(uiAmount) }); EditingTransaction.ResolvedBudgetItemId = null; } EditingTransaction.Splits.Add(new BudgetTransactionSplit { Amount = 0 }); }
    private async Task HandleFileUpload(InputFileChangeEventArgs e) { if (EditingItem == null) return; using var ms = new MemoryStream(); await e.File.OpenReadStream(5*1024*1024).CopyToAsync(ms); EditingItem.ImgUrl = await BulletBase.SaveImageAsync(ms.ToArray(), e.File.ContentType); }

    private async Task ClaimOrphanedData() {
        try {
            var allP = await Db.BudgetPeriods.ToListAsync(); foreach(var p in allP) p.UserId = userId;
            var allI = await Db.BudgetIncomeSources.ToListAsync(); foreach(var i in allI) i.UserId = userId;
            await Db.SaveChangesAsync(); await LoadData(); Log("Identity Healed: Data Re-claimed.");
        } catch { }
    }

    private string GetTransactionImage(BudgetTransaction t) {
        if(!string.IsNullOrEmpty(t.SourceStringId)) return incomeSources.FirstOrDefault(s => s.StringId == t.SourceStringId)?.ImgUrl ?? "";
        if(t.ResolvedBudgetItemId != null) return GetBudgetItemImage(t.ResolvedBudgetItemId.Value);
        var first = t.Splits.FirstOrDefault(); if(first != null) return GetBudgetItemImage(first.ResolvedBudgetItemId);
        return "";
    }
    private string GetSourceImage(string sid) => incomeSources.FirstOrDefault(s => s.StringId == sid)?.ImgUrl ?? "";
    private string GetSourceName(string sid) => incomeSources.FirstOrDefault(s => s.StringId == sid)?.Name ?? sid;
    private string GetBudgetItemImage(int? id) { if (id == null) return ""; return FlatBudgetList.FirstOrDefault(i => i.Id == id)?.ImgUrl ?? ""; }

    private decimal GetSpentForBudgetItem(int itemId) {
        if (CurrentPeriod == null) return 0;
        var direct = CurrentPeriod.Transactions.Where(t => t.ResolvedBudgetItemId == itemId).Sum(t => t.Amount * -1); 
        var splits = CurrentPeriod.Transactions.SelectMany(t => t.Splits.Select(s => new { P = t, S = s })).Where(x => x.S.ResolvedBudgetItemId == itemId).Sum(x => x.P.Amount < 0 ? Math.Abs(x.S.Amount) : -Math.Abs(x.S.Amount));
        var trOut = CurrentPeriod.Transfers.Where(tr => tr.ResolvedFromId == itemId).Sum(tr => tr.Amount);
        var trIn = CurrentPeriod.Transfers.Where(tr => tr.ResolvedToId == itemId).Sum(tr => tr.Amount);
        return (direct + splits + trOut) - trIn;
    }

    private List<(DateTime Date, string Desc, decimal Amount)> GetItemHistory(int itemId) {
        var list = new List<(DateTime, string, decimal)>();
        if (CurrentPeriod == null) return list;
        foreach(var t in CurrentPeriod.Transactions.Where(t => t.ResolvedBudgetItemId == itemId)) list.Add((t.Date, t.Description, t.Amount * -1));
        foreach(var x in CurrentPeriod.Transactions.SelectMany(t => t.Splits.Select(s => new { P = t, S = s })).Where(x => x.S.ResolvedBudgetItemId == itemId)) { decimal a = x.P.Amount < 0 ? Math.Abs(x.S.Amount) : -Math.Abs(x.S.Amount); list.Add((x.P.Date, $"{x.P.Description} (Split)", a)); }
        foreach(var tr in CurrentPeriod.Transfers.Where(tr => tr.ResolvedFromId == itemId)) list.Add((tr.Date, $"Transferred Out", tr.Amount));
        foreach(var tr in CurrentPeriod.Transfers.Where(tr => tr.ResolvedToId == itemId)) list.Add((tr.Date, $"Transferred In", -tr.Amount)); 
        return list.OrderBy(x => x.Item1).ToList(); 
    }

    private async Task CopyLogsToClipboard() {
        var sb = new System.Text.StringBuilder(); foreach(var l in debugLogs) sb.AppendLine(l);
        await JS.InvokeVoidAsync("navigator.clipboard.writeText", sb.ToString());
        await JS.InvokeVoidAsync("alert", "Logs copied to clipboard.");
    }

