@code {
    private List<string> debugLogs = new();
    private int userId = 0;
    private bool isLoading = true;
    private int totalDbCount = 0;
    private List<BudgetPeriod> periods = new();
    private List<BudgetIncomeSource> incomeSources = new();
    private List<BudgetItem> FlatBudgetList = new(); 
    private int currentIndex = 0;
    private int? ExpandedItemId = null;
    
    private BudgetItem? EditingItem = null; 
    private BudgetExpectedIncome? EditingIncome = null;
    private BudgetWatchItem? EditingWatch = null;
    private BudgetTransaction? EditingTransaction = null;

    private BudgetPeriod? CurrentPeriod => periods.Count > 0 && currentIndex < periods.Count ? periods[currentIndex] : null;
    private decimal CurrentBalance => CurrentPeriod == null ? 0 : CurrentPeriod.InitialBankBalance + CurrentPeriod.Transactions.Sum(t => t.Amount);

    private void Log(string msg) { debugLogs.Add($"[{DateTime.Now:HH:mm:ss}] {msg}"); StateHasChanged(); }

    protected override async Task OnAfterRenderAsync(bool firstRender) {
        if (firstRender) {
            try {
                var json = await JS.InvokeAsync<string>("localStorage.getItem", "dashboard_session");
                if (string.IsNullOrEmpty(json)) { Log("FAIL: Session LocalStorage empty."); }
                else {
                    using var doc = JsonDocument.Parse(json);
                    if (doc.RootElement.TryGetProperty("UserId", out var p) || doc.RootElement.TryGetProperty("id", out p)) {
                        userId = p.GetInt32(); Log($"Verified User: {userId}");
                        await DiagnoseDatabase(); await LoadData();
                    }
                }
            } catch (Exception ex) { Log($"Crash: {ex.Message}"); }
            finally { isLoading = false; StateHasChanged(); }
        }
    }

    private async Task LoadData() {
        Log("Querying Service...");
        try {
            periods = await BudgetService.GetPeriods(userId);
            incomeSources = await Db.BudgetIncomeSources.Where(x => x.UserId == userId || x.UserId == 0).ToListAsync();
            RefreshFlatList();
            Log($"Success: {periods.Count} periods returned.");
        } catch (Exception ex) { Log($"DB_QUERY_FAIL: {ex.Message}"); }
    }

    private async Task DiagnoseDatabase() {
        totalDbCount = await Db.BudgetPeriods.CountAsync();
        Log($"DB Diagnostic: Total {totalDbCount} budget periods exist for all users.");
    }

    private void RefreshFlatList() { FlatBudgetList.Clear(); if(CurrentPeriod != null) foreach(var c in CurrentPeriod.Cycles) FlatBudgetList.AddRange(c.Items); }
    private async Task RefreshData() { await LoadData(); StateHasChanged(); }
    private void ToggleExpand(int id) => ExpandedItemId = (ExpandedItemId == id) ? null : id;
    private string GetBalanceColor(decimal bal) => bal >= 0 ? "text-green-400 font-bold" : "text-red-400 font-bold";
    private bool CanGoBack => currentIndex < periods.Count - 1;
    private bool CanGoNext => currentIndex > 0;
    private void NextPeriod() { if (CanGoNext) currentIndex--; RefreshFlatList(); }
    private void PrevPeriod() { if (CanGoBack) currentIndex++; RefreshFlatList(); }

    private void OpenEditModal(BudgetItem item) => EditingItem = item;
    private void CloseEditModal() => EditingItem = null;
    private void OpenTransactionModal(BudgetTransaction? t = null) { RefreshFlatList(); EditingTransaction = t ?? new BudgetTransaction { BudgetPeriodId = CurrentPeriod?.Id ?? 0, Date = DateTime.Today, Amount = -0.00m }; }
    private void OpenIncomeModal(BudgetExpectedIncome? i = null) => EditingIncome = i ?? new BudgetExpectedIncome { BudgetPeriodId = CurrentPeriod?.Id ?? 0, Date = DateTime.Today };
    private void OpenWatchModal(BudgetWatchItem? w = null) { RefreshFlatList(); EditingWatch = w ?? new BudgetWatchItem { BudgetPeriodId = CurrentPeriod?.Id ?? 0 }; }

    private void AddSplit() { if (EditingTransaction == null) return; if (!EditingTransaction.Splits.Any() && EditingTransaction.ResolvedBudgetItemId.HasValue) { EditingTransaction.Splits.Add(new BudgetTransactionSplit { ResolvedBudgetItemId = EditingTransaction.ResolvedBudgetItemId.Value, Amount = Math.Abs(EditingTransaction.Amount) }); EditingTransaction.ResolvedBudgetItemId = null; } EditingTransaction.Splits.Add(new BudgetTransactionSplit { Amount = 0 }); }
    private async Task SaveEditItem() { if(EditingItem != null) { Db.BudgetItems.Update(EditingItem); await Db.SaveChangesAsync(); EditingItem = null; await LoadData(); } }
    private async Task SaveIncome() { if(EditingIncome != null) { if(EditingIncome.Id == 0) Db.BudgetExpectedIncome.Add(EditingIncome); else Db.BudgetExpectedIncome.Update(EditingIncome); await Db.SaveChangesAsync(); EditingIncome = null; await LoadData(); } }
    private async Task SaveWatchItem() { if(EditingWatch != null) { if(EditingWatch.Id == 0) Db.BudgetWatchItems.Add(EditingWatch); else Db.BudgetWatchItems.Update(EditingWatch); await Db.SaveChangesAsync(); EditingWatch = null; await LoadData(); } }
    private async Task SaveTransaction() { if(EditingTransaction != null) { if(EditingTransaction.Splits.Any()) EditingTransaction.ResolvedBudgetItemId = null; if(EditingTransaction.Id == 0) Db.BudgetTransactions.Add(EditingTransaction); else Db.BudgetTransactions.Update(EditingTransaction); await Db.SaveChangesAsync(); EditingTransaction = null; await LoadData(); } }
    private async Task HandleFileUpload(InputFileChangeEventArgs e) { if (EditingItem == null) return; using var ms = new MemoryStream(); await e.File.OpenReadStream(5*1024*1024).CopyToAsync(ms); EditingItem.ImgUrl = await BulletBase.SaveImageAsync(ms.ToArray(), e.File.ContentType); }

    private string GetTransactionImage(BudgetTransaction t) {
        if(!string.IsNullOrEmpty(t.SourceStringId)) return incomeSources.FirstOrDefault(s => s.StringId == t.SourceStringId)?.ImgUrl ?? "";
        if(t.ResolvedBudgetItemId != null) return FlatBudgetList.FirstOrDefault(i => i.Id == t.ResolvedBudgetItemId)?.ImgUrl ?? "";
        var first = t.Splits.FirstOrDefault(); if(first != null) return FlatBudgetList.FirstOrDefault(i => i.Id == first.ResolvedBudgetItemId)?.ImgUrl ?? "";
        return "";
    }
    private string GetSourceImage(string sid) => incomeSources.FirstOrDefault(s => s.StringId == sid)?.ImgUrl ?? "";
    private string GetSourceName(string sid) => incomeSources.FirstOrDefault(s => s.StringId == sid)?.Name ?? sid;
    private string GetBudgetItemImage(int? id) => FlatBudgetList.FirstOrDefault(i => i.Id == id)?.ImgUrl ?? "";

    private decimal GetSpentForBudgetItem(int itemId) {
        if (CurrentPeriod == null) return 0;
        var direct = CurrentPeriod.Transactions.Where(t => t.ResolvedBudgetItemId == itemId).Sum(t => t.Amount * -1); 
        var splits = CurrentPeriod.Transactions.SelectMany(t => t.Splits.Select(s => new { P = t, S = s })).Where(x => x.S.ResolvedBudgetItemId == itemId).Sum(x => x.P.Amount < 0 ? Math.Abs(x.S.Amount) : -Math.Abs(x.S.Amount));
        return direct + splits;
    }

    private List<(DateTime Date, string Desc, decimal Amount)> GetItemHistory(int itemId) {
        var list = new List<(DateTime, string, decimal)>();
        if (CurrentPeriod == null) return list;
        foreach(var t in CurrentPeriod.Transactions.Where(t => t.ResolvedBudgetItemId == itemId)) list.Add((t.Date, t.Description, t.Amount * -1));
        foreach(var x in CurrentPeriod.Transactions.SelectMany(t => t.Splits.Select(s => new { P = t, S = s })).Where(x => x.S.ResolvedBudgetItemId == itemId)) { decimal a = x.P.Amount < 0 ? Math.Abs(x.S.Amount) : -Math.Abs(x.S.Amount); list.Add((x.P.Date, $"{x.P.Description} (Split)", a)); }
        return list.OrderBy(x => x.Item1).ToList(); 
    }

    private async Task FixWatchTableStructure() {
        try {
            await Db.Database.ExecuteSqlRawAsync(@"DROP TABLE IF EXISTS ""BudgetWatchItems""; CREATE TABLE ""BudgetWatchItems"" (""Id"" SERIAL PRIMARY KEY, ""BudgetPeriodId"" INTEGER NOT NULL, ""Description"" TEXT NOT NULL, ""Amount"" NUMERIC NOT NULL, ""DueDate"" TIMESTAMP NULL, ""ResolvedBudgetItemId"" INTEGER NULL);");
            Log("Table Fixed."); await LoadData();
        } catch (Exception ex) { Log($"FAIL: {ex.Message}"); }
    }

    private async Task RepairWatchLinks() {
        if (CurrentPeriod == null) return;
        var cycleIds = await Db.BudgetCycles.Where(c => c.BudgetPeriodId == CurrentPeriod.Id).Select(c => c.Id).ToListAsync();
        var items = await Db.BudgetItems.Where(i => cycleIds.Contains(i.BudgetCycleId)).ToListAsync();
        var watchItems = await Db.BudgetWatchItems.Where(w => w.BudgetPeriodId == CurrentPeriod.Id).ToListAsync();
        foreach(var w in watchItems) { var match = items.FirstOrDefault(i => string.Equals(i.Name, w.Description, StringComparison.OrdinalIgnoreCase)); if(match != null) w.ResolvedBudgetItemId = match.Id; }
        await Db.SaveChangesAsync(); Log("Watch Links Repaired."); await LoadData();
    }

    private async Task ClaimOrphanedData() {
        try {
            var all = await Db.BudgetPeriods.ToListAsync();
            foreach(var p in all) p.UserId = userId;
            await Db.SaveChangesAsync(); Log($"Success: Claimed {all.Count} periods."); await LoadData();
        } catch (Exception ex) { Log($"FAIL: {ex.Message}"); }
    }
