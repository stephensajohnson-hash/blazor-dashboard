    private async Task LoadData()
    {
        Log("Querying Database for periods...");
        try 
        {
            incomeSources = await Db.BudgetIncomeSources.Where(x => x.UserId == userId || x.UserId == 0).ToListAsync();
            
            // NOTE: This relies on the Database being populated.
