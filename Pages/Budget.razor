            {
                foreach(var p in periods)
                {
                    p.ExpectedIncome = await Db.BudgetExpectedIncome.Where(x => x.BudgetPeriodId == p.Id).ToListAsync();
                    p.WatchList = await Db.BudgetWatchItems.Where(x => x.BudgetPeriodId == p.Id).ToListAsync();
                }
                Log($"Loaded {periods.Count} periods from DB.", "success");
            }
        }
        catch(Exception ex) { Log($"LoadData Error: {ex.Message}", "error"); }
    }

    // --- MERGE IMPORT STRATEGY ---
    private async Task LoadServerDefaults()
    {
        if (userId == 0) return;
        isLoading = true;
        StateHasChanged();

        try
        {
            var webRoot = Env.WebRootPath;
            var files = new[] { "budget_dec25.json", "budget_jan26.json" };
            
            // 1. Merge ALL periods from all files into one list
            var mergedPeriods = new List<string>();
            var combinedJson = new StringBuilder();
            combinedJson.Append("{ \"periods\": [");

            bool firstPeriod = true;

            foreach(var fileName in files)
            {
                var path = Path.Combine(webRoot, fileName);
                if(File.Exists(path))
                {
                    var rawJson = await File.ReadAllTextAsync(path);
                    var doc = JsonDocument.Parse(rawJson);
                    
                    // Extract periods array content
                    if(doc.RootElement.TryGetProperty("periods", out var arr))
                    {
                        foreach(var p in arr.EnumerateArray())
                        {
                            if(!firstPeriod) combinedJson.Append(",");
                            combinedJson.Append(p.GetRawText());
                            firstPeriod = false;
                        }
                    }
                    else
                    {
                        // Fallback: If root IS the period
                        if(!firstPeriod) combinedJson.Append(",");
                        combinedJson.Append(doc.RootElement.GetRawText());
                        firstPeriod = false;
                    }
                }
            }
            combinedJson.Append("] }");
            
            var finalJson = PatchJsonDates(combinedJson.ToString());
            Log("Merged JSON files into one master payload.", "info");

            // 2. Perform ONE Single Import (Prevents wiping)
            await BudgetService.ImportBudgetJson(userId, finalJson);
            
            // 3. Perform Manual Data Patch on the Combined Data
            await ImportManualData(finalJson);
            
            Log("Import complete.", "success");
            await LoadData();
        }
        catch (Exception ex) { Log($"Import Error: {ex.Message}", "error"); }
        finally { isLoading = false; StateHasChanged(); }
    }

    private async Task ImportManualData(string json)
    {
        try 
        {
            using var doc = JsonDocument.Parse(json);
            var root = doc.RootElement;
            JsonElement periodsArray = default;
            
            if (!(root.TryGetProperty("periods", out periodsArray)))
            {
                await ImportSinglePeriod(root);
                return;
            }

            int incomeAdded = 0;
            int watchAdded = 0;

            foreach(var periodJson in periodsArray.EnumerateArray())
            {
                if(!periodJson.TryGetProperty("startDate", out var dateElem)) continue;
                if(!DateTime.TryParse(dateElem.GetString(), out var startDate)) continue;

                if(periodJson.TryGetProperty("incomeSources", out var sourceArr)) await ImportSources(sourceArr);

                var dbPeriod = await Db.BudgetPeriods.Where(p => p.UserId == userId && p.StartDate.Year == startDate.Year && p.StartDate.Month == startDate.Month).OrderByDescending(p => p.Id).FirstOrDefaultAsync();
                if(dbPeriod == null) continue;

                if(periodJson.TryGetProperty("expectedIncome", out var incomeArray)) 
                    incomeAdded += await InsertIncomeItems(dbPeriod.Id, incomeArray, startDate);

                if(periodJson.TryGetProperty("watchList", out var watchArray))
                    watchAdded += await InsertWatchItems(dbPeriod.Id, watchArray);
            }

            if(incomeAdded > 0 || watchAdded > 0)
            {
                await Db.SaveChangesAsync();
                Log($"Manual Import: +{incomeAdded} Inc, +{watchAdded} Watch.", "success");
            }
        }
        catch(Exception ex) { Log($"Manual Import Error: {ex.Message}", "error"); }
    }

