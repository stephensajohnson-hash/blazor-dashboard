@page "/budget-tracker"
@using Microsoft.AspNetCore.Components.Web
@using Microsoft.AspNetCore.Components.Forms
@rendermode @(new InteractiveServerRenderMode(prerender: false))
@using Dashboard
@using Dashboard.Components.Bullet
@using Microsoft.EntityFrameworkCore
@using System.IO
@using Microsoft.JSInterop
@using System.Text.Json
@inject AppDbContext Db
@inject BudgetService BudgetService
@inject BulletBaseService BulletBase
@inject IJSRuntime JS
@inject NavigationManager Nav

<BulletHeader />

<div class="min-h-screen bg-[#1e2124] text-gray-800 p-4 font-sans relative text-sm font-medium">
    
    @if (isLoading)
    {
        <div class="flex flex-col items-center justify-center h-[60vh]">
            <div class="w-16 h-16 border-4 border-blue-500 border-t-transparent rounded-full animate-spin"></div>
            <div class="text-gray-400 mt-6 animate-pulse font-black uppercase tracking-widest text-xs">Accessing Ledger...</div>
        </div>
    }
    else if (currentUser == null || CurrentPeriod == null)
    {
        <div class="flex flex-col items-center justify-center h-[60vh] border-2 border-dashed border-gray-700 rounded-xl bg-gray-800/30 p-10 text-center text-white font-black">
            <p class="text-red-400 text-xl mb-4 font-black uppercase tracking-widest">IDENTITY_TIMEOUT</p>
            <button @onclick="() => Nav.NavigateTo(Nav.Uri, true)" class="bg-blue-600 hover:bg-blue-500 px-10 py-4 rounded text-xs font-black uppercase shadow-2xl border border-blue-400">üîÑ Force Re-Sync</button>
        </div>
    }
    else
    {
        <div class="sticky top-0 z-40 bg-[#1e2124] pt-2 pb-4">
            <div class="bg-[#282b30] rounded-xl border border-gray-700 shadow-2xl overflow-hidden font-black">
                <div class="p-4 border-b border-gray-700 flex flex-col md:flex-row justify-between items-center gap-4">
                    <div class="flex items-center gap-4 text-white">
                        <div class="flex items-center bg-black/30 rounded-full px-2 py-1 border border-gray-700 gap-1">
                            <button @onclick="PrevPeriod" class="p-2 hover:bg-gray-700 rounded-full transition" disabled="@(!CanGoBack)">
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" /></svg>
                            </button>
                            <button @onclick="() => OpenEditPeriodModal(CurrentPeriod)" class="px-4 py-1 hover:text-blue-400 transition tracking-widest uppercase text-sm font-black">
                                @CurrentPeriod.DisplayName
                            </button>
                            <button @onclick="NextPeriod" class="p-2 hover:bg-gray-700 rounded-full transition" disabled="@(!CanGoNext)">
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" /></svg>
                            </button>
                        </div>
                        @if(currentIndex == 0) { 
                            <button @onclick="CreateNewRollingPeriod" class="bg-blue-600/20 hover:bg-blue-600 text-blue-400 hover:text-white border border-blue-500/50 px-3 py-1.5 rounded-lg text-[10px] font-black uppercase transition tracking-widest shadow-lg">Ôºã Add Period</button> 
                        }
                        <button @onclick="() => { showIncomeSourcesModal = true; }" class="bg-gray-700 hover:bg-gray-600 text-white text-[10px] uppercase px-3 py-1.5 rounded transition border border-gray-600 tracking-widest flex items-center gap-2 shadow-lg font-black">üí∞ Income Sources</button>
                    </div>
                    <div class="flex gap-2">
                        <button class="bg-blue-600 hover:bg-blue-500 text-white text-[11px] py-2.5 px-6 rounded shadow transition uppercase tracking-widest border border-blue-400 font-black" @onclick="() => OpenTransferModal()">‚áÑ Transfer</button>
                        <button class="bg-green-600 hover:bg-green-500 text-white text-[11px] py-2.5 px-6 rounded shadow transition uppercase tracking-widest border border-green-400 font-black" @onclick="() => OpenTransactionModal()">+ New Transaction</button>
                    </div>
                </div>
                <div class="grid grid-cols-2 md:grid-cols-4 lg:grid-cols-8 divide-x divide-y md:divide-y-0 divide-gray-700 bg-[#2c2f33]">
                    <div class="p-3 text-center"><div class="text-[9px] text-gray-500 uppercase mb-1 font-black">Start</div><div class="text-xs font-mono text-white">$@CurrentPeriod.InitialBankBalance.ToString("N2")</div></div>
                    <div class="p-3 text-center"><div class="text-[9px] text-green-500/70 uppercase mb-1 font-black">Income</div><div class="text-xs font-mono text-green-400">+$@ActualIncome.ToString("N2")</div></div>
                    <div class="p-3 text-center"><div class="text-[9px] text-red-500/70 uppercase mb-1 font-black">Expenses</div><div class="text-xs font-mono text-red-400">-$@ActualExpenses.ToString("N2")</div></div>
                    <div class="p-3 text-center"><div class="text-[9px] text-green-500/40 uppercase mb-1 font-mono font-black">Exp Income</div><div class="text-xs font-mono text-green-600">$@ExpectedIncomeTotal.ToString("N2")</div></div>
                    <div class="p-3 text-center"><div class="text-[9px] text-red-500/40 uppercase mb-1 font-mono font-black">Exp Expense</div><div class="text-xs font-mono text-red-600">$@ExpectedExpensesTotal.ToString("N2")</div></div>
                    <div class="p-3 text-center bg-black/10"><div class="text-[9px] text-blue-400 uppercase mb-1 font-black">Bank Bal</div><div class="text-xs font-mono text-blue-300 font-black">$@CurrentBalance.ToString("N2")</div></div>
                    <div class="p-3 text-center bg-blue-900/20 border-x-2 border-blue-500/40 font-black"><div class="text-[9px] text-blue-200 uppercase mb-1 font-bold font-black">Available</div><div class="text-xs font-mono text-blue-400 font-black">$@AvailableFunds.ToString("N2")</div></div>
                    <div class="p-3 text-center @(Unaccounted == 0 ? "bg-green-900/10" : "bg-red-900/10")"><div class="text-[9px] text-gray-500 uppercase mb-1 font-black">Unaccounted</div><div class="text-xs font-mono font-black @(Unaccounted == 0 ? "text-green-400" : "text-red-400")">@(Unaccounted == 0 ? "BALANCED" : "$" + Unaccounted.ToString("N2"))</div></div>
                </div>
            </div>
        </div>

        <div class="grid lg:grid-cols-[60%_40%] gap-6 font-black items-start">
            <div class="bg-white rounded-xl shadow-xl overflow-hidden flex flex-col border border-gray-300 text-gray-800 font-sans">
                <div class="p-3 bg-gray-100 border-b border-gray-300 font-black text-gray-600 text-[10px] uppercase grid grid-cols-[110px_1fr_80px_80px_60px] gap-4 items-center tracking-widest">
                    <span class="pl-2">Date</span><span>Description</span><span class="text-right">Amount</span><span class="text-right pr-2">Balance</span><span class="text-center font-black">Ops</span>
                </div>
                <div class="flex-1">
                    @{
                        decimal runningBalance = CurrentPeriod.InitialBankBalance;
                        foreach(var t in CurrentPeriod.Transactions.OrderBy(t => t.Date)) {
                            runningBalance += t.Amount; string imgUrl = GetTransactionImage(t);
                            <div class="grid grid-cols-[110px_1fr_80px_80px_60px] gap-4 items-center p-3 border-b hover:bg-blue-50 transition group text-sm font-black">
                                <div class="flex items-center gap-3 pl-2"><img src="@(string.IsNullOrEmpty(imgUrl) ? "https://cdn-icons-png.flaticon.com/512/3233/3233483.png" : imgUrl)" class="w-8 h-8 rounded-full object-cover border" /><div class="text-gray-500 font-mono text-xs">@t.Date.ToString("MMM dd")</div></div>
                                <div class="truncate flex items-center gap-2">@t.Description @if(t.Splits.Any()){ <span class="text-xs">üîÄ</span> }</div>
                                <div class="text-right font-mono @(t.Amount >= 0 ? "text-green-600" : "text-red-600")">$@t.Amount.ToString("N2")</div>
                                <div class="text-right pr-2 font-mono text-gray-400">$@runningBalance.ToString("N2")</div>
                                <div class="flex justify-center gap-3"><button class="text-gray-300 hover:text-blue-600 transition" @onclick="() => OpenTransactionModal(t)">‚úé</button><button class="text-gray-300 hover:text-red-600 transition font-black" @onclick="() => DeleteTransaction(t)">‚úï</button></div>
                            </div>
                        }
                    }
                </div>
            </div>

            <div class="space-y-6 font-black pb-20">
                @foreach (var cycle in CurrentPeriod.Cycles.OrderBy(c => c.CycleNumber)) {
                    <div class="bg-white rounded-lg border border-gray-300 shadow-md overflow-hidden">
                        <div class="bg-gray-100 px-4 py-3 border-b flex justify-between items-center text-gray-700 uppercase font-black text-xs tracking-wider">
                            <span>@cycle.Label</span>
                            <div class="flex gap-4 items-center">
                                <button @onclick="() => AddBudgetItem(cycle.Id)" class="text-green-600 hover:text-green-800 transition text-[10px] font-black uppercase">Ôºã Item</button>
                                <button @onclick="() => DeleteCycle(cycle)" class="text-red-400 hover:text-red-600 transition text-[10px] font-black uppercase">‚úï Section</button>
                            </div>
                        </div>
                        <div class="divide-y divide-gray-100">
                            @foreach (var item in cycle.Items) {
                                decimal rawSpent = GetSpentForBudgetItem(item.Id); 
                                decimal totalAllocated = item.PlannedAmount + item.CarriedOver; 
                                decimal rem = totalAllocated - rawSpent; 
                                bool isEx = ExpandedItemId == item.Id;
                                <div class="p-4 hover:bg-gray-50 cursor-pointer border-l-4 @(isEx ? "border-blue-500 bg-blue-50" : "border-transparent") text-gray-800 font-black" @onclick="() => ToggleExpand(item.Id)">
                                    <div class="flex justify-between items-end mb-1">
                                        <div class="flex items-center gap-2 text-sm uppercase tracking-tight">
                                            <img src="@item.ImgUrl" class="w-5 h-5 rounded-full object-cover" onerror="this.style.display='none'" />
                                            <span>@item.Name</span>
                                        </div>
                                        <div class="flex items-center gap-4">
                                            <div class="text-right">
                                                <div class="text-[9px] text-gray-400 uppercase">Original</div>
                                                <div class="text-xs text-gray-500 font-mono">$@totalAllocated.ToString("N2")</div>
                                            </div>
                                            <div class="text-right">
                                                <div class="text-[9px] text-blue-400 uppercase">Remaining</div>
                                                <div class="text-sm font-black @(rem < 0 ? "text-red-600" : "text-green-600") font-mono">$@rem.ToString("N2")</div>
                                            </div>
                                            <div class="flex gap-3 ml-2 border-l pl-3 border-gray-200">
                                                <button class="text-gray-400 hover:text-orange-500 transition text-lg" @onclick:stopPropagation="true" @onclick="() => QuickAddWatchItem(item)">üëÅÔ∏è</button>
                                                <button class="text-gray-300 hover:text-blue-600 transition font-black" @onclick:stopPropagation="true" @onclick="() => OpenEditModal(item)">‚úé</button>
                                                <button class="text-gray-300 hover:text-red-600 transition font-black" @onclick:stopPropagation="true" @onclick="() => DeleteBudgetItem(item)">‚úï</button>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="w-full h-2 bg-gray-200 rounded-full overflow-hidden">
                                        <div class="bg-blue-500 h-full transition-all duration-500" style="width: @(totalAllocated > 0 ? Math.Min((double)(rawSpent/totalAllocated)*100, 100) : 0)%"></div>
                                    </div>
                                </div>
                                @if(isEx) {
                                    <div class="bg-gray-50 border-y p-3 shadow-inner">
                                        <table class="w-full text-[10px] text-gray-700 font-mono">
                                            <thead>
                                                <tr class="text-gray-500 uppercase text-left border-b border-gray-300 tracking-widest">
                                                    <th class="pb-1">Date</th><th class="pb-1">Details</th><th class="pb-1 text-right">Amt</th><th class="pb-1 text-right text-blue-500 pr-2">Bal</th>
                                                </tr>
                                            </thead>
                                            <tbody class="divide-y divide-gray-200 font-black">
                                                <tr class="italic text-gray-400 font-mono">
                                                    <td class="py-1">---</td><td class="py-1 uppercase">Starting Allocation</td><td class="py-1 text-right">---</td><td class="py-1 text-right pr-2">$@totalAllocated.ToString("N2")</td>
                                                </tr>
                                                @{ decimal r = totalAllocated; foreach(var h in GetItemHistory(item.Id)) { r -= h.Amount; 
                                                    <tr class="hover:bg-gray-50 font-black">
                                                        <td class="py-1">@h.Date.ToString("MM/dd")</td>
                                                        <td class="py-1"><div class="truncate max-w-[150px]">@h.Desc</div>@if(!string.IsNullOrEmpty(h.SubText)){<div class="text-[8px] text-gray-400 uppercase tracking-tighter">@h.SubText</div>}</td>
                                                        <td class="py-1 text-right @(h.Amount < 0 ? "text-green-600" : "text-red-600")">@(h.Amount < 0 ? "+" : "-")$@Math.Abs(h.Amount).ToString("N2")</td>
                                                        <td class="py-1 text-right pr-2 text-blue-600 font-bold">$@r.ToString("N2")</td>
                                                    </tr> 
                                                } }
                                            </tbody>
                                        </table>
                                    </div>
                                }
                            }
                        </div>
                    </div>
                }

                <button @onclick="CreateNewCycle" class="w-full py-3 border-2 border-dashed border-gray-600 hover:border-blue-500 text-gray-500 hover:text-blue-500 rounded-lg transition font-black uppercase text-[10px] tracking-widest bg-gray-800/10">Ôºã Add Budget Section</button>

                <div class="bg-white rounded-lg border border-green-200 shadow-md">
                    <div class="bg-green-600 px-3 py-2 flex justify-between items-center text-white text-xs font-black uppercase tracking-widest font-mono">
                        <span>Expected Income</span>
                        <button @onclick="() => OpenIncomeModal()">Ôºã</button>
                    </div>
                    <div class="divide-y divide-gray-100">
                        @foreach(var inc in (CurrentPeriod.ExpectedIncome ?? new()).OrderBy(x => x.Date)) {
                            <div class="p-3 flex justify-between items-center hover:bg-green-50 transition text-gray-800 font-black">
                                <div class="flex items-center gap-2 tracking-tighter">
                                    <img src="@GetSourceImage(inc.SourceStringId)" class="w-8 h-8 rounded-full border shadow-sm" />
                                    <div><div class="text-xs font-black">@GetSourceName(inc.SourceStringId)</div><div class="text-[10px] text-gray-500 uppercase font-mono">Due @inc.Date.ToString("MM/dd")</div></div>
                                </div>
                                <div class="flex items-center gap-4">
                                    <span class="text-green-600 font-mono">+$@inc.Amount.ToString("N2")</span>
                                    <div class="flex gap-2">
                                        <button @onclick="() => RealizeIncome(inc)" class="text-gray-400 hover:text-green-600 transition text-lg" title="Realize to Ledger">‚úÖ</button>
                                        <button @onclick="() => OpenIncomeModal(inc)" class="text-gray-300 hover:text-green-600 transition font-black">‚úé</button>
                                        <button @onclick="() => DeleteExpectedIncome(inc)" class="text-gray-300 hover:text-red-600 transition font-black">‚úï</button>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>

                <div class="bg-white rounded-lg border border-orange-200 shadow-md">
                    <div class="bg-[#e67e22] px-3 py-2 flex justify-between items-center text-white text-xs font-black uppercase tracking-wider font-mono">
                        <span>Expected Expenses</span>
                        <button @onclick="() => OpenWatchModal()">Ôºã</button>
                    </div>
                    <div class="divide-y divide-gray-100 font-black text-gray-800">
                        @foreach(var item in (CurrentPeriod.WatchList ?? new()).OrderBy(x => x.DueDate ?? DateTime.MaxValue)) {
                            <div class="p-3 flex justify-between items-center hover:bg-orange-50 transition text-sm">
                                <div class="flex items-center gap-3">
                                    <div class="w-8 h-8 rounded-full bg-white border overflow-hidden flex items-center justify-center shadow-sm">
                                        @{ string watchImg = GetBudgetItemImage(item.ResolvedBudgetItemId); }
                                        @if(!string.IsNullOrEmpty(watchImg)){<img src="@watchImg" class="w-full h-full object-cover" />}else{<span class="text-[10px] font-black">üîç</span>}
                                    </div>
                                    <div><div class="text-xs font-black truncate w-32 tracking-tighter uppercase">@item.Description</div><div class="text-[10px] text-gray-500 uppercase font-mono">Due @(item.DueDate?.ToString("MM/dd") ?? "TBD")</div></div>
                                </div>
                                <div class="flex items-center gap-4">
                                    <span class="font-mono">$@item.Amount.ToString("N2")</span>
                                    <div class="flex gap-2">
                                        <button @onclick="() => RealizeExpense(item)" class="text-gray-400 hover:text-green-600 transition text-lg" title="Realize to Ledger">‚úÖ</button>
                                        <button @onclick="() => OpenWatchModal(item)" class="text-gray-300 hover:text-orange-600 transition font-black">‚úé</button>
                                        <button @onclick="() => DeleteWatchItem(item)" class="text-gray-300 hover:text-red-600 transition font-black">‚úï</button>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    }

    @if (EditingPeriod != null) {
        <div class="fixed inset-0 bg-black/80 flex items-center justify-center z-50 p-4 backdrop-blur-sm text-gray-800 font-black"><div class="bg-white rounded-xl shadow-2xl w-full max-w-sm overflow-hidden border border-gray-200"><div class="bg-gray-100 px-4 py-3 border-b font-black text-gray-700 flex justify-between items-center text-sm uppercase font-mono"><span>Period Settings</span><button @onclick="() => { EditingPeriod = null; }" class="text-gray-400 text-xl font-bold">&times;</button></div><div class="p-6 space-y-4 font-black"><div><label class="block text-[10px] text-gray-400 uppercase mb-1">Display Title</label><input @bind="EditingPeriod.DisplayName" class="w-full border rounded p-2 text-sm font-black" /></div><div><label class="block text-[10px] text-gray-400 uppercase mb-1">Initial Bank Balance ($)</label><input type="number" @bind="EditingPeriod.InitialBankBalance" step="0.01" class="w-full border rounded p-2 text-sm font-mono font-black" /></div><button @onclick="DeletePeriod" class="w-full py-2 bg-red-50 text-red-600 rounded text-[10px] uppercase font-black">Delete Month</button></div><div class="bg-gray-50 px-4 py-3 flex justify-end gap-2 border-t font-black"><button @onclick="() => { EditingPeriod = null; }" class="px-4 py-2 text-xs text-gray-600 font-bold">Cancel</button><button @onclick="SavePeriodChanges" class="bg-blue-600 text-white px-8 py-2 rounded text-xs shadow font-black tracking-widest uppercase">Save</button></div></div></div>
    }

    @if (EditingTransaction != null) {
        <div class="fixed inset-0 bg-black/80 flex items-center justify-center z-50 p-4 backdrop-blur-sm text-gray-800 font-black"><div class="bg-white rounded-xl shadow-2xl w-full max-w-2xl overflow-hidden border border-gray-200 font-bold font-black"><div class="bg-gray-100 px-4 py-3 border-b font-black text-gray-700 flex justify-between items-center text-sm uppercase font-mono tracking-widest"><span>Ledger Entry</span><button @onclick="() => { EditingTransaction = null; }" class="text-gray-400 text-xl font-bold">&times;</button></div><div class="p-5 space-y-4 font-sans font-black">
            
            @if(!string.IsNullOrEmpty(saveError)) {
                <div class="p-3 bg-red-50 border border-red-200 text-red-600 text-xs rounded mb-4 font-black uppercase tracking-widest">ERROR: @saveError</div>
            }

            <div class="flex items-center gap-6 p-3 bg-gray-50 rounded-lg border border-gray-200 font-black"><label class="flex items-center gap-2 cursor-pointer font-black"><input type="radio" checked="@(!isCreditMode)" @onchange="@(() => isCreditMode = false)" class="w-4 h-4 text-red-600" /><span class="text-sm uppercase font-black @(!isCreditMode ? "text-red-600" : "text-gray-400")">Debit</span></label><label class="flex items-center gap-2 cursor-pointer font-black"><input type="radio" checked="@isCreditMode" @onchange="@(() => isCreditMode = true)" class="w-4 h-4 text-green-600" /><span class="text-sm uppercase font-black @(isCreditMode ? "text-green-600" : "text-gray-400")">Credit</span></label></div><div class="grid grid-cols-1 md:grid-cols-3 gap-4 font-mono font-black"><div><label class="block text-[10px] text-gray-500 uppercase mb-1">Date</label><input type="date" @bind="EditingTransaction.Date" class="w-full border rounded p-2 text-sm font-black" /></div><div class="md:col-span-2 font-sans font-black"><label class="block text-[10px] text-gray-500 uppercase mb-1">Description</label><input @bind="EditingTransaction.Description" class="w-full border rounded p-2 text-sm font-black" /></div></div><div class="grid grid-cols-1 md:grid-cols-2 gap-4 font-mono font-black"><div><label class="block text-[10px] text-gray-500 uppercase mb-1">Amount ($)</label><input type="number" @bind="uiAmount" step="0.01" class="w-full border rounded p-2 text-lg font-mono font-bold font-black @(isCreditMode ? "text-green-700 border-green-200 bg-green-50" : "text-red-700 border-red-200 bg-red-50")" /></div>@if (isCreditMode) { <div class="font-sans font-black"><label class="block text-[10px] text-green-700 uppercase mb-1 tracking-widest font-black">Source</label><select @bind="EditingTransaction.SourceStringId" class="w-full border border-green-300 rounded p-2 text-sm bg-green-50 font-black">@foreach(var src in incomeSources){<option value="@src.StringId">@src.Name</option>}</select></div> }</div><div class="border-t pt-4 font-black"><div class="flex justify-between items-center mb-2 font-sans font-black"><label class="block text-[10px] uppercase font-black text-gray-500 tracking-tighter">Allocation</label><button class="text-xs text-blue-600 hover:underline font-black" @onclick="AddSplit">üîÄ Split Category</button></div>@if (!EditingTransaction.Splits.Any()) { <select @bind="EditingTransaction.ResolvedBudgetItemId" class="w-full border rounded p-2 text-sm font-black outline-none focus:border-blue-500 font-black"> <option value="">-- None / Uncategorized --</option> @foreach(var item in FlatBudgetList){<option value="@item.Id">@item.Name</option>} </select> } else { @foreach (var split in EditingTransaction.Splits) { <div class="flex gap-2 items-center mb-2 font-black"><select @bind="split.ResolvedBudgetItemId" class="flex-1 border rounded p-2 text-sm font-black"><option value="">-- None --</option>@foreach(var item in FlatBudgetList){<option value="@item.Id">@item.Name</option>}</select><input type="number" @bind="split.Amount" step="0.01" class="w-24 border rounded p-2 text-sm font-mono text-right font-black" /><button class="text-red-400 px-2 font-black" @onclick="() => { EditingTransaction.Splits.Remove(split); }">&times;</button></div> } }</div></div><div class="bg-gray-50 px-4 py-3 flex justify-end gap-2 border-t font-black"><button @onclick="() => { EditingTransaction = null; saveError = null; }" class="px-4 py-2 text-xs text-gray-600 font-bold mr-2">Cancel</button><button @onclick="HandleSaveClick" disabled="@(isCreditMode && string.IsNullOrEmpty(EditingTransaction.SourceStringId))" class="px-10 py-2 rounded text-xs bg-blue-600 text-white shadow-xl transition transform hover:scale-105 active:scale-95 tracking-widest font-black uppercase">Save</button></div></div></div>
    }

    @if (EditingTransfer != null) {
