        if(CurrentPeriod != null) foreach(var c in CurrentPeriod.Cycles) FlatBudgetList.AddRange(c.Items); 
    }

    private void AddSplit() { 
        if (EditingTransaction == null) return; 
        if (!EditingTransaction.Splits.Any() && EditingTransaction.ResolvedBudgetItemId.HasValue) { 
            EditingTransaction.Splits.Add(new BudgetTransactionSplit { ResolvedBudgetItemId = EditingTransaction.ResolvedBudgetItemId.Value, Amount = Math.Abs(uiAmount) }); 
            EditingTransaction.ResolvedBudgetItemId = null; 
        } 
        EditingTransaction.Splits.Add(new BudgetTransactionSplit { Amount = 0 }); 
    }

    private async Task HandleSaveClick() {
        await SaveTransaction();
    }

    private async Task SaveTransaction() { 
        Console.WriteLine("SAVE_TX_TRIGGERED");
        saveError = null;
        
        if(EditingTransaction == null) {
            Console.WriteLine("TX_IS_NULL");
            return;
        }

        try { 
            EditingTransaction.Amount = isCreditMode ? Math.Abs(uiAmount) : -Math.Abs(uiAmount); 
            
            if(EditingTransaction.Splits.Any()) {
                EditingTransaction.ResolvedBudgetItemId = null; 
            }
            
            if(EditingTransaction.Id == 0) {
                Db.BudgetTransactions.Add(EditingTransaction); 
            } else {
                Db.BudgetTransactions.Update(EditingTransaction); 
            }
            
            await Db.SaveChangesAsync(); 
            Console.WriteLine("DB_SAVE_SUCCESS");
            
            if(pendingWatchToDelete != null) { 
                Db.BudgetWatchItems.Remove(pendingWatchToDelete); 
                await Db.SaveChangesAsync(); 
                pendingWatchToDelete = null; 
            } 
            if(pendingIncomeToDelete != null) { 
                Db.BudgetExpectedIncome.Remove(pendingIncomeToDelete); 
                await Db.SaveChangesAsync(); 
                pendingIncomeToDelete = null; 
            } 
            
            EditingTransaction = null; 
            await LoadData(); 
        } catch (Exception ex) { 
            saveError = ex.Message;
            Console.WriteLine($"DB_SAVE_FAILURE: {ex.Message}");
        } 
    }

    private void NextPeriod() { if (CanGoNext) { currentIndex--; _ = LoadData(); } }
    private void PrevPeriod() { if (CanGoBack) { currentIndex++; _ = LoadData(); } }
    private bool CanGoBack => currentIndex < (periods?.Count ?? 0) - 1;
    private bool CanGoNext => currentIndex > 0;

    private decimal GetSpentForBudgetItem(int itemId) { 
        if (CurrentPeriod == null) return 0; 
        var direct = CurrentPeriod.Transactions.Where(t => t.ResolvedBudgetItemId == itemId).Sum(t => t.Amount * -1); 
        var splits = CurrentPeriod.Transactions.SelectMany(t => t.Splits.Select(s => new { P = t, S = s })).Where(x => x.S.ResolvedBudgetItemId == itemId).Sum(x => x.P.Amount < 0 ? Math.Abs(x.S.Amount) : -Math.Abs(x.S.Amount)); 
        var trOut = CurrentPeriod.Transfers.Where(tr => tr.ResolvedFromId == itemId).Sum(tr => tr.Amount); 
        var trIn = CurrentPeriod.Transfers.Where(tr => tr.ResolvedToId == itemId).Sum(tr => tr.Amount); 
        return (direct + splits + trOut) - trIn; 
    }

    private List<HistoryItem> GetItemHistory(int itemId) { 
        var list = new List<HistoryItem>(); 
        if (CurrentPeriod == null) return list; 
        foreach(var t in CurrentPeriod.Transactions.Where(t => t.ResolvedBudgetItemId == itemId)) list.Add(new HistoryItem { Date = t.Date, Desc = t.Description, SubText = "", Amount = t.Amount * -1 }); 
        foreach(var x in CurrentPeriod.Transactions.SelectMany(t => t.Splits.Select(s => new { P = t, S = s })).Where(x => x.S.ResolvedBudgetItemId == itemId)) { 
            decimal a = x.P.Amount < 0 ? Math.Abs(x.S.Amount) : -Math.Abs(x.S.Amount); 
            list.Add(new HistoryItem { Date = x.P.Date, Desc = $"{x.P.Description} (Split)", SubText = "", Amount = a }); 
        } 
        foreach(var tr in CurrentPeriod.Transfers.Where(tr => tr.ResolvedFromId == itemId)) { 
            var destName = FlatBudgetList.FirstOrDefault(i => i.Id == tr.ResolvedToId)?.Name ?? "Unknown"; 
            list.Add(new HistoryItem { Date = tr.Date, Desc = $"‚áÑ Transfer Out", SubText = $"To: {destName}", Amount = tr.Amount }); 
        } 
        foreach(var tr in CurrentPeriod.Transfers.Where(tr => tr.ResolvedToId == itemId)) { 
            var srcName = FlatBudgetList.FirstOrDefault(i => i.Id == tr.ResolvedFromId)?.Name ?? "Unknown"; 
            list.Add(new HistoryItem { Date = tr.Date, Desc = $"‚áÑ Transfer In", SubText = $"From: {srcName}", Amount = -tr.Amount }); 
        } 
        return list.OrderBy(x => x.Date).ToList(); 
    }

