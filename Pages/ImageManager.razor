        // var usedIds = await db.BulletTasks.Select(t => t.ImageId).Distinct().ToListAsync();
        // var unused = await db.StoredImages.Where(img => !usedIds.Contains(img.Id)).ToListAsync();
        
        // db.StoredImages.RemoveRange(unused);
        // await db.SaveChangesAsync();
        
        Console.WriteLine("Manual cleanup complete.");
        await LoadImages();
    }
}