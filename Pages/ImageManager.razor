@page "/image-manager"
@using Dashboard
@using Microsoft.JSInterop
@using System.Text.Json
@inject AppDbContext Db
@inject ImageService ImageService
@inject IJSRuntime JS

<div class="min-h-screen bg-gray-900 text-white p-8 font-sans font-black uppercase">
    
    <div class="flex justify-between items-center mb-8 border-b border-gray-800 pb-6">
        <div>
            <h1 class="text-2xl tracking-tighter text-blue-400">Visual Asset Registry</h1>
            <p class="text-[10px] text-gray-500 tracking-widest mt-1">Manage local uploads and remote pointer references</p>
        </div>
        <div class="flex gap-4">
            @if(errorMessage != null)
            {
                <button @onclick="LoadImages" class="bg-blue-600 text-white px-4 py-2 rounded-lg text-[10px]">üîÑ Retry Connection</button>
            }
            <button @onclick="CleanupUnused" 
                    disabled="@isLoading"
                    class="bg-red-600/20 hover:bg-red-600 text-red-500 hover:text-white border border-red-500/50 px-6 py-2 rounded-lg text-xs transition shadow-lg font-black uppercase tracking-widest disabled:opacity-30">
                üóëÔ∏è Purge Unused Local Data
            </button>
        </div>
    </div>

    @if (errorMessage != null)
    {
        <div class="bg-red-900/20 border border-red-500/50 p-6 rounded-2xl text-center">
            <p class="text-red-400 text-sm mb-2">DATABASE_OFFLINE_OR_TIMEOUT</p>
            <p class="text-[10px] text-gray-500">@errorMessage</p>
        </div>
    }
    else if (isLoading)
    {
        <div class="flex flex-col items-center justify-center py-20">
            <div class="w-12 h-12 border-4 border-blue-500 border-t-transparent rounded-full animate-spin"></div>
            <div class="mt-4 animate-pulse text-blue-500 text-xs tracking-[0.3em]">Indexing assets...</div>
        </div>
    }
    else
    {
        <div class="grid grid-cols-2 md:grid-cols-4 lg:grid-cols-6 xl:grid-cols-8 gap-6 pb-20">
            @foreach (var img in images)
            {
                <div class="bg-gray-800/40 border @(img.IsUsed ? "border-gray-700" : "border-red-500/40") rounded-xl overflow-hidden shadow-2xl group transition hover:scale-105 hover:border-blue-500/50">
                    
                    <div class="aspect-square bg-black relative">
                        <img src="@img.Url" class="w-full h-full object-cover" />
                        
                        @if (!img.IsUsed && img.IsLocal)
                        {
                            <div class="absolute inset-0 bg-red-900/60 flex items-center justify-center backdrop-blur-[2px]">
                                <span class="text-[8px] bg-white text-red-600 px-2 py-0.5 rounded font-black tracking-tighter">UNUSED_ORPHAN</span>
                            </div>
                        }

                        <button @onclick="() => ToggleFavorite(img)" 
                                class="absolute top-2 left-2 p-1.5 rounded-full bg-black/60 backdrop-blur-md border border-white/10 text-xs">
                            @(img.IsFavorite ? "‚≠ê" : "‚òÜ")
                        </button>
                    </div>

                    <div class="p-3 space-y-2 bg-gray-900/50">
                        <div class="flex items-center gap-2">
                            <input readonly value="@img.Url" class="bg-black/40 border-none text-[8px] text-gray-500 px-2 py-1 flex-1 rounded truncate font-mono outline-none" />
                            <button @onclick='() => CopyToClipboard(img.Url)' class="p-1 hover:text-blue-400 transition-colors" title="Copy Link">üìã</button>
                        </div>
                        
                        <div class="flex justify-between items-center">
                            <span class="text-[7px] text-gray-600 tracking-tighter">@(img.IsLocal ? "LOCAL_DB" : "REMOTE_URI")</span>
                            @if(img.IsUsed) { <span class="text-[7px] text-emerald-500 font-black">ACTIVE</span> }
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

@code {
    private bool isLoading = true;
    private string? errorMessage;
    private List<ImageService.ImageUsageDTO> images = new();
    private int userId = 0;

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender) { await LoadUserDataAndImages(); }
    }

    private async Task LoadUserDataAndImages()
    {
        try 
        {
            var json = await JS.InvokeAsync<string>("localStorage.getItem", "dashboard_session");
            if (!string.IsNullOrEmpty(json)) 
            {
                using var doc = JsonDocument.Parse(json);
                if (doc.RootElement.TryGetProperty("UserId", out var p) || doc.RootElement.TryGetProperty("userId", out p))
                {
                    userId = p.GetInt32();
                }
            }
            if (userId > 0) { await LoadImages(); }
        }
        catch (Exception ex) { errorMessage = ex.Message; StateHasChanged(); }
    }

    private async Task LoadImages()
    {
        isLoading = true;
        errorMessage = null;
        StateHasChanged();
        
        try { images = await ImageService.GetAllImages(userId); }
        catch (Exception ex) { errorMessage = ex.Message; }

        isLoading = false;
        StateHasChanged();
    }

    private async Task CleanupUnused()
    {
        bool confirmed = await JS.InvokeAsync<bool>("confirm", "Permanently delete all unassigned local images?");
        if (confirmed)
        {
            isLoading = true;
            StateHasChanged();
            
            int deletedCount = await ImageService.DeleteUnusedLocalImages(userId);
            
            if (deletedCount >= 0)
            {
                await JS.InvokeVoidAsync("alert", $"Registry Clean: {deletedCount} images purged.");
                await LoadImages();
            }
            else
            {
                await JS.InvokeVoidAsync("alert", "Error during purge. Check database connection.");
                isLoading = false;
                StateHasChanged();
            }
        }
    }

    private async Task CopyToClipboard(string url) => await JS.InvokeVoidAsync("navigator.clipboard.writeText", url);
    private void ToggleFavorite(ImageService.ImageUsageDTO img) => img.IsFavorite = !img.IsFavorite;

    public class SessionData { public int UserId { get; set; } }
}