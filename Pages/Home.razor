<div class="flex h-screen bg-gray-900 text-white overflow-hidden">

    <div class="w-64 bg-gray-900 border-r border-gray-800 flex flex-col h-full overflow-y-auto shrink-0">
        <div class="p-6 border-b border-gray-800">
            <div class="flex items-center gap-3 mb-2">
                <img src="/images/dashboard.png" class="w-8 h-8 rounded bg-gray-700" alt="Logo" />
