                                            <button @onclick="() => DuplicateLink(link)" class="w-full text-left px-2 py-1 text-[10px] text-green-400 hover:bg-gray-700">Duplicate</button>
                                            <button @onclick="() => DeleteLink(link)" class="w-full text-left px-2 py-1 text-[10px] text-red-400 hover:bg-gray-700">Delete</button>
                                        </div>
                                    }
                                    <a href="@link.Url" target="_blank" class="flex flex-col items-center gap-2 p-2 rounded hover:bg-gray-700 transition w-full text-center">
                                        @if (!string.IsNullOrEmpty(link.Img))
                                        {
                                            <img src="@link.Img" class="w-16 h-16 rounded object-cover opacity-80 group-hover:opacity-100 transition shadow-sm" />
                                        }
                                        <span class="text-gray-400 group-hover:text-white transition text-xs truncate w-full">@link.Name</span>
                                    </a>
                                </div>
                            }
                        </div>
                    </div>
                }
            </div>

            <div class="mb-12">
                <div class="flex items-center justify-between mb-4">
                    <h3 class="text-xl font-bold text-gray-200">Countdowns</h3>
                    <button @onclick="OpenAddCountdownModal" class="text-xs font-bold text-gray-500 hover:text-white border border-gray-700 hover:border-gray-500 px-3 py-1 rounded transition">+ Add Countdown</button>
                </div>
                <div class="flex gap-4 overflow-x-auto pb-4 scrollbar-hide">
                    @foreach (var c in Countdowns)
                    {
