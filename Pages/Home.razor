    private (string MainDisplay, string SubDisplay) GetCountdownLogic(DateTime target)
    {
        var now = DateTime.UtcNow.AddMinutes(-clientOffsetMinutes);
        var diff = target.Date - now.Date;
        
        if (diff.TotalDays < 0) return ("Done", "");
        if (diff.TotalDays <= 30) { return ($"{(int)diff.TotalDays} Days", ""); }
        
        DateTime date = now.Date; 
        int years = 0, months = 0, days = 0;
        
        while (date.AddYears(1) <= target) { years++; date = date.AddYears(1); }
        while (date.AddMonths(1) <= target) { months++; date = date.AddMonths(1); }
        
        days = (target - date).Days;
        
        string display = ""; 
        if (years > 0) display += $"{years}y "; 
        if (months > 0) display += $"{months}m "; 
        display += $"{days}d";
        
        return (display.Trim(), $"({(int)diff.TotalDays} total days)");
    }

    private async Task FetchPrices() 
    { 
        if (Stocks.Count == 0) return; 
        isLoadingPrices = true; 
        StateHasChanged(); 
        
        using var client = new HttpClient(); 
        client.DefaultRequestHeaders.Add("User-Agent", "Mozilla/5.0"); 
        
        foreach (var s in Stocks) 
        { 
            try 
            { 
                var url = $"https://query1.finance.yahoo.com/v8/finance/chart/{s.Symbol}?interval=1d"; 
                var json = await client.GetStringAsync(url); 
                using (var doc = JsonDocument.Parse(json)) 
                { 
                    var meta = doc.RootElement.GetProperty("chart").GetProperty("result")[0].GetProperty("meta"); 
                    decimal price = meta.GetProperty("regularMarketPrice").GetDecimal();
                    decimal prevClose = meta.GetProperty("chartPreviousClose").GetDecimal();
                    
                    decimal change = price - prevClose;
                    decimal percent = (prevClose != 0) ? (change / prevClose) * 100 : 0;

                    PriceCache[s.Symbol] = new StockData(price, change, percent);
                } 
            } 
            catch {} 
            StateHasChanged(); 
        } 
        isLoadingPrices = false; 
        StateHasChanged(); 
    }
    
