    private async Task FetchRssFeeds()
    {
        if (currentUser == null) return;
        
        try
        {
            var feeds = await Db.Feeds.Where(f => f.UserId == currentUser.Id && f.IsEnabled && f.Category != "System").ToListAsync();
            
            var tasks = feeds.Select(async f => 
            {
                try {
                    using var request = new HttpRequestMessage(HttpMethod.Get, f.Url);
                    request.Headers.Add("User-Agent", "Mozilla/5.0 (Windows NT 10.0; Win64; x64)");
                    
                    var response = await Http.SendAsync(request);
                    if (!response.IsSuccessStatusCode) return Enumerable.Empty<RssItem>();

                    var xml = await response.Content.ReadAsStringAsync();
                    var doc = XDocument.Parse(xml);
                    
                    var allItems = doc.Descendants().Where(x => x.Name.LocalName == "item")
                        .Take(15)
                        .Select(i => new RssItem {
                            Source = f.Name,
                            Title = i.Elements().FirstOrDefault(x => x.Name.LocalName == "title")?.Value ?? "No Title",
                            Link = i.Elements().FirstOrDefault(x => x.Name.LocalName == "link")?.Value ?? "#",
                            ImgUrl = ExtractImage(i)
                        })
                        .ToList();

                    var withImg = allItems.Where(i => !string.IsNullOrEmpty(i.ImgUrl)).ToList();
                    var withoutImg = allItems.Where(i => string.IsNullOrEmpty(i.ImgUrl)).ToList();
                    var result = withImg.Take(4).ToList();
                    if (result.Count < 4) result.AddRange(withoutImg.Take(4 - result.Count));
                    return result;

                } catch { return Enumerable.Empty<RssItem>(); }
            });

            var results = await Task.WhenAll(tasks);
            RssItems = results.SelectMany(x => x).ToList();
            StateHasChanged();
        }
        catch {}
    }
    
    private string ExtractImage(XElement item)
    {
        var enc = item.Elements().FirstOrDefault(x => x.Name.LocalName == "enclosure");
        if (enc != null && enc.Attribute("type")?.Value.Contains("image") == true) return enc.Attribute("url")?.Value ?? "";
        
        var media = item.Elements().FirstOrDefault(x => x.Name.LocalName == "content" || x.Name.LocalName == "thumbnail");
        if (media != null) return media.Attribute("url")?.Value ?? "";
        
        var group = item.Elements().FirstOrDefault(x => x.Name.LocalName == "group");
        if (group != null) {
             var subMedia = group.Elements().FirstOrDefault(x => x.Name.LocalName == "content" || x.Name.LocalName == "thumbnail");
             if (subMedia != null) return subMedia.Attribute("url")?.Value ?? "";
        }

        var desc = item.Elements().FirstOrDefault(x => x.Name.LocalName == "description" || x.Name.LocalName == "encoded")?.Value ?? "";
        if (!string.IsNullOrEmpty(desc)) 
        { 
            var match = Regex.Match(desc, "src=[\"'](http[^\"']+)[\"']", RegexOptions.IgnoreCase); 
            if (match.Success) return match.Groups[1].Value; 
        }
        return "";
    }

