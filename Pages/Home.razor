@code {
    private List<LinkGroup> Groups = new();
    private List<Stock> Stocks = new();
    private List<Countdown> Countdowns = new();
    private Dictionary<string, decimal> PriceCache = new();
    private WeatherData? weather;
    private string CurrentDate = "", CurrentTime = "";
    private bool isLoadingPrices = false;

    // --- STATE FOR MODALS ---
    private Stock? editingStock = null;
    private LinkGroup? editingGroup = null;
    private Link? editingLink = null;

    protected override async Task OnInitializedAsync()
    {
        UpdateTime();
        await LoadData();
        _ = FetchPrices();
        _ = FetchWeather();
        _ = StartClock();
    }

    private async Task LoadData()
    {
        Groups = await Db.LinkGroups.Include(g => g.Links).OrderBy(g => g.Id).ToListAsync();
        Stocks = await Db.Stocks.OrderBy(s => s.Symbol).ToListAsync();
        Countdowns = await Db.Countdowns.OrderBy(c => c.TargetDate).ToListAsync();
        StateHasChanged();
    }

    // --- GROUP LOGIC ---
    private void OpenAddGroupModal() { editingGroup = new LinkGroup { Color = "blue" }; }
    private void OpenEditGroupModal(LinkGroup g) { editingGroup = g; }
    
    private async Task SaveGroup()
    {
        if (editingGroup == null) return;
        
        if (editingGroup.Id == 0) Db.LinkGroups.Add(editingGroup);
        else Db.LinkGroups.Update(editingGroup);
        
        await Db.SaveChangesAsync();
        editingGroup = null;
        await LoadData();
    }

    private async Task DeleteGroup(LinkGroup g)
    {
        if (await JS.InvokeAsync<bool>("confirm", $"Delete group '{g.Name}'?"))
        {
            Db.LinkGroups.Remove(g);
            await Db.SaveChangesAsync();
            await LoadData();
        }
    }

    // --- LINK LOGIC ---
    private void OpenAddLinkModal(int groupId) { editingLink = new Link { LinkGroupId = groupId }; }
    private void OpenEditLinkModal(Link l) { editingLink = l; }

    private async Task SaveLink()
    {
        if (editingLink == null) return;

        if (editingLink.Id == 0) Db.Links.Add(editingLink);
        else Db.Links.Update(editingLink);

        await Db.SaveChangesAsync();
        editingLink = null;
        await LoadData();
    }

    private async Task DeleteLink(Link l)
    {
        if (await JS.InvokeAsync<bool>("confirm", $"Delete link '{l.Name}'?"))
        {
            Db.Links.Remove(l);
            await Db.SaveChangesAsync();
            await LoadData();
        }
    }

    // --- STOCK LOGIC ---
    private void EditStock(Stock stock) { editingStock = stock; }
    private async Task SaveStock()
    {
        if (editingStock != null) { Db.Stocks.Update(editingStock); await Db.SaveChangesAsync(); editingStock = null; }
    }

    // --- CLOCK, WEATHER, PRICES ---
    private async Task StartClock()
    {
        var now = DateTime.Now;
        await Task.Delay((60 - now.Second) * 1000);
        using var timer = new PeriodicTimer(TimeSpan.FromMinutes(1));
        UpdateTime();
        while (await timer.WaitForNextTickAsync()) { UpdateTime(); }
    }
    private void UpdateTime()
    {
        var now = DateTime.Now;
        string suffix = (now.Day % 10 == 1 && now.Day != 11) ? "st" : (now.Day % 10 == 2 && now.Day != 12) ? "nd" : (now.Day % 10 == 3 && now.Day != 13) ? "rd" : "th";
        CurrentDate = $"{now:dddd, MMMM d}{suffix} {now:yyyy}";
        CurrentTime = now.ToString("h:mm tt").ToLower();
        InvokeAsync(StateHasChanged);
    }
    private async Task FetchWeather()
    {
        try {
            var url = "https://api.open-meteo.com/v1/forecast?latitude=33.1383&longitude=-95.6011&current=temperature_2m,weather_code&daily=weather_code,temperature_2m_max,temperature_2m_min&temperature_unit=fahrenheit&timezone=auto";
            weather = await Http.GetFromJsonAsync<WeatherData>(url);
            StateHasChanged();
        } catch {}
    }
    private string GetDayName(string s) => DateTime.TryParse(s, out var d) ? d.ToString("ddd") : "";
    private string GetWeatherIcon(int c) => c switch { 0=>"‚òÄÔ∏è", 1=>"üå§Ô∏è", 2=>"Qw", 3=>"‚òÅÔ∏è", 45 or 48=>"üå´Ô∏è", 51 or 53 or 55=>"DRIZZLE", 61 or 63 or 65=>"üåßÔ∏è", 80 or 81 or 82=>"üå¶Ô∏è", 71 or 73 or 75=>"‚ùÑÔ∏è", 95 or 96 or 99=>"‚ö°", _=>"üå°Ô∏è" };
    
    private async Task FetchPrices()
    {
        if (Stocks.Count == 0) return;
        isLoadingPrices = true; StateHasChanged();
        foreach (var s in Stocks) {
            try {
                var url = $"https://query1.finance.yahoo.com/v8/finance/chart/{s.Symbol}?interval=1d";
                var json = await Http.GetStringAsync(url);
                using (var doc = JsonDocument.Parse(json)) {
                    var meta = doc.RootElement.GetProperty("chart").GetProperty("result")[0].GetProperty("meta");
                    PriceCache[s.Symbol] = meta.GetProperty("regularMarketPrice").GetDecimal();
                }
            } catch {}
            StateHasChanged();
        }
        isLoadingPrices = false; StateHasChanged();
    }

    private async Task ClearDb() { if (await JS.InvokeAsync<bool>("confirm", "‚ö†Ô∏è WIPE DATABASE?")) { await Http.PostAsync("/api/admin/clear", null); Nav.NavigateTo(Nav.Uri, forceLoad: true); } }
    private async Task SeedDb() { var r = await Http.PostAsync("/api/admin/seed", null); if (r.IsSuccessStatusCode) { await JS.InvokeVoidAsync("alert", "Seeded!"); Nav.NavigateTo(Nav.Uri, forceLoad: true); } }

    public class WeatherData { public CurrentWeather current { get; set; } = new(); public DailyWeather daily { get; set; } = new(); }
    public class CurrentWeather { public double temperature_2m { get; set; } public int weather_code { get; set; } }
    public class DailyWeather { public string[] time { get; set; } = Array.Empty<string>(); public int[] weather_code { get; set; } = Array.Empty<int>(); public double[] temperature_2m_max { get; set; } = Array.Empty<double>(); public double[] temperature_2m_min { get; set; } = Array.Empty<double>(); }
}