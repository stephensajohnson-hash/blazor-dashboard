@page "/"
@using Microsoft.AspNetCore.Components.Web
@rendermode @(new InteractiveServerRenderMode(prerender: false))
@using Dashboard
@using Microsoft.EntityFrameworkCore
@using System.Text.Json
@using Microsoft.JSInterop
@using System.Globalization
@inject AppDbContext Db
@inject HttpClient Http
@inject IJSRuntime JS
@inject NavigationManager Nav

<div class="min-h-screen bg-gray-900 text-white overflow-x-hidden">

    @if (isDbError)
    {
        <div class="flex flex-col items-center justify-center h-screen space-y-6">
            <div class="text-red-500 text-xl font-bold">‚ö†Ô∏è Database Update Required</div>
            <p class="text-gray-400 max-w-md text-center">We need to add User ownership to your data.</p>
            <button @onclick="MigrateDataToUser" class="px-6 py-3 bg-blue-600 hover:bg-blue-500 text-white font-bold rounded-lg shadow-lg transition">
                Migrate Data to User ID 1
            </button>
        </div>
    }
    else
    {
        <main class="w-full p-8 relative scroll-smooth">
            
            <div class="mb-10 border-b border-gray-800 pb-4 flex justify-between items-end">
                <div>
                    <div class="flex items-baseline gap-4">
                        <h2 class="text-3xl font-bold text-white tracking-tight">@CurrentDate</h2>
                        <span class="text-xl font-medium text-gray-400">@CurrentTime</span>
                    </div>
                    <div class="text-[10px] text-gray-600 font-mono mt-1">v1.9.0 (Multi-User)</div>
                </div>

                <div class="flex items-center gap-8 text-right">
                    @if (weather != null)
                    {
                        <div class="flex items-center gap-6">
                            <div class="flex gap-4 border-r border-gray-700 pr-6">
                                @for (int i = 1; i < Math.Min(7, weather.daily.time.Length); i++)
                                {
                                    <div class="flex flex-col items-center">
                                        <span class="text-[10px] text-gray-500 font-bold uppercase">@GetDayName(weather.daily.time[i])</span>
                                        <span class="text-lg my-1">@GetWeatherIcon(weather.daily.weather_code[i])</span>
                                        <div class="text-[10px] font-mono">
                                            <span class="text-white">@Math.Round(weather.daily.temperature_2m_max[i])¬∞</span>
                                            <span class="text-blue-400">@Math.Round(weather.daily.temperature_2m_min[i])¬∞</span>
                                        </div>
                                    </div>
                                }
                            </div>
                            <div class="flex items-center gap-3">
                                <div class="text-4xl">@GetWeatherIcon(weather.current.weather_code)</div>
                                <div>
                                    <div class="text-3xl font-bold text-white leading-none">@Math.Round(weather.current.temperature_2m)¬∞</div>
                                    <div class="text-xs text-gray-400 mt-1">@currentUser?.ZipCode</div>
                                </div>
                            </div>
                        </div>
                    }

                    <div class="relative group z-50">
                        <button class="flex items-center gap-3 focus:outline-none">
                            <div class="text-right hidden md:block">
                                <div class="text-sm font-bold text-white">@(currentUser?.Username ?? "Loading...")</div>
                                <div class="text-[10px] text-gray-500 uppercase">User @(currentUser?.Id)</div>
                            </div>
                            <img src="@(string.IsNullOrEmpty(currentUser?.AvatarUrl) ? "https://i.imgur.com/7Y5j5Yx.png" : currentUser.AvatarUrl)" 
                                 class="w-10 h-10 rounded-full border-2 border-gray-700 group-hover:border-blue-500 transition object-cover bg-gray-800" />
                        </button>

                        <div class="absolute right-0 top-full mt-2 w-56 bg-gray-800 border border-gray-700 rounded-xl shadow-2xl p-2 hidden group-hover:block transform origin-top-right transition-all">
                            
                            <button type="button" @onclick="OpenEditUserModal" class="w-full text-left text-xs text-white hover:bg-gray-700 p-2 rounded mb-2 transition flex items-center gap-2">
                                <span>‚úèÔ∏è</span> Edit Profile
                            </button>

                            <div class="px-2 py-1 text-[10px] uppercase text-gray-500 font-bold tracking-wider mb-1">System Tools</div>
                            <button type="button" @onclick="MigrateDataToUser" class="w-full text-left text-xs text-yellow-400 hover:bg-gray-700 p-2 rounded mb-1 transition flex items-center gap-2">
                                <span>üîÑ</span> Re-Run Migration
                            </button>
                            <button type="button" @onclick="FixOrder" class="w-full text-left text-xs text-blue-400 hover:bg-gray-700 p-2 rounded mb-1 transition flex items-center gap-2">
                                <span>üîß</span> Fix Sort Order
                            </button>
                            
                            <div class="border-t border-gray-700 my-1"></div>
                            
                            <button type="button" @onclick="Logout" class="w-full text-left text-xs text-red-500 font-bold hover:bg-gray-700 p-2 rounded transition flex items-center gap-2">
                                <span>üö™</span> Logout
                            </button>
                        </div>
                    </div>

                </div>
            </div>

            <div class="flex items-center justify-between mb-4">
                <h3 class="text-xl font-bold text-gray-200">Links</h3>
                <button type="button" @onclick="OpenAddGroupModal" class="text-xs font-bold text-gray-500 hover:text-white border border-gray-700 hover:border-gray-500 px-3 py-1 rounded transition">
                    + Add Link Group
                </button>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6 mb-12">
                @foreach (var group in Groups)
                {
                    <div id="@group.Id" class="group/card relative bg-gray-800/40 rounded-xl p-5 border border-gray-700/50 hover:border-gray-600 transition">
                        
                        <div class="flex justify-between items-center mb-4 pb-2 border-b border-gray-700">
                            <h3 class="text-lg font-bold text-white flex items-center gap-2">
                                <span class="w-2 h-2 rounded-full shadow-[0_0_10px_currentColor]" style="color: @group.Color; background-color: @group.Color"></span>
                                @group.Name
                            </h3>
                            <div class="flex items-center gap-1 opacity-0 group-hover/card:opacity-100 transition">
                                <button type="button" @onclick="() => MoveGroup(group, -1)" class="text-gray-500 hover:text-white p-1" title="Move Left">‚Üê</button>
                                <button type="button" @onclick="() => MoveGroup(group, 1)" class="text-gray-500 hover:text-white p-1" title="Move Right">‚Üí</button>
                                <div class="w-px h-3 bg-gray-700 mx-1"></div>
                                <button type="button" @onclick="() => OpenAddLinkModal(group.Id)" class="text-gray-400 hover:text-green-400 p-1" title="Add Link">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M5 12h14"/><path d="M12 5v14"/></svg>
                                </button>
                                <button type="button" @onclick="() => OpenEditGroupModal(group)" class="text-gray-400 hover:text-white p-1" title="Edit Group">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M17 3a2.85 2.83 0 1 1 4 4L7.5 20.5 2 22l1.5-5.5Z"/></svg>
                                </button>
                                <button type="button" @onclick="() => DeleteGroup(group)" class="text-gray-400 hover:text-red-500 p-1 font-bold" title="Delete Group">‚úï</button>
                            </div>
                        </div>

                        <div class="grid grid-cols-4 gap-4">
                            @foreach (var link in group.Links.OrderBy(l => l.Order))
                            {
                                <div class="group/link relative flex flex-col items-center">
                                    <div class="absolute -top-2 -right-2 flex gap-1 bg-black/90 rounded px-1 opacity-0 group-hover/link:opacity-100 z-10 transition border border-gray-700 shadow-md">
                                        <button type="button" @onclick="() => MoveLink(link, -1)" class="text-[10px] text-gray-400 hover:text-white p-1">‚Üê</button>
                                        <button type="button" @onclick="() => MoveLink(link, 1)" class="text-[10px] text-gray-400 hover:text-white p-1">‚Üí</button>
                                        <div class="w-px h-3 bg-gray-700 my-auto"></div>
                                        <button type="button" @onclick="() => OpenEditLinkModal(link)" class="text-[10px] text-gray-400 hover:text-white p-1">‚úèÔ∏è</button>
                                        <button type="button" @onclick="() => DeleteLink(link)" class="text-[10px] text-gray-400 hover:text-red-500 p-1 font-bold">‚úï</button>
                                    </div>

                                    <a href="@link.Url" target="_blank" class="flex flex-col items-center gap-2 p-2 rounded hover:bg-gray-700 transition w-full text-center">
                                        @if (!string.IsNullOrEmpty(link.Img))
                                        {
                                            <img src="@link.Img" class="w-16 h-16 rounded object-cover opacity-80 group-hover:opacity-100 transition shadow-sm" />
                                        }
                                        <span class="text-gray-400 group-hover:text-white transition text-xs truncate w-full">@link.Name</span>
                                    </a>
                                </div>
                            }
                        </div>
                    </div>
                }
            </div>

            <div class="mb-12">
                <div class="flex items-center justify-between mb-4">
                    <h3 class="text-xl font-bold text-gray-200">Upcoming</h3>
                    <button @onclick="OpenAddCountdownModal" class="text-xs font-bold text-gray-500 hover:text-white border border-gray-700 hover:border-gray-500 px-3 py-1 rounded transition">
                        + Add Countdown
                    </button>
                </div>
                
                <div class="flex gap-4 overflow-x-auto pb-4 scrollbar-hide">
                    @foreach (var c in Countdowns)
                    {
                        var calc = GetCountdownLogic(c.TargetDate);
                        <div class="group relative h-32 bg-gray-800 rounded-xl flex items-center border border-gray-700 shadow-lg shrink-0 overflow-hidden hover:border-gray-500 transition pr-6">
                            <div class="absolute top-2 right-2 flex gap-1 bg-black/80 rounded px-1 opacity-0 group-hover:opacity-100 z-20 transition">
                                <button type="button" @onclick="() => MoveCountdown(c, -1)" class="text-[10px] text-gray-300 hover:text-white p-1">‚Üê</button>
                                <button type="button" @onclick="() => MoveCountdown(c, 1)" class="text-[10px] text-gray-300 hover:text-white p-1">‚Üí</button>
                                <div class="w-px h-3 bg-gray-700 my-auto"></div>
                                <button type="button" @onclick="() => OpenEditCountdownModal(c)" class="text-[10px] text-gray-300 hover:text-white p-1">‚úèÔ∏è</button>
                                <button type="button" @onclick="() => DeleteCountdown(c)" class="text-[10px] text-gray-300 hover:text-red-400 p-1 font-bold">‚úï</button>
                            </div>
                            <div class="h-full w-auto shrink-0 bg-gray-900">
                                @if (!string.IsNullOrEmpty(c.Img)) { <img src="@c.Img" class="h-full w-auto object-cover opacity-90 group-hover:opacity-100 transition" /> }
                            </div>
                            <div class="p-4 flex flex-col justify-center min-w-[140px]">
                                <div class="text-xs text-gray-400 font-bold uppercase tracking-wider mb-1">@c.Name</div>
                                <div class="text-2xl font-bold text-white leading-none mb-1">@calc.MainDisplay</div>
                                @if (!string.IsNullOrEmpty(calc.SubDisplay)) { <div class="text-xs text-gray-400 font-mono">@calc.SubDisplay</div> }
                                <div class="text-sm font-bold text-blue-400 mt-2">@c.TargetDate.ToShortDateString()</div>
                            </div>
                        </div>
                    }
                </div>
            </div>

            <div class="mb-20">
                <div class="flex items-center justify-between mb-4">
                    <h3 class="text-xl font-bold text-gray-200 flex items-center gap-2">
                        <span>üìà</span> Portfolio
                        @if (isLoadingPrices) { <span class="text-xs font-mono text-yellow-500 animate-pulse">(Updating...)</span> }
                    </h3>
                    <button @onclick="OpenAddStockModal" class="text-xs font-bold text-gray-500 hover:text-white border border-gray-700 hover:border-gray-500 px-3 py-1 rounded transition">
                        + Add Stock
                    </button>
                </div>

                <div class="flex gap-4 overflow-x-auto pb-4 scrollbar-hide">
                    @foreach (var stock in Stocks)
                    {
                        decimal price = 0;
                        if (PriceCache.ContainsKey(stock.Symbol)) { price = PriceCache[stock.Symbol]; }
                        var value = stock.Shares * (double)price;
                        var hasPrice = price > 0;

                        <div class="group relative h-32 bg-gray-800 rounded-xl flex items-center border border-gray-700 shadow-lg shrink-0 overflow-hidden hover:border-blue-500/50 transition pr-6">
                            <div class="absolute top-2 right-2 flex gap-1 bg-black/90 rounded px-1 opacity-0 group-hover:opacity-100 z-20 transition border border-gray-700 shadow-md">
                                <button type="button" @onclick="() => MoveStock(stock, -1)" class="text-[10px] text-gray-400 hover:text-white p-1">‚Üê</button>
                                <button type="button" @onclick="() => MoveStock(stock, 1)" class="text-[10px] text-gray-400 hover:text-white p-1">‚Üí</button>
                                <div class="w-px h-3 bg-gray-700 my-auto"></div>
                                <button type="button" @onclick="() => OpenEditStockModal(stock)" class="text-[10px] text-gray-400 hover:text-white p-1">‚úèÔ∏è</button>
                                <button type="button" @onclick="() => DeleteStock(stock)" class="text-[10px] text-gray-400 hover:text-red-500 p-1 font-bold">‚úï</button>
                            </div>

                            <a href="@(string.IsNullOrEmpty(stock.LinkUrl) ? "#" : stock.LinkUrl)" target="_blank" class="flex items-center h-full w-full">
                                <div class="h-full w-auto shrink-0 bg-gray-900 flex items-center justify-center">
                                    @if (!string.IsNullOrEmpty(stock.ImgUrl))
                                    {
                                        <img src="@stock.ImgUrl" class="h-full w-auto object-cover opacity-90 group-hover:opacity-100 transition" />
                                    }
                                    else
                                    {
                                        <div class="h-full w-24 bg-gray-700 flex items-center justify-center text-xs font-bold text-gray-400 border-r border-gray-600">
                                            @stock.Symbol.Substring(0, Math.Min(3, stock.Symbol.Length))
                                        </div>
                                    }
                                </div>

                                <div class="p-4 flex flex-col justify-center min-w-[140px]">
                                    <div class="text-xs text-gray-400 font-bold uppercase tracking-wider mb-1">@stock.Symbol</div>
                                    
                                    <div class="text-2xl font-bold text-white leading-none mb-1 @(hasPrice ? "" : "text-gray-500 text-lg")">
                                        @(hasPrice ? price.ToString("C", usCulture) : "Loading...")
                                    </div>
                                    
                                    @if (stock.Shares > 0 && hasPrice)
                                    {
                                        <div class="text-sm text-gray-400 font-mono">Value: <span class="text-blue-300">@value.ToString("C0", usCulture)</span></div>
                                        <div class="text-xs text-gray-400 mt-0.5">@stock.Shares.ToString("N2") shares</div>
                                    }
                                    else if (stock.Shares > 0)
                                    {
                                         <div class="text-xs text-gray-400 mt-1">@stock.Shares.ToString("N2") shares</div>
                                    }
                                </div>
                            </a>
                        </div>
                    }
                </div>
            </div>
        </main>
    }
</div>

@if (editingUser != null)
{
    <div class="fixed inset-0 bg-black/80 backdrop-blur-sm flex items-center justify-center z-50 p-4">
        <div class="bg-gray-800 border border-gray-600 p-6 rounded-xl shadow-2xl w-full max-w-sm">
            <h3 class="text-lg font-bold text-white mb-6">Edit Profile</h3>
            <div class="space-y-4">
                <div>
                    <label class="block text-[10px] font-bold text-gray-500 uppercase mb-1">Username</label>
                    <input @bind="editingUser.Username" class="w-full bg-gray-900 border border-gray-700 rounded px-3 py-2 text-white text-sm" />
                </div>
                <div>
                    <label class="block text-[10px] font-bold text-gray-500 uppercase mb-1">Password</label>
                    <input @bind="newPassword" type="password" class="w-full bg-gray-900 border border-gray-700 rounded px-3 py-2 text-white text-sm" placeholder="Leave empty to keep current" />
                </div>
                <div>
                    <label class="block text-[10px] font-bold text-gray-500 uppercase mb-1">Avatar URL</label>
                    <input @bind="editingUser.AvatarUrl" class="w-full bg-gray-900 border border-gray-700 rounded px-3 py-2 text-white text-sm" />
                </div>
                <div>
                    <label class="block text-[10px] font-bold text-gray-500 uppercase mb-1">Zip Code</label>
                    <input @bind="editingUser.ZipCode" class="w-full bg-gray-900 border border-gray-700 rounded px-3 py-2 text-white text-sm" />
                </div>
            </div>
            <div class="mt-8 flex justify-end gap-3">
                <button type="button" @onclick="() => editingUser = null" class="px-4 py-2 text-gray-400 hover:text-white text-xs font-bold uppercase">Cancel</button>
                <button type="button" @onclick="SaveUser" class="px-6 py-2 bg-blue-600 hover:bg-blue-500 text-white rounded text-xs font-bold uppercase shadow-lg">Save</button>
            </div>
        </div>
    </div>
}

