            </div>
            <div class="text-[10px] text-gray-500 font-mono pl-11">v1.5.1 (Stock Layout)</div>
        </div>

        <nav class="flex-1 p-4 space-y-1">
            @foreach (var group in Groups)
            {
                <a href="#@group.Id" class="block px-3 py-2 rounded-md text-sm font-medium text-gray-400 hover:text-white hover:bg-gray-800 transition flex items-center gap-2">
                    <span class="w-2 h-2 rounded-full" style="background-color: @group.Color"></span>
                    @group.Name
                </a>
            }
        </nav>

        <div class="p-4 border-t border-gray-800 bg-gray-900/50">
            <div class="text-[10px] uppercase text-gray-600 font-bold mb-2">System</div>
            <div class="grid grid-cols-2 gap-2">
                <button type="button" @onclick="ClearDb" class="bg-red-900/20 hover:bg-red-900/40 text-red-500 text-xs py-2 rounded border border-red-900/30 transition font-mono">WIPE</button>
