@page "/"
@using Dashboard
@using Microsoft.EntityFrameworkCore
@using System.Text.Json
@using Microsoft.JSInterop
@inject AppDbContext Db
@inject HttpClient Http
@inject IJSRuntime JS
@inject NavigationManager Nav

<div class="flex h-screen bg-gray-900 text-white overflow-hidden">

    <div class="w-64 bg-gray-900 border-r border-gray-800 flex flex-col h-full overflow-y-auto shrink-0">
        <div class="p-6 border-b border-gray-800">
            <div class="flex items-center gap-3 mb-2">
                <img src="/images/dashboard.png" class="w-8 h-8 rounded bg-gray-700" alt="Logo" />
                <h1 class="font-bold text-lg tracking-tight">Dashboard</h1>
            </div>
            <div class="text-[10px] text-gray-500 font-mono pl-11">v1.2.3 (Layout)</div>
        </div>

        <nav class="flex-1 p-4 space-y-1">
            @foreach (var group in Groups)
            {
                <a href="#@group.Id" class="block px-3 py-2 rounded-md text-sm font-medium text-gray-400 hover:text-white hover:bg-gray-800 transition flex items-center gap-2">
                    <span class="w-2 h-2 rounded-full" style="background-color: @group.Color"></span>
                    @group.Name
                </a>
            }
        </nav>
    </div>

    <main class="flex-1 overflow-y-auto p-8 relative">
        
        <div class="flex justify-between items-center mb-8 border-b border-gray-800 pb-4">
            <div>
                <h2 class="text-3xl font-bold text-white mb-1">Welcome Home</h2>
                <div class="text-gray-400 text-sm">@DateTime.Now.ToString("D")</div>
            </div>

            <div class="flex items-center gap-4">
                 <div class="flex gap-2 bg-gray-800 p-1 rounded-lg border border-gray-700">
                    <button @onclick="ClearDb" class="px-3 py-1 text-xs font-bold text-red-400 hover:bg-red-900/30 rounded transition">
                        üóëÔ∏è WIPE
                    </button>
                    <button @onclick="SeedDb" class="px-3 py-1 text-xs font-bold text-green-400 hover:bg-green-900/30 rounded transition">
                        üå± SEED
                    </button>
                </div>
                
                <div id="local-clock" class="text-3xl font-mono text-blue-400 font-bold tracking-widest pl-4 border-l border-gray-700">
                    --:-- am
                </div>
            </div>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 xl:grid-cols-3 gap-6 mb-12">
            @foreach (var group in Groups)
            {
                <div id="@group.Id" class="bg-gray-800/40 rounded-xl p-5 border border-gray-700/50">
                    <h3 class="text-lg font-bold text-white mb-4 flex items-center gap-2 pb-2 border-b border-gray-700">
                        <span class="w-2 h-2 rounded-full shadow-[0_0_10px_currentColor]" style="color: @group.Color; background-color: @group.Color"></span>
                        @group.Name
                    </h3>
                    <div class="grid grid-cols-4 gap-4">
                        @foreach (var link in group.Links)
                        {
                            <a href="@link.Url" target="_blank" class="flex flex-col items-center gap-2 p-2 rounded hover:bg-gray-700 transition group text-center">
                                @if (!string.IsNullOrEmpty(link.Img))
                                {
                                    <img src="@link.Img" class="w-16 h-16 rounded object-cover opacity-80 group-hover:opacity-100 transition shadow-sm" />
                                }
                                <span class="text-gray-400 group-hover:text-white transition text-xs">@link.Name</span>
                            </a>
                        }
                    </div>
                </div>
            }
        </div>

        <div class="mb-12">
            <h3 class="text-xl font-bold text-gray-200 mb-4">Upcoming</h3>
            <div class="flex gap-4 overflow-x-auto pb-4 scrollbar-hide">
                @foreach (var c in Countdowns)
                {
                    var days = (c.TargetDate - DateTime.Now).Days;
                    <div class="min-w-[250px] bg-gray-800 rounded-xl p-4 flex items-center gap-4 border border-gray-700 shadow-lg shrink-0">
                        @if (!string.IsNullOrEmpty(c.Img))
                        {
                            <img src="@c.Img" class="w-12 h-12 rounded-full object-cover" />
                        }
                        <div>
                            <div class="text-xs text-gray-400 uppercase font-bold">@c.Name</div>
                            <div class="text-2xl font-bold text-white">@days <span class="text-sm font-normal text-gray-500">days</span></div>
                            <div class="text-xs text-gray-600">@c.TargetDate.ToShortDateString()</div>
                        </div>
                    </div>
                }
            </div>
        </div>

        <div class="mb-20">
            <h3 class="text-xl font-bold text-gray-200 mb-4 flex items-center gap-2">
                <span>üìà</span> Portfolio
                @if (isLoadingPrices)
                {
                    <span class="text-xs font-mono text-yellow-500 animate-pulse">(Updating Prices...)</span>
                }
            </h3>
            
            <div class="grid grid-cols-2 md:grid-cols-4 lg:grid-cols-6 gap-4">
                @foreach (var stock in Stocks)
                {
                    decimal price = 0;
                    if (PriceCache.ContainsKey(stock.Symbol)) { price = PriceCache[stock.Symbol]; }

                    var value = stock.Shares * (double)price;
                    var hasPrice = price > 0;

                    <div class="relative group bg-gray-800/50 hover:bg-gray-800 rounded-xl p-4 border border-gray-700 hover:border-blue-500/50 transition flex flex-col items-center text-center">
                        
                        <button @onclick="() => EditStock(stock)" class="absolute top-2 right-2 text-gray-600 hover:text-white z-20 p-1 hover:bg-gray-700 rounded opacity-0 group-hover:opacity-100 transition">
                            ‚úèÔ∏è
                        </button>

                        <a href="@(string.IsNullOrEmpty(stock.LinkUrl) ? "#" : stock.LinkUrl)" target="_blank" class="block w-full">
                            
                            @if (!string.IsNullOrEmpty(stock.ImgUrl))
                            {
                                <img src="@stock.ImgUrl" class="w-12 h-12 mx-auto mb-3 rounded-full object-cover shadow-sm bg-white" />
                            }
                            else
                            {
                                <div class="w-12 h-12 mx-auto mb-3 rounded-full bg-gray-700 flex items-center justify-center text-[10px] font-bold text-gray-400 border border-gray-600">
                                    @stock.Symbol.Substring(0, Math.Min(3, stock.Symbol.Length))
                                </div>
                            }

                            <div class="font-bold text-white tracking-wide">@stock.Symbol</div>
                            
                            <div class="text-xs font-mono mb-2 @(hasPrice ? "text-green-400" : "text-gray-600")">
                                @(hasPrice ? price.ToString("C") : "Loading...")
                            </div>

                            @if (stock.Shares > 0)
                            {
                                <div class="pt-2 border-t border-gray-700 w-full">
                                    <div class="text-[10px] text-gray-500 uppercase">Value</div>
                                    <div class="font-bold text-blue-300 text-sm">
                                        @(hasPrice ? value.ToString("C0") : "$--")
                                    </div>
                                    <div class="text-[9px] text-gray-600 mt-1">
                                        @stock.Shares.ToString("N1") shares
                                    </div>
                                </div>
                            }
                        </a>
                    </div>
                }
            </div>
        </div>

    </main>
</div>

@if (editingStock != null)
{
    <div class="fixed inset-0 bg-black/80 backdrop-blur-sm flex items-center justify-center z-50 p-4">
        <div class="bg-gray-800 border border-gray-600 p-6 rounded-xl shadow-2xl w-full max-w-sm">
            <h3 class="text-lg font-bold text-white mb-6 flex justify-between">
                <span>Edit @editingStock.Symbol</span>
            </h3>
            <div class="space-y-4">
                <div>
                    <label class="block text-[10px] font-bold text-gray-500 uppercase mb-1">Image URL</label>
                    <input @bind="editingStock.ImgUrl" class="w-full bg-gray-900 border border-gray-700 rounded px-3 py-2 text-white text-sm" />
                </div>
                <div>
                    <label class="block text-[10px] font-bold text-gray-500 uppercase mb-1">Link URL</label>
                    <input @bind="editingStock.LinkUrl" class="w-full bg-gray-900 border border-gray-700 rounded px-3 py-2 text-white text-sm" />
                </div>
                <div>
                    <label class="block text-[10px] font-bold text-gray-500 uppercase mb-1">Shares Owned</label>
                    <input @bind="editingStock.Shares" type="number" step="0.001" class="w-full bg-gray-900 border border-gray-700 rounded px-3 py-2 text-white text-sm" />
                </div>
            </div>
            <div class="mt-8 flex justify-end gap-3">
                <button @onclick="() => editingStock = null" class="px-4 py-2 text-gray-400 hover:text-white text-xs font-bold uppercase tracking-wide">Cancel</button>
                <button @onclick="SaveStock" class="px-6 py-2 bg-blue-600 hover:bg-blue-500 text-white rounded text-xs font-bold uppercase tracking-wide shadow-lg shadow-blue-900/20">Save</button>
            </div>
        </div>
    </div>
}

@code {
    private List<LinkGroup> Groups = new();
    private List<Stock> Stocks = new();
    private List<Countdown> Countdowns = new();
    
    // NEW: Cache for real prices
    private Dictionary<string, decimal> PriceCache = new();
    private bool isLoadingPrices = false;
    private Stock? editingStock = null;

    protected override async Task OnInitializedAsync()
    {
        Groups = await Db.LinkGroups.Include(g => g.Links).OrderBy(g => g.Id).ToListAsync();
        Stocks = await Db.Stocks.OrderBy(s => s.Symbol).ToListAsync();
        Countdowns = await Db.Countdowns.OrderBy(c => c.TargetDate).ToListAsync();

        _ = FetchPrices(); 
    }

    private async Task FetchPrices()
    {
        if (Stocks.Count == 0) return;
        isLoadingPrices = true;
        StateHasChanged(); 

        foreach (var s in Stocks)
        {
            try 
            {
                var url = $"https://query1.finance.yahoo.com/v8/finance/chart/{s.Symbol}?interval=1d";
                var json = await Http.GetStringAsync(url);
                
                using (var doc = JsonDocument.Parse(json))
                {
                    var result = doc.RootElement.GetProperty("chart").GetProperty("result")[0];
                    var meta = result.GetProperty("meta");
                    var price = meta.GetProperty("regularMarketPrice").GetDecimal();
                    PriceCache[s.Symbol] = price;
                }
            }
            catch 
            {
                Console.WriteLine($"Failed to fetch {s.Symbol}");
            }
            StateHasChanged();
        }

        isLoadingPrices = false;
        StateHasChanged();
    }

    private void EditStock(Stock stock)
    {
        editingStock = stock;
    }

    private async Task SaveStock()
    {
        if (editingStock != null)
        {
            Db.Stocks.Update(editingStock);
            await Db.SaveChangesAsync();
            editingStock = null;
        }
    }

    private async Task ClearDb()
    {
        bool confirm = await JS.InvokeAsync<bool>("confirm", "‚ö†Ô∏è WIPE DATABASE?\nThis cannot be undone.");
        if (confirm)
        {
            await Http.PostAsync("/api/admin/clear", null);
            Nav.NavigateTo(Nav.Uri, forceLoad: true);
        }
    }

    private async Task SeedDb()
    {
        var response = await Http.PostAsync("/api/admin/seed", null);
        if (response.IsSuccessStatusCode)
        {
            await JS.InvokeVoidAsync("alert", "Seed Data Loaded!");
            Nav.NavigateTo(Nav.Uri, forceLoad: true);
        }
        else
        {
            await JS.InvokeVoidAsync("alert", "Error loading seed.");
        }
    }
}