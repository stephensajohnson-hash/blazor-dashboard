                                <button type="button" @onclick="() => DeleteStock(stock)" class="text-[10px] text-gray-400 hover:text-red-400 p-1 font-bold">‚úï</button>
                            </div>
                            <a href="@(string.IsNullOrEmpty(stock.LinkUrl) ? "#" : stock.LinkUrl)" target="_blank" class="flex items-center h-full w-full">
                                <div class="h-full w-auto shrink-0 bg-gray-900 flex items-center justify-center">
                                    @if (!string.IsNullOrEmpty(stock.ImgUrl)) { <img src="@stock.ImgUrl" class="h-full w-auto object-cover opacity-90 group-hover:opacity-100 transition" /> }
                                    else { <div class="h-full w-24 bg-gray-700 flex items-center justify-center text-xs font-bold text-gray-400 border-r border-gray-600">@stock.Symbol.Substring(0, Math.Min(3, stock.Symbol.Length))</div> }
                                </div>
                                <div class="p-4 flex flex-col justify-center min-w-[140px]">
                                    <div class="text-xs text-gray-400 font-bold uppercase tracking-wider mb-1">@stock.Symbol</div>
                                    <div class="text-2xl font-bold text-white leading-none mb-1 @(hasPrice ? "" : "text-gray-500 text-lg")">@(hasPrice ? price.ToString("C", usCulture) : "Loading...")</div>
                                    @if(hasPrice) { <div class="text-xs font-bold @colorClass flex items-center gap-1 mb-1"><span>@arrow</span><span>@change.ToString("0.00")</span><span>(@percent.ToString("0.00")%)</span></div> }
                                    @if (stock.Shares > 0 && hasPrice) { <div class="text-sm text-gray-400 font-mono mt-1 pt-1 border-t border-gray-700">Value: <span class="text-blue-300">@value.ToString("C0", usCulture)</span></div> }
                                </div>
                            </a>
                        </div>
                    }
                </div>
            </div>
            
            @if (RssItems.Any())
            {
                <div class="mb-12">
                    <h3 class="text-xl font-bold text-gray-200 mb-4 flex items-center gap-2"><span>üì∞</span> News Feed</h3>
                    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-5 gap-4">
                        @foreach (var item in RssItems)
                        {
                            <a href="@item.Link" target="_blank" class="flex h-24 bg-gray-800 rounded-lg overflow-hidden border border-gray-700 hover:border-blue-500 hover:bg-gray-750 transition shadow-lg group">
                                @if (!string.IsNullOrEmpty(item.ImgUrl)) { <div class="w-24 h-full shrink-0 bg-gray-900"><img src="@item.ImgUrl" class="w-full h-full object-cover transition transform group-hover:scale-105" onerror="this.style.display='none'" /></div> }
                                else { <div class="w-2 h-full bg-gray-700/50 shrink-0"></div> }
                                <div class="flex-1 p-3 flex flex-col justify-between overflow-hidden">
                                    <div><div class="text-[10px] text-blue-400 font-bold uppercase mb-1 truncate">@item.Source</div><h4 class="text-xs text-white font-medium group-hover:text-blue-300 transition line-clamp-2 leading-snug">@item.Title</h4></div>
                                </div>
                            </a>
                        }
                    </div>
                </div>
            }

            @if (DerbyEntries.Any())
            {
                <div class="mb-20">
                    <h3 class="text-xl font-bold text-gray-200 mb-4 flex items-center gap-2"><span>üëï</span> Shirt.Woot Derby</h3>
                    <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-9 gap-4">
                        @foreach (var entry in DerbyEntries)
                        {
                            <a href="@entry.Link" target="_blank" class="group relative aspect-square bg-gray-800 rounded-xl overflow-hidden border border-gray-700 hover:border-blue-500 transition shadow-lg">
                                <img src="@entry.ImgUrl" class="w-full h-full object-cover transition transform group-hover:scale-110" />
                                <div class="absolute inset-0 bg-gradient-to-t from-black/90 via-transparent to-transparent opacity-0 group-hover:opacity-100 transition flex flex-col justify-end p-3"><div class="text-xs font-bold text-white truncate">@entry.Title</div></div>
                            </a>
                        }
                    </div>
                </div>
            }

        </main>
    }
</div>

