@page "/"
@using Microsoft.AspNetCore.Components.Web
@rendermode @(new InteractiveServerRenderMode(prerender: false))
@using Dashboard
@using Microsoft.EntityFrameworkCore
@using System.Text.Json
@using Microsoft.JSInterop
@inject AppDbContext Db
@inject HttpClient Http
@inject IJSRuntime JS
@inject NavigationManager Nav

<div class="flex h-screen bg-gray-900 text-white overflow-hidden">

    <div class="w-64 bg-gray-900 border-r border-gray-800 flex flex-col h-full overflow-y-auto shrink-0">
        <div class="p-6 border-b border-gray-800">
            <div class="flex items-center gap-3 mb-2">
                <img src="/images/dashboard.png" class="w-8 h-8 rounded bg-gray-700" alt="Logo" />
                <h1 class="font-bold text-lg tracking-tight">Dashboard</h1>
            </div>
            <div class="text-[10px] text-gray-500 font-mono pl-11">v1.3.3 (Fixed)</div>
        </div>

        <nav class="flex-1 p-4 space-y-1">
            @foreach (var group in Groups)
            {
                <a href="#@group.Id" class="block px-3 py-2 rounded-md text-sm font-medium text-gray-400 hover:text-white hover:bg-gray-800 transition flex items-center gap-2">
                    <span class="w-2 h-2 rounded-full" style="background-color: @group.Color"></span>
                    @group.Name
                </a>
            }
            <button type="button" @onclick="OpenAddGroupModal" class="w-full mt-4 flex items-center gap-2 px-3 py-2 text-xs font-bold text-gray-500 uppercase border border-dashed border-gray-700 rounded hover:border-gray-500 hover:text-gray-300 transition cursor-pointer">
                <span>+</span> Add Group
            </button>
        </nav>

        <div class="p-4 border-t border-gray-800 bg-gray-900/50">
            <div class="text-[10px] uppercase text-gray-600 font-bold mb-2">System</div>
            <div class="grid grid-cols-2 gap-2">
                <button type="button" @onclick="ClearDb" class="bg-red-900/20 hover:bg-red-900/40 text-red-500 text-xs py-2 rounded border border-red-900/30 transition font-mono">WIPE</button>
                <button type="button" @onclick="SeedDb" class="bg-green-900/20 hover:bg-green-900/40 text-green-500 text-xs py-2 rounded border border-green-900/30 transition font-mono">SEED</button>
            </div>
        </div>
    </div>

    <main class="flex-1 overflow-y-auto p-8 relative scroll-smooth">
        
        <div class="mb-10 border-b border-gray-800 pb-4 flex justify-between items-end">
            <div class="flex items-baseline gap-4">
                <h2 class="text-3xl font-bold text-white tracking-tight">@CurrentDate</h2>
                <span class="text-xl font-medium text-gray-400">@CurrentTime</span>
            </div>

            @if (weather != null)
            {
                <div class="flex items-center gap-6 text-right">
                    <div class="flex gap-4 border-r border-gray-700 pr-6 mr-2">
                        @for (int i = 1; i < Math.Min(7, weather.daily.time.Length); i++)
                        {
                            <div class="flex flex-col items-center">
                                <span class="text-[10px] text-gray-500 font-bold uppercase">@GetDayName(weather.daily.time[i])</span>
                                <span class="text-lg my-1">@GetWeatherIcon(weather.daily.weather_code[i])</span>
                                <div class="text-[10px] font-mono">
                                    <span class="text-white">@Math.Round(weather.daily.temperature_2m_max[i])¬∞</span>
                                    <span class="text-gray-500">@Math.Round(weather.daily.temperature_2m_min[i])¬∞</span>
                                </div>
                            </div>
                        }
                    </div>
                    <div class="flex items-center gap-3">
                        <div class="text-4xl">@GetWeatherIcon(weather.current.weather_code)</div>
                        <div>
                            <div class="text-3xl font-bold text-white leading-none">@Math.Round(weather.current.temperature_2m)¬∞</div>
                            <div class="text-xs text-gray-400 mt-1">Sulphur Springs</div>
                        </div>
                    </div>
                </div>
            }
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 xl:grid-cols-3 gap-6 mb-12">
            @foreach (var group in Groups)
            {
                <div id="@group.Id" class="group/card relative bg-gray-800/40 rounded-xl p-5 border border-gray-700/50 hover:border-gray-600 transition">
                    
                    <div class="flex justify-between items-center mb-4 pb-2 border-b border-gray-700">
                        <h3 class="text-lg font-bold text-white flex items-center gap-2">
                            <span class="w-2 h-2 rounded-full shadow-[0_0_10px_currentColor]" style="color: @group.Color; background-color: @group.Color"></span>
                            @group.Name
                        </h3>
                        <div class="flex gap-1 opacity-0 group-hover/card:opacity-100 transition">
                            <button type="button" @onclick="() => OpenEditGroupModal(group)" class="text-gray-500 hover:text-white p-1 hover:bg-gray-700 rounded" title="Edit Group">‚úèÔ∏è</button>
                            <button type="button" @onclick="() => DeleteGroup(group)" class="text-gray-500 hover:text-red-500 p-1 hover:bg-gray-700 rounded" title="Delete Group">üóëÔ∏è</button>
                        </div>
                    </div>

                    <div class="grid grid-cols-4 gap-4">
                        @foreach (var link in group.Links)
                        {
                            <div class="group/link relative flex flex-col items-center">
                                <div class="absolute -top-2 -right-2 flex gap-1 bg-black/80 rounded px-1 opacity-0 group-hover/link:opacity-100 z-10 transition border border-gray-700">
                                    <button type="button" @onclick="() => OpenEditLinkModal(link)" class="text-[10px] text-gray-300 hover:text-white p-1">‚úèÔ∏è</button>
                                    <button type="button" @onclick="() => DeleteLink(link)" class="text-[10px] text-gray-300 hover:text-red-400 p-1">‚úï</button>
                                </div>

                                <a href="@link.Url" target="_blank" class="flex flex-col items-center gap-2 p-2 rounded hover:bg-gray-700 transition w-full text-center">
                                    @if (!string.IsNullOrEmpty(link.Img))
                                    {
                                        <img src="@link.Img" class="w-16 h-16 rounded object-cover opacity-80 group-hover:opacity-100 transition shadow-sm" />
                                    }
                                    <span class="text-gray-400 group-hover:text-white transition text-xs truncate w-full">@link.Name</span>
                                </a>
                            </div>
                        }
                        
                        <button type="button" @onclick="() => OpenAddLinkModal(group.Id)" class="flex flex-col items-center justify-center gap-2 p-2 rounded border border-dashed border-gray-700 hover:bg-gray-800 hover:border-gray-500 transition text-gray-600 hover:text-white h-24 cursor-pointer">
                            <span class="text-2xl font-light">+</span>
                        </button>
                    </div>
                </div>
            }
        </div>

        <div class="mb-12">
            <h3 class="text-xl font-bold text-gray-200 mb-4">Upcoming</h3>
            <div class="flex gap-4 overflow-x-auto pb-4 scrollbar-hide">
                @foreach (var c in Countdowns)
                {
                    var days = (c.TargetDate - DateTime.Now).Days;
                    <div class="min-w-[250px] bg-gray-800 rounded-xl p-4 flex items-center gap-4 border border-gray-700 shadow-lg shrink-0">
                        @if (!string.IsNullOrEmpty(c.Img))
                        {
                            <img src="@c.Img" class="w-12 h-12 rounded-full object-cover" />
                        }
                        <div>
                            <div class="text-xs text-gray-400 uppercase font-bold">@c.Name</div>
                            <div class="text-2xl font-bold text-white">@days <span class="text-sm font-normal text-gray-500">days</span></div>
                            <div class="text-xs text-gray-600">@c.TargetDate.ToShortDateString()</div>
                        </div>
                    </div>
                }
            </div>
        </div>

        <div class="mb-20">
            <h3 class="text-xl font-bold text-gray-200 mb-4 flex items-center gap-2">
                <span>üìà</span> Portfolio
                @if (isLoadingPrices)
                {
                    <span class="text-xs font-mono text-yellow-500 animate-pulse">(Updating Prices...)</span>
                }
            </h3>
            <div class="grid grid-cols-2 md:grid-cols-4 lg:grid-cols-6 gap-4">
                @foreach (var stock in Stocks)
                {
                    decimal price = 0;
                    if (PriceCache.ContainsKey(stock.Symbol)) { price = PriceCache[stock.Symbol]; }
                    var value = stock.Shares * (double)price;
                    var hasPrice = price > 0;

                    <div class="relative group bg-gray-800/50 hover:bg-gray-800 rounded-xl p-4 border border-gray-700 hover:border-blue-500/50 transition flex flex-col items-center text-center">
                        <button type="button" @onclick="() => EditStock(stock)" class="absolute top-2 right-2 text-gray-600 hover:text-white z-20 p-1 hover:bg-gray-700 rounded opacity-0 group-hover:opacity-100 transition cursor-pointer">‚úèÔ∏è</button>
                        <a href="@(string.IsNullOrEmpty(stock.LinkUrl) ? "#" : stock.LinkUrl)" target="_blank" class="block w-full">
                            @if (!string.IsNullOrEmpty(stock.ImgUrl))
                            {
                                <img src="@stock.ImgUrl" class="w-12 h-12 mx-auto mb-3 rounded-full object-cover shadow-sm bg-white" />
                            }
                            else
                            {
                                <div class="w-12 h-12 mx-auto mb-3 rounded-full bg-gray-700 flex items-center justify-center text-[10px] font-bold text-gray-400 border border-gray-600">
                                    @stock.Symbol.Substring(0, Math.Min(3, stock.Symbol.Length))
                                </div>
                            }
                            <div class="font-bold text-white tracking-wide">@stock.Symbol</div>
                            <div class="text-xs font-mono mb-2 @(hasPrice ? "text-green-400" : "text-gray-600")">
                                @(hasPrice ? price.ToString("C") : "Loading...")
                            </div>
                            @if (stock.Shares > 0)
                            {
                                <div class="pt-2 border-t border-gray-700 w-full">
                                    <div class="text-[10px] text-gray-500 uppercase">Value</div>
                                    <div class="font-bold text-blue-300 text-sm">@(hasPrice ? value.ToString("C0") : "$--")</div>
                                </div>
                            }
                        </a>
                    </div>
                }
            </div>
        </div>
    </main>
</div>

@if (editingStock != null)
{
    <div class="fixed inset-0 bg-black/80 backdrop-blur-sm flex items-center justify-center z-50 p-4">
        <div class="bg-gray-800 border border-gray-600 p-6 rounded-xl shadow-2xl w-full max-w-sm">
            <h3 class="text-lg font-bold text-white mb-6">Edit @editingStock.Symbol</h3>
            <div class="space-y-4">
