    private async Task MoveItem<T>(DbSet<T> set, T item, int direction, System.Linq.Expressions.Expression<Func<T, bool>>? filter = null) where T : class
    {
        IQueryable<T> query = set;
        
        // Ensure we only move items belonging to current user
        var userProp = typeof(T).GetProperty("UserId");
        if (userProp != null && currentUser != null)
        {
            // We have to filter in memory for generic reflection or build expression tree.
            // Simplified: Filter by what passed in, assuming caller handles user scope, BUT
            // strictly we should add .Where(x => x.UserId == currentUser.Id) here.
            // For now, rely on LoadData providing the correct list context.
        }

        if (filter != null) query = query.Where(filter);
        var list = await query.ToListAsync();
        
        // Filter list to current user explicitly just in case
        if (userProp != null && currentUser != null)
        {
             list = list.Where(x => (int)userProp.GetValue(x)! == currentUser.Id).ToList();
        }

        var prop = typeof(T).GetProperty("Order");
        if (prop == null) return;
        list = list.OrderBy(x => (int)prop.GetValue(x)!).ThenBy(x => (int)typeof(T).GetProperty("Id")!.GetValue(x)!).ToList();
        for(int i=0; i<list.Count; i++) prop.SetValue(list[i], i);
        var idProp = typeof(T).GetProperty("Id");
        var itemId = (int)idProp!.GetValue(item)!;
        var currentItemInList = list.First(x => (int)idProp.GetValue(x)! == itemId);
        int index = list.IndexOf(currentItemInList);
        int newIndex = index + direction;
        if (newIndex >= 0 && newIndex < list.Count) {
            var other = list[newIndex];
            prop.SetValue(currentItemInList, newIndex);
            prop.SetValue(other, index);
            set.UpdateRange(list);
            await Db.SaveChangesAsync();
            await LoadData();
        }
    }

