@if (editingGroup != null) { <div class="fixed inset-0 bg-black/80 backdrop-blur-sm flex items-center justify-center z-50 p-4"><div class="bg-gray-800 border border-gray-600 p-6 rounded-xl shadow-2xl w-full max-w-sm"><h3 class="text-lg font-bold text-white mb-6">@(editingGroup.Id == 0 ? "Add Group" : "Edit Group")</h3><div class="space-y-4"><input @bind="editingGroup.Name" class="w-full bg-gray-900 border border-gray-700 rounded px-3 py-2 text-white text-sm" placeholder="Group Name" /><select @bind="editingGroup.Color" class="w-full bg-gray-900 border border-gray-700 rounded px-3 py-2 text-white text-sm appearance-none">@foreach(var color in ColorOptions) { <option value="@color.Key">@color.Value @color.Key</option> }</select></div><div class="mt-8 flex justify-end gap-3"><button type="button" @onclick="() => editingGroup = null" class="px-4 py-2 text-gray-400 hover:text-white text-xs font-bold uppercase">Cancel</button><button type="button" @onclick="SaveGroup" class="px-6 py-2 bg-green-600 hover:bg-green-500 text-white rounded text-xs font-bold uppercase shadow-lg">Save</button></div></div></div> }
@if (editingLink != null) { <div class="fixed inset-0 bg-black/80 backdrop-blur-sm flex items-center justify-center z-50 p-4"><div class="bg-gray-800 border border-gray-600 p-6 rounded-xl shadow-2xl w-full max-w-sm"><h3 class="text-lg font-bold text-white mb-6">@(editingLink.Id == 0 ? "Add Link" : "Edit Link")</h3><div class="space-y-4"><input @bind="editingLink.Name" class="w-full bg-gray-900 border border-gray-700 rounded px-3 py-2 text-white text-sm" placeholder="Name" /><input @bind="editingLink.Url" class="w-full bg-gray-900 border border-gray-700 rounded px-3 py-2 text-white text-sm" placeholder="URL" /><input @bind="editingLink.Img" class="w-full bg-gray-900 border border-gray-700 rounded px-3 py-2 text-white text-sm" placeholder="Image URL" /></div><div class="mt-8 flex justify-end gap-3"><button type="button" @onclick="() => editingLink = null" class="px-4 py-2 text-gray-400 hover:text-white text-xs font-bold uppercase">Cancel</button><button type="button" @onclick="SaveLink" class="px-6 py-2 bg-blue-600 hover:bg-blue-500 text-white rounded text-xs font-bold uppercase shadow-lg">Save</button></div></div></div> }
@if (editingCountdown != null) { <div class="fixed inset-0 bg-black/80 backdrop-blur-sm flex items-center justify-center z-50 p-4"><div class="bg-gray-800 border border-gray-600 p-6 rounded-xl shadow-2xl w-full max-w-sm"><h3 class="text-lg font-bold text-white mb-6">@(editingCountdown.Id == 0 ? "Add Countdown" : "Edit Countdown")</h3><div class="space-y-4"><input @bind="editingCountdown.Name" class="w-full bg-gray-900 border border-gray-700 rounded px-3 py-2 text-white text-sm" placeholder="Event Name" /><input @bind="editingCountdown.TargetDate" type="date" class="w-full bg-gray-900 border border-gray-700 rounded px-3 py-2 text-white text-sm" /><input @bind="editingCountdown.Img" class="w-full bg-gray-900 border border-gray-700 rounded px-3 py-2 text-white text-sm" placeholder="Image URL" /><input @bind="editingCountdown.LinkUrl" class="w-full bg-gray-900 border border-gray-700 rounded px-3 py-2 text-white text-sm" placeholder="Link URL (Optional)" /></div><div class="mt-8 flex justify-end gap-3"><button type="button" @onclick="() => editingCountdown = null" class="px-4 py-2 text-gray-400 hover:text-white text-xs font-bold uppercase">Cancel</button><button type="button" @onclick="SaveCountdown" class="px-6 py-2 bg-blue-600 hover:bg-blue-500 text-white rounded text-xs font-bold uppercase shadow-lg">Save</button></div></div></div> }

