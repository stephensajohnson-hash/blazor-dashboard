@page "/hsa"
@using Dashboard
@using Dashboard.Components.Bullet
@using Microsoft.EntityFrameworkCore
@using Microsoft.AspNetCore.Components.Forms
@using Microsoft.JSInterop
@rendermode @(new Microsoft.AspNetCore.Components.Web.InteractiveServerRenderMode(prerender: false))

@inject IDbContextFactory<AppDbContext> DbFactory
@inject IJSRuntime JS

<div class="min-h-screen bg-[#0a0a0a] text-white font-sans overflow-x-hidden">
    <BulletHeader ShowControls="false" CustomDateText="HSA Archive" />

    <div class="max-w-4xl mx-auto p-10 flex flex-col items-center">
        
        @* BUTTON - Absolute simplest declaration possible *@
        <button @onclick="HandleClick" 
                class="bg-blue-600 hover:bg-blue-500 text-white px-12 py-6 rounded-2xl font-black text-lg uppercase tracking-[0.3em] shadow-lg transition-all active:scale-95 mb-12">
            Add Receipt
        </button>

        @* VERIFICATION CONSOLE *@
        <div class="w-full bg-gray-900 border border-gray-800 p-6 rounded-3xl h-64 overflow-y-auto shadow-2xl font-mono text-[10px] text-emerald-500">
            <div class="text-gray-600 uppercase font-black mb-2 border-b border-gray-800 pb-1">System Trace</div>
            @foreach (var log in logs)
            {
                <div class="mb-1">@log</div>
            }
        </div>
    </div>
</div>

@* MODAL *@
@if (isModalVisible)
{
    <div class="fixed inset-0 z-[1000] flex items-center justify-center p-4 bg-black/95 backdrop-blur-md">
        <div class="bg-[#111] border border-gray-800 w-full max-w-lg rounded-[2rem] shadow-2xl overflow-hidden p-10 text-center">
            <h2 class="text-white font-black uppercase tracking-widest mb-8">Receipt Entry</h2>
            
            <button @onclick="() => isModalVisible = false" class="bg-white text-black px-10 py-3 rounded-full font-black uppercase text-xs tracking-widest hover:bg-gray-200 transition">
                Close Modal
            </button>
        </div>
    </div>
}

@code {
    private List<string> logs = new();
    private bool isModalVisible = false;

    protected override void OnInitialized()
    {
        AddLog("SYSTEM: Circuit connected.");
    }

    private void HandleClick()
    {
        AddLog("EVENT: 'Add Receipt' was clicked.");
        isModalVisible = true;
        StateHasChanged();
    }

    private void AddLog(string msg)
    {
        logs.Insert(0, $"[{DateTime.Now:HH:mm:ss}] {msg}");
        // This will verify the click in your Render Logs (F12 equivalent for server)
        Console.WriteLine($"HSA_CLICK_LOG: {msg}");
    }
}