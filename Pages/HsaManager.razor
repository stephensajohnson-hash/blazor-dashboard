@page "/hsa"
@using Dashboard.Components.Bullet
@using Dashboard @* Add this to find HsaReceipt *@
@using Microsoft.EntityFrameworkCore @* Add this to find IDbContextFactory *@
@using Microsoft.AspNetCore.Components.Forms
@inject IDbContextFactory<AppDbContext> DbFactory

<BulletHeader ShowControls="false" CustomDateText="HSA Receipt Manager" />

<div class="max-w-6xl mx-auto p-6">
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
        <div class="bg-gray-900 border border-gray-800 rounded-2xl p-6 shadow-xl h-fit">
            <h3 class="text-white font-black uppercase tracking-widest text-sm mb-4 border-b border-gray-800 pb-2">
                New Receipt
            </h3>
            <EditForm Model="newReceipt" OnValidSubmit="HandleSubmit" class="space-y-4">
                <div>
                    <label class="block text-[10px] font-black text-gray-500 uppercase mb-1">Provider</label>
                    <InputText @bind-Value="newReceipt.Provider" class="w-full bg-black border border-gray-800 rounded-lg p-2 text-white text-sm focus:border-blue-500 outline-none" />
                </div>
                <div class="grid grid-cols-2 gap-4">
                    <div>
                        <label class="block text-[10px] font-black text-gray-500 uppercase mb-1">Amount</label>
                        <InputNumber @bind-Value="newReceipt.Amount" class="w-full bg-black border border-gray-800 rounded-lg p-2 text-white text-sm" />
                    </div>
                    <div>
                        <label class="block text-[10px] font-black text-gray-500 uppercase mb-1">Type</label>
                        <InputSelect @bind-Value="newReceipt.Type" class="w-full bg-black border border-gray-800 rounded-lg p-2 text-white text-sm">
                            <option value="Medical">Medical</option>
                            <option value="Dental">Dental</option>
                            <option value="Eye Care">Eye Care</option>
                            <option value="Chiropractor">Chiropractor</option>
                            <option value="Other">Other</option>
                        </InputSelect>
                    </div>
                </div>
                <div>
                    <label class="block text-[10px] font-black text-gray-500 uppercase mb-1">Date of Service</label>
                    <InputDate @bind-Value="newReceipt.ServiceDate" class="w-full bg-black border border-gray-800 rounded-lg p-2 text-white text-sm" />
                </div>
                <div>
                    <label class="block text-[10px] font-black text-gray-500 uppercase mb-1">Receipt File</label>
                    <InputFile OnChange="HandleFileSelected" class="text-xs text-gray-400" />
                </div>
                <button type="submit" class="w-full bg-blue-600 hover:bg-blue-500 text-white font-black py-3 rounded-xl transition shadow-lg uppercase text-xs tracking-widest mt-4">
                    Save Receipt
                </button>
            </EditForm>
        </div>

        <div class="md:col-span-2 space-y-6">
            <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
                <div class="bg-gray-900 border border-gray-800 p-4 rounded-xl shadow-md">
                    <div class="text-[10px] font-black text-gray-500 uppercase">Total Expenses</div>
                    <div class="text-2xl font-black text-white">$@totalAmount.ToString("N2")</div>
                </div>
                <div class="bg-gray-900 border border-gray-800 p-4 rounded-xl shadow-md border-l-4 border-l-red-600">
                    <div class="text-[10px] font-black text-gray-500 uppercase">Unreimbursed</div>
                    <div class="text-2xl font-black text-white">$@unreimbursedAmount.ToString("N2")</div>
                </div>
            </div>

            <div class="bg-gray-900 border border-gray-800 rounded-2xl overflow-hidden shadow-xl">
                <table class="w-full text-left border-collapse">
                    <thead class="bg-black border-b border-gray-800 text-[10px] font-black text-gray-500 uppercase tracking-widest">
                        <tr>
                            <th class="p-4">Date</th>
                            <th class="p-4">Provider</th>
                            <th class="p-4">Type</th>
                            <th class="p-4">Amount</th>
                            <th class="p-4">Files</th>
                        </tr>
                    </thead>
                    <tbody class="text-sm text-gray-300">
                        @foreach (var r in receipts)
                        {
                            <tr class="border-b border-gray-800/50 hover:bg-gray-800/30 transition">
                                <td class="p-4">@r.ServiceDate.ToShortDateString()</td>
                                <td class="p-4 text-white font-bold">@r.Provider</td>
                                <td class="p-4 uppercase text-[10px]">@r.Type</td>
                                <td class="p-4 font-black text-blue-400">$@r.Amount.ToString("N2")</td>
                                <td class="p-4 text-xl">ðŸ“„</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@code {
    private HsaReceipt newReceipt = new() { ServiceDate = DateTime.Now, Type = "Medical" };
    private List<HsaReceipt> receipts = new();
    private decimal totalAmount => receipts.Sum(x => x.Amount);
    private decimal unreimbursedAmount => receipts.Where(x => !x.IsReimbursed).Sum(x => x.Amount);

    protected override async Task OnInitializedAsync()
    {
        await LoadReceipts();
    }

    private async Task LoadReceipts()
    {
        using var db = await DbFactory.CreateDbContextAsync();
        receipts = await db.HsaReceipts
            .OrderByDescending(x => x.ServiceDate)
            .ToListAsync();
    }

    private void HandleFileSelected(InputFileChangeEventArgs e) 
    { 
        // Logic for file handling
    }

    private async Task HandleSubmit() 
    { 
        using var db = await DbFactory.CreateDbContextAsync();
        newReceipt.UserId = 1; // Assuming default user for now
        newReceipt.TaxYear = newReceipt.ServiceDate.Year;
        db.HsaReceipts.Add(newReceipt);
        await db.SaveChangesAsync();
        
        newReceipt = new HsaReceipt { ServiceDate = DateTime.Now, Type = "Medical" };
        await LoadReceipts();
    }
}