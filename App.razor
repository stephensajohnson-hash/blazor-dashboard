<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <base href="/" />
    <title>Hello World</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
</head>
<body>
    <div class="container mt-5">
        <h1>Hello World from Blazor!</h1>
        <p>If you can see this, the C# code is running on SmarterASP.NET.</p>
        
        <div class="alert alert-success">
            Database Status: <strong>@(IsConnected ? "Connected!" : "Not Connected")</strong>
        </div>
    </div>

    <script src="_framework/blazor.web.js"></script>
</body>
</html>

@code {
    [Microsoft.AspNetCore.Components.Inject]
    public AppDbContext Db { get; set; } = default!;

    private bool IsConnected { get; set; }

    protected override async Task OnInitializedAsync()
    {
        // Try to connect to the database to prove it works
        try
        {
            IsConnected = await Db.Database.CanConnectAsync();
        }
        catch
        {
            IsConnected = false;
        }
    }
}
